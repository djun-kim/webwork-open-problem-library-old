);

TEXT(beginproblem());

#############################################
#  Setup

$cmc = new_checkbox_multiple_choice();

$cmc -> qa (
"Sketch the vector field \( \displaystyle \vec{F}(x,y) = - \frac{\vec{r}}{||\,\vec{r}\,||^3} \) in the plane, where \( \vec{r} = \langle x, y \rangle .\)  Select all that apply.", 
"All the vectors point toward the origin.",
"The vectors decrease in length as you move away from the origin.",
);

$cmc -> extra(
"All the vectors point away from the origin.",
"The vectors increase in length as you move away from the origin.",
"The length of each vector is 1.",
);


###########################################
#  Main text

BEGIN_TEXT

\{ $cmc -> print_q() \}
$PAR
\{ $cmc -> print_a() \}

END_TEXT


############################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp($cmc->correct_ans));

