##########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

TEXT(beginproblem());


######################################
#  Setup

Context("Numeric");

$k = random(2,9,1);

$f = Compute("$k ln(sec(x))");
$a = 0;

$answer = Compute("($k / 2) x^2");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the degree 3 Taylor polynomial approximation 
to the function \( f(x) = $f \) about the point 
\( a = $a \).
$BR
$BR
\( $f \approx \)
\{ans_rule(40)\}
END_TEXT
Context()->normalStrings;


#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version.');

ENDDOCUMENT();
