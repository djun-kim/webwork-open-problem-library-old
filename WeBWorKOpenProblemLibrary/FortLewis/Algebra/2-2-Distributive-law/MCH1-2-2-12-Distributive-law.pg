########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$a = random(4,9,1);
$b = random(4,10,1);
$ab = $a * $b;

$fac1 = Formula("$a*x");
$fac2 = Formula("(x-($b))")->reduce;

$expression = "\( $a x^2 - $ab x \)";


################################################
#  Main text

BEGIN_TEXT

Rewrite the expression $expression by taking 
out the greatest common factor and putting it
in front.
$BR
$BR
\{ ans_rule(5) \}
\( \big( \)
\{ ans_rule(10) \}
\( \big) \)
\{ AnswerFormatHelp("formula") \}

END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($fac1->cmp());
ANS($fac2->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();