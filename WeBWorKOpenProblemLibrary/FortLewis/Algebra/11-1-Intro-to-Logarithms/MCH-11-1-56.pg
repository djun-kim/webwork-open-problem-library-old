####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup
$n = random(2,5,1);

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Rewrite the logarithmic expression \( \log(AB^{$n}) \) 
in equivalent logarithmic form.  There may be more 
than one correct answer.", 
"\( \log(A) + $n\log(B) \) $BR",
"\( \log(A) + \log(B^{$n}) \) $BR",
);
$mc -> extra(
"\( \log(A)(\log(B))^{$n} \)$BR",
"\( $n\log(AB) \) $BR",
"\( (\log(AB))^{$n} \) $BR",
);
$mc -> makeLast("None of the above");


####################################
#  Main Text

BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT


###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
