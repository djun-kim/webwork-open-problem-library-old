####################################
#  Initialization

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
#"PGauxiliaryFunctions.pl",# defines only log to be the natural log (ln is undefined)
"MathObjects.pl",# defines both log and ln to be natural log
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");

$a = random(-4,-2,1);
# can produce extra zeros at the end of the decimal
# $b = sprintf("%0.6f", 10**($a) );
$b = "0." . ('0' x abs($a+1)) . '1';
$a1 = $a + random(-1,1,2);

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Rewrite the logarithmic equation \( \log $b = $a \)
in equivalent exponential form.  There may be more
than one correct answer.",
"\( $b = 10^{$a} \) $BR",
);
$mc -> extra(
"\( $b = 10^{$a1} \) $BR",
"\( $b = e^{$a} \) $BR",
"\( $b = e^{$a1} \) $BR",
);
$mc -> makeLast("None of the above");


####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT
Context()->normalStrings;


###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
The equation \( \log $b = $a \) is equivalent to \( $b = 10^{$a} \).

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
