## Section1('8.1')
## Problem1('14')
## TitleText2('Functions Modeling Change');
## EditionText2('4')
## AuthorText2('Connally')
## Section2('10.1')
## Problem2('15')
## Author('Adam Spiegler')
## Institution('Loyola University Chicago')

DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGauxiliaryFunctions.pl",
           "extraAnswerEvaluators.pl",
           "MathObjects.pl",
           "PGcourse.pl"
);

TEXT(beginproblem());

Context("Numeric");
Context()->variables->set(x=>{limits=>[-1,1]});

$showPartialCorrectAnswers = 1;

$p = random(2,4,1);
$k = random(1,9,1);

$f[0] = "ln( x^$p + $k )";
$f[1] = "e^(x^$p + $k)";

$disp[0] = "\ln{ \left( x^$p + $k \right) }";
$disp[1] = "e^{ x^$p + $k }";

$j[0] = "\sqrt{ \ln{(x^$p + $k)} }";
$j[1] = "\sqrt{ e^{(x^$p + $k)} }";

$i = random(0,1,1);
$i = 1;

Context()->texStrings;
BEGIN_TEXT

Identify the function \( f(x) \) if
$BR
\[ j(x) = \sqrt{ f(x) } = $j[$i]. \]
$BR
\( f(x) = \) \{ ans_rule(30) \}

END_TEXT
Context()->normalStrings;

ANS( Compute( $f[$i] )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
The inside function is
\[ f(x) = $disp[$i]. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
