#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "parserVectorUtils.pl",
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(1,5,1);
$b = random(2,6,1);
$c = random(4,8,1);

$d = Vector("<0,0,0>");
$e = Vector("<0,-$a-1,1>");
$f = Vector("<-$b-1,1,$c-1>");

$en = norm($e);
$fn = norm($f);
$fen = norm($f-$e);

$a1 = $e . $f;

$a2 = Compute("$a1/($en*$fn)");
$an1 = Compute("arccos($a2)");

$b2 = Compute("(($en)^2-$a1)/($en*$fen)");
$an2 = Compute("arccos($b2)");

$c2 = Compute("(($fn)^2-$a1)/($fn*$fen)");
$an3 = Compute("arccos($c2)");

Context('Numeric');

$ans1 = Compute("$an1");
$ans2 = Compute("$an2");
$ans3 = Compute("$an3");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the three angles of the triangle with the given vertices: \(D(1,1,1)\), \(E(1,-$a,2)\), and \(F(-$b,2,$c)\).
$HR
$BBOLD 1. $EBOLD \(\angle D = \) \{ ans_rule(20) \} $PAR
$BBOLD 2. $EBOLD \(\angle E = \) \{ ans_rule(20) \} $PAR
$BBOLD 3. $EBOLD \(\angle F = \) \{ ans_rule(20) \} $PAR
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans1)->cmp());
ANS(($ans2)->cmp());
ANS(($ans3)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.