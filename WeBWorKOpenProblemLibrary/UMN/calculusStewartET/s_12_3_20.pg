#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "parserVectorUtils.pl",
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(5,10,1);
$b = random(4,5,1);
$c = random(1,10,1);

$a1 = Vector("<$a,-1,-$b>");
$b1 = Vector("<2,1,-$c>");

$as1 = $a1 . $b1;
$as2 = norm($a1);
$as3 = norm($b1);

$as4 = Compute("$as1/($as2*$as3)");

$an = Compute("arccos($as4)");

Context('Numeric');

$ans = Compute("$an");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the angle \(\theta\) between the vectors \(\mathbf{a} = $a\mathbf{i} - \mathbf{j} -$b\mathbf{k}\) and \(\mathbf{b} = 2\mathbf{i} +\mathbf{j} - $c\mathbf{k}\). $PAR
Answer (in radians): \(\theta = \) \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.