#DESCRIPTION
##  Calculus: Three-dimensional space
##ENDDESCRIPTION

##KEYWORDS('calculus', 'three-dimensional', 'multi-variable', 'spheres')

## DBsubject('Calculus')
## DBchapter('Vectors and the Geometry of Space')
## DBsection('Three-Dimensional Coordinate Systems')
## Date('11/29/2011')
## Author('Justin Sukiennik')
## Institution('University of Minnesota')
## TitleText1('Calculus: Concepts and Contexts')
## EditionText1('5')
## AuthorText1('Stewart')
## Section1('12.1')
## Problem1('15')

#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());

#####################################################################

Context("Numeric");
Context()->variables->add(y=>'Real',z=>'Real');

$a = random(2,5,1);
$b = random(-5,-2,1);
$c = Compute("0");

$r = random(4,10,1);

$a2 = Compute("-2*$a");
$b2 = Compute("-2*$b");
$c2 = Compute("-2*$c");
$r2 = Compute("($r)^2-($a)^2-($b)^2-($c)^2");

$f = Formula("x^2 + y^2 + z^2 -2*$a*x-2*$b*y-2*$c*z")->reduce;

$ans1 = Compute("$r");
Context("Point");
$ans2 = Point("($a,$b,$c)");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Answer the following questions about the sphere whose equation is given by
\[
$f = $r2.
\]
$HR
$BBOLD 1. $EBOLD Find the radius of the sphere. $BR
Radius: \(r = \) \{ ans_rule(20) \} $PAR
$BBOLD 2. $EBOLD Find the center of the sphere. $BBOLD Write the center as a point \((a,b,c)\) where \(a\), \(b\), and \(c\) are numbers. $EBOLD $BR
Center: \{ ans_rule(20) \}
$HR
END_TEXT

#####################################################################

Context("Numeric");
ANS(($ans1)->cmp());
Context("Point");
ANS(($ans2)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.