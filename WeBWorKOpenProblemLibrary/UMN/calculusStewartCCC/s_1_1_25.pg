DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");
Context()->variables->add(h =>'Real');

$a = random(2,8,1);
$b = random(2,8,1);
$c = random(1,9,1);

$ans = Compute("($b-2*$c)-h");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Let \(f(x) = $a + $b x -x^2.\)  Find the difference quotient \(\displaystyle \frac{f($c+h)-f($c)}{h}.\) Simplify your answer.
$PAR
Answer: \{ans_rule(40)\}
$PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

