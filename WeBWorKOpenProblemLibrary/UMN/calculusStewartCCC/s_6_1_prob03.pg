#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl", 
);

#####################################################################

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(1,5,1);
$a1 = random(1,3,1);

$c = Compute("$a +$a1");
$lin =  Compute("-$a*$c");
$quadr = Compute("$a+$c");
$eva = Compute("$quadr*$a**3/3-$a**4/4+$lin*$a**2/2");
$evc = Compute("$quadr*$c**3/3-$c**4/4+$lin*$c**2/2");
$ans = Compute("abs($eva)+abs($evc-($eva))");
$c2 = Compute("$quadr +1");
$c1 = Compute("-$lin+1");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find the $BITALIC total $EITALIC area enclosed by the curves \( y = $c2 x^2 - x^3 + x\) and
\(y = x^2 + $c1 x.\) $PAR
Area = \{ ans_rule(20)\} $BR
$HR
$BBOLD Hint: $EBOLD $BITALIC You will need compute the area for two regions.$EITALIC
$HR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();

