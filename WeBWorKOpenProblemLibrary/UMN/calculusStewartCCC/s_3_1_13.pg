$c = Compute("$b+1");

$ans = Compute("($a*$b/$c) t^(-($b+$c)/$c)");

###############################################################
Context()->texStrings;

BEGIN_TEXT
Differentiate \(\displaystyle g(t) = -$a t^{-$b/$c}.\)
$PAR
Answer: \(g'(t) = \) \{ans_rule(30)\}
END_TEXT

Context()->normalStrings;

#####################################################################

ANS( $ans->cmp );

