DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);
#####################################################################

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(2,8,1);

$b = Compute("2*$a");

$ans = Compute("DNE");

###############################################################
Context()->texStrings;

BEGIN_TEXT
Evaluate the limit, if it exists.  If a limit $BITALIC does not exist, $EITALIC type "DNE".
\[
\lim_{x \to -$a} \frac{2x+$b}{|x+$a|}
\]
$HR
Limit: \{ans_rule(20)\}$BR
END_TEXT

Context()->normalStrings;

#####################################################################

ANS( $ans->cmp );


