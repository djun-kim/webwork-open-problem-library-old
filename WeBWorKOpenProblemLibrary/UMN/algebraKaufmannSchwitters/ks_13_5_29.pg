#DESCRIPTION
##  Algebra: systems involving nonlinear equations
##ENDDESCRIPTION

##KEYWORDS('algebra', 'nonlinear', 'equations', 'substitution method', 'elimination method')

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Nonlinear Equations')
## Date('04/05/2012')
## Author('Justin Sukiennik')
## Institution('University of Minnesota')
## TitleText1('Algebra for College Students')
## EditionText1('8')
## AuthorText1('Kaufmann, Schwitters')
## Section1('13.5')
## Problem1('29')

########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "answerCustom.pl"
);

##############################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

##############################################################

Context("Numeric");
Context()->strings->add(none=>{},EmptySet=>{alias=>"none"});

$a = random(2,5,1);
$c = random(2,6,2);
$d = random(1,5,2);

$cd = Compute("$c*$d");
$acd = Compute("$a*$c+$a*$d");

$an1 = Point($c,$d);
$an2 = Point($d,$c);

$ans = List($an1, $an2);

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the system of equations by the $BITALIC substitution method $EITALIC or $BITALIC elimination method. $EITALIC $BBOLD List your answers as points in the form \((x,y)\).  If there are no solutions, type "None".$EBOLD
\[
\left( \begin{array}{rl}
xy &= $cd \\
$a x + $a y &= $acd
\end{array}\right)
\]
Answer (separate by commas): \{ans_rule(30)\} $PAR
$HR
END_TEXT
Context()->normalStrings;

##############################################################

ANS($ans->cmp(showHints=>0,showTypeWarnings=>0));

ENDDOCUMENT()
