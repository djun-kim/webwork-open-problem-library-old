$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");

$a = random(125,375,50);

$ans = Compute("$a*(1+$a)")->reduce;

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find the sum of the first \($a\) positive even whole numbers.
$PAR
Sum: \{ans_rule(20)\} $PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

