TEXT(beginproblem());

Context("Numeric");

$a = random(3,4,1);

if ($a == 3){
$ans = Compute("15");
}
else{
$ans = Compute("20");
}

#####################################################################

Context()->texStrings;
BEGIN_TEXT
How many \($a\)-element subsets containing the letter A can be formed from the set \(\lbrace A, B, C, D, E, F, G \rbrace\)?
$PAR
Answer: \{ans_rule(20)\}
$PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

