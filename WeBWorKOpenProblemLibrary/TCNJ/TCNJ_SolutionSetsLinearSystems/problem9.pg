DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"Parser.pl",
"Generic.pl",
"PGmatrixmacros.pl",
);

TEXT(beginproblem());

$a = non_zero_random(-3,3,1);
$b = random(-3,3,1);
$c = non_zero_random(-3,3,1);
if($a==$b){
$b++;
}
if($a==$c){
$a--;
}

$mult1 = non_zero_random(-2,2,1);
$mult2 = random(3,5,1)*random(-1,1,2);

$v01 = $a*$mult1;
$v11 = $b*$mult1;
$v21 = $c*$mult1;
$v02 = $a*$mult2;
$v12 = $b*$mult2;
$v22 = $c*$mult2;

Context("Vector");

$vec=Matrix->new_from_array_ref( [[$v01, $v02],[$v11, $v12],[$v21, $v22]]);

BEGIN_TEXT

\{ mbox( 'Given \( A = \)', display_matrix($vec) ) \}
$BR
$BR
find one nontrivial solution of \( Ax=0 \) by inspection.
$BR
$BR
\( x = \) \{ans_rule()\}

END_TEXT

sub check{
  my $stu=shift();
  $x1=$stu->extract(1); 
  $x2=$stu->extract(2);
  if($x2!=0){
  $ratio = $x1/$x2;
  $ratio2 = -$mult2/$mult1;

  $ratio == $ratio2;
}else{
0;
}
}

ANS(generic_cmp("23",type => 'Vector', length => 2, checker => ~~&check));

