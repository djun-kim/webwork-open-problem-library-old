DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl", 
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a11 = random(-1,1,1);
$b = non_zero_random(-1,1,1);
$a12 = $b * $a11;
$a21 = $a12;
$m = random(-1,1,2);
$a22 = $b * $a21 + $m;

$c = non_zero_random(-1,1,1);
$d = random(-1,1,1);
$n = random(-1,1,2);
$a13 = $c * $a11 + $d * $a12 + $n;
$a31 = $a13;
$a23 = $c * $a21 + $d * $a22;
$a32 = $a23;
$a33 = $c * $a31 + $d * $a32;

$det = $a11*($a22*$a33-$a32*$a23)-$a12*($a21*$a33-$a23*$a31)+$a13*($a21*$a32-$a22*$a31);

$ans11 = ($a22 * $a33 - $a23 * $a32)/$det;
$ans12 = - ($a12 * $a33 - $a13 * $a32)/$det;
$ans13 = ($a12 * $a23 - $a13 * $a22)/$det;
$ans21 = - ($a21 * $a33 - $a23 * $a31)/$det;
$ans22 = ($a11 * $a33 - $a13 * $a31)/$det;
$ans23 = - ($a11 * $a23 - $a13 * $a21)/$det;
$ans31 = ($a21 * $a32 - $a22 * $a31)/$det;
$ans32 = - ($a11 * $a32 - $a12 * $a31)/$det;
$ans33 = ($a11 * $a22 - $a12 * $a21)/$det;

BEGIN_TEXT

\{ mbox( 'If \(A=\)', display_matrix([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]) ) \}
$BR
\{ mbox( 'Then \(A^{-1}=\)', answer_matrix(3,3,5) ) \} 

END_TEXT

ANS(num_cmp($ans11));
ANS(num_cmp($ans12));
ANS(num_cmp($ans13));
ANS(num_cmp($ans21));
ANS(num_cmp($ans22));
ANS(num_cmp($ans23));
ANS(num_cmp($ans31));
ANS(num_cmp($ans32));
ANS(num_cmp($ans33));

ENDDOCUMENT();       # This should be the last executable line in the problem.
