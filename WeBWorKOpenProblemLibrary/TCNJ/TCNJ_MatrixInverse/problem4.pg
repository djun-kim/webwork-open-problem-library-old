TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);
$c = non_zero_random(-9,9,1);
$d = non_zero_random(-9,9,1);
$e = non_zero_random(-9,9,1);
$f = non_zero_random(-9,9,1);

$det = $a*$c*$f;

$ans1 = - $b*$f / $det;
$ans2 = ($b*$e - $c*$d) / $det;
$ans3 = - $a*$e / $det;
$ans4 = $c*$f / $det;
$ans5 = $a*$f / $det;
$ans6 = $a*$c / $det; 

BEGIN_TEXT

\{ mbox([ 'If \(A=\)', display_matrix([[$a, 0, 0], [$b, $c, 0], [$d, $e, $f]]) ]) \}
$BR
\{ mbox([ 'Then \(A^{-1}=\)', answer_matrix(3,3,5) ]) \}

END_TEXT

ANS(num_cmp($ans4));
ANS(num_cmp(0));
ANS(num_cmp(0));
ANS(num_cmp($ans1));
ANS(num_cmp($ans5));
ANS(num_cmp(0));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans6));

