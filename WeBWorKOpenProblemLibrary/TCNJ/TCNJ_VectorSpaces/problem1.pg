TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$ans1 = non_zero_random(-5,5,1);
$ans2 = non_zero_random(-5,5,1);
$ans3 = non_zero_random(-5,5,1);

$v1 = new Matrix(3,1);
$v1->assign(1,1, $ans1);
$v1->assign(2,1, $ans2);
$v1->assign(3,1, $ans3);

if($ans1==1){
   $str1 = "s";}
elsif($ans1==-1){
   $str1 = "-s";}
else{
   $str1 = $str1 . "$ans1";
