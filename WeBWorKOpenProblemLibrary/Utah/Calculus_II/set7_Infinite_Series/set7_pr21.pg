## DBsubject('Calculus')
## DBchapter('Infinite Sequences and Series')
## DBsection('The Integral Test and Estimates of Sums')
## AuthorText1('Dale Varberg, Edwin J. Purcell, and Steve E. Rigdon')
## TitleText1('Calculus')
## EditionText1('9')
## Section1('Infinite Series')
## Problem1('')
## KEYWORDS('calculus')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = random(2,8,1);
$c = $a*$b-$a;
$e = $a + $a -2;
$d = ($e)**($b-1) ;
BEGIN_TEXT
Find the value of
\[ \int_2^{\infty} \frac{dx}{($a x-2)^$b} \] $BR
\{ans_rule(20)\} $BR
Determine whether $BR
\( \displaystyle \sum_{n=2}^\infty( \frac{1}{($a n-2)^$b}) \) $BR
Enter A if series is convergent, B if series is divergent.
\{ans_rule(1)\} $BR

END_TEXT

$ans1 = 1/($c*$d);
$ans2 = "A" ;
ANS(num_cmp($ans1));
ANS(str_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
