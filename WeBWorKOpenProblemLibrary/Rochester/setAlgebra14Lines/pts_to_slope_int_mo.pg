#  Setup

$x1 = random(-10,10,1);
$y1 = random(-10,10,1);
$x2 = random(-10,10,1);
$y2 = random(-10,10,1);
while ($x1==$x2) {$x2  = random(-10,10,1)}

$m1 = ($y2-$y1)/($x2-$x1);

$ans1 = Real($m1);
$ans2 = Real($y1 -$m1*$x1);

###################
