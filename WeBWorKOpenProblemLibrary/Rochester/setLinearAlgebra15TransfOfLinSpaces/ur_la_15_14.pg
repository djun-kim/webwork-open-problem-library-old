DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,5,1);
$b = random(2,5,1);
if ($b == $a) { $b = $b+1; } 
$sa = random(-1,1,2);
$sb = random(-1,1,2);
$a = $a * $sa;
$b = $b * $sb;

$v2 = random(2,4,1);
$v3 = random(-2,-4,1);
$v1 = - $a*$v2 - $b*$v3;

$s = $v1*$v1 + $v2*$v2 + $v3*$v3;
$ans1 = $v2*($v2 - $a*$v1)/$s;
$ans2 = $v2*($v3 - $b*$v1)/$s;
$ans3 = $v3*($v2 - $a*$v1)/$s;
$ans4 = $v3*($v3 - $b*$v1)/$s;

$RIGHT_BRACE = '\}';

BEGIN_TEXT

Let \(V\) be the plane with equation \(x_1 + $a x_2 + $b x_3 =0 \) in \({\mathbb R}^3\).  
$BR 
Find the matrix \(A\) of the orthogonal projection onto the line spanned by the vector 
\( v= \{display_matrix_mm([[$v1], [$v2], [$v3]])\} \)  with 
respect to the basis 
\( \left\{'\{'\} \{display_matrix_mm([[- $a], [1], [0]])\} , \{display_matrix_mm([[- $b], [0], [1]])\} 
   \right${RIGHT_BRACE}\). 
$BR
\{ mbox( '\(A=\)', answer_matrix(2,2,10) ) \} 

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));


ENDDOCUMENT();       # This should be the last executable line in the problem.

