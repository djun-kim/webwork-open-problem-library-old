DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a=random(5,8,1);
$b = random(10,15,1);

$ans = fact($b)/(fact($b-$a)*fact($a));

BEGIN_TEXT
Find the coefficient of \( x^{$a} \) in \( (1+x)^{$b} \). $BR
\{ ans_rule(20) \}
$PAR
END_TEXT

ANS(num_cmp( $ans ) );

