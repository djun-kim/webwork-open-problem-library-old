TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(-1,1,2);

if ($r==1) {
       $rel="compete";
       $a = random(2,3,1);
       $b = random(2,3,1);
       $c = random(2,3,1);
       $d = random(2,3,1);
       $p1 = random(20,50,1);
       $p2 = random(30,50,1);
       $mk = ($c+$a)*$p1 - $p2;
       $nl = ($d+$b)*$p2 - $p1;
       $m = random(int($mk/10)+1, int($mk/3)+1, 1);
       $n = random(int($nl/10)+1, int($nl/3)+1, 1);
       $k = $mk - $m;
       $l = $nl - $n;
} else { 
       $rel="complement";
       $a = random(2,3,1);
       $b = random(2,3,1);
       $c = random(2,3,1);
       $d = random(2,3,1);
       $p1 = random(20,50,1);
       $p2 = random(30,50,1);
       $mk = ($c+$a)*$p1 + $p2;
       $nl = ($d+$b)*$p2 + $p1;
       $m = random(int($mk/10)+1, int($mk/3)+1, 1);
       $n = random(int($nl/10)+1, int($nl/3)+1, 1);
       $k = $mk - $m;
       $l = $nl - $n;
}

$NO_SPACE = '@{}';

