"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
$a1 = random(2,4,1);
$b1 = random(2,3,1);
$c1 = $a1**$b1;
##make sure that two equations are not identical
$d1=random(3,4,1);
if ($d1==$a1){ $d1 = $d1 + 1; }
$e1 = random(2,4,1);
if ($e1 == $b1) {$e1 = $e1 + 1;}
$f1 = $d1**$e1;

TEXT(EV2(<<EOT));
(a)  If \( \log_ x $c1 = $b1 \), then \(x = \) \{ans_rule(10) \}.
$BR
(b)  If \( \log_ x $f1 = $e1 \), then \(x = \) \{ans_rule(10) \}.
EOT

$ans = $a1;
ANS(num_cmp($ans));

$ans = $d1;
ANS(num_cmp($ans));

