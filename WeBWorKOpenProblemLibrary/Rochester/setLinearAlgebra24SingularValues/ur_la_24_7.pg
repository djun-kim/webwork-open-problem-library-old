DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl",
"PGcomplexmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$U = new Matrix(4,4);

foreach $i (1..4) { 
	foreach $j (1..4) {
	$e[$i][$j] = 1;
	}
}

$e[2][3] = -1;
$e[2][4] = -1;
$e[3][2] = -1;
$e[3][4] = -1;
$e[4][2] = -1;
$e[4][3] = -1;

@slice1 = NchooseK(4,4);
@slice2 = NchooseK(4,4);

foreach $i (1..4) { 
	foreach $j (1..4) { 
		$u[$i][$j] = $e[$slice1[$i-1]+1][$slice2[$j-1]+1];
		$U -> assign($i, $j, $u[$i][$j]);
	}
}

$S = new Matrix(4,2);

foreach $i (1..4) {
        foreach $j (1..2) { 
		$s[$i][$j] = 0;
		$S -> assign($i, $j, 0);
	}
}

$sigma1 = non_zero_random(-20,20,5);
$sigma2 = non_zero_random(-20,20,5);

$s[1][1] = $sigma1;
$s[2][2] = $sigma2; 
$S -> assign(1,1,$sigma1);
$S -> assign(2,2,$sigma2);

$V = new Matrix(2,2); 

@f = (0.6, 0.8, 0.6, 0.8, 0.6, 0.8, 0.6, 0.8);
$tag = random(0,3,1);
$f[$tag] = - $f[$tag];
$f[$tag+4] = - $f[$tag+4];
$first = random(0,3,1);

$v[1][1] = $f[$first];
$v[1][2] = $f[$first+1];
$v[2][2] = $f[$first+2];
$v[2][1] = $f[$first+3];

$V -> assign(1,1,$v[1][1]);
$V -> assign(1,2,$v[1][2]);
$V -> assign(2,1,$v[2][1]);
$V -> assign(2,2,$v[2][2]);
 
$A = new Matrix(4,2);

$A = $U * $S * $V;

foreach $i (1..4) { 
	$b[$i] = non_zero_random(-5,5,1);
} 

foreach $i (1..2) { 
	$bu[$i] = 0;
	foreach $j (1..4) {
		$bu[$i] = $bu[$i] + $b[$j]*$u[$j][$i];
	}
}

$x1 = $bu[1]*$v[1][1]/$sigma1 + $bu[2]*$v[2][1]/$sigma2;
$x2 = $bu[1]*$v[1][2]/$sigma1 + $bu[2]*$v[2][2]/$sigma2;

BEGIN_TEXT
\{ mbox( 'Let \(A=\)', display_matrix($A), '.' ) \} 
$BR
A singular value decomposition of \(A\) is as follows:
$BR
\{ mbox( '\(A=\)', display_matrix($U), display_matrix($S), display_matrix($V), '.' ) \} 
$BR
Find the least-squares solution of the linear system
$BR
\{ mbox( '\(Ax=b\), where \(b=\)', display_matrix([[$b[1]], [$b[2]], [$b[3]], [$b[4]]]), '.' ) \} 
$BR
\(x_1^*=\) \{ans_rule(20)\}, 
$BR
\(x_2^*=\) \{ans_rule(20)\}. 

END_TEXT

ANS(num_cmp($x1));
ANS(num_cmp($x2));

ENDDOCUMENT();       # This should be the last executable line in the problem.

