"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a2 = random(2,6,1);
$a1 = random(7,12,1);
$k = random(2,5,1)*$a1*$a2;
$b = $k/$a1;

TEXT(EV2(<<EOT));
Suppose \( z \) varies inversely with \( t \) and that \( z=$b \) when \( t=$a1 \). What is the value of \( z \) when \( t=$a2 \)?$BR
\( z= \) \{ans_rule(10) \}
$BR
EOT

$ans = $k/$a2;
ANS(num_cmp($ans));

