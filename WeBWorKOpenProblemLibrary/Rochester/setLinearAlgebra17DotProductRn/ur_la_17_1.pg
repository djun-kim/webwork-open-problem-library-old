TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$prod = 0;

for ($i=1; $i<4; $i++) {

	$x[$i] = random(-5,5,1);
	$y[$i] = random(-5,5,1);
	$prod = $prod + $x[$i] * $y[$i];

}

BEGIN_TEXT

\{ mbox( 'Let \(x=\)', display_matrix([[$x[1]], [$x[2]], [$x[3]]]), 
	 'and \(y=\)', display_matrix([[$y[1]], [$y[2]], [$y[3]]]), '.'  ) \}
$BR
Find the dot product of \(x\) and \(y\). 
$BR
\(x\cdot y = \) \{ans_rule(20)\}.

END_TEXT

ANS(num_cmp($prod));

