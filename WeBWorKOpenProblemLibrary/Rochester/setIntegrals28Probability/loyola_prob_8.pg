loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$A=random(1,8,1);
$n=random(1,8,1);
$e=($A)**(1+$n);
$f=1+$n;

BEGIN_TEXT
Let \( p(t)\) be the density function given by
\[ p(t) = \begin{cases}
 \frac{$f}{$e}t^{$n} & \text{if}  \;\; 0\leq t \leq $A\\
 0 & \text{otherwise.}
\end{cases}
\]
Find the median value of \( p(t)\).

$PAR

 \{ans_rule(30)\}
$PAR
END_TEXT

$ans1=($e/2)**(1/$f) ;

ANS(num_cmp($ans1));

