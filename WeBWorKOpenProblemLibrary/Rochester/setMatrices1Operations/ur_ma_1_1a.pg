TEXT(beginproblem());

$A = new Matrix(3,3);
$B = new Matrix(3,3);
foreach my $i (1..3) {
	foreach my $j (1..3) {
   		$A->assign($i,$j,random(-4,4,1));
    	$B->assign($i,$j,random(-4,4,1));
   	}
}

$showPartialCorrectAnswers = 1 ;

$mult1 = random(3,6,1);
$mult2 = random(3,6,1);

BEGIN_TEXT
If 
\( A = \{ display_matrix_mm($A)\} \qquad B = \{display_matrix_mm($B)\} \)
then
\{ mbox(['\( $mult1 A + B = \)',
display_matrix([[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)]]) ])
\}
and
\{ mbox(['\($mult2 A^T = \)',
display_matrix([[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)]]) ])
\}
END_TEXT




$C = new Matrix(3,3);
$C = $mult1*$A + $B;
foreach $i (0..2) {
  foreach $j (0..2) {
    ANS(num_cmp($C->[0][$i][$j]));
  }
}
$At=new Matrix(3,3);
$At->transpose($A);
foreach $i (0..2) {
  foreach $j (0..2) {
    ANS(num_cmp($mult2* $At->[0][$i][$j]));
  }
}


