TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$A= new Matrix(4,4);

# create an invertible matrix with det either 1  or -1

$a[1][1] = random(-2,2,1);
$a[2][1] = random(-1,1,2);
$a[3][1] = random(-1,1,2);
$a[4][1] = random(-1,1,1);

$b1 = random(-1,1,2);
foreach $i (1..4) { 
	$a[$i][2] = $b1 * $a[$i][1];
}
$p = random(-1,1,2);
$a[2][2] = $a[2][2] + $p;

$c = random(-1,1,1);
$d = random(-1,1,2);
$n = random(-1,1,2);
foreach $i (1..4) {
	$a[$i][3] = $c * $a[$i][1] + $d * $a[$i][2];
}
$n = random(-1,1,2);
$a[1][3] = $a[1][3] + $n;

$f = random(-1,1,2);
$g = random(-1,1,1);
$h = random(-1,1,1);
foreach $i (1..4) {
	$a[$i][4] = $f * $a[$i][1] + $g * $a[$i][2] + $h * $a[$i][3];  
}
$q = random(-1,1,2);
$a[4][4] = $a[4][4] + $q;

$det = - $a[3][1] * $p * $n * $q;

# define matrix

foreach $i (1..4) {
	foreach $j (1..4) {
 	       $A->assign($i,$j, $a[$i][$j]);
	}
}

        $A_lr = $A->decompose_LR();
        $A_det = $A_lr->det_LR();

# define inverse matrix
        $b = $A_lr->invert_LR();

# define eigenvalues 

        $e = new Matrix(4,4);
        $e->one();

$case = random(1,4,1);

if ($case==1) { 
	$pos = random(1,5,1);
	$m = non_zero_random(-2,2,1);
        $e->assign(1,1, 0);
        $e->assign(2,2, 0);
	$e->assign(1,2, $m);
	$e->assign(3,3, $pos);
	$e->assign(4,4, $pos);
}

if ($case==2) { 
        $neg = random(-5,-1,1);
        $e->assign(1,1, $neg);
        $e->assign(2,2, $neg);
        $e->assign(3,3, $neg);
	$e->assign(4,4, 0);
}

if ($case==3) { 
        $neg = random(-5,-1,1);
        $m = non_zero_random(-2,2,1);
        $e->assign(1,1, $neg);
        $e->assign(2,2, $neg);
        $e->assign(3,3, 0);
        $e->assign(3,4, $m);
        $e->assign(4,4, 0);
}

if ($case==4) { 
        $pos = random(1,5,1);
        $e->assign(1,1, 0);
        $e->assign(2,2, 0);
        $e->assign(3,3, $pos);
        $e->assign(4,4, $pos);
}

# define final matrix
        $matrix = $A * $e *$b;
        $matrix_lr = $matrix->decompose_LR();
        $matrix_det = $matrix_lr->det_LR();

# matrix entries are integers, but sometimes are printed as *e-16 or something like that. 
# to avoid this, we will round each entry

foreach $i (1..4) { 
	foreach $j (1..4) { 
		$m[$i][$j] = $matrix->element($i,$j);
		$m[$i][$j] = round($m[$i][$j]);
		$matrix -> assign($i,$j,$m[$i][$j]);  
  	}
}

BEGIN_TEXT

\{ mbox( 'The matrix \(A=\)', display_matrix($matrix), '.' ) \}
has two distinct eigenvalues \(\lambda_1 < \lambda_2 \). Find the eigenvalues and a basis of each eigenspace.  
END_TEXT

if ($case==1) { 
BEGIN_TEXT
$BR
\(\lambda_1\)= \{ans_rule(5)\}, 
$BR
\{mbox( 'Basis:', ans_array(4,1,5), ',' ) \}
$BR
\(\lambda_2\)= \{ans_rule(5)\}, 
$BR
\{mbox( 'Basis:', ans_array(4,1,5), ', ', ans_array_extension(4,1,5), '.' ) \}
END_TEXT
ANS(num_cmp(0));
ANS(basis_cmp([[$a[1][1], $a[2][1], $a[3][1], $a[4][1]]]));
ANS(num_cmp($pos));
ANS(basis_cmp([[$a[1][3], $a[2][3], $a[3][3], $a[4][3]], 
	       [$a[1][4], $a[2][4], $a[3][4], $a[4][4]]]));
}

if ($case==2) { 
BEGIN_TEXT
$BR
\(\lambda_1\)= \{ans_rule(5)\}, 
$BR
\{mbox( 'Basis:', ans_array(4,1,5), ', ', ans_array_extension(4,1,5), ', ', ans_array_extension(4,1,5), ',') \}
$BR
\(\lambda_2\)= \{ans_rule(5)\}, 
$BR
\{mbox( 'Basis:', ans_array(4,1,5), '.' ) \}
END_TEXT  
ANS(num_cmp($neg));
ANS(basis_cmp([[0, 0, $a[3][1], $a[4][1]],  
	       [1, 0, 0, 0], 
               [0, 1, 0, 0]]));
ANS(num_cmp(0));
ANS(basis_cmp([[$a[1][4], $a[2][4], $a[3][4], $a[4][4]]]));
}

if ($case==3) {
BEGIN_TEXT
$BR
\(\lambda_1\)= \{ans_rule(5)\},
$BR
\{mbox( 'Basis:', ans_array(4,1,5), ', ', ans_array_extension(4,1,5), ',') \}
$BR
\(\lambda_2\)= \{ans_rule(5)\}, 
$BR
\{mbox( 'Basis:', ans_array(4,1,5), '.' ) \}
END_TEXT
ANS(num_cmp($neg));
ANS(basis_cmp([[$a[1][1], 0, $a[3][1], $a[4][1]], 
               [0, 1, 0, 0]]));
ANS(num_cmp(0));
ANS(basis_cmp([[$a[1][3], $a[2][3], $a[3][3], $a[4][3]]]));
}

if ($case==4) {
BEGIN_TEXT
$BR
\(\lambda_1\)= \{ans_rule(5)\},
$BR
\{mbox( 'Basis:', ans_array(4,1,5), ',', ans_array_extension(4,1,5), ',') \}
$BR
\(\lambda_2\)= \{ans_rule(5)\},
$BR
\{mbox( 'Basis:', ans_array(4,1,5), ', ', ans_array_extension(4,1,5), '.' ) \}
END_TEXT
ANS(num_cmp(0));
ANS(basis_cmp([[$a[1][1], 0, $a[3][1], $a[4][1]], 
	       [0, 1, 0, 0]]));
ANS(num_cmp($pos));
ANS(basis_cmp([[$a[1][3], $a[2][3], $a[3][3], $a[4][3]], 
               [$a[1][4], $a[2][4], $a[3][4], $a[4][4]]]));
}

