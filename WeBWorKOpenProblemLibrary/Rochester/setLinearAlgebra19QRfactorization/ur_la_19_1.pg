DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$myQ = new Matrix(3,1);
$myR = new Matrix(1,1);
$M = new Matrix(3,1);

$norm = 0;

foreach $i (0..2) {
	$myq[$i] = non_zero_random(-3,3,1);
	$norm = $norm + $myq[$i] * $myq[$i];
	$myQ->assign($i+1,1, $myq[$i]);
}

$norm = sqrt($norm);

$myR->assign(1,1, non_zero_random(1,5,1));

$M = $myQ * $myR;

$Q = new Matrix(3,1);
$R = new Matrix(1,1);

foreach $i (0..2) {
        $q[$i] = $myq[$i]/$norm;
	$Q->assign($i+1,1, $q[$i]);
}

$R = $myR * $norm;

BEGIN_TEXT

\{ mbox( 'Find the \(QR\) factorization of \(M=\)', display_matrix($M), '.' ) \}
$BR 
\{ mbox( '\(M=\)', answer_matrix(3,1,10), answer_matrix(1,1,10), '.' ) \} 

END_TEXT

ANS(num_cmp(ra_flatten_matrix($Q)));
ANS(num_cmp(ra_flatten_matrix($R)));

ENDDOCUMENT();       # This should be the last executable line in the problem.

