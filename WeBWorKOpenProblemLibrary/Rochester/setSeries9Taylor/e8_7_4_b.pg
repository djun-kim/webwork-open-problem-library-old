DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

@choices = ("sin(x)","exp(x)","cos(x)","arctan(x)");

@questions=();  
$questions[0] = EV2( " \( \displaystyle \sum_{n=0}^\infty (-1)^n \frac{x^{2n+1}}{(2n+1)!} \) " );
$questions[1] = EV2( " \( \displaystyle \sum_{n=0}^\infty \frac{x^n}{n!} \) " );
$questions[2] = EV2( " \( \displaystyle \sum_{n=0}^\infty \frac{(-1)^n x^{2n}}{(2n)!} \)" );
$questions[3] = EV2( " \( \displaystyle \sum_{n=0}^\infty \frac{(-1)^n x^{2n+1}}{2n+1} \)" );

# Now randomize the questions:
@slice = &NchooseK(4,4);
#############################################################################

TEXT(EV2(<<EOT));
Select the FIRST correct reason why the given series diverges. $BR
EOT

TEXT(
&OL(@choices),
&match_questions_list(@questions[@slice])
);

@ans=();
$ans[0] = join " ",$ALPHABET[0];
$ans[1] = join " ",$ALPHABET[1];
$ans[2] = join " ",$ALPHABET[2];
$ans[3] = join " ",$ALPHABET[3];
ANS(str_cmp([@ans[@slice]], filters=>["remove_whitespace","ignore_order","ignore_case"]));

ENDDOCUMENT();        # This should be the last executable line in the problem.


