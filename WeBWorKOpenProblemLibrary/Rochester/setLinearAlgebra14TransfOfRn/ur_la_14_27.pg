DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

@plane = ("\(xy\)", "\(xz\)", "\(yz\)");
@slice_p = NchooseK(3,3);
@splane = @plane[@slice_p];

@axis = ("\(x\)", "\(y\)", "\(z\)");
@slice_a = NchooseK(3,3); 
@saxis = @axis[@slice_a];

$f = random(2,8,1);

@invert = ("Rotation about the $saxis[1] -axis",
	   "Identity transformation (i.e. \(T(v)=v\) for all \(v\))",
           "Dilation by a factor of \($f\)",
	   "Reflection in the $splane[0] -plane",
           "Reflection in the $saxis[0] -axis",
           "Reflection in the origin");

@noninv = ("Projection onto the $splane[1] -plane",
           "Projection onto the $saxis[2] -axis",
	   "Trivial transformation (i.e. \(T(v)=0\) for all \(v\))");

@slice1 = NchooseK(3,3);
@sinvert = @invert[@slice1];

$tag = random(3,5,1);

@slice2 = NchooseK(3,2);
@snoninv = @noninv[@slice2];

$cmc = new_checkbox_multiple_choice();
$cmc -> qa ("Which of the following linear transformations from \({\mathbb R}^3\) to \({\mathbb R}^3\) are
invertible?",
	    $sinvert[0], $sinvert[1], $sinvert[2], $invert[$tag]);
$cmc -> extra ($snoninv[0], $snoninv[1]);

BEGIN_TEXT

$BR
\{$cmc -> print_q \}
$BR
\{$cmc -> print_a \}

END_TEXT

ANS(checkbox_cmp( $cmc->correct_ans ));

ENDDOCUMENT();       # This should be the last executable line in the problem.

