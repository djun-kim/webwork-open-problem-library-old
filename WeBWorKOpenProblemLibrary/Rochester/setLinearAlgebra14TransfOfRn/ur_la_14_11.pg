loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,6,1);
$d = random(2,6,1);
$bc = $a * $d - 1;
$b = $bc - 1;
$c = $bc/$b;
while (int($c) < $c) {
	$b = $b-1;
 	$c = $bc/$b;
}
$b = - $b;
$c = - $c;

$NO_SPACE = '@{}';

BEGIN_TEXT

Find the inverse of the linear transformation

\[ \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
   y_1 & = & $a x_1 & + $b x_2 \cr
   y_2 & = & $c x_1 & + $d x_2 
   \end{array}  \] 
$BR
\(x_1=\) \{ans_rule(5)\} \(y_1+\) \{ans_rule(5)\} \(y_2\), $BR 
\(x_2=\) \{ans_rule(5)\} \(y_1+\) \{ans_rule(5)\} \(y_2\).

END_TEXT

ANS(num_cmp($d));
ANS(num_cmp(- $b));
ANS(num_cmp(- $c));
ANS(num_cmp($a));

ENDDOCUMENT();       # This should be the last executable line in the problem.

