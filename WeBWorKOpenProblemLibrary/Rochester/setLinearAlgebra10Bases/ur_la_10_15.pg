DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-3,3,2);
$b = non_zero_random(-4,4,2);
$c = non_zero_random(-2,2,1);
$d = random(-3,3,2);

$k = non_zero_random(-3,3,1);
$l = non_zero_random(-3,3,1);
$m = non_zero_random(-2,2,1);
$n = random(-2,2,1);

$p = random(-1,1,1);
$q = random(-1,1,1);

$r = random(-1,1,1);
$s = random(-1,1,1);

$a11 = $k*$a;
$a12 = $l*$b;
$a13 = $m*$a + $n*$b;
$a14 = $n*$a - $m*$b;

$a21 = $k*$c;
$a22 = $l*$d;
$a23 = $m*$c + $n*$d;
$a24 = $n*$c - $m*$d;

$a31 = $p*$a11 + $q*$a21;
$a32 = $p*$a12 + $q*$a22;
$a33 = $p*$a13 + $q*$a23;
$a34 = $p*$a14 + $q*$a24;

$a41 = $r*$a11 + $s*$a21;
$a42 = $r*$a12 + $s*$a22;
$a43 = $r*$a13 + $s*$a23;
$a44 = $r*$a14 + $s*$a24;

BEGIN_TEXT

\{ mbox( 'Let \(A=\)', display_matrix([[$a11, $a12, $a13, $a14], 
				       [$a21, $a22, $a23, $a24], 
				       [$a31, $a32, $a33, $a34],
				       [$a41, $a42, $a43, $a44]]), '.' ) \} 
$BR
Find a basis of the kernel of \(A\) (or the linear transformation \(T(x)=Ax\)).
$BR
\{mbox( ans_array(4,1,5), ',', ans_array_extension(4,1,5), '.' )\}

END_TEXT

$ml = $m*$l;
$kn = $k*$n;
$nl = $n*$l;

$mkl = - $k * $l;
$mkm = - $k * $m;
 
ANS(basis_cmp([[$ml, $kn, $mkl, 0], [$nl, $mkm, 0, $mkl]]));

ENDDOCUMENT();       # This should be the last executable line in the problem.

