DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(1,5,1);
$a1 = random(1,3,1);
$c = $a +$a1;
$lin =  -$a*$c;
$quadr = $a+$c;
$eva = $quadr*$a**3/3-$a**4/4+$lin*$a**2/2;
$evc = $quadr*$c**3/3-$c**4/4+$lin*$c**2/2;
$answ = abs($eva)+abs($evc-$eva);
$c2 = $quadr +1;
$c1 = -$lin+1;

TEXT(beginproblem());
BEGIN_TEXT
The total area enclosed by the graphs of
\[y = $c2 x^2 - x^3 + x\]
\[y = x^2 + $c1 x\]
is \{ ans_rule()\}
END_TEXT

ANS(num_cmp($answ));

ENDDOCUMENT();

