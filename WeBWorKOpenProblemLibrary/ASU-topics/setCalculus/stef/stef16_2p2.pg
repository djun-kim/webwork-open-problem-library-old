DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,6);
$b = random(2,8);
$n = random(2,6,2);
$aa = $a**2;


BEGIN_TEXT
$BR Evaluate the line integral \( \displaystyle \int_C $b x y^$n \; ds \),
where C is the right half of the circle \( x^2 + y^2 = $aa \).
$PAR
\{ ans_rule(30) \}
END_TEXT
ANS(num_cmp(2*$b*$a**($n+2)/($n+1)));

ENDDOCUMENT();
