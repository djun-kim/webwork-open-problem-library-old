TEXT(&beginproblem);

$a =random(5,8);
$b= random(2,4,1);

$ans=(fact($a)/(fact($a-$b)));

BEGIN_TEXT
How many ways are there to seat $b people in a row of $a chairs?
\{ ans_rule(20) \}
END_TEXT

ANS( num_cmp( $ans ) );

