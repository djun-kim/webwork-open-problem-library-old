                   [Formula("csch(x)"), Real("1/$sinhx"), Formula("1/sinh(x)")],
                   [Formula("sech(x)"), Real("1/$coshx"), Formula("1/cosh(x)")],
                   [Formula("tanh(x)"), Real("$sinhx/$coshx"), Formula("sinh(x)/cosh(x)")],
                   [Formula("coth(x)"), Real("$coshx/$sinhx"), Formula("cosh(x)/sinh(x)")])};

