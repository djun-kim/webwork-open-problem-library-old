## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Combining Functions')
## KEYWORDS('calculus', 'functions', 'composite functions', 'domain')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('1.3')
## Problem1('29')
## Author('Christopher Sira')
## Institution('W.H.Freeman')

DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
loadMacros("PGchoicemacros.pl");

$a = random(2, 10);
$b = random(2, 10);
$f = Formula("$a^x")->reduce;
$g = Formula("x^($b)");

$ansa = Formula("$a^(x^($b))")->reduce;
$ansb = Formula("$a^($b*x)")->reduce;

Context()->texStrings;
BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "1.3","29") \}
$PAR
Calculate the composite functions \( f \circ g \) and \( g \circ f \).
$PAR
\( f(x) = $f, g(x) = $g \)
$PAR
\( f(g(x)) = \) \{ans_rule()\}
$BR
\( g(f(x)) = \) \{ans_rule()\}
END_TEXT

ANS($ansa->cmp);
ANS($ansb->cmp);

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
\[ f(g(x)) = f(x^{$b}) = $a^{x^{$b}}; \]
\[ g(f(x)) = g($a^x) = $a^{$b x}. \]
END_SOLUTION

ENDDOCUMENT();