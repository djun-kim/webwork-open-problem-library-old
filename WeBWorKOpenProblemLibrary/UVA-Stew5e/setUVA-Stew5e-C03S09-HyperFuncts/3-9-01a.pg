"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a =  random(0,5,1);
TEXT(EV2(<<EOT));

Find the numerical value of the expression:
\[
\sinh $a
\]
$BR $BR \{ans_rule(30) \}
$BR
EOT


$ans = (exp($a)-exp(-$a))/2;
ANS(num_cmp($ans));
