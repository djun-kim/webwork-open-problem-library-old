DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);

TEXT(EV2(<<EOT));
Differentiate
\[ f(x) = $a e^{x} \sin x . \]
$BR
\(f'(x) = \) \{ans_rule(35) \}
$BR
EOT

$ans = "$a*e**{x}*sin(x) + $a*e**{x}*cos(x)";
ANS(fun_cmp($ans));

