DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(2,5,1);
$b1 = random(2,8,1);
$c1 = random(2,4,1);
$x1 = random(1,5,1);
$deriv1 = ($c1*($x1**2+$a1*$x1+$b1)**($c1-1))*(2*$x1+$a1);
$funct1 = "($c1*(x**2+$a1*x+$b1)**($c1-1))*(2*x+$a1)";

TEXT(EV2(<<EOT));
If \( f(x) = (x^2+ $a1 x + $b1) ^ { $c1 } \), find \( f'( x ) \).
$BR $BR \{ans_rule(50) \}
$BR
EOT

$ans = $funct1;
ANS(fun_cmp($ans));

