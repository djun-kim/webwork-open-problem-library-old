TEXT(beginproblem());

###################################
# Setup

$a = random(2,7,1);
$b = random(1,6,1);

$f=Formula("sqrt($a x^2+$b)");

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT

Let \( f(x) = \displaystyle $f \).  Find \(f'(x)\).
$PAR
\(f'(x) =\) \{ans_rule(50) \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
$ans=$f->D('x');
ANS($ans->with(limits => [0,1], tolerance => .001)->cmp);

