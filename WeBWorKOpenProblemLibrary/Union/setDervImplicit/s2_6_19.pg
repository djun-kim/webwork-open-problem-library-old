DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned answer blanks
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup


$x0 = random(1,10,1);
$y0 = 1;

$m = -2/(4*$x0);

Context()->variables->add(y=>'Real');
$leftside=Formula("x*y^3+x*y")->reduce;
$rightside=Real($leftside->eval(x=>$x0, y=>$y0));

###################################
#  Use an aligned list to present the answer blanks
###################################

$al = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$al->qa(
  "\( m \)", Real($m)->cmp,
  "\( b \)", Real($y0 - $m*$x0)->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Fnd the equation of the line tangent to the curve
\[$leftside = $rightside \]
at the point \(($x0,$y0)\).
$PAR
When the equation of this tangent line is written in the form \( y = mx+b \),
\{$al->print_q\}
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################


COMMENT('MathObject version');
ENDDOCUMENT();
