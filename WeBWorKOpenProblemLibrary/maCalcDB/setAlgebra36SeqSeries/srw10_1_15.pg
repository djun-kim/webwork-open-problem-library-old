loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,5,1);
$b = $a + 1;

BEGIN_TEXT
For the sequence \( a_n = a_{n-1} + a_{n-2} \) and \(a_1=$a, a_2=$b\),
$BR
its first term is \{ans_rule(10) \};
$BR
its second term is \{ans_rule(10) \};
$BR
its third term is \{ans_rule(10) \};
$BR
its fourth term is \{ans_rule(10) \};
$BR
its fifth term is \{ans_rule(10) \}.
$BR
END_TEXT

$ans1 = $a;
$ans2 = $b;
$ans3 = $ans1+$ans2;
$ans4 = $ans2+$ans3;
$ans5 = $ans3+$ans4;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));

