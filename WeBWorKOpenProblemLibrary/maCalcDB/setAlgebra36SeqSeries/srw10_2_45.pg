TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a=1;
$d=random(2,9,1);
$n=random(20,40,1);

$a1=$a;
$a2=$a+$d;
$a3=$a+2*$d;
$a4=$a+3*$d;
$an=$a+($n-1)*$d;

BEGIN_TEXT
The partial sum \( $a1+$a2+$a3+\cdots+$an \) equals \{ans_rule(15) \}.
$BR
END_TEXT

$ans1 = $n*(2*$a+($n-1)*$d)/2;

ANS(num_cmp($ans1));

