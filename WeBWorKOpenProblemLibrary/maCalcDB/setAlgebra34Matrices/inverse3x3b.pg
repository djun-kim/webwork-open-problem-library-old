"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(-9,9,1);
$b = random(-9,9,1);
$c = random(-9,9,1);

$k1 = non_zero_random(-9,9,1);
$k2 = non_zero_random(-9,9,1);

$x = $k1+$k2*$a;
$y = 2*$k1 + $k2*$b;
$z = 3*$k1 + $k2*$c;

BEGIN_TEXT
Given the matrix
\[
\left[\begin{array}{rrr}
        1 & 2 & 3 \\\\
        $a & $b & $c \\\\
        $x & $y & $z \\\\
\end{array}\right],
\]
$BR
(a) does the inverse of the matrix exist?
$BR
Your answer is (input Yes or No): \{ans_rule(15) \}
$BR
(b) if your answer is Yes, write the inverse here:
\[
\left[\begin{array}{rrr}
    \{tex_ans_rule(10)\} & \{tex_ans_rule(10)\} & \{tex_ans_rule(10)\}\\\\
    \{tex_ans_rule(10)\} & \{tex_ans_rule(10)\} & \{tex_ans_rule(10)\}\\\\
    \{tex_ans_rule(10)\} & \{tex_ans_rule(10)\} & \{tex_ans_rule(10)\}\\\\
\end{array}\right],
\]
$BR
END_TEXT

$ans0 = "No";
$ans1 = " ";
$ans2 = " ";
$ans3 = " ";
$ans4 = " ";
$ans5 = " ";
$ans6 = " ";
$ans7 = " ";
$ans8 = " ";
$ans9 = " ";

ANS(str_cmp($ans0));
ANS(str_cmp($ans1));
ANS(str_cmp($ans2));
ANS(str_cmp($ans3));
ANS(str_cmp($ans4));
ANS(str_cmp($ans5));
ANS(str_cmp($ans6));
ANS(str_cmp($ans7));
ANS(str_cmp($ans8));
ANS(str_cmp($ans9));

