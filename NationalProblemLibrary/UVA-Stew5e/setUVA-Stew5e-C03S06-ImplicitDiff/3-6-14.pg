DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$x1 = random(1,8,1);
$y1 = random(1,8,1);
$a=   random(1,4,1);
$b=   random(1,4,1);
$c=   random(1,4,1);
$d = sqrt($a + $b*($x1**(2))*($y1**(2))) - $c*($x1)*($y1);
$num = $c*$y1 - (($a + $b*(($x1*$y1)**2))**(-1/2))*($b*$x1*$y1**2);
$denom = ((($a + $b*($y1*$x1)**2)**(-1/2))*($b*$y1*$x1**2)) - $c*$x1;

while ( $denom == 0 ) {
$x1 = random(1,8,1);
$y1 = random(1,8,1);
$denom = ((($a + $b*($y1*$x1)**2)**(-1/2))*($b*$y1*$x1**2)) - $c*$x1;
}

$yp = - $num/$denom;

# Present the text.
TEXT(EV2(<<EOT));
Find the slope of the tangent line to the curve

\[ \sqrt{$a + $b x^2 y^2}  - $c x y = !{$d} \]

at the point \( ( $x1,$y1 ) \). $BR
\{ &ans_rule(50) \}
EOT

ANS(num_cmp($yp));

ENDDOCUMENT();        # This should be the last executable line in the problem.
