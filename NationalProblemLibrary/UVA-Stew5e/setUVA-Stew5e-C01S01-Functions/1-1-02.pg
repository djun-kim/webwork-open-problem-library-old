DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGgraphmacros.pl",
"extraAnswerEvaluators.pl"
);

$x1f = random(-5,-4,1); # left end of f
$x1g = random(-5,-4,1); # left end of g
$y1f = random(3,5,1);
$y1g = random(-3,-2,1);

$x2  = random(-3,-2,1);  # common point
$y2  = random(-1,1,1);

$x4f = random(-1,1,1);   # min for f
$x4g = random(-1,1,1);   # max for g
$y4f = random(-5,-3,1);
$y4g = random(3,5,1);

$x5  = random(2,3,1);
$y5  = random(-2,2,1);

$x6f = random(4,5,1);    # right end for f  # estimate value here
$x6g = random(4,5,1);
$y6f = random(3,5,1);
$y6g = random(-5,-4,1);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
$hermite_f1 = new Hermite( [ $x1f  , $x2,  $x4f, $x5 , $x6f ],
                   [ $y1f  , $y2,  $y4f, $y5 , $y6f ],
                   [  0   ,  -1 ,   0  ,   1 ,   2  ]);
$hermite_g1 = new Hermite( [ $x1g  , $x2,  $x4g, $x5 , $x6g ],
                   [ $y1g  , $y2,  $y4g, $y5 , $y6g ],
                   [  2   ,  1 ,   0   ,  -1 ,   -2 ]);


@questions = ();
@answers=();
qa(~~@questions,~~@answers,
"What is the value of \(f\) at $x1f?",
num_cmp( $hermite_f1->rf_f -> ($x1f) ),
qq!For what values of \(x\) is \(f(x) = g(x)\): Separate answers by spaces (e.g $LQ 5 7$RQ)!,
sub {   my $input = shift;    # answer should a be a string "$x3  $x5"

          @ans = split(/~~s+/, $input);
          @ans= num_sort(@ans);
          my ($ans_eval0) = num_cmp($x2);
          my ($ans_eval1) = num_cmp($x5);
          my $ans_hash0 = $ans_eval0->( defined($ans[0])?$ans[0]:''  );
          my $ans_hash1 = $ans_eval1->( defined($ans[1])?$ans[1]:'' );
          my $rh_ans =
            {score => $ans_hash0->{score} && $ans_hash1 ->{score},
             correct_ans => $ans_hash0->{correct_ans} . " " . $ans_hash1->{correct_ans},
             student_ans => $input,
             ans_message => $ans_hash0->{ans_message} . " " . $ans_hash1->{ans_message}
            };
          $rh_ans;
},
"Estimate the solution of the equation \(g(x) = " . $hermite_g1 ->rf_f-> ($x6g) ."\)",
num_cmp($x6g),
"On what interval is the function \( f\) decreasing? (Separate answers by a space: e.g. $LQ-2 4$RQ)",
 sub {   my $input = shift;    # answer should a be a string "$x3  $x5"
          my @ans = split(/~~s+/, $input);
          @ans= num_sort(@ans);
          my ($ans_eval0) = num_cmp($x1f);
          my ($ans_eval1) = num_cmp($x4f);
          my $ans_hash0 = $ans_eval0->( defined($ans[0])?$ans[0]:''  );
          my $ans_hash1 = $ans_eval1->( defined($ans[1])?$ans[1]:'' );
          my $rh_ans =
            {score => $ans_hash0->{score} && $ans_hash1 ->{score},
             correct_ans => $ans_hash0->{correct_ans} . " " . $ans_hash1->{correct_ans},
             student_ans => $input,
             ans_message => $ans_hash0->{ans_message} . " " . $ans_hash1->{ans_message}
             };
         $rh_ans;
 },
); # end  qa

$graph = init_graph(-6,-6,6,6,grid =>[12,12], axes => [0,0]);
$f1 = new Fun($hermite_f1->rf_f,$graph);
$g1 = new Fun($hermite_g1->rf_f,$graph);
$graph-> lb(new Label(-4, $f1->rule->(-4),'f','blue','bottom')  );
$graph-> lb(new Label(4, $g1->rule->(4),'g','red','bottom')     );

$g1->color('red');
BEGIN_TEXT
\{ image(insertGraph($graph)) \} $BR
Use the graphs of \(f\) (in blue) and \(g\) (in red)
to answer these questions: $BR
(Note: Click on the graph to see a larger version in a separate window.)
$BR
\{ans_rule(15)\} (A) What is the value of \(f\) at $x1f?
$BR
\{ans_rule(15)\} (B) For what values of \(x\) is \(f(x) = g(x)\)?  (Separate your answers
with commas.)
$BR
\{ans_rule(15)\} (C) Estimate the solution of the equation \(g(x) = $y4g \).
$BR
\{ans_rule(15)\} (D) On what interval is the function \( f\) decreasing?
(Use interval notation for your answer.)


END_TEXT

@answers = (num_cmp( $hermite_f1->rf_f -> ($x1f) ),
    number_list_cmp("$x2, $x5"),num_cmp($x4g),
    interval_cmp("($x1f,$x4f)",sloppy=>'yes'));
ANS(@answers);
ENDDOCUMENT();        # This should be the last executable line in the problem.
