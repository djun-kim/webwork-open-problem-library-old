DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGnumericalmacros.pl",
           "extraAnswerEvaluators.pl");


TEXT(beginproblem());

$graph = init_graph(0,-5,8,5,'axes'=>[0,0],'grid'=>[8,10]);
@x_val = ( 0, 1, 2, 3, 4, 5, 6, 7, 8 );

$vnum = random(1,6,1);

if ($vnum == 1) {

$b1= random(3,4,1);
$b2= random(-1,-3,1);
$b3= random(3,4,1);

@y_val = ( 1, 2, $b1, 0,$b2, 0, $b3, 2, 1 );
@yp_val= ( 0, 1, 0,-2, 0, 1, 0,-1, 0 );

@ans = (interval_cmp("(0,3)U(5,8)"),
        number_list_cmp("5"));
}

if ($vnum == 2) {

$b1= random(3,4,1);
$b2= random(-1,-3,1);
$b3= random(3,4,1);

@y_val = ( -1, -2, -$b1, 0,-$b2, 0, -$b3, -2, -1 );
@yp_val= ( 0, -1, 0,2, 0, -1, 0,1, 0 );

@ans = (interval_cmp("(3,5)"),
        number_list_cmp("3"));
}

if ($vnum == 3) {

$b1= random(3,4,1);
$b2= random(-1,-3,1);
$b3= random(3,4,1);

@y_val = ( 2, $b1, 2, 1,0, 1, $b3, 2, 1 );
@yp_val= ( 1, 0, 0,-2, 0, 1, 0,-1, 0 );

@ans = (interval_cmp("(0,8)"),
        number_list_cmp("-1000"));
}

if ($vnum == 4) {

$b1= random(3,4,1);
$b2= random(-1,-3,1);
$b3= random(3,4,1);

@y_val = ( -2, -$b1, -2, -1,0, -1, -$b3, -2, -1 );
@yp_val= ( -1, 0, 0,2, 0, -1, 0,1, 0 );

@ans = (interval_cmp("(0,0)"),
        number_list_cmp("-1000"));
}

if ($vnum == 5) {

$b1= random(3,4,1);
$b2= random(2,3,1);
$b3= random(3,4,1);

@y_val = ( 1, $b1, 2, 0,-$b2, -1, -$b3, -2, -1 );
@yp_val= ( 2, 0, -2,-2, 0, 0, -1,1, 1 );

@ans = (interval_cmp("(0,3)"),
        number_list_cmp("-1000"));
}

if ($vnum == 6) {

$b1= random(3,4,1);
$b2= random(2,3,1);
$b3= random(3,4,1);

@y_val = ( -1, -$b1, -2, 0,$b2, 1, $b3, 2, 1 );
@yp_val= ( -2, 0, 2,2, 0, 0, 1,-1, -1 );

@ans = (interval_cmp("(3,8)"),
        number_list_cmp("3"));
}

$spline_rule = hermite_spline(~~@x_val,   # x values
                              ~~@y_val,   # y values
                              ~~@yp_val   # y prime values
                         );

$f3 = new Fun($spline_rule, $graph);
$f3->color('red');

