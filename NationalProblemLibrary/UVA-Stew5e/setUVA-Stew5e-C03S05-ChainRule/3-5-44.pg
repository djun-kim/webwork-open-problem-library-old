TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,9,2);
$b = random(2,8,2);


BEGIN_TEXT
Find an equation of the tangent line to the curve
\[ y = \sin($a x) + \cos($b x) \]
$BR
at the point
\( (\frac{\pi}{6},\; y(\frac{\pi}{6}) ) \).
Tangent line: 
$BR
$BR
\(y = \) \{ans_rule(50) \}
END_TEXT

$m = "($a*cos($a*pi/6)-$b*sin($b*pi/6))";
ANS(fun_cmp("sin($a*pi/6)+cos($b*pi/6)+$m*(x-pi/6)"));

