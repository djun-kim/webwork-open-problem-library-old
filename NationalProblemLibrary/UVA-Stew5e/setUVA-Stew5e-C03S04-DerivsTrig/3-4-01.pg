DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pi = 4*arctan(1);

$a = random(2,12,1);
$b = random(2,12,1);

$x_d = random(3,6,1);
while ($x_d == 5) {$x_d = random(3,6,1);};

$q = random(0,4,1);
if ($q == 0) {
    $x_n = 1;
    $x_s = -1;
    $x_sign = '-';
    };
if ($q == 1) {
    $x_n = 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 2) {
    $x_n = $x_d - 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 3) {
    $x_n = $x_d + 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 4) {
    $x_n = 2 * $x_d - 1;
    $x_s = 1;
    $x_sign = '';
    };

if ($x_n != 1) { $x_num = $x_n };
if ($x_n == 1) { $x_num = '' };

$x = $x_s*$x_n*$pi/$x_d;

$deriv = "$a*cos(x) - $b*sin(x)";
$deriva = $a*cos($x) - $b*sin($x);

TEXT(EV2(<<EOT));
Let \[ f(x) = $a \sin x + $b \cos x \]
$PAR
\(f'(x) = \)  \{ans_rule(35) \}
$PAR
\( f'( $x_sign \frac { $x_num \pi } {$x_d} ) = \) \{ans_rule(35) \}
$PAR
EOT

$ans1 = $deriv;
$ans2 = $deriva;
ANS(fun_cmp($ans1), num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
