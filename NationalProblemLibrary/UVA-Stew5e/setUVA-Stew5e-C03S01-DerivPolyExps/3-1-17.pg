loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(2,7,1);
$b1 = random(2,12,1);
$c1 = random(1,40,1);
$x1 = random(1,5,1);
$funct1 = "($a1)*(3/2)*(x**(1/2)) + ($b1/2)*(x**(-1/2)) -($c1/2)*(x**(-3/2))";

TEXT(EV2(<<EOT));
If \( f(x) =  \frac{$a1 x^2 + $b1 x +$c1}{\sqrt{x}} \), find \( f'( x ) \).
$PAR
\( f'(x) \) = \{ans_rule(30) \}
$BR
EOT

$ans = $funct1;
ANS(fun_cmp($ans));

