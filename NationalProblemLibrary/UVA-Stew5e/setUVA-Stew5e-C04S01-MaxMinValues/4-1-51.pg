## DESCRIPTION
##  Calculus: Maximum and Minimum Values
## ENDDESCRIPTION

## KEYWORDS('derivatives', 'minimum', 'maximum')
## Tagged by YL

## DBsubject('Calculus')
## DBchapter('Applications of Differentiation')
## DBsection('Maximum and Minimum Values')
## Date('5/29/2005')
## Author('Jeff Holt')
## Institution('UVA')
## TitleText1('Calculus')
## EditionText1('5e')
## AuthorText1('Stewart')
## Section1('4.1')
## Problem1('51')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl");

$at = non_zero_random(-4,4,2);
$a = $at + 5;
$b = 10-$a;
$c0 = random(2,12,1);
$c1 = -3*$a*$b;
$c2 = 3*($b-$a)/2;
$p1 = -$b -1;
$p2 = -$b + 2;
$p3 = $a - 1;
$p4 = $a + 1;


TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$pol = nicestring([1, $c2, $c1, $c0]);

BEGIN_TEXT
Find the
absolute maximum and absolute minimum values of  the function
\[  f(x) = $pol \]
on each of the indicated intervals.
Enter $BITALIC DNE $EITALIC for any absolute extrema that does not exist.
$BR
$BR
(A) Interval = \([$p1, 0]\).
$BR
Absolute maximum = \{ans_rule(10)\}
$BR
$BR
Absolute minimum = \{ans_rule(10)\}
END_TEXT

$ans1 = -($b**3) + $c2*$b**2 - $c1*$b + $c0;
if ($p1**3 + $c2*$p1**2 + $c1*$p1 < 0)
{
    $ans2 = $p1**3 + $c2*$p1**2 + $c1*$p1 + $c0;
}
else
{
    $ans2 = $c0;
}
@answers = (num_cmp($ans1, strings=>["DNE"]), num_cmp($ans2, strings=>["DNE"]));

ANS(@answers);

BEGIN_TEXT
$BR
$BR
(B) Interval = \([$p2, $p4]\).
$BR
Absolute maximum = \{ans_rule(10)\}
$BR
$BR
Absolute minimum = \{ans_rule(10)\}
END_TEXT

if ($p2**3 + $c2*$p2**2 + $c1*$p2 < $p4**3 + $c2*$p4**2 + $c1*$p4)
{
    $ans1 = $p4**3 + $c2*$p4**2 + $c1*$p4 + $c0;
}
else
{
    $ans1 = $p2**3 + $c2*$p2**2 + $c1*$p2 + $c0;
}
$ans2 = ($a**3) + $c2*$a**2 + $c1*$a + $c0;

@answers = (num_cmp($ans1, strings=>["DNE"]), num_cmp($ans2, strings=>["DNE"]));

ANS(@answers);

BEGIN_TEXT
$BR
$BR
(C) Interval = \([$p1, $p4]\).
$BR
Absolute maximum = \{ans_rule(10)\}
$BR
$BR
Absolute minimum = \{ans_rule(10)\}
END_TEXT

if ($p4**3 + $c2*$p4**2 + $c1*$p4 < (-$b)**3 + $c2*$b**2 - $c1*$b)
{
    $ans1 = (-$b)**3 + $c2*$b**2 - $c1*$b + $c0;
}
else
{
    $ans1 = $p4**3 + $c2*$p4**2 + $c1*$p4 + $c0;
}
if ($p1**3 + $c2*$p1**2 + $c1*$p1 > ($a)**3 + $c2*$a**2 + $c1*$a)
{
    $ans2 = ($a)**3 + $c2*$a**2 + $c1*$a + $c0;
}
else
{
    $ans2 = $p1**3 + $c2*$p1**2 + $c1*$p1 + $c0;
}

@answers = (num_cmp($ans1, strings=>["DNE"]), num_cmp($ans2, strings=>["DNE"]));

ANS(@answers);

ENDDOCUMENT();        # This should be the last executable line in the problem.
