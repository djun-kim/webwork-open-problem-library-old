DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl");

$a = random(2,5,1);
$b = random(6,10,1);
$c = ($a+$b)/2;
$d = $a*$b;
$p1 = random(-4,-1,1);
$p2 = random(2,5,1);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

TEXT(EV2(<<EOT));
Find the
absolute maximum and absolute minimum values of  the function
\[  f(x) = (1/3) x^3 - $c x^2 + $d x \]
on the interval \([$p1,$p2]\).
$BR
Enter -1000 for any absolute extrema that does not exist.
$BR
Absolute maximum = \{ans_rule(10)\}
$BR
$BR
Absolute minimum = \{ans_rule(10)\}

$BR
EOT

$ans1 = (1/3)*(($a)**3) - $c*(($a)**2) + $d*($a);
$ans2 = (1/3)*(($b)**3) - $c*(($b)**2) + $d*($b);
$ans3 = (1/3)*(($p1)**3) - $c*(($p1)**2) + $d*($p1);
$ans4 = (1/3)*(($p2)**3) - $c*(($p2)**2) + $d*($p2);
$ansmax = $ans1;
$ansmin = $ans1;

if ($ans2 > $ansmax)
{
    $ansmax = $ans2;
}

if ($ans3 > $ansmax)
{
    $ansmax = $ans3;
}
if ($ans4 > $ansmax)
{
    $ansmax = $ans4;
}


if ($ans2 < $ansmin)
{
    $ansmin = $ans2;
}

if ($ans3 < $ansmin)
{
    $ansmin = $ans3;
}
if ($ans4 < $ansmin)
{
    $ansmin = $ans4;
}


@answers = (num_cmp($ansmax), num_cmp($ansmin));

ANS(@answers);

ENDDOCUMENT();        # This should be the last executable line in the problem.
