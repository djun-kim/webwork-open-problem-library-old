##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");
Context()->strings->remove("NONE");
Context()->strings->add("no"=>{},"N"=>{alias=>"no"},"NONE"=>{alias=>"no"});

$a = random(2,6,1);
$b = random(2,5,1);
$c = random(2,9,1);
$d = random(9,12,1);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Is the expression \( $a xy + $b x + $c - $d y \) 
linear in the variable \( y \)?  If it is linear, 
enter the slope.  If it is not linear, enter 
${BITALIC}NO.${EITALIC}
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

ANS( Compute("$a * x - $d")->cmp() );

ENDDOCUMENT();  