##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
#"parserImplicitPlane.pl",
"parserAssignment.pl",
"answerHints.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

#Context("ImplicitPlane");
Context("Numeric")->variables->are(d=>"Real",D=>"Real");
parser::Assignment->Allow;


$m = random(25,50,25);
$x = random(10,20,1);
$b = $m * $x;

$answer = Formula("D = $b - $m d"); 

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
A homing pigeon starts $b miles from home and
flies $m miles toward home each day.  Express
the distance from home \( D \), in miles, as a 
function of the number of days \( d \).   Enter
your answer as an equation, such as \( D = 1+2d \).
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;



ANS( $answer->cmp() 
->withPostFilter(AnswerHints( 
  Formula("D = $b + $m d") => "The distance from home should decrease over time",
))
);


COMMENT('MathObject version');
ENDDOCUMENT();