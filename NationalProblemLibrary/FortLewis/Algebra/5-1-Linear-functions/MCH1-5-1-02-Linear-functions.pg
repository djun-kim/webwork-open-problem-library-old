##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
#"parserImplicitPlane.pl",
"parserAssignment.pl",
"answerHints.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

#Context("ImplicitPlane");
Context("Numeric")->variables->are(h=>"Real",t=>"Real");
parser::Assignment->Allow;

$m = random(0.2,0.8,0.2);
#$x = random(10,20,1);
#$b = $m * $x;
$b = random(5,9,1);
$binches = $b * 12;

$answer = Formula("h = $binches + $m t"); 

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
You buy a saguaro cactus $b feet high and it 
grows at a rate of $m inches each year.  Express
its height \( h \), in inches, as a function of 
time \( t \), in years, since the purchase.
Enter your answer as an equation, such as 
\( h = 1+2t \).
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() 
->withPostFilter(AnswerHints( 
  Formula("h = $b + $m t") => "Shouldn't everything be in inches?",
))
);

ENDDOCUMENT();  