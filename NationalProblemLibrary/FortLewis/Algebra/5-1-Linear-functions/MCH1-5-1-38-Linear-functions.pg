##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Numeric");

$m = random(3,15,1);
$b = random(200,300,1);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Give the slope and ${BITALIC}y${EITALIC}-intercept 
for the graph of the function \( f(x) = $b - $m x \).
$BR
$BR
The slope is \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$BR
The ${BITALIC}y${EITALIC}-intercept is \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;

ANS( Real("-($m)")->cmp(tolerance=>"0.001",tolType=>"absolute") );
ANS( Real("$b")->cmp(tolerance=>"0.001",tolType=>"absolute") );


COMMENT('MathObject version');
ENDDOCUMENT();