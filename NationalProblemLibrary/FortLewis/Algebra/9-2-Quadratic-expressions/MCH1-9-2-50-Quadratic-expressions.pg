##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"parserVectorUtils.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Vector2D");

$a = random(2,6,1);
$b = random(4,7,1);

$a2 = 2 * $a;

$A = Real("-1");
$H = Real("$a");
$K = Real("$a^2+$b");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the vertex of the parabola 
\( y = $a2 x + $b - x^2 \).  Enter your answer
as a point \( (h,k) \), including the parentheses.
$BR
$BR
The vertex is at the point 
\{ ans_rule(20) \}
\{ AnswerFormatHelp("points") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Point("($H,$K)")->cmp() );

ENDDOCUMENT(); 
