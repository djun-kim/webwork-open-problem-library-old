##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$h = random(2,9,1);
$k = random(2,9,1);
$s = random(-1,1,2);

if ($s == 1) {

  $expr = "(x-$h)^2 + $k";
  $min = Compute("$k");
  $max = Compute("inf");

} else {

  $expr = "-(x-$h)^2 + $k";
  $min = Compute("-inf");
  $max = Compute("$k");

}


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the minimum and maximum value of the function
\( y = $expr \).  Enter 
${BITALIC}infinity${EITALIC} or 
${BITALIC}-infinity${EITALIC} if the function 
never stops increasing or decreasing.
$BR
$BR
Maximum value = 
\{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$BR
Minimum value = 
\{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $max->cmp() );
ANS( $min->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
