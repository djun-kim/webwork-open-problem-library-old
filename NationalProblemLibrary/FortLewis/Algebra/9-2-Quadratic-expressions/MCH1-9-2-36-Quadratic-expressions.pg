##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(2,9,1);
$b = random(1,4,1);
$c = random(10,20,1);

$b2 = 2 * $b;
$ab2 = $a * $b * 2;
$cmabb = $c - $a*$b*$b;

$A = Compute("$a");
$H = Compute("-$b");
$K = Compute("$cmabb");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Put the function \( \displaystyle y = $a x^2 + $ab2 x + $c \) 
in vertex form \( f(x) = a(x-h)^2 + k \) and determine the 
values of \( a, h, \) and \( k \).
$BR
$BR
\( a \) = 
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
\( h \) = 
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
\( k \) = 
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $A->cmp() );
ANS( $H->cmp() );
ANS( $K->cmp() );

ENDDOCUMENT(); 
