##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(2,5,1);
$aaa2 = 2*$a**3;

$eqn = "2x = $aaa2 x^{-2}";
$var = "x";

$answer = List( Compute("$a") );


##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT(); 