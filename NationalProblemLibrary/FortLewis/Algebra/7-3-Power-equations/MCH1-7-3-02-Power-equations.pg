##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(2,5,1);
$b = random(4,9,0.25);

$eqn = "$a x^2 = $b";
$var = "x";

$answer = List( Compute("sqrt($b/$a)"), Compute("-sqrt($b/$a)") );


##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();