##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$m = random(1,3,1);
$n = random($m+1,4,1);

# r^2 + a^2 = b^2
# generate a Pythagorean triple
$r = $n**2 - $m**2;
$a = 2*$m*$n;
$b = $n**2 + $m**2;

$aa = $a**2;

$eqn = "\sqrt{r^2 + $aa} = $b";
$var = "r";

$answer = List( Compute("$r"), Compute("-$r") );


##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( \displaystyle $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();