########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

#######################################
#  Set-up

$a = random(5,9,1);
$b = random(2,4,1);
$ab = $a * $b;
$amb = $a - $b;

$mc = new_checkbox_multiple_choice();
$mc->qa(
"Which of the following expressions are
equivalent to \( (x+$a)(x-$b) \)?  
There may be more than one correct answer.", 
"\( x(x-$b) + $a(x-$b) \) $BR",
"\( (x+$a)x - (x+$a)$b \) $BR",
);
$mc->extra(
"\( x^2 - $ab \) $BR",
"\( x^2 - $b x \) $BR",
"\( x(x+$a) + $b(x+$a) \) $BR",
);

################################################
#  Main text

BEGIN_TEXT

\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();