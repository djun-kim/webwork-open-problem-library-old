##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextInequalities.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup

Context("Inequalities-Only");
Context()->variables->are(m=>"Real");

$a = random(3,30,1);

$ineq = "$a > -m";

$answer = Compute("m > -$a");

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the inequality \( \displaystyle $ineq \).
Enter your answer using inequality notation.
$BR
$BR
\{ ans_rule(40) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();
