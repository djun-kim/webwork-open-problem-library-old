##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(-9,-3,2);
$b = random(2,9,1);

$f = Formula("x^2 - $b");

$answer = $f->eval(x=>$a)->reduce;

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the function \( \displaystyle f(x) = $f \) for \( x = $a \) without using a calculator.  
Simplify your answer as much as possible.
$BR
$BR
\( f($a) = \) \{ans_rule(20)\} 
\{ AnswerFormatHelp('numbers') \}
END_TEXT
Context()->normalStrings;


##################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());

ENDDOCUMENT();  