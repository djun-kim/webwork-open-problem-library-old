"MathObjects.pl",
"PGstandard.pl",
#"AnswerFormatHelp.pl",
"PGcourse.pl",    
);     

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$b = random(3,6,1);

$a = random(-1,1,1);

if ($a == 0) { 
  $answer = "Yes"; 
} else { 
  $answer = "No"; 
}

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Is \( x = $a \) a solution to the equation
\( \displaystyle \frac{$b + a}{$b - a} = 1 \)? 
\{ pop_up_list(["?","Yes","No"]) \}


END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS(str_cmp($answer));


COMMENT('MathObject version');
ENDDOCUMENT();