TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$a = random(3,8,1);
$b = random(11,19,1);

$answer = Real("$a + $b");

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Solve the equation \( x - $a = $b \).
$BR
$BR
\( x = \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());

