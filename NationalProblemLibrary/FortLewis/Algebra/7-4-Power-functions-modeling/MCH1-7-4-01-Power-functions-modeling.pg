##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());


##############################################
#  Setup

Context("Numeric");

$k = random(3,5,1);
do { $n = random(3,5,1); } until ($k != $n);

@ordinals = ("3rd","4th","5th");

$x = random(2,3,1);
$f = Formula("$k x^$n");
$y = $f->eval(x=>$x);

$answer = Formula("y = $f");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write an equation for \( y \) in terms of \( x \)
if \( y \) is proportional to the $ordinals[$n-3]
power of \( x \), and \( y = $y \) when \( x = $x \).
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();