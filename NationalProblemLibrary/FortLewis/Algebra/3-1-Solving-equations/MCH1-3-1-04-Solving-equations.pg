##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup

Context("Fraction-NoDecimals");

$a = random(6,9,1);
$b = random(7,12,1);
$c = random(2,5,1);

$var = "r";
$eqn = "-$a + $b r = -$c r";

$num = $a;
$den = $b + $c;

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle $eqn \).
$BR
$BR
\( $var = \)
\{ ans_rule(20) \}
\{ AnswerFormatHelp("fraction") \}

END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();
