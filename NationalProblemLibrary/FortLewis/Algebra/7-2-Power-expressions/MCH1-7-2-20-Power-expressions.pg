##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,9,1);
$aa = $a**2;
$n = random(3,7,2);

$expr = "\sqrt{\frac{$aa}{x^{$n}}}";

$k = Compute("$a");
$p = Compute("-$n/2");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Can the expression \( \displaystyle $expr \) be written in the 
form \( y = k x^p \)?  If it can, enter the values
for \( k \) and \( p \).  If it cannot, enter 
${BITALIC}NONE${EITALIC} in both answer blanks.
$BR
$BR
\( k \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
\( p \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $k->cmp() );
ANS( $p->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();