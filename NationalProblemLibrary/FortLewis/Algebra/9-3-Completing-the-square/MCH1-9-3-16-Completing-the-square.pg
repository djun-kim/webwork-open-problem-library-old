####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 


####################################
#  Setup

Context("Numeric");

$a = random(2,6,1);
$b = random(2,6,1);
while ($a==$b) { $b = random(2,6,1); }

$bb = $b**2;

$answer = List(Compute("NONE"));


######################################
#  Main text

BEGIN_TEXT
Solve the quadratic equation \( (x + $a)^2 + $bb = 0 \)
by taking square roots.  If there is more than one correct
answer, enter your answers as a comma separated list.  If 
there are no solutions, enter ${BITALIC}NONE.${EITALIC}
$BR
$BR
\( x \) = \{ ans_rule(20) \} 
\{ AnswerFormatHelp("numbers") \}
END_TEXT


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();
