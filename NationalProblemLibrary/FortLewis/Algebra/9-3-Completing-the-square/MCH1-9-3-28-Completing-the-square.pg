####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 


####################################
#  Setup

Context("Numeric");

$a = random(2,6,1);
$b = random(2,6,1);
while ($a==$b) { $b = random(2,6,1); }
$c = random(2,6,1);
$d = random(5,9,1);

$A = $a;
$B = $b - ($a * $c);
$C = -($b * $c) - $d;

$x1 = Real("(-($B) + sqrt(($B)^2 - 4 * ($A) * ($C)))/(2 * ($A))");
$x2 = Real("(-($B) - sqrt(($B)^2 - 4 * ($A) * ($C)))/(2 * ($A))");

$answer = List($x1,$x2);

######################################
#  Main text

BEGIN_TEXT
Solve the quadratic equation \( ($a x + $b) (x - $c) = $d \).
If there is more than one correct
answer, enter your answers as a comma separated list.  If 
there are no solutions, enter ${BITALIC}NONE.${EITALIC}
$BR
$BR
\( x \) = \{ ans_rule(40) \} 
\{ AnswerFormatHelp("numbers") \}
END_TEXT


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();
