####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 


####################################
#  Setup

Context("Numeric");

$a = random(2,6,1);
$b = random(2,6,1);
while ($a==$b) { $b = random(2,6,1); }

$a2 = 2 * $a;
$aa = $a * $a;

$answer = List(Real("$a + sqrt($aa+$b)"),Real("$a - sqrt($aa+$b)"));


######################################
#  Main text

BEGIN_TEXT
Solve the quadratic equation \( x^2 - $a2 x - $b = 0 \).
If there is more than one correct
answer, enter your answers as a comma separated list.  If 
there are no solutions, enter ${BITALIC}NONE.${EITALIC}
$BR
$BR
\( x \) = \{ ans_rule(30) \} 
\{ AnswerFormatHelp("numbers") \}
END_TEXT


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
