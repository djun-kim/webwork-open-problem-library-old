##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Fraction-NoDecimals");
Context()->variables->are(r=>"Real",s=>"Real");

#  r=x, s=y
#  [ a b ] [x] = [e]
#  [ c d ] [y]   [f]

$a = 1;
$b = 1;
$c = 1;
$d = -2;

# make sure it's invertible
#while ($a*$d - $b*$c == 0) {
#  $a = random(2,5,1);
#  $b = 1;
#  $c = 1;
#  $d = random(2,5,1);
#}

$e = list_random(-2,-3,-5);
$f = -2*($e);
#while ($e == $f) { $f = random(10,20,5); }

$xnum = $d * $e - $b * $f;
$ynum = -($c)*$e + $a * $f;
$den = $a * $d - $b * $c;

$x = Compute("$xnum / $den");
$y = Compute("$ynum / $den");

$top = Formula("$a r + $b s")->reduce;
$bot = Formula("$c r + $d s")->reduce;


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the system of equations.
$PAR
$BCENTER
\( \displaystyle
\left\lbrace
\begin{array}{lcr}
$top & = & $e \\
$bot & = & $f  
\end{array}
\right.
\)
$ECENTER
$BR
\( r \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("fractions") \}
$BR
\( s \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $x->cmp() );
ANS( $y->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();