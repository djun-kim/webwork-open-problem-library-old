#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Numeric");
Context()->variables->are(a=>"Real",b=>"Real",c=>"Real",t=>"Real");
Context()->variables->set(c=>{limits=>[1,2]});

$d = random(2,8,1);
while ($d == 6) { $d = random(2,8,1); }

$answer = Compute("(a - $d b)/c");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Put the function \( \displaystyle Q = \frac{a t - $d b t}{c} \) in the form
\( Q = k t \) and state the value of \( k \).  
$BR
$BR
\( k \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();