TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Numeric");

$a = random(2,4,1);
$b = random(2,5,1);
$abb = $a * $b**2;

$answer = List(-$b,$b);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( f(x) = $a x^2 - $abb \).  Solve \( f(x) = 0 \) for \( x \).
$BR
$BR
\( x \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );

