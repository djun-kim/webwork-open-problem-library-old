##############################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;


##############################################
#  Setup

$p = random(2,5,1);
$s = random(-1,1,2);

if ($s==1) { # 0 < a < b
 
$ineq = "\( a < b \)";
$pop1 = PopUp(["?","<",">"],"<"); # x^p
$pop2 = PopUp(["?","<",">"],">"); # 1/x^p
$pop3 = PopUp(["?","<",">"],"<"); # x^(1/p)
$pop4 = PopUp(["?","<",">"],">"); # 1 / (x^(1/p))

} else { # 0 < b < a

$ineq = "\( a > b \)";
$pop1 = PopUp(["?","<",">"],">"); # x^p
$pop2 = PopUp(["?","<",">"],"<"); # 1/x^p
$pop3 = PopUp(["?","<",">"],">"); # x^(1/p)
$pop4 = PopUp(["?","<",">"],"<"); # 1 / (x^(1/p))

}

##############################################
#  Main text


BEGIN_TEXT
Suppose \( a \) and \( b \) are positive constants.
If $ineq, then which is larger?
$BR
$BR
(a) \( a^{$p} \) \{ $pop1->menu() \} \( b^{$p} \)
$BR
$BR
(b) \( a^{-$p} \) \{ $pop1->menu() \} \( b^{-$p} \)
$BR
$BR
(c) \( a^{1/$p} \) \{ $pop1->menu() \} \( b^{1/$p} \)
$BR
$BR
(d) \( a^{-1/$p} \) \{ $pop1->menu() \} \( b^{-1/$p} \)
END_TEXT


#############################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS( $pop1->cmp() );
ANS( $pop2->cmp() );
ANS( $pop3->cmp() );
ANS( $pop4->cmp() );

ENDDOCUMENT();