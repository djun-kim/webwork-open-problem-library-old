##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"parserNumberWithUnits.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric")->variables->are(t=>"Real");

$f = Formula("4.9*t^2");

$coeff = Real(4.9);
$exponent = Real(2);

$b = random(2,4,1);
$fb = $f->eval(t=>$b);
$answerb = NumberWithUnits($fb,"m");

$c = random(5,7,1);
$fc = $f->eval(t=>$c);
$answerc = NumberWithUnits($fc,"m");



##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
A ball dropped into a hole reaches a depth 
\( d = $f \) meters, where \( t \) is the 
time in seconds since it was dropped.
$BR
$BR
(a) Identify the coefficient and the exponent of 
this power function.
$BR
Exponent = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
Coefficient = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
(b) How deep is the ball after $b seconds?  Include
units in your answer.
$BR
\{ ans_rule(20) \} 
\{ AnswerFormatHelp("units") \}
$BR
$BR
(c) If the ball hits the bottom of the hole after
$c seconds, how deep is the hole?  Include
units in your answer.
$BR
\{ ans_rule(20) \} 
\{ AnswerFormatHelp("units") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Real(2)->cmp() );
ANS( Real(4.9)->cmp() );

ANS( $answerb->cmp() );
ANS( $answerc->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();