##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGmatrixmacros.pl",
"MathObjects.pl",
"unionLists.pl",
);


TEXT(beginproblem());


#####################################
#  Setup

Context("Numeric")->variables->are(t=>"Real");

# choose eigenvalues

$lambda1 = non_zero_random(-6,2,1);
$lambda2 = non_zero_random($lambda1+1, 6, 1);
while (abs($lambda1 * $lambda2) > 15) { $lambda2 = non_zero_random($lambda1+1, 6, 1); }

$order = random(0,1,1);
if ($order == 1) { 
	$save = $lambda1; 
	$lambda1 = $lambda2; 
	$lambda2 = $save; 
}

# this will be an invertible matrix with determinant either 1 or -1

$a = random(-3,3,2);
$c = non_zero_random(-2,2,1);
$d = random(-3,3,2);
$det = random(-1,1,2);
$b = ($a*$d-$det)/$c;

# the inverse is then

$k = $d/$det;
$l = - $b/$det;
$m = - $c/$det;
$n = $a/$det;

# calculate the matrix 

$s = $a * $lambda1 * $k + $b * $lambda2 * $m;
$t = $a * $lambda1 * $l + $b * $lambda2 * $n;
$u = $c * $lambda1 * $k + $d * $lambda2 * $m;
$v = $c * $lambda1 * $l + $d * $lambda2 * $n;

# calculate the initial conditions

$C1 = non_zero_random(-3,3,1);
$C2 = non_zero_random(-3,3,1);

$x1init = Real("($C1)*($a) + ($C2)*($b)");
$x2init = Real("($C1)*($c) + ($C2)*($d)");


#####################################
#  Main text

BEGIN_TEXT
\{ BeginList('OL',type=>'a') \}
$ITEM
Given that 
\( \vec{v}_1 = \left\lbrack \begin{array}{r} $a \\ $c \end{array} \right\rbrack \)
and
\( \vec{v}_2 = \left\lbrack \begin{array}{r} $b \\ $d \end{array} \right\rbrack \)
are eigenvectors of the matrix
\( \left\lbrack \begin{array}{rr} $s & $t \\ $u & $v \end{array} \right\rbrack \),
determine the corresponding eigenvalues.
$BR
\( \lambda_1 = \) \{ans_rule(5)\} 
$BR
\( \lambda_2 = \) \{ans_rule(5)\}

$ITEMSEP
$ITEM
Find the solution to the linear system of
differential equations
\(
\displaystyle
\left\lbrack \begin{array}{r} x_1' \\ x_2' \end{array} \right\rbrack
=
\left\lbrack \begin{array}{rr} $s & $t \\ $u & $v \end{array} \right\rbrack
\left\lbrack \begin{array}{r} x_1 \\ x_2 \end{array} \right\rbrack
\)
$SPACE
satisfying the initial conditions 
\( x_1(0) = $x1init \) and \( x_2(0) = $x2init \).
$BR
$BR
\( x_1(t) = \) \{ ans_rule(40) \}
$BR
\( x_2(t) = \) \{ ans_rule(40) \}

\{ EndList('OL') \}
END_TEXT


#####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Real($lambda1)->cmp() );
ANS( Real($lambda2)->cmp() );

ANS( Compute("$C1 * $a e^($lambda1 t) + $C2 * $b e^($lambda2 t)")->cmp() );
ANS( Compute("$C1 * $c e^($lambda1 t) + $C2 * $d e^($lambda2 t)")->cmp() );


COMMENT('MathObject version.  Randomized with distinct real eigenvalues and integral answers.');

ENDDOCUMENT(); 