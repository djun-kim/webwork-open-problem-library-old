##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGunion.pl",
"answerHints.pl",
"parserAssignment.pl",
"contextInequalities.pl",
"parserFunction.pl"
);

TEXT(beginproblem());


#############################
#  Setup1

Context("Numeric");
Context()->variables->are(
t=>"Real",
s=>"Real"
);

Context()->functions->add(
  step => {
    class => 'Parser::Legacy::Numeric',
    perl => 'Parser::Legacy::Numeric::do_step'
  },
);

# Define the Heaviside function so the answer checker will take either 1 or h(t).
parserFunction("h(t)" => "step(t)");

$a = random(2,7,1);
$y0 = random(-9,-1,1);

$Ys = Formula("1/(s^2*(s-$a)^2) + $y0/(s-$a)")->reduce;
$yt = Formula("1/$a^2*t + 2/$a^3 + 1/$a^2*e^($a*t)*t + ($y0 - 2/$a^3)*e^($a*t)")->reduce;

# Only check the answer for t\geq 0 so that h(t) will agree with 1.
$answer = $yt->with(
  limits=>[0,2],
  num_points=>10,
);


#############################
#  Main text1

Context()->texStrings;
BEGIN_TEXT

Consider the following initial value problem, defined for \( t \geq 0 \):
\[ y' - $a y = \int_0^t (t-w)\, e^{$a w} \ dw, \quad \quad y(0) = $y0. \] 

\{ BeginList('OL', type=>'a') \}

$ITEM Find the Laplace transform of the solution.
$BR
$BR
\( \displaystyle Y(s) = {\mathcal L}$LBRACE y(t) $RBRACE = \)
\{ ans_rule(60) \}

$ITEMSEP
$ITEM  Obtain the solution \( y(t) \).
$BR
$BR
\( y(t) = \)
\{ ans_rule(60) \}

\{ EndList('OL', type=>'a') \}
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation1

$showPartialCorrectAnswers = 1;

ANS( $Ys->cmp() );
ANS( $answer->cmp() );

ENDDOCUMENT();