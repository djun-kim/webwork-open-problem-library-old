##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGunion.pl",
"unorderedAnswer.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
s=>"Real",
t=>"Real"
);

$a = random(1,4,1);
do { $b = random(1,4,1); } until ($b != $a);
$aplusb = $a+$b;
$C = random(1,5,1);
$D = random(1,5,1);

$Fs = Compute("(($C+$D)*s + (-$C*$b - $D*$a))/(s^2 - $aplusb*s + $a*$b)")->reduce; 
$fac1 = Compute("$C/(s-$a)");
$fac2 = Compute("$D/(s-$b)");
$ft = Compute("$C*e^($a*t) + $D*e^($b*t)");


#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Consider the function \( \displaystyle F(s) = $Fs \).

\{ BeginList('OL', type=>'a') \}

$ITEM Find the partial fraction decomposition of \( F(s) \):
$BR
$BR
\( \displaystyle $Fs = \) \{ ans_rule(20) \} + \{ ans_rule(20) \}

$ITEMSEP
$ITEM  Find the inverse Laplace transform of \( \displaystyle F(s) \).
$BR
$BR
\( \displaystyle f(t) = {\mathcal L}^{-1} \left\lbrace F(s) \right\rbrace = \)
\{ ans_rule(50) \}
\{ AnswerFormatHelp("formulas") \}

\{ EndList('OL', type=>'a') \}
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

UNORDERED_ANS( $fac1->cmp(), $fac2->cmp() );

ANS( $ft->cmp() );

ENDDOCUMENT();