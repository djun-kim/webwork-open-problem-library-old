## TitleText1('Elementary Differential Equations')
## EditionText1('2006')
## AuthorText1('Kohler and Johnson')
## Section1('5.1')
## Problem1('23')


##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGunion.pl",
"answerHints.pl",
"parserAssignment.pl",
"contextInequalities.pl"
);

TEXT(beginproblem());


#############################
#  Setup1

Context("Numeric");
Context()->variables->are(
t=>"Real",
s=>"Real"
);

$a = random(1, 10, 1);
$b = random(1, 10, 1);
$c = random(1, 10, 1);
$r = random(-10, -1, 1);
$u = random(1, 10, 1);

$ft = Formula("$a*e^($r*t)+$b*t+$c*e^($u*t)")->reduce;

$answera = Compute("$a*1/(s-$r) + $b*1/(s^2) + $c*1/(s-$u)")->reduce;


#############################
#  Main text1

Context()->texStrings;
BEGIN_TEXT
\{ BeginList('OL', type=>'a') \}

$ITEM Find the Laplace transform \( F(s) = {\mathcal L}$LBRACE f(t) $RBRACE \) of the function \( f(t) = $ft \), defined on the interval \( t \geq 0 \).
$BR
$BR
\( \displaystyle F(s) = {\mathcal L}$LBRACE $ft $RBRACE = \)
\{ ans_rule(40) \}
\{ AnswerFormatHelp("formulas") \}

END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation1

$showPartialCorrectAnswers = 1;

ANS( $answera->cmp() );


##############################
#  Setup2

Context("Inequalities");
Context()->variables->are(
s=>"Real"
);

$answerb = Inequality("s>$u");


##############################
#  Main text2

Context()->texStrings;
BEGIN_TEXT

$ITEMSEP
$ITEM For what values of \( s \) does the Laplace transform exist?
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation2

ANS( $answerb->cmp() );

ENDDOCUMENT();