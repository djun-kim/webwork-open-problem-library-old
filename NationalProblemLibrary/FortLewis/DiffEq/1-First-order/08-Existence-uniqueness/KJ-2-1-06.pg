#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");

$a = random(2,9,1);
$aa = $a * $a;

$p = Compute("$a t e^(-t) - e^(-t) / (t^2 + $aa)");
$g = Formula("0");

$popup = PopUp(["Choose","linear and homogeneous","linear and nonhomogeneous","nonlinear"],"linear and homogeneous");


#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Put the differential equation
\( \displaystyle $a t y + e^t y' = \frac{y}{t^2+$aa} \)
into the form \( y' + p(t) y = g(t)\) and find
\( p(t) \) and \( g(t) \).
$BR
$BR
\( p(t) = \) 
\{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}
$BR
\( g(t) = \) 
\{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}
$BR
$BR
Is the differential equation 
\( \displaystyle $a t y + e^t y' = \frac{y}{t^2+$aa} \)
linear and homogeneous, linear and nonhomogeneous, or nonlinear?
$BR
$BR
Answer: \{ $popup->menu() \}
END_TEXT
Context()->normalStrings;


############################
#  Answers

$showPartialCorrectAnswers = 0;

install_problem_grader(~~&std_problem_grader);

