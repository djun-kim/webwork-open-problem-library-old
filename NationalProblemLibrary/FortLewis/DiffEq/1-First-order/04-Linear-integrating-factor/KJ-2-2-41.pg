##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"unionLists.pl",
);

TEXT(beginproblem());


#############################
#  Setup 

Context("Numeric")->variables->are(t=>"Real");

$y0 = random(2,9,1);


$left_hand_side = "y(t)";
$top_limits = "0 \leq t \leq \pi";
$bot_limits = "\pi < t \leq 2\pi";

#
#  Display the answer blanks properly in different modes
#
Context()->texStrings;
if ($displayMode eq 'TeX') {
   $piecewise =
   "\(\displaystyle $left_hand_side = \left\lbrace".
   "\begin{array}{c}".
   ans_rule(10). 
   "\mbox{ \ if \ } $top_limits, \\". 
   ans_rule(10). 
   "\mbox{ \ if \ } $bot_limits.".
   "\end{array}".
   "\right.". 
   '\)';
  } else {
   $piecewise = 
   BeginTable(center=>0).
     Row([
       "\( $left_hand_side =\) ".
       ' \( \displaystyle \left\lbrace  \begin{array}{c} \)',
       ans_rule(10)."\( \mbox{ \ if \ } $top_limits, \)".
      $BR.$BR.
      ans_rule(10)."\( \mbox{ \ if \ } $bot_limits. \)".
      '\( \end{array} \right.\)'
       ],separation=>1).
   EndTable();
}
Context()->normalStrings;



#############################
#  Main text 

Context()->texStrings;
BEGIN_TEXT
Find a solution to the initial value problem
\[
y' + (\sin(t)) y = g(t), 
\ \ \
y(0) = $y0,
\]
that is continuous on the interval 
\( \lbrack 0, 2\pi \rbrack \)
where
\[
g(t) =
\left\lbrace
\begin{array}{rcl}
\sin(t), && 0 \leq t \leq \pi, \\
-\sin(t), && \pi < t \leq 2\pi.
\end{array}
\right.
\]
$BR
$BR
$piecewise
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation 

$showPartialCorrectAnswers = 1;

ANS( Compute("$y0")->cmp() );
ANS( Compute("$y0")->cmp() );

COMMENT("MathObject version.");

ENDDOCUMENT();
