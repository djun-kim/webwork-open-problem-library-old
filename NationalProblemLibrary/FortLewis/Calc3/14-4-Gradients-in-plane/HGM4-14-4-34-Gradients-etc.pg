## DESCRIPTION
##   Estimating directional derivatives
## ENDDESCRIPTION

## KEYWORDS('Gradient', 'Directional Derivative')

## DBsubject('Calculus')
## DBchapter('Partial Derivatives')
## DBsection('Directional Derivatives and the Gradient Vector')
## Date('10/15/09')
## Author('Paul Pearson')
## Institution('Fort Lewis College')
## TitleText1('Calculus')
## TitleText2('Calculus')
## EditionText1('4')
## EditionText2('5')
## AuthorText1('Hughes-Hallett')
## AuthorText2('Hughes-Hallett')
## Section1('14.4')
## Section2('14.4')
## Problem1('34')
## Problem2('21')

DOCUMENT();        

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

#
#  The function
#

$f = Formula("sqrt(tan(x)+y)")->reduce;

#
#  The point
#
$x = non_zero_random(-14,14,1)/10;
$y = random(6,10,1);

#($x,$y) = (non_zero_random(-1.4,1.4,0.1),random(6,10,1));
#($xtex,$ytex) = ("$x", "$y");

#
#  The direction vector
#
$U = non_zero_vector2D(-3,3);

#
#  The gradient
#
$fx = $f->D('x');
$fy = $f->D('y');

$gradf = Formula("<$fx, $fy>") -> reduce;

$gradfab = $gradf -> eval(x=>$x,y=>$y) -> reduce;

#
#  Directional derivative
#

$Duf = $gradfab . unit($U);


##############################################
#  Main text

$u = BoldMath('u');

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle f(x,y) = $f \) and \( $u \) is the unit vector in the direction of \( $U \). Then,
$BR
$BR
(a) \( \nabla f (x,y) = \) \{ans_rule(40)\}
$BR
$BR
(b) \( \nabla f ($x,$y) = \) \{ans_rule(40)\}
$BR
$BR
(c) \(f_{$u} \, ($x,$y) = D_{$u} \, f($x,$y) = \) \{ans_rule(40)\}
END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($gradf->cmp);
ANS($gradfab->cmp);
ANS($Duf->cmp);

$showPartialCorrectAnswers = 1;

ENDDOCUMENT();