## DESCRIPTION
##   Estimating directional derivatives
## ENDDESCRIPTION

## KEYWORDS('Gradient', 'Directional Derivative')

## DBsubject('Calculus')
## DBchapter('Partial Derivatives')
## DBsection('Directional Derivatives and the Gradient Vector')
## Date('10/15/09')
## Author('Paul Pearson')
## Institution('Fort Lewis College')
## TitleText1('Calculus')
## TitleText2('Calculus')
## EditionText1('4')
## EditionText2('5')
## AuthorText1('Hughes-Hallett')
## AuthorText2('Hughes-Hallett')
## Section1('14.4')
## Section2('14.4')
## Problem1('59')
## Problem2('74')

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl",
);
 

TEXT(beginproblem());


#####################
#  Setup

Context("Vector");

#
#  function
#
$f = Formula("x**2 * y");

#
#  point
#
($x,$y) = (random(1,5,1),random(1,5,1));

#
#  gradient
#
$fx = $f->D('x');
$fy = $f->D('y');

$gradf = Formula("< $fx, $fy >") -> reduce;
$gradfab = $gradf -> eval(x=>$x,y=>$y) -> reduce;

#
#  direction vector
#
$a = list_random(2,3,6);
$theta = Real("pi/$a");
$thetatex = "\pi / $a";

$U = Vector(cos($theta),sin($theta));

#
#  directional derivative
#
$Duf = $gradfab . unit($U);


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
(a) Find the directional derivative of \( z = $f \) 
at \( ($x,$y) \) in the direction of \( $thetatex \)
with the positive x-axis.
$BR
\{ ans_rule(40) \}
$BR
$BR
(b) In which direction is the directional derivative
the largest at the point \( ($x,$y) \)?  Enter your
answer as a vector whose length is the largest value
of the directional derivative. 
$BR
\{ans_rule(40)\}
END_TEXT
Context()->normalStrings;


#######################
#  Answer evaluators

ANS($Duf->cmp);
ANS($gradfab->cmp);

$showPartialCorrectAnswers = 1;

ENDDOCUMENT();