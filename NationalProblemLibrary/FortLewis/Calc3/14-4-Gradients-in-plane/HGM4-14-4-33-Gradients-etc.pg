## DESCRIPTION
##   Estimating directional derivatives
## ENDDESCRIPTION

## KEYWORDS('Gradient', 'Directional Derivative')

## DBsubject('Calculus')
## DBchapter('Partial Derivatives')
## DBsection('Directional Derivatives and the Gradient Vector')
## Date('10/15/09')
## Author('Paul Pearson')
## Institution('Fort Lewis College')
## TitleText1('Calculus')
## TitleText2('Calculus')
## EditionText1('4')
## EditionText2('5')
## AuthorText1('Hughes-Hallett')
## AuthorText2('Hughes-Hallett')
## Section1('14.4')
## Section2('14.4')
## Problem1('33')
## Problem2('19')

DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem);

##############################################
#  Setup

Context("Vector");
Context()->flags->set(reduceConstants=>0);

#
#  The function
#

$a = random(1,5,1);
$f = Formula("$a / (x**2 + y**2)")->reduce;

#
#  The point
#
($x,$y) = (random(1,4,1),random(2,5,1));
($xtex,$ytex) = ("$x", "$y");

#
#  The direction vector
#
$U = non_zero_vector2D(-3,3);

#
#  The gradient
#
$fx = $f->D('x');
$fy = $f->D('y');
#$gradf = Formula("< ((-2*y) / (x**2)) * cos((2*y)/x), (2/x)*cos((2*y)/x) >")->reduce;
$gradf = Formula("<$fx, $fy>") -> reduce;
$gradfab = $gradf -> eval(x=>$x,y=>$y) -> reduce;

#
#  Directional derivative
#

$Duf = $gradf->eval(x=>$x,y=>$y) . unit($U);


##############################################
#  Main text

$u = BoldMath('u');

Context()->texStrings;
Context()->flags->set(reduceConstants=>0);
BEGIN_TEXT

Suppose \( \displaystyle f(x,y) = $f \) and \( $u \) is the unit vector in the direction of \( $U \). Then,
$BR
$BR
(a) \( \nabla f (x,y) = \) \{ans_rule(40)\}
$BR
$BR
(b) \( \nabla f ($xtex,$ytex) = \) \{ans_rule(40)\}
$BR
$BR
(c) \(f_{$u} \, ($xtex,$ytex) = D_{$u} \, f($xtex,$ytex) = \) \{ans_rule(40)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($gradf->cmp);
ANS($gradfab->cmp);
ANS($Duf->cmp);

$showPartialCorrectAnswers = 1;

ENDDOCUMENT();