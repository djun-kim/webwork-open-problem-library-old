DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGcourse.pl",
"MathObjects.pl",
);

TEXT(beginproblem());


#####################################
#  Setup

Context("Numeric");

SRAND($psvn);

$a = random(2,7,1);
$b = random(2,7,1);
$c = random(2,7,1);

$d = random(2,6,1);
$e = random(2,6,1);
$f = random(2,6,1);

$answer = Compute("$a * ($e * $f / 2)");


########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Use Stokes' Theorem to find the circulation of 
\( \vec{F} = $a y \vec{i} + $b z \vec{j} + $c x \vec{k} \) 
around the triangle obtained by tracing out the 
path \( ($d,0,0) \) to \( ($d,0,$f) \), to 
\( ($d,$e,$f) \) back to \( ($d,0,0) \).
$BR
$BR
Circulation = \( \displaystyle \int_C \vec{F} \cdot d\vec{r} \) = 
\{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;


###############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

