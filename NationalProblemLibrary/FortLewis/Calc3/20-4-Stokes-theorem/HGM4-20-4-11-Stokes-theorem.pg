DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGcourse.pl",
"MathObjects.pl",
);

TEXT(beginproblem());


#####################################
#  Setup

Context("Numeric");

SRAND($psvn);

$a = random(2,7,1);
$b = random(2,7,1);
$c = random(2,7,1);

$r = random(3,8,1);
$rr = $r * $r;

$answer = Compute("-$a * pi * $r^2");


########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Use Stokes' Theorem to find the circulation of 
\( \vec{F} = $a y \vec{i} + $b z \vec{j} + $c x \vec{k} \) 
around the boundary of the surface \( S \) 
given by \( z = $rr - (x^2+y^2) \) for \( z \geq 0 \), 
oriented upward.  Sketch both \( S \) and its boundary \( C \).
$BR
$BR
Circulation = \( \displaystyle \int_C \vec{F} \cdot d\vec{r} \) = 
\{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

HINT(EV3(<<'END_HINT'));
Use polar coordinates.
END_HINT


###############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
