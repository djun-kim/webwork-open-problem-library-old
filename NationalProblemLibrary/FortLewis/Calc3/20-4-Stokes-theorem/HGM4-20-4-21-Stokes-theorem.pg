DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGcourse.pl",
"MathObjects.pl",
);

TEXT(beginproblem());


#####################################
#  Setup

Context("Numeric");

$a = random(2,7,1);
$b = random(2,7,1);
$c = random(2,7,1);

$d = random(2,6,1);
$d3 = 3 * $d;

$e = random(2,6,1);
$f = random(2,6,1);

$answer = Compute("($a+$b+$c+3) / sqrt(3) * ($e*$f)");


########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Use Stokes' Theorem to find the circulation of 
\( \vec{F} = ($a z - y) \vec{i} + 
($b x - z) \vec{j} + ($c y - x) \vec{k} \) 
around the perimeter of a rectangle of width
\( $e \) and length \( $f \) centered at the 
point \( ($d,$d,$d) \) in the plane 
\( x + y + z = $d3 \), oriented clockwise when 
viewed from the origin.
$BR
$BR
Circulation = \( \displaystyle \int_C \vec{F} \cdot d\vec{r} \) = 
\{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;


###############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();
