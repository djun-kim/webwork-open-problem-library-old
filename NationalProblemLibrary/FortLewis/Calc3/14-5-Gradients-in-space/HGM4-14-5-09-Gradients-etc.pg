DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");
Context()->flags->set(reduceConstants=>0);

#
#  The function
#

$a = random(2,4,1);

$f = Formula("$a * z * y**2")->reduce;

#
#  The point
#
($x,$y,$z) = (random(2,6,1),random(2,6,1),random(2,6,1));

#
#  The gradient
#
$fx = $f->D('x');
$fy = $f->D('y');
$fz = $f->D('z');
$gradf = Formula("<$fx, $fy, $fz>") -> reduce;

$gradfabc = $gradf -> eval(x=>$x,y=>$y,z=>$z) -> reduce;


##############################################
#  Main text

Context()->texStrings;
Context()->flags->set(reduceConstants=>0);
BEGIN_TEXT

If \( \displaystyle f(x,y,z) = $f \), then the gradient 
at the point \( ($x,$y,$z) \) is
$BR
$BR
\( \nabla f ($x,$y,$z) = \) \{ans_rule(30)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($gradfabc->cmp);

$showPartialCorrectAnswers = 1;

ENDDOCUMENT();