DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");
Context()->flags->set(reduceConstants=>0);

#
#  The function
#

$a = random(2,4,1);
$b = random(3,9,1);
$f = Formula("x * e^($a * y) * sin($b * z)")->reduce;

#
#  The gradient
#
$fx = $f->D('x');
$fy = $f->D('y');
$fz = $f->D('z');
$gradf = Formula("<$fx, $fy, $fz>") -> reduce;


##############################################
#  Main text

$u = BoldMath('u');

Context()->texStrings;
Context()->flags->set(reduceConstants=>0);
BEGIN_TEXT

If \( \displaystyle f(x,y,z) = $f \), then the gradient is
$BR
$BR
\( \nabla f (x,y,z) = \) \{ans_rule(80)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($gradf->cmp);

$showPartialCorrectAnswers = 1;

ENDDOCUMENT();