DOCUMENT();  

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserImplicitPlane.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem);

##############################################
#  Setup

Context("ImplicitPlane");

#
#  Vectors in the plane
#
#$AB = non_zero_vector3D();
#$AC = non_zero_vector3D(); while (areParallel $AB $AC) {$AC = non_zero_vector3D()}
for $i (0..4) {
$r[$i] = non_zero_random(-5,5,1);
}

while ( (-$r[1] == $r[4]) || (-$r[3] == $r[4]) ) {
$r[4] = non_zero_random(-5,5,1);
}

$AB = Vector(0,$r[0],$r[1]);
$AC = Vector($r[2],0,$r[3]);

#
#  The normal vector
#
$N = cross $AB $AC;

#
#  The points A, B and C
#
#$A = non_zero_point3D();
$A = Point(0,0,$r[4]);
$B = Point($A + $AB);
$C = Point($A + $AC);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find the equation of the linear function \( z = c + m x + n y \)
whose graph contains the points 
\($A\), \($B\), and \($C\).$BR
\{ans_rule(40)\}

END_TEXT
Context()->normalStrings;

##################################################

ANS(ImplicitPlane($A,$N)->cmp);
$showPartialCorrectAnswers = 1;

ENDDOCUMENT(); 