## DESCRIPTION
## Seting up an integral in cylindrical coordinates
## ENDDESCRIPTION

## KEYWORDS('Triple Integral','Polar Coordinates')

## DBsubject('Calculus')
## DBchapter('Multiple Integrals')
## DBsection('Triple Integrals in Cylindrical and Spherical Coordinates')
## Date('10/31/09')
## Author('Paul Pearson')
## Institution('Fort Lewis College')
## TitleText1('Calculus')
## TitleText2('Calculus')
## EditionText1('4')
## EditionText2('5')
## AuthorText1('Hughes-Hallett')
## AuthorText2('Hughes-Hallett')
## Section1('16.5')
## Section2('16.5')
## Problem1('37')
## Problem2('')

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"PGunion.pl",
"answerHints.pl",
"LiveGraphicsParametricSurface3D.pl",
);

TEXT(beginproblem());


###############################
#  Set-up

Context("Numeric")->variables->are(z=>"Real",r=>"Real",theta=>"Real",u=>"Real",v=>"Real");

$r = random(1,2,1);
$R = random(4,7,1);
$density = random(2,7,1);

$RR = $R * $R;
$rr = $r * $r;


$plot1 = ParametricSurface3D(
Fx => Formula("$r * cos(u)"),
Fy => Formula("$r * sin(u)"),
Fz => Formula("v"),
uvar => 'u',
vvar => 'v',
umin =>  0,
umax =>  2*pi,
vmin =>  -sqrt($RR-$rr),
vmax =>  sqrt($RR-$rr),
usamples => 15,
vsamples => 1,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);


$plot2 = ParametricSurface3D(
Fx => Formula("$R*cos(u)*sin(v)"),
Fy => Formula("$R*sin(u)*sin(v)"),
Fz => Formula("$R*cos(v)"),
uvar => 'u', # theta
vvar => 'v', # phi
umin => 0,
umax =>  2*pi,
vmin =>  arcsin($r/$R),
vmax =>  pi-arcsin($r/$R),
usamples => 15,
vsamples => 15,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
mesh => 0,
outputtype => 1,
);


$plot = 
$beginplot . 
"{" .
"RGBColor[0,0,1]," .
$plot1 .
"," .
$plot2 .
"}" . 
",Axes->True,AxesLabel->{X,Y,Z}," .
"ViewPoint->{-2.299560248721872, 2.1997998840378945, 1.1501752617253937},
ViewVertical->{0.1890439007979272, -0.5850056675307971, 1.8747847831794622}" .
$endplot;



#############################
#  Main Text

BEGIN_TEXT
\{
ColumnTable(
"A bead is made from material with constant density
$density grams per cubic millimeter 
by drilling a cylindrical hole
of radius $r mm through a sphere of radius 
$R mm.".
$BR.
$BR.
"(a) Set up a triple integral in cylindrical 
coordinates representing the mass of the
bead in grams (do not include units).  If necessary,
enter \( \theta \) as ${BITALIC}theta.${EITALIC}".
$PAR.
$BCENTER.
"\( \displaystyle \iiint\limits_{Bead} f \, dV
=
\int_A^B \!\! \int_C^D \!\! \int_E^F \!\! 
\) ".
ans_rule(10).
" \( dz \, dr \, d\theta \)".
$ECENTER.
$BR.
"A = ".ans_rule(20).$BR.
"B = ".ans_rule(20).$BR.
"C = ".ans_rule(20).$BR.
"D = ".ans_rule(20).$BR.
"E = ".ans_rule(20).$BR.
"F = ".ans_rule(20).$BR.
$BR.
"(b) Find the mass of the bead.".
$BR.
ans_rule(40).
" grams"
,
$BCENTER.
Live3Ddata(
$plot,
image => alias("bead.png"), 
size => [400,400],
tex_size => 600,
tex_center => 1,
scale => 1.2,
).
"(Drag to rotate)".
$ECENTER
,
indent=>"0", separation=>"30", valign=>"TOP"
)
\}
END_TEXT


##############################
#  Answer evaluators

$showPartialCorrectAnswers = 1;

ANS( Compute("$density * r")->cmp() 
->withPostFilter(AnswerHints( 
  Formula("$density") => "What is dV in cylindrical coordinates?",
))
);

ANS( Compute("0")->cmp() );
ANS( Compute("2*pi")->cmp() );
ANS( Compute("$r")->cmp() );
ANS( Compute("$R")->cmp() );
ANS( Compute("-sqrt($RR-r^2)")->cmp() );
ANS( Compute("sqrt($RR-r^2)")->cmp() );

ANS( Compute("$density * 4 pi / 3 ($RR-$rr)^(3/2)")->cmp() );

COMMENT("Uses interactive graphics generated on-the-fly.");


COMMENT('MathObject version');
ENDDOCUMENT();