DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);


TEXT(beginproblem());

###############################
#  Set-up

Context("Numeric");

$r = random(3,7,1);
$rr = $r * $r;

#############################
#  Main Text

BEGIN_TEXT
Evaluate the integral.
$BR
$BR
\( \displaystyle 
\int_{0}^{$r} \int_{-$r}^{$r} \int_{-\sqrt{$rr-x^2}}^{\sqrt{$rr-x^2}} \frac{1}{(x^2+y^2)^{1/2}} \, dy \, dx \, dz
\)
= \{ ans_rule(20) \}
END_TEXT


##############################
#  Answer evaluators

$showPartialCorrectAnswers = 1;

ANS( Formula("2*$rr*pi")->cmp() );


ENDDOCUMENT();