DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);


TEXT(beginproblem);

##############################################
#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

#
#  The functions
#

$a = random(2,5,1);
$b = random(2,5,1);

$f = Formula("($a * x + $b * y) * e**(y)");

$fx = $f -> D('x') -> reduce;
$fy = $f -> D('y') -> reduce;

$fxx = $fx -> D('x') -> reduce;
$fxy = $fx -> D('y') -> reduce;
$fyx = $fy -> D('x') -> reduce;
$fyy = $fy -> D('y') -> reduce;


##############################################
#  Main text

Context()->texStrings;
Context()->flags->set(reduceConstants=>0);
BEGIN_TEXT
Calculate all four second-order partial derivatives
of \( \displaystyle f(x,y) = $f \).
$BR
$BR
\( f_{xx} \, (x,y) = \) \{ans_rule(80)\}
$BR
$BR
\( f_{xy} \, (x,y) = \) \{ans_rule(80)\}
$BR
$BR
\( f_{yx} \, (x,y) = \) \{ans_rule(80)\}
$BR
$BR
\( f_{yy} \, (x,y) = \) \{ans_rule(80)\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

ANS($fxx->cmp);
ANS($fxy->cmp);
ANS($fyx->cmp);
ANS($fyy->cmp);


$showPartialCorrectAnswers = 1;

ENDDOCUMENT();