  "MathObjects.pl",
);


TEXT(beginproblem);

##############################################
#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

$a = random(3,9,1);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
If \( z_{xy} = $a y \) and all of the second
order partial derivatives of \( z \) are 
continuous, then
$BR
$BR
(a) \( z_{yx} = \) \{ans_rule(20)\}
$BR
$BR
(b) \( z_{xyx} = \) \{ans_rule(20)\}
$BR
$BR
(c) \( z_{xyy} = \) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

ANS(Formula("$a y")->cmp);
ANS(Real("0")->cmp);
ANS(Real("$a")->cmp);

$showPartialCorrectAnswers = 0;

