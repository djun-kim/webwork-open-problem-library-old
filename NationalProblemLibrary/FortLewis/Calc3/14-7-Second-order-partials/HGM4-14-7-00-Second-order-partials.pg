DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);


TEXT(beginproblem);

##############################################
#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

#
#  The function
#

$p = random(2,5,1);
$q = random(2,5,1);
$f = Formula("$p * x**2 * y + $q * x * y**3");

#
#  The point
#
($a,$b) = (non_zero_random(-3,3,1),non_zero_random(-3,3,1));

#
#  Partial derivatives
#
$fx = $f -> D('x') -> reduce;
$fy = $f -> D('y') -> reduce;

$fxx = $fx -> D('x') -> reduce;
$fxy = $fx -> D('y') -> reduce;
$fyy = $fy -> D('y') -> reduce;


$fab = $f -> eval(x=>$a,y=>$b) -> reduce;

$fxab = $fx -> eval(x=>$a,y=>$b) -> reduce;
$fyab = $fy -> eval(x=>$a,y=>$b) -> reduce;

$fxxab = $fxx -> eval(x=>$a,y=>$b) -> reduce;
$fxyab = $fxy -> eval(x=>$a,y=>$b) -> reduce;
$fyyab = $fyy -> eval(x=>$a,y=>$b) -> reduce;

$Q = Formula("
$fab 
+ 
$fxab * (x - $a) + $fyab * (y - $b)
+
($fxxab * (x - $a)**2)/2 + ($fyyab * (y - $b)**2)/2 
+ $fxyab * (x - $a) * (y - $b)
") -> reduce;

##############################################
#  Main text

Context()->texStrings;
Context()->flags->set(reduceConstants=>0);
BEGIN_TEXT
Find the second-order Taylor polynomial 
for \( \displaystyle f(x,y) = $f \) at the
point \( ($a,$b) \).
$BR
$BR
\( Q(x,y) = \) \{ans_rule(80)\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

ANS($Q->cmp);

$showPartialCorrectAnswers = 1;

ENDDOCUMENT();