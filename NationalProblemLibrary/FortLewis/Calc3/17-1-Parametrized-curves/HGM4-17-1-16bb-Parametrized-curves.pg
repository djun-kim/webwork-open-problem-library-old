DOCUMENT();      

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserVectorUtils.pl",
);

TEXT( beginproblem() );

Context("Vector2D");
Context()->variables->add(t=>"Real");
Context()->variables->set(t=>{limits=>[-5,5]});

$r = random(3,8,1);

#$x = Formula("$r * cos(pi t/2)") -> reduce;
#$y = Formula("-($r) * sin(pi t/2)") -> reduce;

$answer = Vector("<$r * cos(t), $r * sin(t)>");

Context()->texStrings;
BEGIN_TEXT
Find a vector parametrization of the circle of radius
\( $r \) in the xy-plane, centered at the origin,
oriented clockwise so that the point \( ($r,0) \) 
corresponds to \( t = 0 \) and the point \( (0,-$r) \)
corresponds to \( t = 1 \).
$BR
$BR
\( \vec{r}(t) = \) \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

sub mycheck {
  my ($correct, $student, $ansHash) = @_;
  $xstu = $student . i;
  $ystu = $student . j;
      if ( 
           ( (($xstu)**2+($ystu)**2) == $r**2 ) &&
           ( ($ystu->eval(t=>"0.1")) < 0 ) &&
           ( ($xstu->eval(t=>"0")) == $r ) &&
           ( ($ystu->eval(t=>"0")) == 0  ) &&
           ( ($xstu->eval(t=>"1")) == 0  ) &&
           ( ($ystu->eval(t=>"1")) == -$r)
         ) {
            return 1;
      } else {
            return 0;
      }
}

ANS( $answer->cmp( checker=>~~&mycheck ) );


COMMENT('MathObject version');
ENDDOCUMENT();
