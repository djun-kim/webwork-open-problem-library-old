DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(2,8,1);
$b = random(2,8,1);
$displayedfunc = MODES(TeX=>"\[ f(x) = \begin{cases}
              {$a}x^3- 2m, & x \leq -1 \\
              {$b}x^2 + 5m, & x > -1
              \end{cases} 
 \]",
HTML_dpng=>"\[ f(x) = \begin{cases}
              {$a}x^3- 2m, & x \leq -1 \\
              {$b}x^2 + 5m, & x > -1
              \end{cases}
 \]",
 HTML=> "<p>This function is defined by cases:
<blockquote>
 <br> \(f(x) = {$a}x^3- 2m \) if \( x \leq -1 \),
 <br> \(f(x) = {$b}x^2 + 5m \) if \( x \gt -1. \)
</blockquote>
<p>");

TEXT(EV3(<<'EOT'));
Let \(f\) be defined by
$displayedfunc
$PAR
(a) Find (in terms of \(m\)) \(\displaystyle{\lim_{x\rightarrow -1^{+}}
 f(x)}\)
$BR
Limit = \{ans_rule(10) \}
$PAR
$PAR
(b) Find (in terms of \(m\)) \(\displaystyle{\lim_{x\rightarrow -1^{-}}
 f(x)}\)
$BR
Limit = \{ans_rule(10) \}
$PAR
$PAR
(c) Find the value of \(m\) so that
\[
\lim_{x\rightarrow -1^{-}} f(x) = \lim_{x\rightarrow -1^{+}} f(x)
\]
$BR
\(m\) = \{ans_rule(15) \}
EOT

@ans = (function_cmp("$b + 5*m","m"), function_cmp("-$a - 2*m","m"),
        num_cmp((-$a-$b)/7));
&ANS(@ans);

ENDDOCUMENT();        # This should be the last executable line in the problem.
