DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"extraAnswerEvaluators.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-5,-1,1);
do {$b = non_zero_random(1,5,1);} until ($a != -$b);
# (x-a)(x-b)(x^2+2)
$b1=-($a+$b);
$c1=$a*$b+2;
$d1=-2*($a+$b);
$e1=2*$a*$b;

$p="P(x)=x^4 ";
if ($b1 != 0)
 {
 $p=$p."? {$b1} x^3 ";
 };
if ($c1 != 0)
 {
 $p=$p."? {$c1} x^2 ";
 };
if ($d1 != 0)
 {
 $p=$p."? {$d1} x ";
 };
if ($e1 != 0)
 {
 $p=$p."? {$e1}";
 };

#\[P(x)=x^4 ? {$b1} x^3 ? {$c1} x^2 ? {$d1} x ? {$e1}\]

TEXT(EV2(<<EOT));
Find all rational zeros of the polynomial 
\[$p\]
$BR
Enter the rational zeros in a comma separated list.  If there are none, enter
the word $BITALIC none $EITALIC .
$BR
\{ ans_rule(30) \}
EOT

$ans1 = $a;
$ans2 = $b;
$ans3 = "";
$ans4 = "";
ANS(number_list_cmp("$a, $b", strings=>["none"]));


ENDDOCUMENT();        # This should be the last executable line in the problem.

