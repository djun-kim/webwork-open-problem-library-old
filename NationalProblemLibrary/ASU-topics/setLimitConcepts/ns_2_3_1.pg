DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl", "PGbasicmacros.pl", "PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(&beginproblem);
$showPartialCorrectAnswers=1;

$a=random(-10, 10);
$b=random(-10, 10);

@f=("f(x)", "g(x)", "h(x)");
@slice1=shuffle(3);
@f=@f[@slice1];

#TEXT("The function order is ", @f);

@values=($a, $b, 0);

@slice2=shuffle(3);
@values=@values[@slice2];

#TEXT("The values are ", @values);

if ($values[1]==0) {
    ($fraction01)=std_num_str_cmp('DNE',['DNE']);
    ($fraction1)=std_num_str_cmp('DNE',['DNE']);
} else {
    ($fraction01)= std_num_str_cmp($values[0]/$values[1],['DNE']);
    ($fraction1)= std_num_str_cmp( 1/$values[1],['DNE'] );
}

if ($values[2]==0) {
    ($fraction02)=std_num_str_cmp('DNE',['DNE']);
} else {
    ($fraction02)= std_num_str_cmp( $values[0]/$values[2] ,['DNE']);
}
if ($values[0]==0) {
    ($fraction20)=std_num_str_cmp('DNE',['DNE']);
} else {
    ($fraction20)= std_num_str_cmp( $values[2]/$values[0],['DNE'] );
}

if ($values[1]>=0) {
    ($square1)=std_num_str_cmp( sqrt($values[1]),['DNE'] );
} else {
    ($square1)=std_num_str_cmp('DNE',['DNE']);
}

if (($values[1]-$values[2])==0) {
    ($fraction1_2)=std_num_str_cmp('DNE',['DNE']);
} else {
    ($fraction1_2)= std_num_str_cmp( 1/($values[1]-$values[2]),['DNE'] );
}

my @expressions =(); ##MAKE SURE WE START WITH AN EMPTY ARRAY
my @answers =();     ##MAKE SURE WE START WITH AN EMPTY ARRAY

qa(~~@expressions, ~~@answers,
"\( \displaystyle \lim_{ x \rightarrow a} $f[0]+$f[1]\)", std_num_str_cmp($values[0]+$values[1],['DNE']),
"\( \displaystyle \lim_{ x \rightarrow a} $f[0]-$f[1] \)", std_num_str_cmp($values[0]-$values[1],['DNE']),
"\( \displaystyle \lim_{ x \rightarrow a} $f[0] \cdot $f[2] \)", std_num_str_cmp($values[0]*$values[2],['DNE']),
"\( \displaystyle \lim_{ x \rightarrow a} \frac{$f[0]}{$f[1]} \)", $fraction01,
"\( \displaystyle \lim_{ x \rightarrow a} \frac{$f[0]}{$f[2]} \)", $fraction02,
"\( \displaystyle \lim_{ x \rightarrow a} \frac{$f[2]}{$f[0]} \)", $fraction20,
"\( \displaystyle \lim_{ x \rightarrow a} \sqrt{$f[1]} \)", $square1,
"\( \displaystyle \lim_{ x \rightarrow a} \frac{1}{$f[1]} \)", $fraction1,
"\( \displaystyle \lim_{ x \rightarrow a} \frac{1}{$f[1]-$f[2]} \)", $fraction1_2
);

TEXT(EV3(<<'EOT'));
Let \( \displaystyle \lim_{x\rightarrow a} $f[0] = $values[0]\) ,
    \( \displaystyle  \lim_{x\rightarrow a}$f[1]= $values[1]\),
    \( \displaystyle  \lim_{x\rightarrow a}$f[2] = $values[2]\). $BR
Find following limits if they exist.  If not, enter
DNE ('does not exist') as your answer.
EOT

TEXT(EV2(match_questions_list(@expressions)));

&ANS( @answers);

ENDDOCUMENT();        # This should be the last executable line in the problem.

