## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##  Triple Integrals
## Stewart 5e Section 15.7 problem 15
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

$a = random(2,10);
$pi = arccos(-1);

TEXT(beginproblem());


BEGIN_TEXT
$BR
Evaluate the triple integral 

\(\displaystyle \iiint_{E} x \, dV \) where \(E\) is the solid
bounded by the paraboloid  \( x=$a y^2+ $a z^2 \) and \( x = $a \).
  $PAR
\{ans_rule(40)\}

$PAR
END_TEXT


ANS(std_num_cmp($a**2*$pi/3));

ENDDOCUMENT();
