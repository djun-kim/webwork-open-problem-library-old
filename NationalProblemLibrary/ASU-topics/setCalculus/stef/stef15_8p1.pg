##
## Description  
##   Spherical coordinates
##  Stewart Section 15.8 problem 24
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;


$a = random(1,9);

$b = random(2,8);
$aa = $a**2;

TEXT(beginproblem());

BEGIN_TEXT
FInd the volume of the solid that lies within the sphere
\(x^2 + y^2 +  z^2 = $aa\), above the \(xy\) plane, and outside the cone
\( z = $b \sqrt{x^2+y^2}\).

  $PAR
\{ans_rule(40)\}

END_TEXT

    $ans = 2 * $PI * $a**3*$b / (3*sqrt($b**2+1));
ANS( num_cmp( $ans ) );


ENDDOCUMENT();




