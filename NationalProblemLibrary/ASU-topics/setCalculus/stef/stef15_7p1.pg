## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##  Triple Integrals
## Stewart 5e Section 15.7 problem 11
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

$a = random(1,10);
$b = random(1,10);
$c = random(1,10);



TEXT(beginproblem());


BEGIN_TEXT
$BR
Evaluate the triple integral 

\(\displaystyle \iiint_{E} xy \, dV \) where \(E\) is the solid
tetrahedon with vertices \( (0,0,0), ($a,0,0), (0,$b,0), (0,0,$c)\).

  $PAR
\{ans_rule(40)\}

$PAR
END_TEXT


ANS(std_num_cmp($c*$b**2*$a**2/120 ));

ENDDOCUMENT();
