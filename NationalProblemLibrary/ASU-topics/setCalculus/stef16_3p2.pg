TEXT( &beginproblem );
$showPartialCorrectAnswers = 1;

$a = random( 1, 5, 1 );
$b = random( 1, 5, 1 );
$c = random( 1, 5, 1 );

$ans1 = "x**2/2 +y**2/2 +z**2/2";
