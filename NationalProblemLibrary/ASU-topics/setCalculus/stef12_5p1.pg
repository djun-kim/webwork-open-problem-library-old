          );      
              
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(-5, 5, 1);
$b = random(-5, 5, 1);
$c = random(-5, 5, 1);
$d = non_zero_random(-5, 5, 1);
$e = non_zero_random(-5, 5, 1);
$f = non_zero_random(-5, 5, 1);
$p1 = nicestring([$a,$d],["", "t"]);
$p2 = nicestring([$b,$e],["","t"]);
$p3 = nicestring([$c,$f],["","t"]);

BEGIN_TEXT
Given a the vector equation 
\( \mathbf{r} (t) = 
($p1) \mathbf{i}  + 
($p2) \mathbf{j}  +
($p3) \mathbf{k} \), 
rewrite this in terms of the parametric equations for the line.
$PAR  $BR
x(t) = \{ ans_rule(10) \}$BR
y(t) = \{ ans_rule(10) \}$BR
z(t) = \{ ans_rule(10) \}
END_TEXT

$ans1 = "$a + $d * t";
$ans2 = "$b + $e * t";
$ans3 = "$c + $f * t";

ANS( function_cmp($ans1, "t") );
ANS( function_cmp($ans2, "t") );
ANS( function_cmp($ans3, "t") );

