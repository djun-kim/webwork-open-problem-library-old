#DESCRIPTION
##  Algebra problem:  Systems of equations
##ENDDESCRIPTION

##KEYWORDS('algebra', 'story question', 'elimination')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$l=random(15,20,1);
$w=random(5,14,1);
$ar = $l*$w;
$pr = 2*$l+2*$w;

BEGIN_TEXT
A rectangle has an area of $ar \(\textrm{cm}^2\) and a perimeter of $pr cm.
What are its dimensions?
$BR
Its length is \{ans_rule(25) \}
$BR
Its width is \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $l;
$ans2 = $w;

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
