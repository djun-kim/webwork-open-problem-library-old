##DESCRIPTION
##  Elasticity
##ENDDESCRIPTION

##KEYWORDS('algebra', 'slope')

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);

$a = list_random(-0.8,-0.6,-0.7);
$b = list_random(20, 15, 10);
$c = list_random(10, 6, 8);

TEXT(EV2(<<EOT));
Suppose that the demand of a certain item is
\( \displaystyle{x = $a p + $b}\).
$BR         
    Evaluate the elasticity at $c:
$BR
$BR
\( E($c) \) = \{ans_rule(10) \}
$BR
EOT

$ans = ($a*$c)/(-$a*$c+$b);
&ANS(std_num_cmp($ans));


ENDDOCUMENT();
