TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(80,240,1);
$a1=$a+1;

BEGIN_TEXT
Write the sum using sigma notation:
$BR
\( \frac{1}{1\cdot 2} + \frac{1}{2\cdot 3} + \frac{1}{3\cdot 4} + \cdots +
\frac{1}{$a\cdot $a1}   =\sum_{n=1}^{A} B \), where
$BR
\(A=\) \{ans_rule(15) \},
$BR
\(B=\) \{ans_rule(15) \}.
$BR
END_TEXT

$ans1 = $a;
$ans2 = "1/(n*(n+1))";

ANS(std_num_cmp($ans1));
ANS(fun_cmp($ans2,vars=>['n']));

