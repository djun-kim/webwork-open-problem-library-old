TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$p[0] = random(.4,.45);
$p[1] = random(.475,.49,.495);


$a = normal_distr($p[0]);
$b = normal_distr($p[1]);

$aa = .5-$p[0];
$bb = .5-$p[1];

BEGIN_TEXT
Determine the following z-scores: $PAR

(a) \( z_{$aa} \)  = \{ans_rule(10)\}  $PAR

(b) \(z_{$bb}\) = \{ans_rule(10)\} $PAR

END_TEXT

ANS(num_cmp($a, tol=>0.01));
ANS(num_cmp($b, tol=>0.01));

