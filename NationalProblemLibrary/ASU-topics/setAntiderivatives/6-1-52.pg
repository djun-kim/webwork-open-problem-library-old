## DBsubject('Calculus')
## DBchapter('Integrals')
## DBsection('Indefinite Integrals')
## Date('5/26/2005')
## Author('Jeff Holt')
## Institution('UVA')
## TitleText1('Calculus')
## EditionText1('5e')
## AuthorText1('Stewart')
## Section1('5.4')
## Problem1('')

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,8,1);
$b = random(3,7,1);
$c = random(3,6,1);

TEXT(EV2(<<EOT));

Evaluate the indefinite integral:
$BR
$PAR
\( \displaystyle{\int \left(\frac{$a}{ x^4} - \frac{$b}{x^{$c}} + 12\right) \, dx} = \)
   \{ans_rule(35) \} + \( C\).
$BR
$BR

EOT

$ans = "$a*(x**(-3))/(-3) - $b*(x**(-$c+1))/(-$c+1) + 12*x";
ANS(fun_cmp($ans, mode=>"antider", vars=>"x"));

ENDDOCUMENT();
