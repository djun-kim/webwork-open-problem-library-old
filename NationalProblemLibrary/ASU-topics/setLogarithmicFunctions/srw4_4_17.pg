TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,20,1);
$b=random(2,50,1);

BEGIN_TEXT
Find the solution of the exponential equation
\[
e^{2x+1}=$b
\]
in terms of logarithms, or correct to four decimal places.
$BR

\(x=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = "(-1+ln($b))/2";

ANS(num_cmp($ans1));

