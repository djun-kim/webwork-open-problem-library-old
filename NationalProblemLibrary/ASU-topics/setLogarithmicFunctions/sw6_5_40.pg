DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=non_zero_random(2,10,1); 
$b=non_zero_random(3,10,1);
#(x+$b)*(x-$a)
if ($a==$b){
  $a=$a+1;
};
$b1=$b-$a;
$c1=-$a*$b+4;
$pol = nicestring([1,$b1, $c1]);

BEGIN_TEXT
Find the solution of the logarithmic equation
\[
\log_2($pol)=2
\]
in terms of logarithms, or correct to four decimal places.
$BR
Your answers are
\(x_1=\) \{ans_rule(15) \}
and 
\(x_2=\) \{ans_rule(15) \}
with \(x_1\le x_2\)
$BR
END_TEXT

$ans1 = -$b;
$ans2 = $a;

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
