TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b= random(200, 500, 50);
$a = $b+random(50, 150, 25);
$c = random(12, 48, 12);

BEGIN_TEXT
If $a mg of a radioactive element decays to $b mg in $c hours, what
is its half-life?
$BR$BR
\{ans_rule(25) \} hours
END_TEXT

ANS(num_cmp("$c*ln(2)/ln($a/$b)"));


