## DESCRIPTION 
##  ## Differential equations
##  ay'' + by' + cy =  0,
##  $b =0,$a,$c integers
##   URL:http://webhost.math.rochester.edu/mth163lib/discuss/msgReader$397
##  
## ENDDESCRIPTION 
DOCUMENT() ;        

loadMacros(
"PGasu.pl",
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGmatrixmacros.pl",
) ;
############

TEXT(&beginproblem);


foreach $i (0..2) {

   foreach $j (0..2) {
   		$a->[$i][$j] = random(-4,4,1);
   		$b->[$i][$j] = random(-4,4,1);
   	}
}


$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT

If 
\[ A = \{ display_matrix_mm($a) \}
\qquad \text{and}\qquad 
B = \{ display_matrix_mm($b) \}
\]

Then

$BCENTER
\{ mbox('\(2A+B = \)',
display_matrix([[ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5)]],
'align'=>"ccc"))
\}
$ECENTER

END_TEXT
foreach $i (0..2) {

   foreach $j (0..2) {
   		ANS(num_cmp(2*$a->[$i][$j] +$b->[$i][$j])  );
   	}
}


ENDDOCUMENT() ;        
