## DESCRIPTION 
##  ## Differential equations
##  ay'' + by' + cy =  0,
##  $b =0,$a,$c integers
##   URL:http://webhost.math.rochester.edu/mth163lib/discuss/msgReader$397
##  
## ENDDESCRIPTION 
DOCUMENT() ;        

loadMacros(
	"PG.pl",
        "PGasu.pl",
	"PGbasicmacros.pl",
	"PGchoicemacros.pl",
	"PGanswermacros.pl",
	"PGauxiliaryFunctions.pl",
	"PGmatrixmacros.pl"
) ;
############

TEXT(&beginproblem);


$A = new Matrix(3,3);
$B = new Matrix(3,3);
foreach my $i (1..3) {
	foreach my $j (1..3) {
   		$A->assign($i,$j,random(-4,4,1));
    	$B->assign($i,$j,random(-4,4,1));
   	}
}

$showPartialCorrectAnswers = 1 ;

$mult1 = random(3,6,1);
$mult2 = random(3,6,1);

BEGIN_TEXT

If 
\[ A = \{ display_matrix_mm($A)\} \mbox{ \ \ and \ \ } B = \{display_matrix_mm($B)\}, \]

then

$BCENTER
\{ mbox(
'\( $mult1 A+ $mult2 B = \)',
display_matrix([[ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5)]],
'align'=>"ccc"))
\}
$ECENTER


END_TEXT

$C = new Matrix(3,3);
$C = $mult1*$A +$mult2* $B;
ANS num_cmp(ra_flatten_matrix($C) );


ENDDOCUMENT() ;        







