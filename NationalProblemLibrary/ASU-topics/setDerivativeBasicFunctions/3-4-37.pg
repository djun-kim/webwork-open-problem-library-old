"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showpartialcorrectanswers = 1;

$a = random(2,6,2);
$b = random(3,9,2);
$c = random(2,7,1);
$d = random(1,4,1);
$f = random(-3,-1,1);

TEXT(EV2(<<EOT));
Suppose that \( f(x) = $a x^{-4} + $b x^{-2}\).
Evaluate each of the following:
$BR
$BR
\( f'($d) \) = \{ans_rule(20) \}
$BR
EOT

$ans = -4*$a*($d)**(-5) - 2*$b*($d)**(-3);
ANS(num_cmp($ans));

TEXT(EV2(<<EOT));
\( f'($f) \) = \{ans_rule(20) \}
$BR
EOT

$ans = -4*$a*($f)**(-5) - 2*$b*($f)**(-3);
ANS(num_cmp($ans));


