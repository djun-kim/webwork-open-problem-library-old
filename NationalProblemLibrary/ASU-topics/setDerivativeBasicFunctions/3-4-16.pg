DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showpartialcorrectanswers = 1;

$a = random(3, 15, 2);
$b = random(1.2,3.8,0.2);

TEXT(EV2(<<EOT));
Find \(y'\) for \(y = $b x^{$a}\).
$PAR
\(y'\) = \{ans_rule(30) \}
$BR
EOT

$ans = "($a*$b)*(x**($a-1))";
ANS(fun_cmp($ans));

ENDDOCUMENT();
