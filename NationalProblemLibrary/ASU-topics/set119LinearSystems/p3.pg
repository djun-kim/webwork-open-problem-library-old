DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGasu.pl",
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"extraAnswerEvaluators.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = 1;
$b = random(2,9,1);
$c = random(2,9,1);
$det = non_zero_random(-2,2,1);
$d = $det-$b*$c;
$m = random(-9,9,1);
$n = random(-9,9,1);
$ans1 = ($m*$d+$b*$n)/$det;
$ans2 = ($a*$n-$m*$c)/$det; 

$NO_SPACE = '@{}';

$ls2 = nicestring([$c,$d],['x','y']);

BEGIN_TEXT

Solve the system using substitution

\[ \left\{"\{"\}
\begin{array}{r${NO_SPACE}l}
 x  -$b y & =  $m \cr
$ls2 & =  $n
\end{array} \right. \]

\( x= \) \{ans_rule(10) \}$BR

\( y= \) \{ans_rule(10) \}

END_TEXT

&ANS(arith_num_cmp($ans1));
&ANS(arith_num_cmp($ans2));

ENDDOCUMENT();       # This should be the last executable line in the problem. 
