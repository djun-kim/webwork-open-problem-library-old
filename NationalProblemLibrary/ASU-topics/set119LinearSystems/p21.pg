DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGasu.pl",
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGmatrixmacros.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a1 = non_zero_random(-9,9,1);
$b1 = non_zero_random(-99,99,1);
$c1 = non_zero_random(-99,99,1);
$d1 = random(-99,99,1);
$a2 = 0;
$b2 = non_zero_random(-99,99,1);
$c2 = non_zero_random(-9,9,1);
$d2 = random(-9,9,1);
$a3 = non_zero_random(-99,99,1);
$b3 = 0;
$c3 = random(2,99,1);
$d3 = random(-99,99,1);
$a4 = random(-9,9,1);
$b4 = non_zero_random(-9,9,1);
$c4 = non_zero_random(-99,99,1);
$d4 = random(-99,99,1);
$a5 = random(2,99,1);
$b5 = random(1,99,1);
$c5 = 0;
$d5 = random(-9,9,1);

@a = ($a1, $a2, $a3, $a4, $a5);
@b = ($b1, $b2, $b3, $b4, $b5);
@c = ($c1, $c2, $c3, $c4, $c5);
@d = ($d1, $d2, $d3, $d4, $d5);

@mx = ("$a1 x", "", "$a3 x", "$a4 x", "$a5 x");
@my = ("+$b1 y", "+$b2 y", "", "+$b4 y", "+$b5 y");
@mz = ("+$c1 z", "+$c2 z", "+$c3 z", "+$c4 z", "");
@m = ("$d1", "$d2", "$d3", "$d4", "$d5");

$tag1 = random(0,2,1);
$tag2 = $tag1 +1;
$tag3 = $tag1 +2;
 
$NO_SPACE = '@{}';

BEGIN_TEXT

Write the augmented matrix of the system
\[ \left\{"\{"\} \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
\{join("&",$mx[$tag1],$my[$tag1],$mz[$tag1],"=",$m[$tag1] ) \} \cr
\{join("&",$mx[$tag2],$my[$tag2],$mz[$tag2],"=",$m[$tag2] ) \} \cr
\{join("&",$mx[$tag3],$my[$tag3],$mz[$tag3],"=",$m[$tag3] ) \} \cr
\end{array} \right. \]

$BR

$BCENTER
\{display_matrix([[ans_rule(5),ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5),ans_rule(5)]],
  'align' =>"ccc|c")
\}
$ECENTER


END_TEXT



&ANS(arith_num_cmp($a[$tag1]));
&ANS(arith_num_cmp($b[$tag1]));
&ANS(arith_num_cmp($c[$tag1]));
&ANS(arith_num_cmp($d[$tag1]));

# row 2
&ANS(arith_num_cmp($a[$tag2]));
&ANS(arith_num_cmp($b[$tag2]));
&ANS(arith_num_cmp($c[$tag2]));
&ANS(arith_num_cmp($d[$tag2]));

# row 3
&ANS(arith_num_cmp($a[$tag3]));
&ANS(arith_num_cmp($b[$tag3]));
&ANS(arith_num_cmp($c[$tag3]));
&ANS(arith_num_cmp($d[$tag3]));



ENDDOCUMENT();       # This should be the last executable line in the problem.
