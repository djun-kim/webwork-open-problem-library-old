TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = non_zero_random(-9,9,1);

BEGIN_TEXT
$BBOLD
Use abs(x) for \( |x| \).
$EBOLD
$BR
Given that \(f(x)=|x|\) and \(g(x)=$a x ? {$b}\), calculate 
$BR
(a) \( f\circ g(x) \)= \{ans_rule(15)\}
     
$BR  
(b) \( g\circ f(x) \)= \{ans_rule(15)\} 
     
$BR  
(c) \(f\circ f(x)\)= \{ans_rule(15)\}
     
$BR  
(d) \(g\circ g(x)\)= \{ans_rule(15)\}
      
END_TEXT

$ans1 = "abs($a*x + $b)";
$ans2 = "-infinity";
$ans3 = "infinity";
$ans4 = "$a*abs(x) + $b";
$ans5 = "-infinity";
$ans6 = "infinity";
$ans7 = "abs(x)";
$ans8 = "-infinity";
$ans9 = "infinity";
$ans10 = "$a*($a*x + $b) + $b";
$ans11 = "-infinity";
$ans12 = "infinity";
&ANS(fun_cmp($ans1, limits=>[[-$b/$a-1, -$b/$a]]));

&ANS(fun_cmp($ans4, limits=>[-1,1]));

&ANS(fun_cmp($ans7, limits=>[-1,1]));

&ANS(fun_cmp($ans10));


