loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2.5,5.5,1);
$b = random(2,5,1);

TEXT(EV2(<<EOT));

Evaluate the definite integral:
$BR
$PAR
   \( \displaystyle{ \int_{1}^{$a} $b x^{-1} \,dx} = \)
   \{ans_rule(35) \} 
$BR
$BR

EOT

$ans = $b*ln($a);
ANS(num_cmp($ans));

ENDDOCUMENT();
