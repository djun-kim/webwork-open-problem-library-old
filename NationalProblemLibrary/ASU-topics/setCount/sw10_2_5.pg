DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(60,200,5);
$n = random(8,12,1);
$r = random(4,6,1);
$b = $n - $r;
$c=random(6,20,1);

BEGIN_TEXT
Evaluate the following expressions:
$BR
a)  \(P($a,1) = \)  $SPACE \{ans_rule(15) \}
$BR
b) \( P($n, $r) = \) $SPACE  \{ans_rule(15)\}
$BR
c) \(P($c,3) = \)  $SPACE \{ans_rule(15)\}
END_TEXT

ANS(num_cmp($a));
$ans = fact($n)/fact($b);
ANS(num_cmp($ans));

$ans1 = $c*($c-1)*($c-2);
ANS(num_cmp($ans1));
 
