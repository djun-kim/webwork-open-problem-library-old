##DESCRIPTION
##KEYWORDS('probability')
##this problem is also located in directory setDiscrete9Counting
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);


TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$y = random(15,25,1);
$g = random($y+1,35,1);
$r = random($g+1,40,1);
$t = $y+$g+$r;
$n = random(8,15);
$a = random(2,$n-2);
$b = $n - $a -1;

$ans1 = C($y,$a)*C($t - $y,$n-$a)/C($t,$n);
$ans2 = C($y,$a)*C($g,$b)*C($r,$n-$a-$b)/C($t,$n);
$ans3 = 1- C($r+$g,$n)/C($t,$n);

BEGIN_TEXT
A box contains $y yellow, $g green and $r red jelly beans. $BR
If $n jelly beans are selected at random, what is the probability that:
$BR
a) $SPACE $a are  yellow?
\{ ans_rule(20) \}
$BR
b) $SPACE $a are yellow and $b are green?
\{ ans_rule(20) \}
$BR
c) $SPACE At least one is yellow? 
\{ ans_rule(20) \}
END_TEXT

ANS( num_cmp( $ans1 ) );
ANS( num_cmp( $ans2 ) );
ANS( num_cmp( $ans3 ) );


ENDDOCUMENT();        # This should be the last executable line in the problem.;
