##DESCRIPTION
##KEYWORDS('basis', 'space', 'matrices', 'upper-triangular')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());

my $ae = new AnswerEvaluator;

$ae->{debug} = 0;

$ae->ans_hash( 	correct_ans 		=> 	mbox(display_matrix([[1,0],[0,0]],'right'=>'.','left'=>'.'),display_matrix([[0,0],[0,1]],'right'=>'.','left'=>'.')),
		'zeroLevelTol'		=>	$main::functZeroLevelTolDefault,
	       	'debug'			=>	0,
     	);
$ae->install_pre_filter(sub{
	my $rh_ans = shift;
	ans_array_filter( $rh_ans );
	});

$ae->install_evaluator(sub{
	my $rh_ans = shift;
	$rh_ans->{rm_correct_ans} = Matrix->new_from_array_ref([[1,0],[0,0],[0,0],[0,1]]);
	@stu = @{$rh_ans->{ra_student_ans}};
	$ans = [Matrix->new_from_array_ref([[0],[0],[0],[0]]),Matrix->new_from_array_ref([[0],[0],[0],[0]])];
	$ans->[0] = Matrix->new_from_array_ref([[$stu[0][0][0]],[$stu[0][0][1]],[$stu[0][1][0]],[$stu[0][1][1]]]);
	$ans->[1] = Matrix->new_from_array_ref([[$stu[1][0][0]],[$stu[1][0][1]],[$stu[1][1][0]],[$stu[1][1][1]]]);
	$rh_ans->{ra_student_ans} = $ans;
	compare_basis($rh_ans,'zeroLevelTol' => $rh_ans->{zeroLevelTol});
});
$ae->install_post_filter(sub{
	my $rh_ans = shift;
	$rh_ans->clear_error('EVAL');
	$rh_ans->clear_error('SYNTAX');
	$rh_ans;
});


$LEFT_BRACE = '\{';
$RIGHT_BRACE = '\}';

BEGIN_TEXT
Find a basis for the space of 2x2 diagonal matrices:
\{mbox('\(${LEFT_BRACE}\)',ans_array(2,2,3),'\(,\)',ans_array_extension(2,2,3),'\(${RIGHT_BRACE}\)')\}
END_TEXT

ANS($ae);


ENDDOCUMENT();       # This should be the last executable line in the problem.

