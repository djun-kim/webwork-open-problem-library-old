##DESCRIPTION
##KEYWORDS('basis', 'coordinate vector')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,8,1);
$b = random(2,8,1);
$c = random(-8,-2,1);

$x1 = non_zero_random(-5,5,1);
$x2 = non_zero_random(-5,5,1);
$x3 = random(-5,5,1);

$ans1 = $x1;
$ans2 = $x2 - $a*$x1;
$ans3 = $x3 - $c*$x2 + ($a*$c - $b)*$x1;

$RIGHT_BRACE = '\}';

BEGIN_TEXT

Find the coordinate vector of 
\( x = \{display_matrix_mm([[$x1], [$x2], [$x3]])\} \)
with respect to the basis
\( B= \left\{'\{'\} \{display_matrix_mm([[1], [$a], [$b]])\} , \{display_matrix_mm([[0], [1], [$c]])\} ,
 \{display_matrix_mm([[0], [0], [1]])\} \right${RIGHT_BRACE} \) or \( {\mathbb R}^3 \).
$BR
\{ mbox( '\( [x]_B = \)', answer_matrix(3,1,10) ) \}

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));


ENDDOCUMENT();       # This should be the last executable line in the problem.

