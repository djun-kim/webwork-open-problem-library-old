DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(1,5,1);
$b1 = random(1,5,1);
$c1 = random(-5,5,1);

BEGIN_TEXT
$PAR
 What are the cylindrical coordinates of the point whose rectangular coordinates
 are \( (x= $a1 ,\  y= $b1 ,\ z= $c1 ) \) ?
$PAR
$BR
\(r \) = \{ans_rule(30)\} $BR
\( \theta \)  = \{ans_rule(30)\} $BR
\( z \) = \{ans_rule(30)\} $BR
END_TEXT


$ans0 =  ($a1*$a1+$b1*$b1)**.5 ;
$ans1 =  arctan($b1/$a1) ;
$ans2 =  $c1 ;


ANS(num_cmp($ans0));
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
