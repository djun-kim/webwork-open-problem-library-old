TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(1,5,1);
$b1 = random(1,5,1);
$c1 = random(-5,5,1);
$pi = arccos(-1);


BEGIN_TEXT
$PAR
 What are the spherical coordinates of the point whose rectangular coordinates
 are $BR \( ($a1 ,\   $b1  ,\ $c1 ) \) ?
$PAR
$BR
\( \rho \) = \{ans_rule(40)\} $BR
\( \theta \) = \{ans_rule(40)\} $BR
\( \phi \) = \{ans_rule(40)\} $BR
END_TEXT


$ans0 =  ($a1**2+$b1**2+$c1**2)**.5 ;
$ans1 =  arctan($b1/$a1) ;
$ans2 =  arccos($c1/(($a1**2+$b1**2+$c1**2)**.5));


ANS(num_cmp($ans0));
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

