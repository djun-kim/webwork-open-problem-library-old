##DESCRIPTION
##KEYWORDS('dot product', 'inner product', 'QR', 'factorization')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$myQ = new Matrix(4,2);
$myR = new Matrix(2,2);
$M = new Matrix(4,2);

$a = random(1,4,1);

$norm = 2 * $a;

@entr1 = ($a,   $a, $a, - $a);
@entr2 = ($a, - $a, $a,   $a);

$sign1 = random(-1,1,2);
$sign2 = random(-1,1,2);

@slice = NchooseK(4,4);

foreach $i (0..3) {
	$myq[$i][0] = $entr1[$slice[$i]] * $sign1;
	$myq[$i][1] = $entr2[$slice[$i]] * $sign2;
	$myQ->assign($i+1,1, $myq[$i][0]);
	$myQ->assign($i+1,2, $myq[$i][1]);
}


$myR->assign(1,1, random(1,3,1));
$myR->assign(1,2, non_zero_random(-4,4,1));
$myR->assign(2,1, 0);
$myR->assign(2,2, random(1,3,1));

$M = $myQ * $myR;

$Q = new Matrix(4,2);
$R = new Matrix(2,2);

foreach $i (0..3) {
	foreach $j (0..1) { 
 	       	$q[$i][$j] = $myq[$i][$j]/$norm;
		$Q->assign($i+1,$j+1, $q[$i][$j]);
	}
}

$R = $myR * $norm;

BEGIN_TEXT

\{ mbox( 'Find the \(QR\) factorization of \(M=\)', display_matrix($M), '.' ) \}
$BR 
\{ mbox( '\(M=\)', answer_matrix(4,2,10), answer_matrix(2,2,10), '.' ) \} 

END_TEXT

ANS(num_cmp(ra_flatten_matrix($Q)));
ANS(num_cmp(ra_flatten_matrix($R)));

ENDDOCUMENT();       # This should be the last executable line in the problem.

