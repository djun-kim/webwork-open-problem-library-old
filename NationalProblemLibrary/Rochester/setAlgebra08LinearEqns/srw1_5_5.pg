loadMacros(
	"PG.pl",
	"PGbasicmacros.pl",
	"PGchoicemacros.pl",
	"PGanswermacros.pl",
	"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(5,9,1);
$b = non_zero_random(-10,10,1);
$c = random(2,4,1);
$d = non_zero_random(-10,11,1);

BEGIN_TEXT
Solve the equation \($a x ? {$b} = $c x ? {$d}\).
$BR $BR \( x = \) \{ans_rule(20) \}
$BR
END_TEXT

$ans = ($d - $b)/($a-$c);
ANS(num_cmp( $ans ));

