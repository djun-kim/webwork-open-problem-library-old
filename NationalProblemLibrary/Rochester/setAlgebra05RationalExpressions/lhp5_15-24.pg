##DESCRIPTION
##  lhp5_15-24.pg.
##ENDDESCRIPTION

##KEYWORDS('algebra, simplifying rational expression')


DOCUMENT();     
loadMacros("PGbasicmacros.pl",     
           "PGchoicemacros.pl",     
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl"    
);     

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,6,2);
$b = random(2,9,2);
$c = random(2,6,1);
$d = $c-1;
## $a y^$c/(xy-$b y)

BEGIN_TEXT
$PAR

Simplify the expression 
\[\frac{$a y^$c}{xy-$b y}\] 
and give your answer in the form of
\[\frac{f(x)}{g(x)}.\] 
$BR
Your answer for the function \(f(x)\) is : \{ans_rule(10) \}
$BR
Your answer for the function \(g(x)\) is : \{ans_rule(10) \}
$BR
END_TEXT

$ans1 = "$a*y**$d";
$ans2 = "x-$b";

ANS(fun_cmp($ans1, vars=>'y'));
ANS(fun_cmp($ans2));

ENDDOCUMENT();