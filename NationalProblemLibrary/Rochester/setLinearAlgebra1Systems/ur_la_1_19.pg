##DESCRIPTION
##KEYWORDS('linear', 'system', 'infinitely many solutions')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(4,5,1);
$apb = random(-1,1,2);
$b = $apb - $a;
$c = random(2,4,1);
$d = random(2,4,1);
$e = random(0,4,1);

$f = random(2,3,1);
$g = random(2,3,1);
$h = random(1,5,1);

$i = $a - 1;
$j = $b + 1;
$k = $c + $f;
$l = $d + $g;
$m = $e + $h;

$p = random(2,3,1) * random(-1,1,2);
$n = - $p;
$q = $p * $f;
$r = $p * $g;
$s = $p * $h;

$NO_SPACE = '@{}';

BEGIN_TEXT

Solve the system 
\[ \left\{'\{'\} \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$a x_1 & + $b x_2 & + $c x_3 & + $d x_4 = & $e \cr
 - x_1 &    + x_2 & + $f x_3 & + $g x_4 = & $h \cr 
$i x_1 & + $j x_2 & + $k x_3 & + $l x_4 = & $m \cr
$n x_1 & + $p x_2 & + $q x_3 & + $r x_4 = & $s   
\end{array} \right. \]
\{ mbox( display_matrix([['\(x_1\)'], ['\(x_2\)'], ['\(x_3\)'], ['\(x_4\)']]), '\(=\)', ans_array(4,1,5),
	 '\(+\)', ans_array_extension(4,1,5), '\(s\) \(+\)', ans_array_extension(4,1,5), '\(t\).' ) \}

END_TEXT

$t = $apb*($a*$f+$c) - $f;
$u = $apb*($a*$g+$d) - $g;
$v = $apb*($a*$h+$e) - $h;

$w = $apb*($a*$f+$c);
$x = $apb*($a*$g+$d);
$y = $apb*($a*$h+$e);

ANS(vec_solution_cmp([[$v, $y, 0, 0], [- $t, - $w, 1, 0], [- $u, - $x, 0, 1]]));

ENDDOCUMENT();       # This should be the last executable line in the problem.

