##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@a = (3,4);
@b = (4,3);
$tagab = random(0,1,1);
$h = random(1,10,1);
$k = random(1,10,1);
while ($h == $k) {$k = random(1,10,1);}
$c = sqrt( ($a[$tagab])**2 + ($b[$tagab])**2 );
$foc1 = $h+$c; 
$foc2 = $h-$c;
@foc = ($foc1,$foc2);
$tagfoc = random(0,1,1);
$ver1 = $h+$a[$tagab];
$ver2 = $h-$a[$tagab];
@ver = ($ver1, $ver2);
$tagver = random(0,1,1);
$ans1=$a[$tagab];
$ans2=$b[$tagab];
$ans3=$h;
$ans4=$k;

BEGIN_TEXT

The equation of the hyperbola that has a center at \( ($h,$k) \), 
a focus at \( ($foc[$tagfoc] , $k) \),
and a vertex at \( ($ver[$tagab] , $k ) \), is
\[ \frac{(x-C)^2}{A^2}-\frac{(y-D)^2}{B^2}=1 \]
where $BR
\( A = \) \{ans_rule(5)\}$BR
\( B = \) \{ans_rule(5)\}$BR
\( C = \) \{ans_rule(5)\}$BR
\( D = \) \{ans_rule(5)\}$BR

END_TEXT

ANS(num_cmp($ans1, mode=>"arith"));
ANS(num_cmp($ans2, mode=>"arith"));
ANS(num_cmp($ans3, mode=>"arith"));
ANS(num_cmp($ans4, mode=>"arith"));

ENDDOCUMENT();       # This should be the last executable line in the problem.
