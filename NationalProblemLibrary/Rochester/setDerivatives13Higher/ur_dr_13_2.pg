DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(2,7,1);
$b1 = random(2,8,1);
$n1 = random(2,5,1);
$x1 = random(1,5,1);

$deriv1 = $a1*$n1*$x1**($n1-1) - $b1*exp($x1);
$funct1 = "$a1*$n1*x**($n1-1) - $b1*exp(x)";
$deriv2 = $a1*$n1*($n1-1)*$x1**($n1-2) - $b1*exp($x1);
$funct2 = "$a1*$n1*($n1-1)*x**($n1-2) - $b1*exp(x)";

TEXT(EV2(<<EOT));
If \( f(x) =  $a1 x^{$n1} - $b1 e^x \), find \( f'( x ) \).
$BR $BR \{ans_rule(48) \}
$BR
EOT

$ans = $funct1;
ANS(fun_cmp($ans));

TEXT(EV2(<<EOT));
Find \( f'( $x1 ) \).
$BR $BR \{ans_rule(48) \}
$BR
EOT

$ans = $deriv1;
ANS(num_cmp($ans));

TEXT(EV2(<<EOT));
Find \( f''( x ) \).
$BR $BR \{ans_rule(48) \}
$BR
EOT
$ans = $funct2;
ANS(fun_cmp($ans));

TEXT(EV2(<<EOT));
Find \( f''( $x1 ) \).
$BR $BR \{ans_rule(48) \}
$BR $BR

EOT

$ans = $deriv2;
ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
