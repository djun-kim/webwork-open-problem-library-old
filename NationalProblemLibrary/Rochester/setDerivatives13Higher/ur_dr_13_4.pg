DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$an = random(2,7,1);
$as = random(-1,1,2);
$a  = $an * $as;
$n = random(4,8,1);
$v = random(-1,1,2);

$c1 = ($v)**(-1+$n);
$c2 = ($v)**(-2+$n);

$e = exp($v);

$deriv1 = $n * $c1 + $a * $e;
$deriv2 = $n * ($n - 1) * $c2 + $a * $e;

TEXT(EV2(<<EOT));
$BR
$PAR
Let \( f(x) =  x^$n + $a e^x \).
$BR
$PAR
(a) \( f'( $v ) = \) \{ans_rule(20) \}
$BR
EOT

ANS(num_cmp($deriv1));

TEXT(EV2(<<EOT));
$PAR
(b) \( f''( $v ) = \) \{ans_rule(20) \}
$BR
EOT

ANS(num_cmp($deriv2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
