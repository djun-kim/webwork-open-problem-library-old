##DESCRIPTION
##KEYWORDS('diagonalization', 'power')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = non_zero_random(-9,9,1);
$c = random(2,9,1);

$m11 = $c-$b;
$m12 = 1;
$m21 = - $b*$b;
$m22 = $b + $c;

$ans11 = "$c**n - $b*n*($c**(n-1))";
$ans12 = "n*($c**(n-1))";
$ans21 = "- $b*$b*n*($c**(n-1))";
$ans22 = "$b*n*($c**(n-1)) + $c**n";

BEGIN_TEXT

\{ mbox( 'Let \(M=\)', display_matrix([[$m11, $m12], [$m21, $m22]]), '.') \}
$BR
Find formulas for the entries of \(M^n\), where \(n\) is a positive integer.
$BR
\{ mbox( '\(M^n=\)', answer_matrix(2,2,20), '.' ) \}

END_TEXT

ANS(fun_cmp($ans11, vars=>'n'));
ANS(fun_cmp($ans12, vars=>'n'));
ANS(fun_cmp($ans21, vars=>'n'));
ANS(fun_cmp($ans22, vars=>'n'));

ENDDOCUMENT();       # This should be the last executable line in the problem.

