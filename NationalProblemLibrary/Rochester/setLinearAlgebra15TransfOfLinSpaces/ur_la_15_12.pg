##DESCRIPTION
##KEYWORDS('linear', 'transformation', 'matrix', 'basis', 'complex')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$c = random(2,9,1);
if ($c == $a) { $c = $c+1; } 

$B = new Matrix(2,2);
foreach my $i (1..2) {
        foreach my $j (1..2) {
	 	$b[$i][$j] = random(2,4,1);	
                $B->assign($i, $j, $b[$i][$j]);
        }
}

while ($b[1][1]*$b[2][2] - $b[1][2]*$b[2][1] == 0) { 
	foreach my $i (1..2) {
                $b[$i][$i] = $b[$i][$i]+1;
                $B->assign($i, $i, $b[$i][$j]);
        }
};

$T = new Matrix(2,2);
$T->assign(1, 1, $a); 
$T->assign(1, 2, - $c);
$T->assign(2, 1, $c);
$T->assign(2, 2, $a);

$B_lr = $B->decompose_LR();
$I = $B_lr->invert_LR();

$A = $I * $T * $B;

BEGIN_TEXT

Find the matrix \(A\) of the linear transformation \(T(z) = ($a+$c i)z\) from \({\mathbb C}\) to \({\mathbb C}\)
with respect to the basis \( $LB $b[1][1] + $b[2][1] i,  $b[1][2] + $b[2][2] i $RB\).
$BR
\{ mbox( '\(A=\)', answer_matrix(2,2,10) ) \} 

END_TEXT

ANS num_cmp(ra_flatten_matrix($A));

ENDDOCUMENT();       # This should be the last executable line in the problem.

