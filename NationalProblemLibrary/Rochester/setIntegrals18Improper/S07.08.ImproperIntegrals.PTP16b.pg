$showPartialCorrectAnswers = 0;

$aa = random(4,10,1);
$a2 =  2*$aa+1;
$bb = random(3, 8,1);
$bbp1 = $bb + 1;
$b2 = $bb*$bb;
$cc = random(5,12,1);
$dd = random(7,45,1);

$f = random(2,14,2);
$fp1 = $f + 1;
$fp2 = $f + 2;
$fp4 = $f + 4;

TEXT(beginproblem());
BEGIN_TEXT
Consider the following integrals. Label each as ${LQ}P${RQ}, ``C'', ``D'', according
as the integral is proper, improper but convergent, or improper and divergent.
$BR
END_TEXT

$questStr1 = EV2("\( \displaystyle \int_{-\infty}^{\infty}\sin($bb x)\,dx\)");
$ansStr1 = "D";
$questStr2 = EV2("\( \displaystyle \int_{2}^{\infty} \frac{1}{\sqrt{x^3+$aa}} \,dx\)");
$ansStr2 = "C";
$questStr3 = EV2("\( \displaystyle \int_{-\infty}^{\infty}\frac{x}{x^2+$cc}\,dx\)");
$ansStr3 = "D";
$questStr4 = EV2("\( \displaystyle \int_{$f}^{$fp4}\frac{1}{(x-$fp1)^3}\,dx\)");
$ansStr4 = "D";
$questStr5 = EV2("\( \displaystyle \int_{$bbp1}^{\infty}\frac{1}{\sqrt[3]{x^2-$bb}}\,dx\)");
$ansStr5 = "D";
$questStr6 = EV2("\( \displaystyle \int_{-$cc\pi}^{$dd\pi}\sin(x)\tan^{-1}(x)\,dx\)");
$ansStr6 = "P";
$questStr7 = EV2("\( \displaystyle \int_{-\infty}^{0} x^{$f} e^{x^{$fp1}}\,dx\)");
$ansStr7 = "C";
$questStr8 = EV2("\( \displaystyle \int_{-\infty}^{0} x^{$fp1} e^{x^{$fp2}}\,dx\)");
$ansStr8 = "D";

