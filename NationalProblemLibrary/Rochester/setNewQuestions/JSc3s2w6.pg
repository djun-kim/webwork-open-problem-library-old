#DESCRIPTION
#  William Wheeler
#  Department of Mathematics, Indiana University, Bloomington, IN
#  Stewart, Early Transcendentals, Single Variable, Chapter 3, Section 2, problem w1
#ENDDESCRIPTION

#KEYWORDS('logarithms')

DOCUMENT();  # Must be first executable line

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGcombinatorics.pl",
);

################################################################################

TEXT($BEGIN_ONE_COLUMN);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

################################################################################

$a0 = random(2,6,1);

$p0 = givenVariableAndHash PowerPolynomial('x', 
   {.5 => [[1,1],[1,2]],0=>[[-$a0,1],[0,1]]});
$q0 = givenVariableAndHash PowerPolynomial('x',
   {.5 => [[1,1],[1,2]],0=>[[$a0,1],[0,1]]});

$p0s = $p0 -> TeXizeHighFirst();
$q0s = $q0 -> TeXizeHighFirst();
$hs = "\frac{$p0s}{$q0s}";

$p0p = $p0 -> perlizeHighFirst;
$p0d = $p0 -> derivative;
$p0dp = $p0d -> perlizeHighFirst;

$q0p = $q0 -> perlizeHighFirst;
$q0d = $q0 -> derivative;
$q0dp = $q0d -> perlizeHighFirst;

$answer[0] = "(($p0dp)*($q0p) - ($p0p)*($q0dp))/($q0p)**2";


$a=random(2,5,1);
$b=random_excluding(3,8,1,$a);
$c=random_excluding(2,6,1,($a,$b));
$d=random_excluding(2,8,1,($a,$b,$c));

$p1 = givenVariableAndHash PowerPolynomial('x',
	{1.5=>[[1,1],[3,2]],0=>[[$a,1],[0,1]]});
$q1 = givenVariableAndHash PowerPolynomial('x',
	{2=>[[$b,1],[2,1]],  0=>[[$d,1],[0,1]]});

$p1s = $p1 -> TeXizeHighFirst();
$q1s = $q1 -> TeXizeHighFirst();
$h1s = "\frac{$p1s}{$q1s}";

$p1p = $p1 -> perlizeHighFirst;
$p1d = $p1 -> derivative;
$p1dp = $p1d -> perlizeHighFirst;

$q1p = $q1 -> perlizeHighFirst;
$q1d = $q1 -> derivative;
$q1dp = $q1d -> perlizeHighFirst;

$answer[1] = "(($p1dp)*($q1p) - ($p1p)*($q1dp))/($q1p)**2";

################################################################################

BEGIN_TEXT
Compute the following derivatives using the Quotient Rule:
$BR$BR
(1) If \[h(x) = $hs\,,\] 
$BR then \(h'(x) = \)$SPACE \{ans_rule(80)\}
$BR$BR
(2) If \[h(x) = $h1s\,,\] 
$BR then \(h'(x) = \)$SPACE \{ans_rule(80)\}
$BR$BR

$BR$HR

END_TEXT

################################################################################
map {ANS(fun_cmp($_))} @answer;


################################################################################
TEXT($END_ONE_COLUMN);
ENDDOCUMENT();   # Must be last executable line
