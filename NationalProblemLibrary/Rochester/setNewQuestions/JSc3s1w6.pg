#KEYWORDS('logarithms')

DOCUMENT();  # Must be first executable line

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGcombinatorics.pl",
);

################################################################################

TEXT($BEGIN_ONE_COLUMN);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

################################################################################

$f = givenVariableAndHash PowerPolynomial('x', 
   {1 => [[random(3,15,2),1],[1,1]], 2=>[[random(3,9,2),1],[2,1]], 
    1.5 => [[random(4,8,2),1],[3,2]] });


$fs = $f -> TeXizeHighFirst();

$g = $f->derivative;

$gs = $g -> TeXizeHighFirst();

$gp = $g -> perlizeHighFirst();
$answer[0] = $gp;

################################################################################

BEGIN_TEXT
$BR
Find the derivative of the function
\[f(x) = $fs \]

$BR
\(f'(x) = \)$SPACE \{ans_rule(40)\}
$BR$HR

END_TEXT

################################################################################
map {ANS(fun_cmp($_))} @answer;


################################################################################
TEXT($END_ONE_COLUMN);
ENDDOCUMENT();   # Must be last executable line
