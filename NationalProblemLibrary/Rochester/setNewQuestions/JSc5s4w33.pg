DOCUMENT();  # Must be first executable line

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGcombinatorics.pl",
"PGgraphmacros.pl",
);

################################################################################

#TEXT($BEGIN_ONE_COLUMN);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

################################################################################

$c = random(2,7,1);
$d=random_excluding(2,8,1,$c);

$a = random(2,5,1);
$b = random_excluding($a+2, $a+4,1,1);

$f = givenVariableAndHash PowerPolynomial('x', 
   {-2=> [[$c,1],[-2,1]], 0.5=>[[$d,1],[1,2]] });




$fs = $f -> TeXizeHighFirst;
$fad = $f-> antiDerivative();
$fads = $fad -> TeXizeHighFirst;
$fadp = $fad -> perlizeHighFirst;
$fadps = string_to_sub( $fadp, 'x');

$answer[0] = $fadp;
$answer[1] = $fadps -> ($b);
$answer[2] = $fadps -> ($a);
$answer[3] = $answer[1] - $answer[2];


################################################################################

BEGIN_TEXT
$BR
Let \(f(x) = $fs\).  Compute the definite integral
\[\int_{$a}^{$b} $fs\, dx\]
using the Fundamental Theorem of Calculus or the Net Change Theorem.
$BR$BR
What is the simplest anti-derivative of \(f(x)\) (i.e., do not include a constant \(C\))?
$BR
\(F(x) = \)$SPACE \{ans_rule(30)\}
$BR$BR
Now, compute \(F($b)\) and \(F($a)\):
$BR$BR
\(F($b) = \)$SPACE \{ans_rule(20)\}
$BR$BR
\(F($a) = \)$SPACE \{ans_rule(20)\}
$BR$BR
Now,
\(\int_{$a}^{$b} $fs\, dx = \) $SPACE \{ans_rule(20)\}
$BR
 

END_TEXT

################################################################################
ANS(fun_cmp($answer[0])); 
ANS(num_cmp($answer[1]));
ANS(num_cmp($answer[2]));
ANS(num_cmp($answer[3]));


################################################################################
