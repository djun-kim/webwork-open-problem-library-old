## Problem1('31')
##  find the equation of the line given a point on the line and given
##  that it is perpendicular to some line
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl"
);

Context('Numeric');

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###################
#
#  Setup
$x1 = random(1,9,1);
$y1 = random(1,10,1);
$a1 = random(2,5,1);
$b1 = random(2,5,1);
$c1 = random(2,5,1);
$m1 = $b1/$a1;

$ans1 = Real($m1);
$ans2 = Real($y1 -$m1*$x1);
###################
#
#  Text

Context()->texStrings;
BEGIN_TEXT
The equation of the line that goes through the point
\( ( $x1 ,$y1 ) \) and is perpendicular to the line
\( $a1 x + $b1 y = $c1 \)
can be written in the form
\( y = mx+b \) where \( m \)
 is: \{ans_rule(15) \}
$BR

and  where \( b \) is: \{ans_rule(15) \}
$BR

END_TEXT

Context()->normalStrings;

###################
#
#  Answers

ANS($ans1->cmp);

ANS($ans2->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
