loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$b= random(2,15,1);
while ($b==$a) {
   $b=random(2,15, 1);
}

TEXT(EV2(<<EOT));
$BR
Evaluate the limit using L'Hospital's rule
\[ \lim_{ x \rightarrow 0 } \frac{\sin($a x)}{\tan
($b x)} \]
$BR \{ans_rule(25) \}
$BR
EOT

$ans = $a/$b;
ANS(num_cmp($ans));

