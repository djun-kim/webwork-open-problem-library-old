DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a[0] = random(-9,-2,1);
$a[1] = random($a[0]+1,5,1);
$a[2] = random($a[1]+1,9,1);

@slice = NchooseK(3,3);

$a12 = random(-9,9,1);
$a13 = non_zero_random(-9,9,1);
$a23 = random(-9,9,1);

BEGIN_TEXT

\{ mbox( 'The matrix \(B=\)', display_matrix([[$a[$slice[0]], $a12,          $a13], 
					      [0,             $a[$slice[1]], $a23], 
					      [0,             0,             $a[$slice[2]]]]) ) \} 
$BR
has threee distinct eigenvalues, \( \lambda_1 < \lambda_2 < \lambda_3 \), 
$BR
where \( \lambda_1 = \) \{ans_rule(5)\}, \( \ \ \lambda_2 = \) \{ans_rule(5)\}, 
and \( \ \ \lambda_3 = \) \{ans_rule(5)\}.

END_TEXT

ANS(num_cmp($a[0]));
ANS(num_cmp($a[1]));
ANS(num_cmp($a[2]));

ENDDOCUMENT();       # This should be the last executable line in the problem.

