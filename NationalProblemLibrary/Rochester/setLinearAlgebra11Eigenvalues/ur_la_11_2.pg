##DESCRIPTION
##KEYWORDS('matrix', 'characteristic polynomial')
##
##ENDDESCRIPTION


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGmatrixmacros.pl",
           "PGnumericalmacros.pl"
);


TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$a11 = non_zero_random(-5,5,1);
$a12 = non_zero_random(-5,5,1);
$a13 = 0;
$a21 = 0;
$a22 = non_zero_random(-5,5,1);
$a23 = non_zero_random(-5,5,1);
$a31 = non_zero_random(-5,5,1);
$a32 = non_zero_random(-5,5,1);
$a33 = 0;

BEGIN_TEXT

Find the characteristic polynomial of the matrix 
$BR
\{ mbox( '\( A = \)', display_matrix([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]), '.' ) \} 
$BR
\( p(x) = \) \{ans_rule(40)\}.

END_TEXT

$k = $a11 + $a22;
$m = $a23 * $a32 - $a11 * $a22;
$n = $a12 * $a23 * $a31 - $a11 * $a23 * $a32;

$ans = FEQ("-x**3 + $k * x**2 + $m * x + $n");
ANS(fun_cmp($ans));

ENDDOCUMENT() ;        



