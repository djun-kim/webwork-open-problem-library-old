##DESCRIPTION
##KEYWORDS('matrix', 'eigenvalue', 'eigenvector', 'eigenspace')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$u1 = non_zero_random(-3,3,1);
$u2 = random(1,5,4) * random(-1,1,2);
$v1 = 5/$u2;
$v2 = 6/$u1;

# determinant is 1 

$a = non_zero_random(-5,5,1);
$b = non_zero_random(-5,5,1);
if ($a == $b) { $b = 6;}  

# A [u] = a [u], A [v] = b[v] 
# A [uv] = [au, bv]
# A = [au, bv] * [uv]^{-1}

$a11 = $a*$u1*$v2 - $b*$v1*$u2;
$a12 = - $a*$u1*$v1 + $b*$v1*$u1;
$a21 = $a*$u2*$v2 - $b*$v2*$u2;
$a22 = - $a*$u2*$v1 + $b*$v2*$u1;

BEGIN_TEXT

Find a \(2\times 2\) matrix \(A\) for which 
$BR
\{ mbox( '\(E_{$a} = {\rm span}\)', display_matrix([[$u1], [$u2]]), 
	 ' and \(E_{$b} = {\rm span}\)', display_matrix([[$v1], [$v2]]) ) \}
$BR
where \( E_{\lambda} \) is the eigenspace associated with the eigenvalue \( \lambda\). 
$BR
\{ mbox( '\(A=\)', answer_matrix(2,2,10), '.' ) \}

END_TEXT

ANS(num_cmp($a11));
ANS(num_cmp($a12));
ANS(num_cmp($a21));
ANS(num_cmp($a22));

ENDDOCUMENT();       # This should be the last executable line in the problem.

