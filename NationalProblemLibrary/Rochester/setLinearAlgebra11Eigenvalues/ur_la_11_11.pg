##DESCRIPTION
##KEYWORDS('matrix', 'eigenvalue', 'eigenvector')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$u1 = random(-5,5,1);
$v1 = random(-5,5,1);
$u2 = random(-5,5,1);
$v2 = random(-5,5,1);

$det = $u1*$v2 - $v1*$u2;

while ($det == 0) { 
	$u1=$u1+1; 
	$v2=$v2+1; 
	$det = $u1*$v2 - $v1*$u2;
} 

$e = random(1,10,1);
$f = random(-10,-1,1);

## matrix [u v] is invertible, Au=eu, Av=fv, so A[u v] = [eu, fv]
## A = [eu, fv] [u v]^{-1}

$a11 = ($e*$u1*$v2 - $f*$v1*$u2)/$det;
$a12 = (- $e*$u1*$v1 + $f*$v1*$u1)/$det;
$a21 = ($e*$u2*$v2 - $f*$v2*$u2)/$det;
$a22 = (- $e*$u2*$v1 + $f*$v2*$u1)/$det;

BEGIN_TEXT

Find a \(2\times 2\) matrix \(A\) such that 
$BR
\{ mbox( display_matrix([[$u1], [$u2]]), ' and ', display_matrix([[$v1], [$v2]]) ) \} 
$BR 
are eigenvectors of \(A\), with eigenvalues \($e\) and \($f\) respectively. 
$BR
\{ mbox( '\(A=\)', answer_matrix(2,2,15), '.' ) \}

END_TEXT

ANS(num_cmp($a11));
ANS(num_cmp($a12));
ANS(num_cmp($a21));
ANS(num_cmp($a22));

ENDDOCUMENT();       # This should be the last executable line in the problem.

