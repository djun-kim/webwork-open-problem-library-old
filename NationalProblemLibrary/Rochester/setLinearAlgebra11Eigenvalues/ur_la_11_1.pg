##DESCRIPTION
##KEYWORDS('matrix', 'characteristic polynomial')
##
##ENDDESCRIPTION


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGmatrixmacros.pl",
           "PGnumericalmacros.pl"
);


TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$a = random(-10,10,1);
$b = random(-10,10,1);
$c = random(-10,10,1);
$d = random(-10,10,1);

BEGIN_TEXT

Find the characteristic polynomial of the matrix 
$BR
\{ mbox( '\( A = \)', display_matrix([[$a, $b], [$c, $d]]), '.' ) \} 
$BR
\( p(x) = \) \{ans_rule(20)\}.

END_TEXT

$neg_trace = - $a - $d;
$det = $a * $d - $b * $c;

$ans = FEQ("x**2 + $neg_trace * x + $det");
ANS(fun_cmp($ans));

ENDDOCUMENT() ;        



