##DESCRIPTION
##KEYWORDS('trigonometry')
##TYPE:  multiple numerical answers
##  trigonometry, converting degrees to radians and vise versa;
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pi = 4*atan2(1,1);

$a_n = random(2,15,1);
$a_s = random(-1,1,2);
$a  = $a_n * $a_s;

$b = random(2,6,1);

$c_d = random(2,6,1);
$c_s = random(-1,1,2);
$c   = $c_s*$pi/$c_d;
if ($c_s == -1) {$c_sign = '-'};
if ($c_s == 1) {$c_sign = '+'};

TEXT(EV2(<<EOT));
$PAR
Let \( y = $a \cos[$b (x $c_sign \frac { \pi } { $c_d } )] \).
$PAR
What is the amplitude?  \{ ans_rule(15) \}
$PAR
What is the period?  \{ ans_rule(15) \}
$PAR
What is the phase shift?  \{ ans_rule(15) \}
$PAR
[NOTE:  If needed, you can enter \(\pi\) as 'pi' in your answers.]

EOT

$ans_1 = $a_n;
$ans_2 = 2 * $pi / $b;
$ans_3 = -$c;

# record the answers
ANS(num_cmp([$ans_1,$ans_2,$ans_3], relTol=>.1));
ENDDOCUMENT();        # This should be the last executable line in the problem.
