#DESCRIPTION
#KEYWORDS('derivatives', 'related rates')
#TYPE('word problem')
# Related rates -- two ships moving away from each other.
#ENDDESCRIPTION

##KEYWORDS('Derivatives')
##Tagged by ynw2d

##DBsubject('Calculus')
##DBchapter('Differentiation')
##DBsection('Related Rates')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('1')
## AuthorText1('Rogawski')
## Section1('3.11')
## Problem1('13')


## Modified ('06/20/2008')
## ModifiedBy('nbennett')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",   							
"PGcourse.pl"         # Customization file for the course
);

TEXT(beginproblem());
########################################
# Setup

Context("Numeric");
$showPartialCorrectAnswers = 1;


Context()->flags->set(reduceConstants=>0);

$a = random(10,50,10);
$b = random(15,25,1);
$c = random(15,25,1);
$t = random(3,7,1);

$x = Compute("$a+$t*$b");
$y = Compute("$t*$c");
$dist = Compute("($x^2 +$y^2)**.5");

$dist_rate = Compute("(1/2)($x^2 + $y^2)^(-1/2)(2*$x*$b + 2*$y*$c)");	

########################################
# Main Text

Context()->texStrings;
BEGIN_TEXT
At noon, ship A is $a nautical miles due west of ship B.  Ship A is sailing
west at $b knots and ship B is sailing north at $c knots.
How fast (in knots) is the distance between the ships changing at $t PM? (Note: 1 knot is a
speed of 1 nautical mile per hour.) $BR
\{ans_rule(50) \}
END_TEXT
Context()->normalStrings;	

########################################
# Answers

ANS($dist_rate->cmp);

########################################


COMMENT('MathObject version');

COMMENT('MathObject version');
ENDDOCUMENT();