);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$a = random(2,15,1);
$b = random(1,15,1);

$f = Compute("x^2-$a x");
$g = Compute("x + $b");

$ans1 = Compute("x^2-($a-1)x+$b"); # f+g

$ans4 = Compute("x^2-($a+1)x-$b"); # f-g

$ans7 = Compute("(x^2-$a x)(x+$b)"); # fg

$ans10 = Compute("(x^2-$a x)/(x+$b)"); # f/g
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Given that \(f(x)=$f \) and \(g(x)=$g\), find
$BR
(a) \(f+g\)= \{ans_rule(25)\} 
$BR  
(b) \(f-g\)= \{ans_rule(25)\} 
$BR  
(c) \(fg\)= \{ans_rule(25)\} 
$BR  
(d) \(f/g\)= \{ans_rule(25)\} 
$BR  

END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#
#

ANS($ans1->cmp);

ANS($ans4->cmp);

ANS($ans7->cmp);

ANS($ans10->cmp);


