DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

@header=("\( A \)","\( B \)",
"\( B - A \)",
"\( A \cup B \)",
"\( A \cap (B - A) \)",
"\( A \cup (B - A) \)");
@Aa=qw(0 1 0 1);
@Ab=qw(0 1 0 1);
@Ac=qw(1 1 1 1);
@Ad=qw(0 0 0 0);

BEGIN_TEXT
Complete the following membership table by filling in the blanks with 1 or 0 as
appropriate.
$PAR
END_TEXT

TEXT(
begintable(1+scalar(@header)), 
	row(@header),
	row("1","1",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)),
	row("1","0",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)),
	row("0","1",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)),
	row("0","0",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)),
endtable() 
);

ANS(str_cmp($Aa[0]) );
ANS(str_cmp($Aa[1]) );
ANS(str_cmp($Aa[2]) );
ANS(str_cmp($Aa[3]) );

ANS(str_cmp($Ab[0]) );
ANS(str_cmp($Ab[1]) );
ANS(str_cmp($Ab[2]) );
ANS(str_cmp($Ab[3]) );

ANS(str_cmp($Ac[0]) );
ANS(str_cmp($Ac[1]) );
ANS(str_cmp($Ac[2]) );
ANS(str_cmp($Ac[3]) );

ANS(str_cmp($Ad[0]) );
ANS(str_cmp($Ad[1]) );
ANS(str_cmp($Ad[2]) );
ANS(str_cmp($Ad[3]) );

$mc1=new_multiple_choice();

BEGIN_TEXT
$PAR
Use the membership table above to answer the following questions.$PAR For each
part, check the answer that most completely describes the general situation.
END_TEXT

$mc1 -> qa (
"(1) \(A - B\)",
" \( \subseteq A\)"
);

$mc1 -> extra(
"\( = A \)",
"\(\subseteq B \)",
"\(= A - B \)"
);


BEGIN_TEXT
$PAR
\{ $mc1 -> print_q \}
\{ $mc1 -> print_a \}
END_TEXT

ANS(checkbox_cmp( $mc1 -> correct_ans ) );

$mc2=new_multiple_choice();

$mc2 -> qa (
"(2) \( A \cap (B - A)\)",
" \( \emptyset \)"
);

$mc2 -> extra(
"\( A \)",
"\( B \)",
"\( A \cap B \)"
);


BEGIN_TEXT
$PAR
\{ $mc2 -> print_q \}
\{ $mc2 -> print_a \}
END_TEXT

ANS(checkbox_cmp( $mc2 -> correct_ans ) );

$mc3=new_multiple_choice();

$mc3 -> qa (
"(1) \(A \cup (B - A)\)",
" \( A \cup B \)"
);

$mc3 -> extra(
"\( A \cap B \)",
"\( A \)",
"\( B \)"
);


BEGIN_TEXT
$PAR
\{ $mc3 -> print_q \}
\{ $mc3 -> print_a \}
END_TEXT

ANS(checkbox_cmp( $mc3 -> correct_ans ) );


