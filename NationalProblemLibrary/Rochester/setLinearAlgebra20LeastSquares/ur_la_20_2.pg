##DESCRIPTION
##KEYWORDS('dot product', 'inner product', 'least-squares', 'solution')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

# we choose the matrix A, solution x, and a vector c orthogonal to the columns of A. 
# we set b=Ax+c, then x is the least-squares solution of Ax=b.

$a11 = random(1,2,1);
$a12 = random(-2,-1,1);
$a21 = - $a11;
$a22 = - $a12;
$a31 = random(3,5,1);
$a32 = random(3,5,1);

$x1 = non_zero_random(-5,5,1);
$x2 = random(-5,5,1);

$c1 = non_zero_random(-6,6,1);
$c2 = $c1;
$c3 = 0;

$b1 = $a11*$x1 + $a12*$x2 + $c1;
$b2 = $a21*$x1 + $a22*$x2 + $c2;
$b3 = $a31*$x1 + $a32*$x2 + $c3;

BEGIN_TEXT

Find the least-squares solution \(x^*\) of the system 
$BR
\{ mbox( display_matrix([[$a11, $a12], [$a21, $a22], [$a31, $a32]]), '\(x=\)', 
	 display_matrix([[$b1], [$b2], [$b3]]), '.' ) \}
$BR
\{ mbox( '\(x^* = \)', answer_matrix(2,1,20), '.' ) \}  

END_TEXT

ANS(num_cmp($x1));
ANS(num_cmp($x2));

ENDDOCUMENT();       # This should be the last executable line in the problem.

