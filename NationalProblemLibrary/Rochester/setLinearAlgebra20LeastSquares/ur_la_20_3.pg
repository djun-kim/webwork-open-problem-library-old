);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

# we choose the matrix A, solution x, and a vector c orthogonal to the columns of A. 
# we set b=Ax+c, then x is the least-squares solution of Ax=b.

$a1 = random(2,6,2);
$a2 = random(-5,-1,1);
$a3 = non_zero_random(-2,2,1);

$x = non_zero_random(-5,5,1);

$c1 = random(1,6,1);
$c2 = random(2,6,2);
$c3 = - ($a1*$c1 + $a2*$c2)/$a3;

$b1 = $a1*$x + $c1;
$b2 = $a2*$x + $c2;
$b3 = $a3*$x + $c3;

BEGIN_TEXT

Find the least-squares solution \(x^*\) of the system 
$BR
\{ mbox( display_matrix([[$a1], [$a2], [$a3]]), '\(x=\)', 
	 display_matrix([[$b1], [$b2], [$b3]]), '.' ) \}
$BR
\{ mbox( '\(x^* = \)', answer_matrix(1,1,20), '.' ) \}  

END_TEXT

ANS(num_cmp($x));

