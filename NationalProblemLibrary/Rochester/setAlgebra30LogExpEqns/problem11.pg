##DESCRIPTION
##KEYWORDS('logarithms,exponentials','exponential growth,decay')
##TYPE('word problem')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$B = random(2,6,1);
$C = random(3,12,1);
$D = random(11,87,1);
$E = random(2,5,1);
$F = random(2,5,1);

$ans = (log($D/$C)/log($B)+$F)/$E;

BEGIN_TEXT;
Solve for \(x\):

\[ $C \cdot $B^{$E x -$F} = $D    \]

$BR \(x = \) \{ans_rule(20) \}
$BR
END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.

