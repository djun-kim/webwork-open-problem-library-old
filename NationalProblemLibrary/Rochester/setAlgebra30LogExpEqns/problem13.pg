##DESCRIPTION
##KEYWORDS('logarithms,exponentials','exponential growth,decay')
##TYPE('word problem')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$A = random(2,10,1);
$B = non_zero_random(-10,10,1);
$C = non_zero_random(-10,10,1);
while ($B==$C || $B==-$C) {$C = non_zero_random(-10,10,1);}

$D = random(2,10,1);
$S = random(0,1,1);

if ($S==0) {$sign = "+";
        $ans1 = "($A**k)**(1/($B+$C))";
        $ans2 = ($A**$D)**(1/($B+$C));}
else {$sign = "-";
        $ans1 = "($A**k)**(1/($B-$C))";
        $ans2 = ($A**$D)**(1/($B-$C));}

BEGIN_TEXT;
Solve for \(x\) in terms of \(k\).
\[ \log_{$A} x^{$B} $sign \log_{$A} x^{$C} = k. \] 
$BR \(x = \) \{ans_rule(20) \}
$BR
END_TEXT

ANS(fun_cmp ($ans1, var=>["k"] ) );

BEGIN_TEXT;
Find \(x\) if \(k = $D\).  \{ans_rule(20) \}


END_TEXT

ANS(num_cmp($ans2));
ENDDOCUMENT();        # This should be the last executable line in the problem.

