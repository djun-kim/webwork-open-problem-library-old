#DESCRIPTION
##  Algebra problem: Logarithmic Functions 
##ENDDESCRIPTION

##KEYWORDS('algebra', 'logarithmic equation')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,4,1);
$b=random(2,4,1);

BEGIN_TEXT
Find \(x\).
$BR
(a) \(\log x = $a\)
$BR
\(x =\) \{ans_rule(25) \}
$BR
$BR
(b) \(\log_5 x = $b\)
$BR
\(x=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = 10**$a;
$ans2 = 5**$b;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.

