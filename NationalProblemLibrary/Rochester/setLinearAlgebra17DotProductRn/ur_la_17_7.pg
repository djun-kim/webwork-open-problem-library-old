##DESCRIPTION
##KEYWORDS('linear algebra', 'inner product', 'dot product', 'orthogonal')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGnumericalmacros.pl",
"PGstatisticsmacros.pl", 
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$prod = 0;

for ($i=1; $i<4; $i++) {

	$x[$i] = random(-5,5,1);
	$y[$i] = random(-5,5,1);
	$prod = $prod + $x[$i] * $y[$i];

}

$x[4] = non_zero_random(-5,5,1);

$k = - $prod / $x[4];

BEGIN_TEXT

Find the value of \( k \) for which the vectors 
$BR
\{ mbox( '\(x= \)', display_matrix([[$x[1]], [$x[2]], [$x[3]], [$x[4]]]), 
         'and \(y=\)', display_matrix([[$y[1]], [$y[2]], [$y[3]], ['\(k\)']]), 'are orthogonal.' ) \}
$BR
\( k = \) \{ans_rule(10)\}.

END_TEXT

ANS(num_cmp($k));

ENDDOCUMENT();       # This should be the last executable line in the problem.

