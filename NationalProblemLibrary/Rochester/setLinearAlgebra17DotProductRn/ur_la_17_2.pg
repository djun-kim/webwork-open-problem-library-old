##KEYWORDS('linear algebra', 'inner product', 'dot product', 'norm', 'unit', 'direction')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGnumericalmacros.pl",
"PGstatisticsmacros.pl", 
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$norm = 0;

for ($i=1; $i<5; $i++) {

	$x[$i] = non_zero_random(-5,5,1);
	$norm = $norm + $x[$i] * $x[$i];

}

$norm = sqrt($norm);

BEGIN_TEXT

Let \{ mbox( '\(x=\)', display_matrix([[$x[1]], [$x[2]], [$x[3]], [$x[4]]]), '.' ) \}
$BR
Find the norm of \(x\) and the unit vector in the direction of \(x\).  
$BR
\( ||x|| = \) \{ans_rule(20)\}, 
$BR
\{ mbox( '\(u =\)', answer_matrix(4,1,20) ) \}. 

END_TEXT

ANS(num_cmp($norm));
ANS(num_cmp($x[1]/$norm));
ANS(num_cmp($x[2]/$norm));
ANS(num_cmp($x[3]/$norm));
ANS(num_cmp($x[4]/$norm));


ENDDOCUMENT();       # This should be the last executable line in the problem.

