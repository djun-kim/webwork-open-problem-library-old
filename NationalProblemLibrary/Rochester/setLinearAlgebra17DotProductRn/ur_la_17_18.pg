##DESCRIPTION
##KEYWORDS('dot product', 'inner product', 'minimal', 'unit', 'vector')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = random(2,9,1);
if ($b == $a) { $b = 10; } 

$n = sqrt(1 + $a*$a + $b*$b);
$x = - 1/$n;
$y = - $a/$n;
$z = - $b/$n;

BEGIN_TEXT

\{ mbox( 'Among all the unit vectors \(u=\)', display_matrix([['\(x\)'], ['\(y\)'], ['\(z\)']]), 
	 'in \( {\mathbb R}^3\),' ) \} 
$BR
find the one for which the sum \(x + $a y + $b z\) is minimal. 
$BR
\{ mbox( '\(u=\)', answer_matrix(3,1,20), '.' ) \}
END_TEXT

ANS(num_cmp($x));
ANS(num_cmp($y));
ANS(num_cmp($z));

ENDDOCUMENT();       # This should be the last executable line in the problem.

