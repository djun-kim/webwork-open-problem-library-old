##DESCRIPTION
##KEYWORDS('linear', 'transformation', 'matrix', 'reflection', 'line', 'vector')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$v1 = random(1,6,1);
$v2 = random(1,6,2);
if ($v1 == $v2) { $v2 = $v2+1; } 

$s = $v1**2 + $v2**2;
$a = $v1**2/$s;
$b = $v1*$v2/$s;
$c = $b;
$d = $v2**2/$s;

$a = 2*$a - 1;
$b = 2*$b;
$c = 2*$c;
$d = 2*$d - 1;

BEGIN_TEXT

Find the matrix \(A\) of the reflection in the line \( L \) in \( {\mathbb R} ^2 \) that
consists of all scalar multiples of the vector \{ mbox([ display_matrix([[$v1], [$v2]]), '.' ]) \} 
$BR
\{ mbox([ '\(A=\)', answer_matrix(2,2,10), '.' ]) \}

END_TEXT

ANS(num_cmp($a));
ANS(num_cmp($b));
ANS(num_cmp($c));
ANS(num_cmp($d));

ENDDOCUMENT();       # This should be the last executable line in the problem.

