##DESCRIPTION
##KEYWORDS('linear', 'transformation', 'matrix', 'rotation')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@dir = ("counterclockwise", "clockwise");
$dir_tag = random(0,1,1);

@angle = (30, 45, 60, 120, 135, 150);
$angle_tag = random(0,5,1);
$deg = ((-1)**$dir_tag)*$angle[$angle_tag];

$a = "cos($deg*pi/180)";
$b = "(-1)*sin($deg*pi/180)";
$c = "sin($deg*pi/180)";
$d = "cos($deg*pi/180)";

BEGIN_TEXT

Find the matrix \(A\) of the linear transformation \(T\) from \({\mathbb R}^2\) to \({\mathbb R}^2\) 
that rotates any vector through an angle of \($angle[$angle_tag] ^\circ \) in the $dir[$dir_tag]
direction.
$BR
\{ mbox([ '\(A=\)', answer_matrix(2,2,10), '.' ]) \}

END_TEXT

ANS(fun_cmp($a));
ANS(fun_cmp($b));
ANS(fun_cmp($c));
ANS(fun_cmp($d));

ENDDOCUMENT();       # This should be the last executable line in the problem.

