##DESCRIPTION
##KEYWORDS('linear', 'transformation', 'matrix')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a11 = random(4,8,1);
$a12 = random(-3,3,1);
$a21 = non_zero_random(-3,3,1);
$a22 = random(3,7,1);

$v1 = random(1,5,2);
$v2 = random(2,6,2);

$u1 = random(2,6,2);
$u2 = random(-5,-1,2);

$i1 = $a11*$v1 + $a12*$v2;
$i2 = $a21*$v1 + $a22*$v2;

$j1 = $a11*$u1 + $a12*$u2;
$j2 = $a21*$u1 + $a22*$u2;

BEGIN_TEXT

If \( T: {\mathbb R}^2 \rightarrow {\mathbb R}^2 \) is a linear transformation such that
$BR
\{ mbox( '\(T\)', display_matrix([[$v1], [$v2]]), '\(=\)', display_matrix([[$i1], [$i2]]),
         'and \(T\)', display_matrix([[$u1], [$u2]]), '\(=\)', display_matrix([[$j1], [$j2]]), ',' ) \}
$BR
\{ mbox( 'then the standard matrix of \( T \) is \( \ A=\)', answer_matrix(2,2,10), '.' ) \}

END_TEXT

ANS(num_cmp($a11));
ANS(num_cmp($a12));
ANS(num_cmp($a21));
ANS(num_cmp($a22));


ENDDOCUMENT();       # This should be the last executable line in the problem.

