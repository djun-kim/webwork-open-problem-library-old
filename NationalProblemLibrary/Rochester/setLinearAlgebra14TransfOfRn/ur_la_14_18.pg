##DESCRIPTION
##KEYWORDS('linear', 'transformation', 'orthogonal', 'projection', 'line', 'vector')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@v = (1, 2, 2);
@slice = NchooseK(3,3);
@sv = @v[@slice];

$v1 = $sv[0] * random(-1,1,2);
$v2 = $sv[1] * random(-1,1,2);
$v3 = $sv[2] * random(-1,1,2);

$x1 = random(1,9,1);
$x2 = random(1,9,1);
$x3 = random(1,9,1);

$vx = $v1 * $x1 + $v2 * $x2 + $v3 * $x3;
$k = $vx/9;

$ans1 = $k * $v1;
$ans2 = $k * $v2;
$ans3 = $k * $v3;

BEGIN_TEXT

Let \( L \) be the line in \( {\mathbb R} ^3 \) that consists of all scalar multiples of the 
vector \{ mbox([ display_matrix([[$v1], [$v2], [$v3]]), '.' ]) \} 
Find the orthogonal projection of the vector 
\{ mbox([ '\(v=\)', display_matrix([[$x1], [$x2], [$x3]]) ]) \} onto \( L \).
$BR
\{ mbox([ '\({\rm proj}_L v=\)', answer_matrix(3,1,10), '.' ]) \}

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));


ENDDOCUMENT();       # This should be the last executable line in the problem.

