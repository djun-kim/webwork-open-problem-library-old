##DESCRIPTION
##KEYWORDS('matrix', 'inverse', 'linear', 'transformation')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-5,5,1);
$b = non_zero_random(-5,5,1);
$c = random(-5,5,1);
$d = random(-5,5,1);

$det = $a*$d - $b*$c;

while ($det == 0) { 
	$a = $a + 1; 
	$d = $d + 1; 
	$det == 0
} 

BEGIN_TEXT

Let \(T:{\mathbb R}^2 \rightarrow {\mathbb R}^2\) be given by 
\{ mbox( '\(T(x)=\)', display_matrix([[$a, $b], [$c, $d]]), '\(x\).' ) \} 
$BR
Find the matrix \(M\) of the inverse linear transformation, \(T^{-1}\). 
$BR
\{ mbox( '\(M=\)', answer_matrix(2,2,10), '.' ) \} 

END_TEXT

ANS(num_cmp($d/$det));
ANS(num_cmp(- $b/$det));
ANS(num_cmp(- $c/$det));
ANS(num_cmp($a/$det));

ENDDOCUMENT();       # This should be the last executable line in the problem.

