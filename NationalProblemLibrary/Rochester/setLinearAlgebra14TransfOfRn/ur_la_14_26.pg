##DESCRIPTION
##KEYWORDS('linear', 'transformation', 'inverse', 'nonlinear')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(3,9,2);
$d = random(2,8,2);

$y = "u/$a";
$x = "((v + $d * u/$a)/$b)**(1/$c)";

$NO_SPACE='@{}';

BEGIN_TEXT

Find the inverse of the (nonlinear) transformation from \({\mathbb R}^2\) to \({\mathbb R}^2\) given by 
\[ \begin{array}{r${NO_SPACE}c${NO_SPACE}l}
u & = & $a y \cr
v & = & $b x^{$c} - $d y
\end{array} \]
$BR
\(x = \)\{ans_rule(20)\}, $BR
\(y = \)\{ans_rule(20)\}. 

END_TEXT

ANS(fun_cmp($x, vars=>["u", "v"]));
ANS(fun_cmp($y, vars=>["u", "v"]));

ENDDOCUMENT();       # This should be the last executable line in the problem.

