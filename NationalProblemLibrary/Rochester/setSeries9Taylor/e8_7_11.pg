$ans0 =  $a*ln($b) ;
$ans1 =  (-1)*$a*$b1 ;
$ans2 =  (-1)*$a*($b1 **2)/2;
$ans3 =  (-1)*$a*($b1 **3)/3;
$ans4 =  (-1)*$a*($b1 **4)/4;
