##DESCRIPTION
##  LH3-5_54.pg
##  Algebra problem: polynomial functions
##ENDDESCRIPTION

##KEYWORDS('algebra', 'direct variation', 'inverse variation')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;



@var = ("p","q","r","t");
@var = @var[NchooseK(4,4)];

$a = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);
$c = non_zero_random(-9,9,1);
$d = non_zero_random(-9,9,1);

$k = $a*$d/($b*$c);

$ans = "$k*$var[1]*$var[2]/$var[3]";


BEGIN_TEXT

If \($var[0]\) varies jointly as \($var[1]\) and  \($var[2]\)
and inversely as \($var[3]\), then 
find an equation for \($var[0]\) if \($var[0] = $a\) when \($var[1] = $b\), \($var[2]=$c\), and
\($var[3] = $d\).
$BR
$BR
\($var[0] = \) \{ans_rule(15)\}
$BR
END_TEXT


ANS(fun_cmp($ans,var=>["p","q","r","t"],limits=>[[1,10],[1,10],[1,10],[1,10]]));



ENDDOCUMENT();        # This should be the last executable line in the problem.

