#DESCRIPTION
# Series. Find sum
#KEYWORDS('Series' , 'Summation' )
#ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a = random(3,9,1);
$x =.1;
$y = (1-$x)**-1;
$z = $x**$a;
$s = $x*$y*$y - $x*$x*$y*$y*$z - (1+ $a)*$x*$y*$z;
BEGIN_TEXT

Let
\[  s_k = \sum_{n=1}^k  n(.1)^n \]
Find \(s_{$a}. \) $BR
\( s_{$a} = \) \{ans_rule(30)\}

END_TEXT

$answer = $s;
ANS(num_cmp($answer));

ENDDOCUMENT();        # This should be the last executable line in the problem
