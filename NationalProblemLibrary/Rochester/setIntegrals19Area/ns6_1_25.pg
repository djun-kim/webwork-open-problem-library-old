DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$showPartialCorrectAnswers = 1;

$pi = 4*arctan(1);
$f = random(2,4,1);
$g = random(2,4,1);
$c = arctan($g/$f);
$c1 = spf ($c/$pi, "%4.1f")+.1;
$a = random($c1,1,.1);
$b = $a*$pi;
$ans = 2*$f*cos($c) + 2*$g*sin($c)- $f*cos($b) -$g*sin($b)-$f;

TEXT(beginproblem());
BEGIN_TEXT
Find the area of the region enclosed between \(y=$f \sin(x)\) and \(y=$g \cos(x)\) from
\(x=0\) to \(x=$a\pi\). 
$BR
Hint: Notice that this region consists of two parts.
$BR
\{ans_rule(45)\}
$PAR
END_TEXT

ANS(num_cmp($ans));

