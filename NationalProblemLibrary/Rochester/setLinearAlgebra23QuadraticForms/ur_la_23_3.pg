##DESCRIPTION
##KEYWORDS('quadratic forms', 'matrix', 'eigenvalue', 'classify', 'indefinite', 'definite', 'semidefinite')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGnumericalmacros.pl",
"PGstatisticsmacros.pl",
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$gen = random(0,4,1);

# gen = 0 positive definite
# gen = 1 positive semidefinite
# gen = 2 indefinite
# gen = 3 negative semidefinite
# gen = 4 negative definite

if ($gen == 0) {
        $one = random(1,2,1);
	$two = random($one+1,4,1);
	$three = random($two+1,6,1);
}

if ($gen == 1) {
	$one = 0;
	$two = random(1,5,1);
	$three = random($two+1, 9);
}

if ($gen == 2) {
	$one = random(-5,-2,1);
	$two = random(-1,1,1);
	$three = random(2,5,1);
}

if ($gen == 3) {
	$one = random(-10,-4,1);
	$two = random($one+1,-1,1);
	$three = 0;
}

if ($gen == 4) {
	$one = random(-6,-5,1);
	$two = random(-4,-3,1);
 	$three = random(-2,-1,1);
}

$gen2 = random(0,3,1);

# use different orthogonal matrices for different values of gen2

if ($gen2 == 0 ){
	$a11 = $one/2 + $two/2;
	$a12 = $one/2 - $two/2;
	$a13 = 0;
	$a21 = $a12;
	$a22 = $a11;
	$a23 = 0;
	$a31 = 0;
	$a32 = 0;
	$a33 = $three;
}

if ($gen2 == 1) {
	$a11 = $one/5 + 4*$two/5;
	$a12 = 2*$one/5 - 2*$two/5;
	$a13 = 0;
	$a21 = $a12;
	$a22 = 4*$one/5 + $two/5;
	$a23 = 0;
	$a31 = 0;
	$a32 = 0;
	$a33 = $three;
}

if ($gen2 == 2) {
	$a11 = $one;
	$a12 = 0;
	$a13 = 0;
	$a21 = 0;
	$a22 = $two/5 + 4*$three/5;
	$a23 = 2*$two/5 - 2*$three/5;
	$a31 = 0;
	$a32 = $a23;
	$a33 = 4*$two/5 + $three/5;
}

if ($gen2 == 3) {

	$a11 = 9*$one/10 + $two/10;
	$a12 = 0;
	$a13 = 3*$two/10 - 3*$one/10;
	$a21 = 0;
	$a22 = $three;
	$a23 = 0;
	$a31 = $a13;
	$a32 = 0;
	$a33 = $one/10 + 9*$two/10;
}

$mc = new_multiple_choice();

@ans = ("\(Q(x)\) is positive definite", "\(Q(x)\) is positive semidefinite", "\(Q(x)\) is indefinite",
        "\(Q(x)\) is negative semidefinite",  "\(Q(x)\) is negative definite", "\(Q(x)\) is positive definite",
        "\(Q(x)\) is positive semidefinite", "\(Q(x)\) is indefinite", "\(Q(x)\) is negative semidefinite");

$mc -> qa ("Classify the quadratic form \(Q(x) = x^TAx: \)", $ans[$gen]);

$mc -> extra ($ans[$gen+1], $ans[$gen+2], $ans[$gen+3], $ans[$gen+4]);

BEGIN_TEXT

The matrix
$BR
\{ mbox( '\( A = \)', display_matrix([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]) ) \}
$BR
has three distinct eigenvalues, \( \lambda_1 < \lambda_2 < \lambda_3 \),
$BR
\( \lambda_1 = \)\{ans_rule(5)\},
$BR
\( \lambda_2 = \)\{ans_rule(5)\},
$BR
\( \lambda_3 = \)\{ans_rule(5)\}.
$BR
\{$mc -> print_q \}
$BR
\{$mc -> print_a \}

END_TEXT

ANS(num_cmp($one));
ANS(num_cmp($two));
ANS(num_cmp($three));
ANS(radio_cmp($mc->correct_ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.

