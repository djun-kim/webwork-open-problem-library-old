##DESCRIPTION
##KEYWORDS('matrix', 'singular value', 'eigenvalue')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl",
"PGcomplexmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$e = non_zero_random(-2,2,1);
$f = non_zero_random(-2,2,1);
$g = random(-2,2,1);
$h = non_zero_random(-2,2,1);
$i = random(-2,2,1);
$j = non_zero_random(-2,2,1);

#calculate entries of A^T*A: 

$a = $e*$e + $g*$g + $i*$i;
$b = $e*$f + $g*$h + $i*$j;
$c = $b;
$d = $f*$f + $h*$h + $j*$j;

$tr = $a + $d;
$det = $a*$d - $b*$c;

$discr = $tr*$tr - 4*$det;

## characteristic equation is lambda^2 - tr * lambda + det = 0
## eigenvalues are (tr +- sqrt(discr))/2 
## singular values are sqrt of eigenvalues

$ans1 = sqrt(($tr + sqrt($discr))/2);
$ans2 = sqrt(($tr - sqrt($discr))/2);

BEGIN_TEXT

Find the singular values \( \sigma_1 \ge \sigma_2 \) of 
$BR
\{ mbox( '\(A=\)', display_matrix([[$e, $f], [$g, $h], [$i, $j]]), '.' ) \}
$BR
\( \sigma_1 = \) \{ans_rule(20)\},
$BR
\( \sigma_2 = \) \{ans_rule(20)\}.
END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();       # This should be the last executable line in the problem.

