# Math 162 Problems - Assignment 10 - Problem 1
# Steward 4th ed., Section 10.5
# Find area inside the leaf of a rose

##ENDDESCRIPTION

##KEYWORDS('polar', 'area')


DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pi = 4*arctan(1);
$b = random(2,6);
$a = random(3,6);
$ans = ($pi*$b**2)/(4*$a);



BEGIN_TEXT
$PAR
Find the area inside one leaf of the rose:
$BR \[ r = $b \sin ( $a \theta ) \]
$BR The area is \{ans_rule(50) \}
END_TEXT
ANS(num_cmp($ans));

ENDDOCUMENT();


