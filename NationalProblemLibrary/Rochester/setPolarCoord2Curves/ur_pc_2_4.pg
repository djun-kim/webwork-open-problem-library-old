##DESCRIPTION
#  Created: 10/21/02
#  Author: Minock
#  Steward 4th ed., Section 10.5
#  Find arc length of a spiral
##ENDDESCRIPTION

##KEYWORDS('polar','arc length')

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pi = 4*arctan(1);
$a = random(-8,8);
$b = random(1,6);    
$ans = (exp(2*$b*$pi) - 1)*sqrt($a*$a*(1+1/($b*$b)));

BEGIN_TEXT

Find the length of the spiraling polar curve
\[ r = $a e^{$b \theta}  \]
from 0 to \(2 \pi \) .
$BR
\( {\rm Length} = \) \{ans_rule(50) \}.

END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();
