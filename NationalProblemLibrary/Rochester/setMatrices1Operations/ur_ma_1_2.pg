foreach $i (0..2) {

   foreach $j (0..2) {
   		$a[$i][$j] = random(-4,4,1);
   		$b[$i][$j] = random(-4,4,1);
   	}
}

TEXT(beginproblem()) ;

$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT


If 
\[ A = \left(\begin{array}{ccc}
\{join("& ",@{$a[0]}[0..$#{$a[0]}])\} \cr
\{join("& ",@{$a[1]}[0..$#{$a[1]}])\} \cr
\{join("& ",@{$a[2]}[0..$#{$a[2]}])\} \cr
\end{array}\right)
\qquad
B = \left(\begin{array}{ccc}
\{join("& ",@{$b[0]}[0..$#{$b[0]}])\} \cr
\{join("& ",@{$b[1]}[0..$#{$b[1]}])\} \cr
\{join("& ",@{$b[2]}[0..$#{$b[2]}])\} \cr
\end{array}\right)
\]

Then
\{ mbox(['\( AB = \)',
display_matrix(
[[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)]]) ])
\}
and
\{ mbox(['\( BA = \)',
display_matrix(
[[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)]]) ])
\}
END_TEXT

