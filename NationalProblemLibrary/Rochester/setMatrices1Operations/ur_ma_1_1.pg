DOCUMENT() ;        

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGmatrixmacros.pl",
) ;

$a = ([0,0,0],[0,0,0],[0,0,0]);
############
foreach $i (0..2) {
   foreach $j (0..2) {
   		$a[$i][$j] = random(-4,4,1);
   		$b[$i][$j] = random(-4,4,1);
   	}
}


TEXT(beginproblem()) ;

$showPartialCorrectAnswers = 1 ;


BEGIN_TEXT
If 
\{mbox('\(A = \)', display_matrix(~~@a), $SPACE, '\(B=\)',
  display_matrix(~~@b)) \}

then

\{ mbox(['\( 2A+B = \)',
display_matrix(
[[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)]]) ])
\}
and
\{ mbox(['\( A^T = \)',
display_matrix(
[[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)],[ans_rule(4), ans_rule(4),ans_rule(4)]]) ])
\}


END_TEXT
foreach $i (0..2) {

   foreach $j (0..2) {
   		ANS(num_cmp(2*$a[$i][$j] +$b[$i][$j])  );
   	}
}
foreach $i (0..2) {

   foreach $j (0..2) {
   		ANS(num_cmp($a[$j][$i])  );
   	}
}

ENDDOCUMENT() ;        







