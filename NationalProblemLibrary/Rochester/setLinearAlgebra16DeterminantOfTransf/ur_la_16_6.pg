##DESCRIPTION
##KEYWORDS('matrix', 'determinant', 'linear transformation', 'symmetric')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,4,1);
$b = random(1,3,1);
$c = random(-4,-1,1);
$ans = 4*($a*$a*$c + $a*$c*$c - $b*$b*$c - $a*$b*$b);

BEGIN_TEXT

Find the determinant of the linear transformation 
$BR
\{ mbox( '\(T(M)=\)', display_matrix([[$a, $b], [$b, $c]]), '\(M+M\)', display_matrix([[$a, $b], [$b, $c]]) ) \} 
$BR
from the space \(V\) of symmetric \(2\times 2\) matrices to \(V\).  
$BR
\( \det = \) \{ans_rule(20)\}

END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.

