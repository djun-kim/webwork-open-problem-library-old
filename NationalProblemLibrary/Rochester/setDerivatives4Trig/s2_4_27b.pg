DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pi = arccos(-1);

$a_n = random(2,12,1);
$a_s = random(-1,1,2);
$a   = $a_n * $a_s;

$x_n = non_zero_random(-1,2,1);
if ($x_n == -1) {$x_sign = '-'};
if ($x_n != -1) {$x_sign = ''};

if ($x_n == 2) { $x_num = $x_n };
if ($x_n != 2) { $x_num = '' };

$x = $x_n*$pi;

$deriv1 =$a*cos($x)*(1 - $x);

TEXT(EV2(<<EOT));
Let \[ f(x) = \frac { $a x }{ \sin x + \cos x} \]
$PAR
\( f'( $x_sign $x_num \pi ) = \) \{ans_rule(20) \}
EOT

$ans = $deriv1;
ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
