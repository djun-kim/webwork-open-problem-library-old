## DESCRIPTION 
##  ## Differential equations
##  y'' + b^2 y =  c sec(bt)
##  $b,$c should be integers.
##    
##  variation of parameters
##  written by Rick Lavine, U of R
##  
## ENDDESCRIPTION 
DOCUMENT() ;        

loadMacros(
	"PG.pl",
	"PGbasicmacros.pl",
	"PGchoicemacros.pl",
	"PGanswermacros.pl",
	"PGauxiliaryFunctions.pl",
	"PGdiffeqmacros.pl"
) ;
############

# root of the characteristic equation
$b = random(2,6,1);
$d = $b**2;
$c = non_zero_random(-5,5,1) * 2 * $b;
# initial guess is Atcos(bt) + Btsin(bt)

$ans = "$c * [$b^(-2)cos($b*t)ln( abs(cos($b*t))) + t*$b^(-1)*sin($b t)]";

TEXT(beginproblem()) ;

$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT
$BR
$PAR

Find a particular solution to 
\( y'' +  $d y =  $c \sec($b t) \).
$PAR 

$BR
\(y_{p} = \) \{ans_rule(60)\}

END_TEXT
$homogeneous = "a*sin($b*t) + b*cos($b*t)";
ANS(fun_cmp("$ans + $homogeneous", var => 't',  params => ['a', 'b']) );

ENDDOCUMENT() ; 
