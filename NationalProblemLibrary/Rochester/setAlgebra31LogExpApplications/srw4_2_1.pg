##DESCRIPTION
##KEYWORDS('logarithms,exponentials','exponential growth,decay')
##TYPE('word problem')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(1500,3000 ,500);
$b1 = random(20,100,20);
$c1 = random(4,10,1);

TEXT(EV2(<<EOT));
A bacteria culture initially contains $a1 bacteria and doubles
every half hour.
$BR
$BR
Find the size of the baterial population after $b1 minutes. \{ans_rule(20) \}
$BR
$BR
Find the size of the baterial population after $c1 hours. \{ans_rule(20) \}
EOT

$ans = $a1*2**($b1/30);
ANS(num_cmp($ans));

$ans = $a1*2**($c1*2);
ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
