###DESCRIPTION
##KEYWORDS('logarithms,exponentials','exponential growth,decay')
##TYPE('word problem')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$p0= random(80,200,10);
$m = random(30,150,60);
$b = random(2,4,1);

if ($b == 2) {$s = 'doubles'}
if ($b == 3) {$s = 'triples'}
if ($b == 4) {$s = 'quadruples'}

$temp = 60/$m;
$ans = "$p0 * $b**($temp * t)";

TEXT(EV2(<<EOT));
A certain bacteria population is known to $s every $m minutes.  Suppose that there are initially $p0 bacteria.
$BR $BR 
What is the size of the population after \( t \) hours?   \{ans_rule(20) \}

EOT

ANS(fun_cmp($ans, vars=>'t'));

ENDDOCUMENT();        # This should be the last executable line in the problem.
