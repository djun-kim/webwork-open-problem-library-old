foreach $i (0..2) {
	foreach $j (0..1) {
		$a[$i][$j] = non_zero_random(-9,9,1);
	}
}

$l = non_zero_random(-2,2,1);
$m = non_zero_random(-2,2,1);

foreach $i (0..2) {
	$a[$i][2] = $l * $a[$i][0] + $m * $a[$i][1];
}


BEGIN_TEXT

Find the value of \(k\) for which the matrix $BR
\{ mbox([ '\(A=\)', display_matrix([[$a[0][0], $a[0][1], $a[0][2]], 
				    [$a[1][0], $a[1][1], $a[1][2]],
				    [$a[2][0], $a[2][1], '\(k\)']]) ]) \}
has rank \(2\). 
$BR
\(k=\) \{ans_rule(10)\}

END_TEXT

ANS(num_cmp($a[2][2]));

