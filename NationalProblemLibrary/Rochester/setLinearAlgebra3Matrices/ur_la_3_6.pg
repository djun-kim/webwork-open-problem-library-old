##DESCRIPTION
##KEYWORDS('matrix', 'matrix operations')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(2,9,1);
$b = random(2,9,1);
while ($a == $b) { $b = random(2,9,1);}
$c = random(2,9,1);
while (($c == $a) or ($c == $b)) { $c = random(2,9,1); }

@quest1 = ("\( A+B \)", "\( A-B \)", "\( B+A \)", "\( B-A \)");
@quest2 = ("\( A+C \)", "\( A-C \)", "\( C+A \)", "\( C-A \)", "\( B+C \)", "\( B-C \)", "\( C+B \)", "\( C-B \)", );
@quest3 = ("\( A^T \)", "\( B^T \)", "\( C^T \)");
@quest4 = ("\( CA \)", "\( CB \)");
@quest5 = ("\( AB \)", "\( BA \)", "\( AC \)", "\( BC \)");
@quest6 = ("\( AB^T \)", "\( BA^T \)", "\( A^TC^T \)", "\( B^TC^T \)");

$tag1 = random(0,3,1);
$tag2 = random(0,7,1);
$tag3 = random(0,2,1);
$tag4 = random(0,1,1);
$tag5 = random(0,3,1);
$tag6 = random(0,3,1);

$cmc = new_checkbox_multiple_choice();
$cmc -> qa ("If \(A\) and \(B\) are \($a \times $b\) matrices, and \(C\) is a \($c \times $a\) matrix, 
            which of the following are defined?", 
            $quest1[$tag1], $quest3[$tag3], $quest4[$tag4], $quest6[$tag6]);
$cmc -> extra ($quest2[$tag2], $quest5[$tag5]);

BEGIN_TEXT

$BR
\{$cmc -> print_q \}
$BR                
\{$cmc -> print_a \}

END_TEXT

ANS(checkbox_cmp( $cmc->correct_ans ));

ENDDOCUMENT();       # This should be the last executable line in the problem.
