DOCUMENT();        # This should be the first executable line in the problem.


loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGcomplexmacros.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


$z1 = random(-9,9,1) + non_zero_random(-9,9,1)*i;
$z2 = random(-9,9,1) + non_zero_random(-9,9,1)*i;
while (Im($z1)==Im($z2) || Im($z1) == -Im($z2)) {
        $z2 = random(-9,9,1) + non_zero_random(-9,9,1)*i;}

if (Im(~$z1) < Im(~$z2)) {@croots = (~$z1, ~$z2);}
else {@croots = (~$z2,~$z1);}

$r1 = random(-9,9,1);
$r2 = random(-9,9,1);
while ($r1==$r2) {$r2 = random(-9,9,1);}
@rroots = num_sort(($r1,$r2));

@com1=(1,-2*Re($z1),$z1*~$z1);
@com2=(1,-2*Re($z2),$z2*~$z2);
@real=(1,-($r1+$r2),$r1*$r2);

foreach $i (0..$#com1+$#com2+$#real) {$prod[$i]=0;}
foreach $i (0..$#com1+$#com2) {$temp[$i]=0;}

foreach $i (0..$#com1){
        foreach $j (0..$#com2) {
                $temp[$i+$j] = $temp[$i+$j] + $com1[$i]*$com2[$j];
        }
}
foreach $i (0..$#temp){
        foreach $j (0..$#real) {
                $prod[$i+$j] = $prod[$i+$j] + $temp[$i]*$real[$j];
        }
}

$poly = "";
foreach $i (0..$#prod){ $j = $#prod-$i;
        if ($i<$#prod) { 
                if ($i==0) {$poly=$poly."x^{$j}";}
                elsif ($prod[$i] > 0) {$poly=$poly."+$prod[$i] x^{$j}";}
                elsif ($prod[$i] < 0) {$poly=$poly."$prod[$i] x^{$j}";}
        }
        else {$poly=$poly."+$prod[$i]";}
}

TEXT(EV2(<<EOT));
\[ f(x) = $poly \]
Given that $z1 and $z2 are roots of \(f(x)\), find all the other roots.
$BR
Give real roots first, in increasing order.  Then give the complex roots so 
that the imaginary parts are increasing.  $BR
DO NOT USE THE GIVEN ROOTS IN YOUR ANSWER.$BR
$BR
The roots are:
\{ans_rule(10)\}$BR
\{ans_rule(10)\}$BR
\{ans_rule(10)\}$BR
\{ans_rule(10)\}$BR

EOT

ANS(num_cmp($rroots[0]));
ANS(num_cmp($rroots[1]));
ANS(cplx_cmp($croots[0]));
ANS(cplx_cmp($croots[1]));

ENDDOCUMENT();        # This should be the last executable line in the problem.


