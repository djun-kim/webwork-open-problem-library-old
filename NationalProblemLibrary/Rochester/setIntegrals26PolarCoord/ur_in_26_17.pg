#DESCRIPTION
#Find the Area by Polar Coordinates
#ENDDESCRIPTION

#Keywords('Polar Coordinates', 'Area','Spiral', 'Integration')

DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a = random(2,10,1);
$pi = 4*arctan(1);
$k=random(.3,1,.1);
$t = random(2,9,1);
$s = 1 / $t;


TEXT(EV2(<<EOT));
Find the area enclosed by  the polar curve  $BR
\[r = $a e^{$k \theta} \] $BR
on the interval \( 0 \leq \theta \leq \frac{1}{$t} \). $BR
and the straight line segment between its ends. $BR

\{ans_rule(65)\}

EOT

$answer = $a*$a*(exp(2*$k*$s)-1)/($k*4);
ANS(num_cmp($answer));


&ENDDOCUMENT;

