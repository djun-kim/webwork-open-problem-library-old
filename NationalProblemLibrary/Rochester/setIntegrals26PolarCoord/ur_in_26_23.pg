#DESCRIPTION
#Find the area enclosed by a Polar Graph
#ENDDESCRIPTION

#Keywords('Polar Coordinates', 'Area', 'Integration')

DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
            "PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a = non_zero_random(5,10,1);

$c = 2*$a;
$pi = 4*arctan(1);

TEXT(EV2(<<EOT));
Find the area inside the loop of the following limacon: 
\(r = $a - $c \sin \theta \) $BR
\{ans_rule(45)\}

EOT

$answer = ($a**2)*($pi - .5*(3**1.5));
ANS(num_cmp($answer));


&ENDDOCUMENT;
