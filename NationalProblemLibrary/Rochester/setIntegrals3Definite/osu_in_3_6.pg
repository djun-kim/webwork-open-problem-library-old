"PGauxiliaryFunctions.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(3,9,1);
$b = random(-4,0,1);
$ans = 0.5 - $b**2/2 + log($a);

TEXT(beginproblem());
BEGIN_TEXT
Consider the function
\[f(x) = \left\lbrace\begin{array}{ll}x &\mbox{if\ } x<1\\ \frac{1}{x} &\mbox{if\ } x\ge 1\end{array}\right.\]
Evaluate the definite integral.
\[ \int_{$b}^{$a} f(x)\,dx \]
\{ans_rule() \}
$PAR
END_TEXT

ANS(num_cmp($ans));

