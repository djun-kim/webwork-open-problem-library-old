##DESCRIPTION
##KEYWORDS('matrix')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,3,1) * random(-1,1,2);

$s = random(-1,1,2);
$d = random(1,3,1) * $s; 
if ($a == $d) {$d = $s;}
$e = random(2,3,1) * $s;

$f = random(-2,2,4);
$g = non_zero_random(-2,2,4);

$a12free = $g * (1 - $a); 
$a31free = $f * ($a - $d);
$a32free = $f * $g * ($d - $a);
$g2 = $g * $g;
$mfe = - $f * $e;
$feg = $f * $g * $e;

$det = "$a * (1 + x^2)($d + $e * x^2)";

BEGIN_TEXT

Find the determinant of the matrix
$BR
\{ mbox( '\(M=\)', 
display_matrix([["\($a - $g x^3\)", "\($a12free + $g x^2 + $g2 x^3\)", "0"], 
		["\(- x^3\)",       "\(1 + x^2 + $g x^3\)",            "0"], 
		["\($a31free + $mfe x^2\)", "\($a32free + $feg x^2\)", "\($d + $e x^2\)"]]), ',' ) \} 
$BR 
and use the adjoint method to find \(M^{-1}\).
$BR
$BR
\( {\rm det}(M)=\) \{ans_rule(20)\}, 
$BR
\{ mbox( '\(M^{-1}=\)', answer_matrix(3,3,20), ',' ) \}

END_TEXT

ANS(fun_cmp($det));

$ans11 = "(1 + x^2 + $g*x^3)/($a + $a*x^2)";
$ans12 = "(- $a12free - $g*x^2 - $g2*x^3)/($a + $a*x^2)";
$ans13 = "0";
$ans21 = "x^3/($a + $a*x^2)";
$ans22 = "($a - $g*x^3)/($a + $a*x^2)";
$ans23 = "0";

$k = $f*($d - $a);
$l = $f*($d + $e - $a);
$fe = $f*$e;
$ans31 = "($k + $l*x^2 + $fe*x^4)/(($a + $a*x^2)*($d + $e * x^2))";

$fg = $f*$g;
$ans32 = "$fg*(1/($d + $e * x^2) - 1/$a)";
$ans33 = "1/($d + $e * x^2)";

ANS(fun_cmp($ans11));
ANS(fun_cmp($ans12));
ANS(fun_cmp($ans13));
ANS(fun_cmp($ans21));
ANS(fun_cmp($ans22));
ANS(fun_cmp($ans23));
ANS(fun_cmp($ans31));
ANS(fun_cmp($ans32));
ANS(fun_cmp($ans33));

ENDDOCUMENT();       # This should be the last executable line in the problem.

