##DESCRIPTION
##KEYWORDS('integrals', 'partial fractions')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(-4,-1,1);
$b=random(1,4,1);
while($a==-$b) {$b=random(1,4,1)};

TEXT(EV3(<<'EOT'));
Evaluate the indefinite integral.
$BR
$BR \[ \int \frac{1}{(x+$a)(x+$b)} dx \]
$BR \{ans_rule(40) \}
EOT
$d1= $b-$a;
$soln = "-ln(abs(x+$b))/$d1 + ln(abs(x+$a))/$d1 ";

ANS(fun_cmp($soln, limits=>[6,12], mode=>"antider", vars=>'x'));

ENDDOCUMENT();        # This should be the last executable line in the problem.
