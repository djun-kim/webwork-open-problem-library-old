DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

#because I have to use "sort" later, I cant have an "$a" or "$b" var.
$a1 = non_zero_random(1,12,1);
$b1 = non_zero_random(1,12,1);
$c1 = non_zero_random(1,5,1);
$d1 = non_zero_random(6,12,1);

$poly1 = "x^2 +4 x + 4" ;
$poly2 = "x^2 +5 x + 6" ;
$poly3 = "x^2 +6 x + 9" ;
$rand = random(0,2,1);
@polys = ($poly1,$poly2,$poly3) ;
$randpoly= $polys[$rand] ;

#we need to make sure that A is less than B.
@1 = ($a1 ,$b1 - 2*$a1 );
@sort1 = num_sort(@1) ;

@2 = (3*$a1 - $b1 ,$b1 - 2*$a1 );
@sort2 = num_sort(@2) ;

@3 = ($a1 ,$b1 - 3*$a1 );
@sort3 = num_sort(@3 );

@ansA = ( $sort1[0], $sort2[0] ,$sort3[0] );
@ansB = ( $sort1[1], $sort2[1] ,$sort3[1] );

BEGIN_TEXT
Write out the form of the partial fraction decomposition of the function: $BR

\[ Q = \int_{$c1}^{$d1} \frac{$a1 x + $b1 }{$randpoly} dx \] $BR

Determine the numerical values of the coefficients, A and B, where A \( \leq \) B. $BR

\[ \frac{A}{denominator} + \frac{B}{denominator} \] $BR

A = \{ans_rule(20)\}
B = \{ans_rule(20)\}
END_TEXT

ANS(num_cmp($ansA[$rand]));
ANS(num_cmp($ansB[$rand]));

ENDDOCUMENT();        # This should be the last executable line in the problem.
