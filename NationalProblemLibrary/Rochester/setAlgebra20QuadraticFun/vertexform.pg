"PGauxiliaryFunctions.pl",
"extraAnswerEvaluators.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$H = 0;
$K = 0;
while ($H >= $K) {
$A = non_zero_random(-10,10,1);
$H = non_zero_random(-29,29,1);
$K = random(1,50,1);

$minmax = "maximum";
if ($A > 0) {$K = -$K; $minmax = "minimum";}

$vertex = "($H,$K)";
$smallroot = $H - sqrt(-$K/$A);
$bigroot = $H + sqrt(-$K/$A);

$extreme = $K;
}

BEGIN_TEXT;
Given the function \(f(x) = $A (x-$H)^2 + $K\) find all of the following:
$BR$BR
The vertex of the function is \{ans_rule(15)\}.
$BR$BR
Does the function have a minimum or a maximum? (Type minimum or maximum) \{ans_rule(15)\}. $BR$BR
Find the extreme value of the function. \{ans_rule(15)\} $BR$BR
The smallest root is \{ans_rule(15)\}.$BR$BR
The largest root is \{ans_rule(15)\}. $BR$BR

END_TEXT;

#ANS(str_cmp($vertex)); 
#ANS(str_cmp($vertex, filters=>["remove_whitespace","ignore_case"]));
#ANS(str_cmp($vertex,'remove_whitespace'));
ANS(interval_cmp("($H,$K)"));
ANS(str_cmp($minmax));
ANS(num_cmp($extreme));
ANS(num_cmp($smallroot));
ANS(num_cmp($bigroot));

