##DESCRIPTION
##  Algebra problem: polynomial functions
##ENDDESCRIPTION

##KEYWORDS('algebra', 'polynomial function', 'graph')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,8,2);
$b = random(2,8,2);
##x^2(x+$a)(x-$b)
$b1=$a-$b;
$c1=-$a*$b;

$p="P(x)=x^4 ";
if ($b1 != 0)
 {
 $p=$p."? {$b1} x^3 ";
 };
if ($c1 != 0)
 {
 $p=$p."? {$c1} x^2 ";
 };

#P(x)=x^4 ? {$b1} x^3 ? {$c1} x^2

TEXT(EV2(<<EOT));
Given the function \($p\), find
$BR  
its \(y\)-intercept is \{ ans_rule(20) \}
$BR  
its \(x\)-intercepts are
\(x_1=\) \{ ans_rule(10) \},
\(x_2=\) \{ ans_rule(10) \} and
\(x_3=\) \{ ans_rule(10) \} with \(x_1 < x_2 < x_3\)
$BR  
When \(x\to \infty\), \(y \to \) \{ans_rule(5)\}\(\infty\)
 (Input + or - for the answer)
$BR  
When \(x\to -\infty\), \(y \to \) \{ans_rule(5)\}\(\infty\)
 (Input + or - for the answer)
$BR  
EOT

$ans1 = 0;
$ans2 = -$a;
$ans3 = 0;
$ans4 = $b;
$ans5 = "+";
$ans6 = "+";
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(str_cmp($ans5));
ANS(str_cmp($ans6));

ENDDOCUMENT();        # This should be the last executable line in the problem.

