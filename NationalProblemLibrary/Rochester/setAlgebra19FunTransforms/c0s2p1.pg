DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$offset1=random(2,20,1);
$factor1=random(2,20,1);
$toggle=random(0,2,1);

# basic answers
@ansStr = (
"shifted $offset1 units down",
"shifted $offset1 units up",
"shifted $offset1 units left",
"shifted $offset1 units right",
"compressed horizontally by the factor $factor1",
"stretched horizontally by the factor $factor1",
"compressed vertically by the factor $factor1",
"stretched vertically by the factor $factor1",
);
$funcA = EV2("y=x^2");
@questStrA = (
EV2("\(y=x^2-$offset1\)"),
EV2("\(y=x^2+$offset1\)"),
EV2("\(y=(x+$offset1)^2\)"),
EV2("\(y=(x-$offset1)^2\)"),
EV2("\(y=(${factor1}x)^2\)"),
EV2("\(y=(x/$factor1)^2\)"),
EV2("\(y=(x^2)/$factor1\)"),
EV2("\(y=${factor1}x^2\)"),
);
$temp = $factor1**3;
$funcB = EV2("y=x^3");
@questStrB = (
EV2("\(y=x^3-$offset1\)"),
EV2("\(y=x^3+$offset1\)"),
EV2("\(y=(x+$offset1)^3\)"),
EV2("\(y=(x-$offset1)^3\)"),
EV2("\(y=${temp}x^3\)"),
EV2("\(y=(x)^3/$temp\)"),
EV2("\(y=(x^3)/$factor1\)"),
EV2("\(y=${factor1}x^3\)"),
);
$funcC = EV2("y=\sin(x)");
@questStrC = (
EV2("\(y=\sin(x)-$offset1\)"),
EV2("\(y=\sin(x)+$offset1\)"),
EV2("\(y=\sin(x+$offset1)\)"),
EV2("\(y=\sin(x-$offset1)\)"),
EV2("\(y=\sin(${factor1}x)\)"),
EV2("\(y=\sin(x/$factor1)\)"),
EV2("\(y=\sin(x)/$factor1\)"),
EV2("\(y=${factor1}\sin(x)\)"),
);
@questStr = @questStrA if $toggle==0;
@questStr = @questStrB if $toggle==1;
@questStr = @questStrC if $toggle==2;
$func = $funcA if $toggle==0;
$func = $funcB if $toggle==1;
$func = $funcC if $toggle==2;

@slice = NchooseK(8,4);
@shuffle = shuffle(scalar(@slice));

TEXT(qq!
Relative to the graph of \[ $func \] the graphs of the following equations
have been changed
in what way? $PAR
!,
&match_questions_list(@questStr[@slice]),
&OL(@ansStr[@slice[@shuffle]]),
);
@ans = @ALPHABET[&invert(@shuffle)] ;
ANS(str_cmp ([@ans]   )     );

ENDDOCUMENT();        # This should be the last executable line in the problem.
