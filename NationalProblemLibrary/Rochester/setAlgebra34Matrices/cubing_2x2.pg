#DESCRIPTION
##  Algebra problem:  Algebra of Matrices
##  Cubing a 2x2 matrix
##ENDDESCRIPTION

##KEYWORDS('algebra', 'matrix operation', 'matrix')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$A = new Matrix(2,2);
foreach $i (1..2) {
    foreach $j (1..2) {
        $A->assign($i,$j,non_zero_random(-4,4,1));
    }
}
$A->assign(2,1,0);
$a11 = element $A(1,1);
$a12 = element $A(1,2);
$a22 = element $A(2,2);

BEGIN_TEXT
\{ mbox( "Given the matrix \(A=\)", display_matrix($A), ", find \(A^3\)." ) \}
$BR
\{ mbox( "\(A^3 =\)", answer_matrix(2,2,5), "." ) \}  

END_TEXT

$ans1 = $a11**3;
$ans2 = $a11**2*$a12+$a11*$a12*$a22+$a12*$a22**2;
$ans3 = 0;
$ans4 = $a22**3;
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));

ENDDOCUMENT();        # This should be the last executable line in the problem.

