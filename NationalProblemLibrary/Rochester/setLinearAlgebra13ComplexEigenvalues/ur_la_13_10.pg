##DESCRIPTION
##KEYWORDS('matrix', 'eigenvalue', 'complex')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGcomplexmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = random(0,1,1);
$x2 = 1 - $x1;

#  rotation matrix: 

$k = random(3,4,1);
$angle = arctan($k/(7-$k)) * random(-1,1,2) + $PI/2;
$a11 = cos($angle);
$a12 = - sin($angle);
$a21 = sin($angle);
$a22 = cos($angle);	

$A = new Matrix(2,2);
$A -> assign(1,1,$a11);
$A -> assign(1,2,$a12);
$A -> assign(2,1,$a21);
$A -> assign(2,2,$a22);

# invertible matrix of det +-1: 

$s11 = non_zero_random(-1,1,1);
$s22 = non_zero_random(-1,1,1);
$s12 = non_zero_random(-1,1,2);
$det = random(-1,1,2);
$s21 = ($s11*$s22 - $det)/$s12; 

$S = new Matrix(2,2);
$S -> assign(1,1,$s11);
$S -> assign(1,2,$s12);
$S -> assign(2,1,$s21);
$S -> assign(2,2,$s22);

# inverse: 

$i11 = $s22*$det;
$i12 = - $s12*$det;
$i21 = - $s21*$det;
$i22 = $s11*$det;

$I = new Matrix(2,2);
$I -> assign(1,1,$i11);
$I -> assign(1,2,$i12);
$I -> assign(2,1,$i21);
$I -> assign(2,2,$i22);

$r = random(5,15,5);

$R = new Matrix(2,2);
$R -> assign(1,1,$r);
$R -> assign(1,2,0);
$R -> assign(2,1,0);
$R -> assign(2,2,$r);

$B = new Matrix(2,2);
$B = $R * $S * $A * $I; 

# B must have integer entries, but sometimes it prints 9.99999999 instead of 10, 
# so we'll round all entries.

$b11 = $B -> element(1,1);
$b12 = $B -> element(1,2);
$b21 = $B -> element(2,1);
$b22 = $B -> element(2,2);

$b11 = round($b11);
$b12 = round($b12);
$b21 = round($b21);
$b22 = round($b22);

$B -> assign(1,1,$b11);
$B -> assign(1,2,$b12);
$B -> assign(2,1,$b21);
$B -> assign(2,2,$b22);

# the answer is r^t S A(with t) S^-1 x(0)
# calculate y=S^-1 x(0)

$y1 = $i11*$x1 + $i12*$x2;
$y2 = $i21*$x1 + $i22*$x2;

# now the answer is r^t S A(with t) y 

$ans1 = "$r**t*(($s11*cos($angle*t)+$s12*sin($angle*t))*$y1 + (- $s11*sin($angle*t) + $s12*cos($angle*t))*$y2)";
$ans2 = "$r**t*(($s21*cos($angle*t)+$s22*sin($angle*t))*$y1 + (- $s21*sin($angle*t) + $s22*cos($angle*t))*$y2)";

BEGIN_TEXT

Find real closed formulas for the trajectory \(x(t+1)=Ax(t)\), where 
$BR 
\{ mbox( '\(A=\)', display_matrix([[$b11, $b12], [$b21, $b22]]), ' and \(x(0)=\)', 
	 display_matrix([[$x1], [$x2]]), '.' ) \} 
$BR
\{ mbox( '\(x(t)=\)', answer_matrix(2,1,30), '.' ) \} 

END_TEXT

ANS(fun_cmp($ans1, vars=>'t'));
ANS(fun_cmp($ans2, vars=>'t'));

ENDDOCUMENT();       # This should be the last executable line in the problem.

