DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGmatrixmacros.pl",
           "PGnumericalmacros.pl"
);


TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$a = non_zero_random(-7,7,2);
$b1 = random(2,9,1);
$r = random(-1,1,2);
$b = $b1 * $r;
$c = non_zero_random(-9,9,1);
if ($b * $c > 0) { $c = -1 * $c; }
$d = random($a-2, $a+2,1);

# D = (a-d)^2 + 4bc

# the real and imaginary parts of an eigenvalue are 

$re = ($a+$d)/2;
$im = sqrt(-($a - $d)**2 -4*$b*$c)/2;

BEGIN_TEXT

The matrix 
$BR 
\{ mbox( '\( A = \)', display_matrix([[$a, $b], [$c, $d]]) ) \} 
$BR
has complex eigenvalues, \( \lambda_{1,2}= a \pm b i\), where \(a=\) \{ans_rule(10)\} and \(b=\) \{ans_rule(10)\}.

END_TEXT

ANS(num_cmp($re));
ANS(num_cmp($im));

ENDDOCUMENT() ;        



