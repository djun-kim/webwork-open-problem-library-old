DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGcomplexmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);

$angle = arctan($b/$a);
if ($a < 0) { $angle = $angle+$PI; } 

$real = non_zero_random(-2,2,1);

$d = non_zero_random(-2,2,1);
$e = non_zero_random(-2,2,1);

# matrix m 

$m13 = - $d*$a + $e*$b + $d*$real;
$m23 = - $d*$b - $e*$a + $e*$real;

$r = sqrt($a*$a + $b*$b); 
$ans11 = "$r**n * cos($angle*n)";
$ans12 = "- $r**n * sin($angle*n)";
$ans13 = "$r**n * (- $d*cos($angle*n) + $e*sin($angle*n)) + $d*$real**n";
$ans21 = "$r**n * sin($angle*n)";
$ans22 = "$r**n * cos($angle*n)";
$ans23 = "$r**n * (- $d*sin($angle*n) - $e*cos($angle*n)) + $e*$real**n";
$ans31 = "0";
$ans32 = "0";
$ans33 = "$real**n";

BEGIN_TEXT

\{ mbox( 'Let \(M=\)', display_matrix([[$a, - $b, $m13], 
                                       [$b,   $a, $m23], 
                                       [ 0,    0, $real]]), '.' ) \} 
$BR
Find formulas for the entries of \(M^n\) where \(n\) is a positive integer. 
(Your formulas should not contain complex numbers.)
$BR
\{ mbox( '\(M^n=\)', answer_matrix(3,3,25), '.' ) \} 

END_TEXT

ANS(fun_cmp($ans11, vars=>'n'));
ANS(fun_cmp($ans12, vars=>'n'));
ANS(fun_cmp($ans13, vars=>'n'));
ANS(fun_cmp($ans21, vars=>'n'));
ANS(fun_cmp($ans22, vars=>'n'));
ANS(fun_cmp($ans23, vars=>'n'));
ANS(fun_cmp($ans31, vars=>'n'));
ANS(fun_cmp($ans32, vars=>'n'));
ANS(fun_cmp($ans33, vars=>'n'));

ENDDOCUMENT();       # This should be the last executable line in the problem.

