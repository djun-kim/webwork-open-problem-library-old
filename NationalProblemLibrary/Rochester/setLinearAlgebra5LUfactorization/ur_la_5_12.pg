##DESCRIPTION
##KEYWORDS('matrix', 'LU', 'LDU', 'factorization', 'system', 'linear')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$L = new Matrix(4,4);
$L -> assign(1,1,1);
$L -> assign(1,2,0);
$L -> assign(1,3,0);
$L -> assign(1,4,0);
$L -> assign(2,1,random(-4,4,1));
$L -> assign(2,2,1);
$L -> assign(2,3,0);
$L -> assign(2,4,0);
$L -> assign(3,1,random(-4,4,1));
$L -> assign(3,2,random(-4,4,1));
$L -> assign(3,3,1);
$L -> assign(3,4,0);
$L -> assign(4,1,non_zero_random(-4,4,1));
$L -> assign(4,2,random(-4,4,1));
$L -> assign(4,4,random(-4,4,1));
$L -> assign(4,4,1);

$D = new Matrix(4,4);
$D -> assign(1,1,non_zero_random(-4,4,1));
$D -> assign(1,2,0);
$D -> assign(1,3,0);
$D -> assign(2,1,0);
$D -> assign(2,2,non_zero_random(-4,4,1));
$D -> assign(1,3,0);
$D -> assign(3,1,0);
$D -> assign(3,2,0);
$D -> assign(3,3,non_zero_random(-4,4,1));
$D -> assign(4,1,0);
$D -> assign(4,2,0);
$D -> assign(4,3,0);
$D -> assign(4,4,non_zero_random(-4,4,1));

$U = new Matrix(4,4);
$U -> assign(1,1,1);
$U -> assign(1,2,non_zero_random(-4,4,1));
$U -> assign(1,3,random(-4,4,1));
$U -> assign(1,4,random(-4,4,1));
$U -> assign(2,1,0);
$U -> assign(2,2,1);
$U -> assign(2,3,random(-4,4,1));
$U -> assign(2,4,random(-4,4,1));
$U -> assign(3,1,0);
$U -> assign(3,2,0);
$U -> assign(3,3,1);
$U -> assign(3,4,random(-4,4,1));
$U -> assign(4,1,0);
$U -> assign(4,2,0);
$U -> assign(4,3,0);
$U -> assign(4,4,1);

$A = new Matrix(4,4);
$A = $L * $D * $U;

BEGIN_TEXT

Find the LDU factorization of
$BR
\{ mbox( '\(A=\)', display_matrix($A), '.' ) \}
$BR
\( A=LDU \) where 
$BR
\{ mbox( '\(L=\)', answer_matrix(4,4,5), ',' ) \}
$BR
\{ mbox( '\(D=\)', answer_matrix(4,4,5), ',' ) \}
$BR
\{ mbox( '\(U=\)', answer_matrix(4,4,5), '.' ) \}

END_TEXT

ANS(num_cmp(ra_flatten_matrix($L)));
ANS(num_cmp(ra_flatten_matrix($D)));
ANS(num_cmp(ra_flatten_matrix($U)));

ENDDOCUMENT();       # This should be the last executable line in the problem.

