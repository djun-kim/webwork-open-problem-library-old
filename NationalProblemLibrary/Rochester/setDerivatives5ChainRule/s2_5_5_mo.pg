Context("Numeric");

$a1 = Real( random(2,5,1) );
$b1 = Real( random(2,8,1) );
$c1 = Real( random(-4,-1,1) );
$x1 = Real( random(1,5,1) );

$deriv1 = Compute("($a1*sin($x1)^($a1-1))*(cos($x1))");
$funct1 = Compute( "($a1*sin(x)^($a1-1))*(cos(x))" );

$f = Compute("sin^($a1)(x)");
$fp=$f->D;
$fpatx1=$fp->eval(x=>$x1);

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
If \( f(x) = $f \), find \( f'( x ) \).

$PAR \{ans_rule(50) \}
$PAR

Find \( f'( $x1 ) \).

$PAR 
\{ans_rule(50) \}
$BR
END_TEXT
Context()->normalStrings;


