loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$A = new Matrix(3,3);

foreach $i (1..3) { 
	foreach $j (1..3) { 
		$a[$i][$j] = random(-5,5,1);
		$A -> assign($i,$j,$a[$i][$j]);
	} 
}

$A_lr = $A -> decompose_LR();
$det = $A_lr -> det_LR();

while ($det == 0) { 
	foreach $i (1..3) {
 	       foreach $j (1..3) { 
        	        $a[$i][$j] = random(-5,5,1);
                	$A -> assign($i,$j,$a[$i][$j]);
			$A_lr = $A -> decompose_LR();
			$det = $A_lr -> det_LR();
        	} 
	}
}

$ans = abs($det);

BEGIN_TEXT

Find the volume of the parallelepiped defined by the vectors 
$BR
\{ mbox( display_matrix([[$a[1][1]], [$a[2][1]], [$a[3][1]]]), ', ', 
	 display_matrix([[$a[1][2]], [$a[2][2]], [$a[3][2]]]), ', and ', 
 	 display_matrix([[$a[1][3]], [$a[2][3]], [$a[3][3]]]), '.' ) \} 
$BR
Volume = \{ ans_rule(20) \}. 

END_TEXT

ANS(num_cmp($ans));

