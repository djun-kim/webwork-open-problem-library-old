##DESCRIPTION
##KEYWORDS('determinant', 'area')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(1,3,1);
$a2 = random(1,3,1);
$a3 = random(1,3,1);
$a4 = random(1,3,1);

$b1 = random(-3,-1,1);
$b2 = random(-3,-1,1);
$b3 = random(1,3,1);
$b4 = random(1,3,1);

$c = $a1*$a1 + $a2*$a2 + $a3*$a3 + $a4*$a4;
$d = $a1*$b1 + $a2*$b2 + $a3*$b3 + $a4*$b4;
$e = $b1*$b1 + $b2*$b2 + $b3*$b3 + $b4*$b4;

$det = $c*$e - $d*$d;

$ans = sqrt($det);

BEGIN_TEXT

Find the area of the parallelogram definded by the vectors 
$BR
\{ mbox( display_matrix([[$a1], [$a2], [$a3], [$a4]]), ' and ', display_matrix([[$b1], [$b2], [$b3], [$b4]]), '.' ) \}
$BR
Area = \{ans_rule(20)\}.

END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.

