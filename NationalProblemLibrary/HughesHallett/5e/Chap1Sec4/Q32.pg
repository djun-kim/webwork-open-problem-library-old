## Section2('1.4')
## Problem1('31')
## Problem2('32')

## Textbook tags
## HHChapter1('A Library of Functions')
## HHChapter2('A Library of Functions')
## HHSection1('Logarithmic Functions')
## HHSection2('Logarithmic Functions')


DOCUMENT();
loadMacros(
"PG.pl",
"PGchoicemacros.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGgraphmacros.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->flags->set(limits=>[0.1,3]);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(2, 4, 1);
$b = random(2, 4, 1);
$c = random(3, 8, 1);
$d = random(2, 8, 1);

$graph = init_graph(-1,-5,4.25,20.25,axes=>[0,0],size=>[250,250]);

## randomize the labels and colors
@flab = ( "f(x)", "g(x)", "h(x)", "k(x)" );
@fcol = ( "blue", "red", "green", "black" );

## the functions are
@func = ( Compute("$a^x"), Compute("x^$b"), Compute("ln(x)/ln($c)"),
	  Compute("x^(1/$d)") );

## the random order
@fOrd = shuffle(4);
## the inverse map
%fInv = ( $fOrd[0] => '0', $fOrd[1] => '1', $fOrd[2] => '2', $fOrd[3] => '3' );

add_functions( $graph,
	       "$a^x for x in <0,4.25> using color:$fcol[$fOrd[0]] " .
	           "and weight:2",
	       "x^$b for x in <0,4.25> using color:$fcol[$fOrd[1]] " .
	           "and weight:2",
	       "ln(x)/ln($c) for x in <-0.25,4.25> using " .
	           "color:$fcol[$fOrd[2]] and weight:2",
	       "x^(1/$d) for x in <0,4.25> using color:$fcol[$fOrd[3]] " .
	           "and weight:2" );
## and the labels
##    the correct locations for the different labels, in order, are
@loc = ( [ 1,$a+4 ], [ 3.5,3.5**$b-2 ], [ 1,-1 ], [ 3.5,3.5**(1/$d)+2 ] );

$graph->lb( new Label( $loc[$fInv{0}]->[0], $loc[$fInv{0}]->[1],
		       $flab[$fOrd[0]], 'black', 'center', 'center' ) );
$graph->lb( new Label( $loc[$fInv{1}]->[0], $loc[$fInv{1}]->[1],
		       $flab[$fOrd[1]], 'black', 'center', 'center' ) );
$graph->lb( new Label( $loc[$fInv{2}]->[0], $loc[$fInv{2}]->[1],
		       $flab[$fOrd[2]], 'black', 'center', 'center' ) );
$graph->lb( new Label( $loc[$fInv{3}]->[0], $loc[$fInv{3}]->[1],
		       $flab[$fOrd[3]], 'black', 'center', 'center' ) );

$fistr = '';
foreach my $k (keys %fInv) { $fistr .= "$k => $fInv{$k};"; }
Context()->texStrings;
BEGIN_TEXT
$BCENTER
\{ image(insertGraph($graph),tex_size=>350,height=>250,width=>250,
	 extra_html_tags=>'alt=""') \}
$ECENTER
$PAR
Without a calculator or computer, match the function \($a^x\),
\(x^{$b}\), \(\ln(x)/\ln($c)\) and \( x^{1/$d}\) to their graphs
in the figure.

$BR
\(f(x) = \) \{ ans_rule(15) \} (the $fcol[$fInv{0}] curve)
$BR
\(g(x) = \) \{ ans_rule(15) \} (the $fcol[$fInv{1}] curve)
$BR
\(h(x) = \) \{ ans_rule(15) \} (the $fcol[$fInv{2}] curve)
$BR
\(k(x) = \) \{ ans_rule(15) \} (the $fcol[$fInv{3}] curve)

END_TEXT
Context()->normalStrings;

ANS( $func[$fOrd[0]]->cmp() );
ANS( $func[$fOrd[1]]->cmp() );
ANS( $func[$fOrd[2]]->cmp() );
ANS( $func[$fOrd[3]]->cmp() );


Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
The graph of \(y=$a^x\) has a vertical intercept of \(1\), so must
be the $fcol[$fOrd[0]] one (\($flab[$fInv{0}]\)).
The function \(\ln(x)/\ln($c)\) has an \(x\) intercept
of \(1\), so must be the $fcol[$fOrd[2]] one (\($flab[$fInv{2}]\)).
The graphs of \(x^{1/$d}\) and \(x^$b\) both go through the origin.
The graph of \(x^{1/$d}\) is concave down so it corresponds to the
$fcol[$fOrd[3]] curve (\($flab[$fInv{3}]\)) and the graph of
\(y=x^{$b}\) is concave up and so corresponds to the $fcol[$fOrd[1]]
curve (\($flab[$fInv{1}]\)).

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
