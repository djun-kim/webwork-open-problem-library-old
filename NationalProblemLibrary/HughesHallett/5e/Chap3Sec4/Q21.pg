DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( w=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(2,8,1);
$a = $b + 1;

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
\( y = e^{$a w / $b} \)

$PAR
\( {dy\over dw} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "($a/$b)*e^($a*w/$b)" )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ \frac{dy}{dw} = \frac{$a}{$b} e^{$a w/$b} \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
