DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl",
# "PGcourse.pl",
);

Context("Numeric");

$trig = list_random("sin(x)", "cos(x)");
$trigF = Compute("$trig");

$r = random(2,5,1);
$r1 = $r - 1;
$a = 1;
$b = 2;
$bttr = $b**$r;

if ( $r == 2 ) {

    $b = random(2,5,1);
    $bttr = $b*$b;

    if ( $trig eq 'sin(x)' ) { 
	$funcTex = "\frac{\sin\sqrt x}{\sqrt x}";
	$trigTex = "\sin(w)";
	$atrigTex = "-2\cos(w)";
	$ans = "-2*cos($b) + 2*cos(1)";
	$ansTex = "-2\cos($b) + 2\cos(1)";
    } else {
	$funcTex = "\frac{\cos\sqrt x}{\sqrt x}";
	$trigTex = "\cos(w)";
	$atrigTex = "2\sin(w)";
	$ans = "2*sin($b) - 2*sin(1)";
	$ansTex = "2\sin($b) + 2\sin(1)";
    }

    $wTex = "\sqrt x";
    $dwTex = "(\frac 1 2)(\frac 1 {\sqrt x})\,dx";

} else {
    $wTex = "\root $r\of x";
    $dwTex = "(\frac 1 $r)(\frac 1{x^{$r1/$r}})\, dx = " .
      "\frac 1 {$r\root $r\of{x^$r1}}\, dx";
    if ( $trig eq "sin(x)" ) {
	$trigTex = "\sin(w)";
	$funcTex = "\frac{\sin(\root $r\of x)}{\root $r\of{x^{$r1}}}";
	$ans = "-$r*(cos(2) - cos(1))";
	$atrigTex = "-$r\cos(w)";
	$ansTex = "-$r(\cos(2) - \cos(1))";
    } else {
	$trigTex = "\cos(w)";
	$funcTex = "\frac{\cos(\root $r\of x)}{\root $r\of{x^{$r1}}}";
	$ans = "$r*(sin(2) - sin(1))";
	$atrigTex = "$r\sin(w)";
	$ansTex = "$r(\sin(2) - \sin(1))";
    }
}

Context("Numeric");

TEXT(beginproblem());
Context()->texStrings;
Context()->texStrings;
BEGIN_TEXT

Use the Fundamental Theorem of Calculus to find
$PAR
\( \int_{$a}^{$bttr}\, $funcTex \,dx = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;
Context()->normalStrings;

ANS( num_cmp( $ans ) );

Context()->texStrings;
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We use substitution with \(w = $wTex\), so that \(dw = $dwTex\).
Then \(w($a) = 1\) and \(w($bttr) = $b\), so that
\[
  \int_{$a}^{$bttr}\, $funcTex \,dx = 
  \int_{$a}^{$b}\,$r $trigTex\,dw = $atrigTex\bigg|_{$a}^{$b} =
  $ansTex.
\]


END_SOLUTION
Context()->normalStrings;
Context()->normalStrings;

ENDDOCUMENT();
