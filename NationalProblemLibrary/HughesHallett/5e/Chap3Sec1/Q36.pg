DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pow = random(2,10,1);
$a = random(1,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( y = \frac{x^{$pow}+$a}{x} \).

$PAR
\( {dy\over dx} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS( Compute( "($pow - 1)*x^($pow - 2) - ($a/x^2)" )->cmp() );

$p1 = $pow - 1;
$p2 = $pow - 2;
if ( $p2 ) {
    $xp = ( $p2 == 1 ) ? 'x' : "x^{$p2}";
} else {
    $xp = '';
}

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Noting that \( \frac{x^{$pow}+$a}{x} = x^{$p1} + $a x^{-1} \), 
\[ {dy\over dx} = $p1 $xp - $a x^{-2}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
