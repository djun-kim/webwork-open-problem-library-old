DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do show partial correct answers
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-5,5);
$b = non_zero_random(-5,5);
$c = non_zero_random(-5,5);

$s = non_zero_random(-5,5);
$t = non_zero_random(-5,5);



## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR

Let 
\[ w = \{preformat($a, "xy")\} + \{preformat($b,"yz")\} + \{preformat($c,"xz")\}, x = st, y = e^{st}, z = t^2\]
Compute $BR
\(\displaystyle \frac{\partial w}{\partial s}($s, $t) = \) 
\{ans_rule(60)\}
$BR
\(\displaystyle \frac{\partial w}{\partial t}($s, $t) = \) 
\{ans_rule(60)\}
$PAR
END_TEXT
$x = $s*$t;
$y = exp($s*$t);
$z = $t**2;

$Fx = $a*$y + $c*$z;
$Fy = $a*$x + $b*$z;
$Fz = $b*$y + $c*$x;

$xs = $t;
$xt = $s;
$ys = $t*exp($s*$t);
$yt = $s*exp($s*$t);
$zs = 0;
$zt = 2*$t;


ANS(num_cmp($Fx*$xs + $Fy*$ys + $Fz*$zs));
ANS(num_cmp($Fx*$xt + $Fy*$yt + $Fz*$zt));
ENDDOCUMENT();




