## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Derivatives of curves
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$a = random(2,20);
$b = random(2,20);
$c = non_zero_random(-9,9);
$d = non_zero_random(-9,9);


## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR

Find the derivative of the vector function$BR

\[
 r(t) = \ln($a - t^2) \mathbf{i} + 
    \sqrt{$b + t}\mathbf{j} + $c e^{$d t}\mathbf{k}
\]

\(\mathbf r'(t) = \langle \)
\{ans_rule(30)\},
\{ans_rule(30)\},
\{ans_rule(30)\} \(\rangle\)
$PAR
END_TEXT

ANS(fun_cmp("-2*t/($a - t*t)", vars=>["t"], limits=>[[1,2]]));
ANS(fun_cmp("1/(2*sqrt($b + t))", vars=>["t"], limits=>[[1,2]]));
ANS(fun_cmp("$c * $d * exp($d * t)", vars=>["t"], limits=>[[1,2]]));
ENDDOCUMENT();




