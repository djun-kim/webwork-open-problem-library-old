DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Lots of set up goes here

$mc3 = new_multiple_choice();

$a = random(-10,10);
$b = random(-10,10);


## Singularity at (a,b) cannot be determined
## fxx fyy - fxy^2 = 0
@xx = (4, -4, 16, -16, 3, -3, 20, -20);
@yy = (9, -9, 4, -4, 27, -27, 5, -5);
@xy = (6, -6, 8, -8, 9, -9, 10, -10);
$which = random(0,7);
$f3xx = $xx[$which];
$f3yy = $yy[$which];
$f3xy = $xy[$which];



$mc3->qa('Then the point ($a, $b):', 
'cannot be determined'
);

$mc3->extra(
           'is a local maximum',
           'is a saddle point',
            'is a local minimum'
            );

$mc3->makeLast(
            'None of the above'
            );



## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
The function \(f\) has  continuous
second derivatives, and a critical point at ($a, $b).

Suppose \(f_{xx}($a,$b) = $f3xx, f_{xy}($a,$b) = $f3xy, f_{yy}($a,$b)
= $f3yy\).

\{ $mc3->print_q() \}
$PAR
\{ $mc3->print_a() \}


$PAR
END_TEXT
ANS(radio_cmp($mc3->correct_ans));
ENDDOCUMENT();




