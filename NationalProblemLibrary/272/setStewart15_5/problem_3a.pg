TEXT(beginproblem());

$a = random( 1, 6, 1 );
do {$b = random( 1, 6, 1 );}
until ($b != $a);

$ans = $a*$b*($a**2 + $b**2)/12;

BEGIN_TEXT

Find the mass of the triangular region with vertices (0, 0), ($a, 0), and (0, $b), with density function 
\(\rho \left( x, y \right) = x^2 + y^2 \).

  $PAR
\{ans_rule(40)\}
END_TEXT

ANS( std_num_cmp( $ans ) );



