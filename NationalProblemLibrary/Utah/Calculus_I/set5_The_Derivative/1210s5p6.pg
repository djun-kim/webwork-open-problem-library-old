DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(&beginproblem);

$h=random(80,150,5);
$s=random($h+50,$h+150,10);
$v=random(3,9,1);

TEXT(EV2(<<EOT));
Compute
$BR
\(D_x x = \) \{&ans_rule(5)\},
EOT
&ANS( multivar_function_cmp( "1", ["x"]));


TEXT(EV2(<<EOT));
$BR
\(D^2_x x^2 = \) \{&ans_rule(5)\},
EOT
&ANS( multivar_function_cmp( "2", ["x"]));


TEXT(EV2(<<EOT));
$BR
\(D^3_x x^3 = \) \{&ans_rule(5)\},
EOT
&ANS( multivar_function_cmp( "6", ["x"]));


TEXT(EV2(<<EOT));
$BR
\(D^4_x x^4 = \) \{&ans_rule(5)\},
EOT
&ANS( multivar_function_cmp( "24", ["x"]));


TEXT(EV2(<<EOT));
$BR
\(D^5_x x^5 = \) \{&ans_rule(5)\},
EOT
&ANS( multivar_function_cmp( "120", ["x"]));


TEXT(EV2(<<EOT));
$BR
\(D^6_x x^6 = \) \{&ans_rule(5)\}.
$BR Do you recognize a pattern?
EOT
&ANS( multivar_function_cmp( "720", ["x"]));

TEXT(EV2(<<EOT));
$BR
Compute 
\(D^6_x (2x^6+3x^5+4x^4+5x^3+17x^2-15x+\pi) = \) \{&ans_rule(5)\} and
EOT
&ANS( multivar_function_cmp( "1440", ["x"]));

TEXT(EV2(<<EOT));
$BR
\(D^5_x (2x+1)^5 = \) \{&ans_rule(5)\}.
EOT
&ANS( multivar_function_cmp( "3840", ["x"]));



SOLUTION(EV3(<<'EOT')); 
$BR $BBOLD Solution:$EBOLD In general,
\[D^n x^n = n!\]
where \[n! = 1\times 2 \times 3 \times \ldots \times n\]
and "n!" is pronounced "n factorial".
$BR
Moreover, if \(k<n\) then
\[D^n x^k = 0.\]

EOT




