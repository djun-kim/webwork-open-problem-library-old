##DESCRIPTION
##  Find a derivative of a function involving trigonometric functions,
##  and evaluate it at a given point
##ENDDESCRIPTION
## Author('Utah ww group')
## Institution('Univeristy of Utah')
## DBsubject('Calculus')
## DBchapter('Differentiation')
## DBsection('The Product and Quotient Rule')
## AuthorText1('Dale Varberg, Edwin J. Purcell, and Steven E. Rigdon')
## TitleText1('Calculus')
## EditionText1('9')
## Section1('The Derivative')
## Problem1('')
## KEYWORDS('calculus')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$pi = arccos(-1);

$a_n = random(2,9,1);
$a_s = random(-1,1,2);
$a   = $a_n * $a_s;

$b_n = random(2,9,1);
$b_s = random(-1,1,2);
$b   = $b_n * $b_s;

$x_d = random(3,6,1);
while ($x_d == 5) {$x_d = random(3,6,1)};

$q = random(0,4,1);
if ($q == 0) {
    $x_n = 1;
    $x_s = -1;
    $x_sign = '-';
    };
if ($q == 1) {
    $x_n = 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 2) {
    $x_n = $x_d - 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 3) {
    $x_n = $x_d + 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 4) {
    $x_n = 2 * $x_d - 1;
    $x_s = 1;
    $x_sign = '';
    };

if ($x_n != 1) { $x_num = $x_n };
if ($x_n == 1) { $x_num = '' };

$x = $x_s * $x_n * $pi / $x_d;

$deriv  = "(-1)*$a*sin(x)+$b/(cos(x))^2";
$deriva = -$a*sin($x)+$b/(cos($x))**2;

TEXT(EV2(<<EOT));
Let \[ f(x) =  $a \cos x + $b \tan x. \]
Then
$PAR
\(f'(x) = \) \{ans_rule(35) \}.
$BR
EOT

$ans1 = $deriv;
&ANS(function_cmp($ans1));

ENDDOCUMENT();        # This should be the last executable line in the problem.
