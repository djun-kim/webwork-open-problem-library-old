TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,9,1);
$b=random(2,9,1);
$c=random(2,9,1);

TEXT(EV2(<<EOT));
$PAR

Let \(f(x) = x+1\) and \(g(x) = \frac{1}{x+1}\).  Then
$BR
$BR
$BR \((f\circ f) (x) = \)    \{ans_rule(30)\},
EOT
$ans = "x+2";
ANS(fun_cmp($ans));

TEXT(EV2(<<EOT));
$BR \((f\circ g) (x) = \)    \{ans_rule(30)\},
EOT
$ans = "(x+2)/(x+1)";
ANS(fun_cmp($ans, [[1,2]], vars=>["x"]));

TEXT(EV2(<<EOT));
$BR \((g\circ f) (x) = \)    \{ans_rule(30)\},
EOT
$ans = "1/(x+2)";
ANS(fun_cmp($ans, [[1,2]], vars=>["x"]));

TEXT(EV2(<<EOT));
$BR \((g\circ g) (x) = \)    \{ans_rule(30)\}.
$BR
EOT
$ans = "(x+1)/(x+2)";
ANS(fun_cmp($ans),[[1,2]]);





