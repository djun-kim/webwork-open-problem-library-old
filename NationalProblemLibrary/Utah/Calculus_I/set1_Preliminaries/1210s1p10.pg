##DESCRIPTION
##  calculating distance between two points;
##ENDDESCRIPTION
# Type: evaluation
## Author('Utah ww group')
## Institution('Univeristy of Utah')
## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Lines')                 
## AuthorText1('Dale Varberg, Edwin J. Purcell, and Steven E. Rigdon')
## TitleText1('Calculus')
## EditionText1('9')
## Section1('Preliminaries')
## Problem1('')
## KEYWORDS('calculus')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl", "PGbasicmacros.pl", "PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

# get the values for the coordinates of the two points;
# the boundaries for random function are picked so that
# the points are some reasonable distance apart for any
# random choice of the values;

$x1=random(1, 10);
$x2=random(-9, 0);
$y1=random(4, 9);
$y2=random(-3, 2);

# output the text of the problem

TEXT(EV2("Find the distance between
($x1, $y1) and ($x2, $y2). $BR"));

# output the window for the answer

TEXT(ans_rule(20));

# calculate the answer

$distance=sqrt(($x2-$x1)**2+($y2-$y1)**2);

# record the answer
# ANSWER(4, 1, $distance);
ANS(&std_num_cmp($distance, .01, "%4.4g"));

ENDDOCUMENT();        # This should be the last executable line in the problem.

