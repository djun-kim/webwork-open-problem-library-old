&DOCUMENT;
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl"
);
 
install_problem_grader(~~&std_problem_grader);

TEXT(&beginproblem);

$showPartialCorrectAnswers = 0;
$showPartialCredit = 0;

@pictID = (
"graphs-1.gif",
"graphs-2.gif",
"graphs-3.gif",
"graphs-4.gif",
"graphs-5.gif",
"graphs-6.gif",
);

@question = ();
@answer =();

TEXT(EV2(<<EOT));
Match the functions with their graphs.
EOT


qa(~~@question,~~@answer,
" f(x) =  cos(x) ",
$pictID[0], 
" f(x) =  sin(x) ",
$pictID[1],
" f(x) = tan(x) ",
$pictID[2], 
" f(x) = arcsin(x) ",
$pictID[3],
" f(x) = arccos(x) ",
$pictID[4],
" f(x) = arctan(x) ",
$pictID[5],
);

@slice = 0..5;                         
@shuffle = &shuffle(scalar(@slice));   
@images =  @answer[@slice[@shuffle]];  
@captions =@ALPHABET[0..5];            

TEXT(
&match_questions_list(@question[@slice]),
&imageRow(~~@images,~~@captions)
);

&ANS(std_str_cmp_list( @ALPHABET[&invert(@shuffle ) ] ) );

TEXT(EV2(<<EOT));


