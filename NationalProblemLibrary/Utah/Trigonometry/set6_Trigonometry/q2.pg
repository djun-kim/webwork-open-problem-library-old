DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);


TEXT(&beginproblem);

$a=7;
$b=3;
$c=2;
$d=-3;


TEXT(EV2(<<EOT));
$BR
Let
\[f(x)=$a \sin($b\pi x - $c) + $d.\]
The amplitude of this function is 	
  \{ ans_rule(12) \}, 
EOT
$pi=2.0*acos(0.0);
&ANS( num_cmp( $a));

TEXT(EV2(<<EOT));
$BR
its period is
  \{ ans_rule(12) \}, 
EOT
&ANS( num_cmp( 2/$b));

TEXT(EV2(<<EOT));
$BR
its phase shift is
  \{ ans_rule(12) \}, 
EOT
&ANS( num_cmp( $c/$b/$pi));

TEXT(EV2(<<EOT));
$BR
and its vertical translation is
  \{ ans_rule(12) \}, 
EOT
&ANS( num_cmp( $d));




ENDDOCUMENT();        # This should be the last executable line in the problem.
