DOCUMENT();

loadMacros('PG.pl',
        'PGbasicmacros.pl',
        'PGchoicemacros.pl',
        'PGanswermacros.pl',
);

TEXT(beginproblem()); 

$showPartialCorrectAnswers = 0;
$A = random(2,9,1);
$B = random(2,9,1);
$C = random(2,9,1);

#@images = ("LR.GIF");
$pictSetname = "LR.gif";

BEGIN_TEXT

Solve the differential equation

\[ y' + \frac{$A y}{x+$B} = (x+$B)^{$C} \]

where \( y = $C \) when \( x = 0 \).

\( y(x) = \) \{ans_rule(100)\}.

END_TEXT

$ans = "((x+$B)**($C+1))/($A+$C+1) + ($B**$A) * ( $C+$C*$A+$C**2-$B**($C+1) ) / ($A+$C+1) / ((x+$B)**($A))";
ANS(function_cmp($ans));

ENDDOCUMENT();
