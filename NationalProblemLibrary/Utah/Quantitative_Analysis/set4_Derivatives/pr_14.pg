DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$an = random(2,5,1);
$as = random(-1,1,2);
$a = $an * $as;

$bn = random(1,5,1);
$bs = random(-1,1,2);
$b = $bn * $bs;

$cn = random(1,10,1);
$cs = random(-1,1,2);
$c = $cn * $cs;


$deriv1 = "($a/2)/sqrt($a*x + $b)";
$deriv2 = "-((($a)**2)/4)*(($a*x + $b)**(-3/2))";

TEXT(EV2(<<EOT));
Let \(f(x)= \sqrt{ $a x + $b} \). Then \( f'( x ) \) is
\{ans_rule(20) \} $BR
EOT

if ($as == 1){
   $ulimit = -$b/$a + 10;
   $llimit = -$b/$a;
}
if ($as == -1){
   $ulimit = -$b/$a;
   $llimit = -$b/$a - 10;
}

$ans = $deriv1;
&ANS(function_cmp($ans,"x",$llimit,$ulimit));
TEXT(EV2(<<EOT));
and \( f''( x ) \) is \{ans_rule(20) \}
EOT

$ans = $deriv2;
&ANS(function_cmp($ans,"x",$llimit,$ulimit));
ENDDOCUMENT();        # This should be the last executable line in the problem.
