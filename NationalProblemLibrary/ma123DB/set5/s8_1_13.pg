## EditionText1('6')
## AuthorText1('Stewart')
## Section1('8.1')
## Problem1('13')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(2,5,1);
$c = $a + random(1,5,1);
$d = $c + random(1,3,1);
$answer = "$d - $c + $a*log( ($d-$a)/($c-$a) ) - $a* log( ($d + $a)/ ($c + $a) )";

TEXT(beginproblem());
BEGIN_TEXT
Find the length of the curve defined by
\( y=${a}\ln \left( \left( \frac{x}{$a} \right) ^2 - 1 \right) \)
from \(x=$c\) to \(x = $d \).
$BR$BR
\{ ans_rule(40) \}
END_TEXT

ANS(num_cmp($answer));

ENDDOCUMENT();
