$questions[2] = EV2( " \( \displaystyle \sum^\infty_{n=2} \; \frac 1{n \log($a1 +  n)}\)"
);
$questions[3] = EV2( " \( \displaystyle \sum^\infty_{n=1} \; \frac{(2n +
