DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",

);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,4,1);
$b = random(1,4,1);
while($b==$a) {$b=random(1,4,1)};

$A = non_zero_random(-6,6,1);
$coef1 = $a^2 + $a*$b + $b^2;
while($A==$coef1) {$A = non_zero_random(-6,6,1)};
$B = $coef1 - $A;

$coef2 = -$a - $b;
$coef3 = $a*$b;
$coef4 = $coef2*$a*$b + $A*$b + $B*$a;

$soln="(x^2)/2 + $coef2*x + $A*ln(abs(x+$a))+$B*ln(abs(x+$b))";

$num = nicestring([1, $coef4], ['x^3', '']);
$den= nicestring([1, -$coef2, $coef3], ['x^2', 'x', '']);
BEGIN_TEXT
Evaluate the indefinite integral.
$BR
$BR \[ \int \frac{$num}{$den} dx \]
$BR Answer: \{ans_rule(60) \} \(+C\)
END_TEXT

ANS(fun_cmp($soln,mode=>'antider',limits=>[6,10]));

ENDDOCUMENT();        # This should be the last executable line in the problem.

