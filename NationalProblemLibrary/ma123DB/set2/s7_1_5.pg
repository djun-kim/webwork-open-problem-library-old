$showPartialCorrectAnswers = 1;
$a = random(2,5,1);
$b = random(2,5,1);
$coeff = 1 / $b;
$ans = "$a * $coeff * (x * sin($b * x) + $coeff * cos($b * x))";

TEXT(beginproblem());

BEGIN_TEXT
Use integration by parts to evaluate the integral.
$BR \[ \int $a x \cos ($b x) dx \]
$BR
Answer: \{ans_rule( 60) \}  \(+\) \(C\)
END_TEXT

