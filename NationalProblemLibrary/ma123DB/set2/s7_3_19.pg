DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(2,15,1);
$a = random(2,20,1);
$pi = arccos(-1);
$a2 = $a*$a;
$b2 = $b*$b;
$soln = "ln(($a2 +$b2)^.5+$b)-ln($a)";

BEGIN_TEXT

Evaluate the definite integral.
$BR \[ \int_{0}^{$b}  \frac{1}{\sqrt{$a2 +x^2}} dx \]
$BR 
Answer: \{ans_rule( 30) \}
$BR
END_TEXT

ANS(num_cmp($soln));

