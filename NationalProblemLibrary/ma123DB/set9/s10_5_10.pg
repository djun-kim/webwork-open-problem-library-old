DOCUMENT();

loadMacros("PGbasicmacros.pl",
           "PGanswermacros.pl",
            "PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a = non_zero_random(5,10,1);
$b = non_zero_random(1,5,1); 


BEGIN_TEXT

Find the area of the region bounded by: \(r = $a - $b \sin \theta \) $BR$BR
Answer: \{ans_rule(45)\}

END_TEXT

$answer = "pi*($a^2 + .5*$b^2)";
ANS(num_cmp($answer));


&ENDDOCUMENT;
