           "PGanswermacros.pl",
            "PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a = non_zero_random(5,10,1);
$c = 2*$a;

BEGIN_TEXT

Find the area inside the loop of the limacon given by 
\(r = $a - $c \sin \theta \) $BR$BR
Answer: \{ans_rule(45)\}

END_TEXT

ANS(num_cmp("($a^2)*(pi - .5*(3^1.5))") );


