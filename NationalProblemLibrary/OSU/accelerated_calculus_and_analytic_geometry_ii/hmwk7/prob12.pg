          );      
              
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(-5, 5, 1);
$b = random(-5, 5, 1);
$c = random(-5, 5, 1);
$d = non_zero_random(-5, 5, 1);
$e = non_zero_random(-5, 5, 1);
$f = non_zero_random(-5, 5, 1);

BEGIN_TEXT
Given a the vector equation 
\( \mathbf{r} (t) = 
($a + $d t) \mathbf{i}  + 
($b + $e t) \mathbf{j}  +
($c + $f t) \mathbf{k} \), 
rewrite this in terms of the parametric equations for the line.
$PAR  $BR
\(x(t) =\) \{ ans_rule(10) \}$BR
\(y(t) =\) \{ ans_rule(10) \}$BR
\(z(t) =\) \{ ans_rule(10) \}
END_TEXT

$ans1 = "$a + $d * t";
$ans2 = "$b + $e * t";
$ans3 = "$c + $f * t";

ANS( function_cmp($ans1, "t") );
ANS( function_cmp($ans2, "t") );
ANS( function_cmp($ans3, "t") );

