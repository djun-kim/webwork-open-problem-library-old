"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(20,90,10);
$b = $a/10;
$c = $b - 1;

BEGIN_TEXT

Given:$BR
\( A_n = \frac{$a}{$b^{n}} \) $BR
Determine:$BR

(a) whether \( \sum_{n=1}^\infty( A_n ) \) is convergent.
 \{ans_rule(30)\} and $BR

(b) whether \( \lbrace A_n \rbrace \)is convergent. 
 \{ans_rule(30)\} $BR

If convergent, enter the limit of convergence. If not, enter "DIV"
(unquoted).

END_TEXT

$ansP = $a/$c ;
&ANS(std_num_str_cmp($ansP, ['DIV']));
$ansQ = 0 ;
&ANS(std_num_str_cmp($ansQ, ['DIV']));

