DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

# No partial credit on this problem, so we say:
install_problem_grader(~~&std_problem_grader);


TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

$a0 = random(2,7,1);
$b0 = random(2,7,1);
$a1 = random(2,7,1);
$b1 = random(2,7,1);
$a2 = random(2,7,1);
$a3 = random(2,10,1);
$a4= random(2,10,1);

@questions=();
$questions[0] = EV2( " \( \sum_{n=1}^\infty \frac{n^$a0 }{$b0^n}
        \) " );

$questions[1] = EV2( " \( \sum_{n=1}^\infty \frac{(-1)^n $a1^{n-1}}{($a1)^{n
 + 1}n^{\frac{1}{$b0}}}  \)" );

$questions[2] = EV2( " \( \sum_{n=1}^\infty \frac{(-1)^n}{$a2^n n!}
        \)" );

$questions[3] = EV2( " \( \sum_{n=1}^\infty \frac{(n+2)!}{$a3^n n!}
        \)" );

$questions[4] = EV2( " \( \sum_{n=1}^\infty (-1)^n \frac{n!}{$a4^n}
        \)" );

# Now randomize the questions:
@slice = &NchooseK(5,5);

#############################################################################

TEXT(EV2(<<EOT));
Match each of the following with the correct statement. $BR
A.  The series is absolutely convergent.$BR
C.  The series converges, but is not absolutely convergent.$BR
D.  The series diverges.$BR
EOT

TEXT(
&match_questions_list(@questions[@slice])
);

@ans=();
$ans[0] = join " ",$ALPHABET[0];
$ans[1] = join " ",$ALPHABET[2];
$ans[2] = join " ",$ALPHABET[0];
$ans[3] = join " ",$ALPHABET[0];
$ans[4] = join " ",$ALPHABET[3];

&ANS( unordered_str_cmp_list(@ans[@slice]) );

ENDDOCUMENT();        # This should be the last executable line in the problem.
