TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$lim = new_select_list();

$a = random(-5, 5);
$b = random(-5, 5);
$c = random(1, 5);
$d = random(1, 5);

$ans = "e^(sqrt($c*($a)^2 + $d*($b)^2))";

BEGIN_TEXT
$PAR
Find the limit, if it exists, or type N if it does not exist.
$PAR
\( \lim_{(x, y) \rightarrow ($a, $b)} e^{\sqrt(${c}x^2 + ${d}y^2)} = \) \{ ans_rule(40) \}
END_TEXT
ANS(std_num_str_cmp($ans, ['N']));

