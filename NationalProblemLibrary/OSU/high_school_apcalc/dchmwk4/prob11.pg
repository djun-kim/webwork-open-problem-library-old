##DESCRIPTION
##KEYWORDS('derivatives', 'chain rule')
##  Find a derivative of an expression
##  involving trig functions; requires use of chain rule
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a_gen  = random(2,9,1);
$a_sign = random(-1,1,2);
$a      = $a_gen * $a_sign;

$e = exp(1);

$gen = random(0,1,1);

if ($gen == 0) {
  $trig1 = "\sin";
  $ans  =  "$a*$e^(x*sin(x))*(sin(x) + x*cos(x))";
  }
if ($gen == 1) {
  $trig1 = "\cos";
  $ans  =  "$a*$e^(x*cos(x))*(cos(x) - x*sin(x))";
  }

TEXT(EV2(<<EOT));
Let \[ f(x) = $a e^{x $trig1 x} \]
$PAR
\( f'( x ) = \) \{ans_rule(45) \}
$BR
EOT

&ANS(function_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
