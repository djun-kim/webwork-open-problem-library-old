##DESCRIPTION
##KEYWORDS('limits', 'one-sided', 'infinite')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;


$a= random(-1,1,2)*random(2, 10, 1);
$aa = $a**2;
$c = "-";
if ($a<0) {$c = "+";}

$ans = "MINF";

if ($a <0) {$ans = "INF";}

BEGIN_TEXT
Find the one-sided limit
\[ \lim_{y\to $a^$c}\frac{\sqrt{$aa - y^2}}{y - $a} \]
$BR \{ans_rule(30)\}
$BR Use INF to denote \(\infty\) and MINF to denote \(-\infty\).
END_TEXT

&ANS(std_num_str_cmp($ans,["INF","MINF"]));

ENDDOCUMENT();        # This should be the last executable line in the problem.
