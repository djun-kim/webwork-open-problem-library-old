#DESCRIPTION
#KEYWORDS('limits', 'trigonometry', 'quotients')
# Find limits of quotients involving trig functions
#ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

$showHint=0;

TEXT(&beginproblem);
$showPartialCorrectAnswers=0;

@questStr = ();
@ansStr = ();
qa(~~@questStr,~~@ansStr,
"\frac{1-\cos(x)}{x} "   ,        std_num_str_cmp(0,["INF","MINF","DNE"]),
"\frac{ 1-\cos(x) }{ (x/2)^{2} }",std_num_str_cmp(2,["INF","MINF","DNE"]),
"\frac{ |-8x| }{ 4x }",           std_num_str_cmp("DNE",["INF","MINF","DNE"]),
"\frac{ |x| }{ x }",              std_num_str_cmp("DNE",["INF","MINF","DNE"]),
"\cos\left(\frac{2}{\pi-x} \right) \cos\left(\frac{ \pi-x }{ 2 }\right)", std_num_str_cmp(0,["INF","MINF","DNE"]),
"\cos\left(\frac{2}{x}\right)" ,     	std_num_str_cmp("DNE",["INF","MINF","DNE"]),
"\frac{ 1-\cos(x) }{ x^{4} }", 	std_num_str_cmp("INF",["INF","MINF","DNE"]),
"\frac{ \sin(2x) }{ x }", 	std_num_str_cmp(2,["INF","MINF","DNE"]),
"\frac{ \tan(8x) }{ 2x} ", 	std_num_str_cmp(4,["INF","MINF","DNE"]),
);
$tog=random(0,8,1);
$quest=$questStr[$tog];
TEXT(qq!
Find the limit of ${BDM}$quest ${EDM} as ${BM} x ${EM} goes to 0. (Enter INF for
\(\infty\), MINF for \(-\infty\) or DNE for does not exist.)  You should also try using identities to
transform the expressions algebraically so that you can identify the limits without
using a calculator.$PAR
!,&ans_rule(30),
);
&ANS( $ansStr[$tog]  );
ENDDOCUMENT();        # This should be the last executable line in the problem.
