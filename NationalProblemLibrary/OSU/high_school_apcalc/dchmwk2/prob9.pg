##DESCRIPTION
##KEYWORDS('limits', 'one-sided', 'infinite')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;


$a= random(2, 5, 1);
$b = random(-1,1,2)*random($a+1,10,1);
$a2 = 2*$a;
$aa = $a**2;
$lin = $b - $a;
$const = - $a*$b;

$ans = "INF";

if ($a+$b >0) {$ans = "MINF";}

BEGIN_TEXT
Find the one-sided limit
\[ \lim_{x\to $a^-}\frac{x^2 + $lin x + $const}{x^2 - $a2 x + $aa} \]
$BR \{ans_rule(30)\}
$BR Use INF to denote \(\infty\) and MINF to denote \(-\infty\).
END_TEXT

&ANS(std_num_str_cmp($ans,["INF","MINF"]));

ENDDOCUMENT();        # This should be the last executable line in the problem.
