##Problem set header for set 0, Winter 2000
DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);


$showPartialCorrectAnswers = 1;


$a = 2*random(4,8,1);
$a3 = $a**3;
$b = random(-7,11,2);
$c = $b - 3*$a**4/4;

TEXT(&beginproblem);
BEGIN_TEXT
Find the function \(g(x)\) satisfying the two conditions:
\begin{enumerate}
\item \(g'(x)= -$a3 - x^3\)
\item the maximum value of \(g(x)\) is $b.
\end{enumerate}
$BR
\(g(x)=\) \{ans_rule(40)\}
$PAR
END_TEXT

&ANS(function_cmp("- $a3*x - x^4/4 + $c"));

ENDDOCUMENT();
