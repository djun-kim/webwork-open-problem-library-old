##DESCRIPTION
##  Evaluate an infinite limit of a fraction of two polynomials
##ENDDESCRIPTION

##KEYWORDS('limits', 'infinite' )

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=non_zero_random(-10, 10);

TEXT(EV2(<<EOT));
Evaluate
\[ \lim_{x \rightarrow \infty} \sqrt{x^2  + $a x + 1} -x \]
(Type INF for \(\infty\) and MINF for \(-\infty\))
$BR
EOT

TEXT(ans_rule(20));

HINT("Try 'rationalizing the numerator'");
$answer=$a/2;

ANS(std_num_str_cmp($answer,["INF","MINF"]));

BEGIN_TEXT
Thus
\[ y = \sqrt{x^2  + $a x + 1} -x \]
has a corresponding horizontal asymptote
$BR
\(y =\) \{ans_rule(15)\}
$BR
(Type in DNE if there is no horizontal asymptote.)
END_TEXT

&ANS(std_num_str_cmp($answer,["DNE"]));

TEXT(EV2(<<EOT));
Evaluate
\[ \lim_{x \rightarrow -\infty} \sqrt{x^2  + $a x + 1} -x \]
(Type INF for \(\infty\) and MINF for \(-\infty\))
$BR
EOT

TEXT(ans_rule(20));

$answer= "INF";

ANS(std_num_str_cmp($answer,["INF","MINF"]));

BEGIN_TEXT
$BR
Thus
\[ y = \sqrt{x^2  + $a x + 1} -x \]
has a corresponding horizontal asymptote
$BR
\(y =\) \{ans_rule(15)\}
$BR
(Type in DNE if there is no corresponding horizontal asymptote.)
END_TEXT

&ANS(std_num_str_cmp("DNE",["DNE"]));

ENDDOCUMENT();        # This should be the last executable line in the problem.
