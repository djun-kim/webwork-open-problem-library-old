#ENDDESCRIPTION

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$a = random(2,7,1);
$b = random(10,17,1);
$c = random(8,9,1);
$d = random(4,7,1);
if ($d==$a){$d++;}
if ($d==$c){$d++;}
$e = random(3,5,1);
if ($e == $a) {$e--;}
$f = random(15,25,1);
$g = random(.6,1.2,0.1);
$h = random(1,$d-1,1);

$ans1 = "$f*($b+$a*h/$d)*h";
$ans2 = $d;
$ans3 = "$f*($a+$b)*$d + $f*(2*$a+$b+$c)*(h- $d)";
$aux = $f*$b + 2*$a*$f*$h/$d;
$ans4 = $g/$aux;

TEXT(&beginproblem);
BEGIN_TEXT
