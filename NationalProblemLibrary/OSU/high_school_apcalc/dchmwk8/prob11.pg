DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGgraders.pl"
);

$showPartialCorrectAnswers=1;

$b = random(2,8,2);
$a = $b**3/2;

$ans1 = $b;
$ans2 = $b/2;

TEXT(&beginproblem);
BEGIN_TEXT
A box with an open top has vertical sides, a square bottom, and a volume of
$a cubic meters. If the box has the least possible surface area, find its
dimensions.
$BR
length of base = \{ans_rule()\}
$BR
height = \{ans_rule()\}
END_TEXT

&ANS(std_num_cmp($ans1));
&ANS(std_num_cmp($ans2));


ENDDOCUMENT();
