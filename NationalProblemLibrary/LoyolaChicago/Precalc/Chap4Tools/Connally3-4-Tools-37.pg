####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Fraction-NoDecimals");

$a = random(2,5,1);
$b = random(3,9,1);
$aaa = $a**3;
$bb = $b**2;

$expression = "\displaystyle \frac{1}{3} \log $aaa - \frac{1}{2} \log $bb";
$logtype = "\log";

$answer = Fraction("$a","$b");

Context()->operators->undefine("+","-","*","^","**");
Context()->functions->disable("All");


####################################
#  Main Text

BEGIN_TEXT

Using laws of logarithms, write the expression 
below as a single logarithm.
$BR
$BR
\( $expression = $logtype \big( \)
\{ ans_rule(10) \}
\( \big) \)
\{ AnswerFormatHelp("number") \}


END_TEXT


###################################
#  Answer evaluation

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
