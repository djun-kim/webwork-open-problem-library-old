####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real");
Context()->variables->set(x=>{limits=>[2,3]});


$a = random(2,8,2);
$b = random(3,9,2);

$expression = "\ln x^{$a} - \ln \left( x + $b \right)";
$logtype = "\ln";

$answer = Compute("x^$a / (x + $b)");


####################################
#  Main Text

BEGIN_TEXT

Using laws of logarithms, write the expression 
below as a single logarithm.
$BR
$BR
\( $expression = $logtype \big( \)
\{ ans_rule(10) \}
\( \big) \)
\{ AnswerFormatHelp("formula") \}


END_TEXT


###################################
#  Answer evaluation

ANS( $answer->cmp() );

ENDDOCUMENT();
