####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
#"PGauxiliaryFunctions.pl",# defines only log to be the natural log (ln is undefined)
"MathObjects.pl",# defines both log and ln to be natural log
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");

$a = random(2,4,1);
$b = sprintf("%0.3f", exp($a) );
$a1 = $a + random(-1,1,2);

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Rewrite the exponential equation \( e^{$a x} = $b \) 
in equivalent logarithmic form.  There may be more 
than one correct answer.", 
"\( $a x = \ln($b) \) $BR",
"\( x = \ln($b) / $a \) $BR",
);
$mc -> extra(
"\( $a x = \log($b) \) $BR",
"\(    x = \log($b) \)$BR",
);
$mc -> makeLast("None of the above");


####################################
#  Main Text

BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT


###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
