DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
#           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

Context("LimitedPolynomial")->variables->are(n=>"Real");

$b = random(2,9,1);
$c = random(1,9,1);
if ($b == $c) {$c = $c+2};

$ans2 = ( "-n^2 - $b n - $c");

BEGIN_TEXT
Write a formula (in terms of the independent variable ${BITALIC}n${EITALIC}) for the transformation of 
\( m(n) = n^2 - $b n + $c \) given below. 
$BR
$BR
\( y = -m(-n) = \) \{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT

ANS( Compute("$ans2")->cmp() );

#ANS( fun_cmp($ans2,vars=>'n') );


SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
\( y = -m(-n) = - \left( (-n)^2 - $b(-n) + $c \right) = - \left( n^2 + $b n + $c \right) = -n^2 - $b n - $c \)
$BR
END_SOLUTION


COMMENT('MathObject version');
