## DBsubject('Precalculus')
## DBchapter('Transformations of Functions and Their Graphs')
## DBsection('Reflections and Symmetry')
## KEYWORDS('reflection','odd function','even function','symmetry')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('5.2')
## Problem1('20')
## Author('Adam Spiegler and Paul Pearson')
## Institution('Loyola University Chicago and Fort Lewis College')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


Context("LimitedPolynomial");

$a = random(2,9,1);
$b = non_zero_random(4,20,4);
$p = random(3,7,2);
$c = random(3,18,3);
$neg_a = -$a;

$pick = random(0,1,1);

$f[0] = Compute("-$a x^$p + $b x - $c");
$g[0] = Formula("$a x^$p - $b x - $c");

$f[1] = Compute("-$a x^$p + $b x");
$g[1] = Formula("$a x^$p - $b x");

if ($pick == 0) {
  $eon = "Neither";
  $eon1 = "None of the above";
} else {
  $eon = "Odd";
  $eon1 = "\( -f(x) \)";
}

$mc1 = new_multiple_choice();
$mc1 ->qa("For all \(x\), \( f(-x) = \)",$eon1);
$mc1 ->makeLast("\( f(x) \)","\( -f(x) \)","None of the above");

$mc2 = new_multiple_choice();
$mc2 ->qa("Is \( f \) an even function, an odd function, or neither even nor odd?",$eon);
$mc2 ->makeLast('Even','Odd','Neither');


Context()->texStrings;
BEGIN_TEXT

Suppose \( f(x) = $f[$pick] \).
$BR
$BR
(a) Then \( f(-x) = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
You must simplify your answer as much as possible.
$BR
$BR
(b) 
\{ $mc1->print_q() \}
\{ $mc1->print_a() \}
$BR
(c) 
\{ $mc2->print_q() \}
\{ $mc2->print_a() \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 1;

ANS( $g[$pick]->cmp() );
ANS(radio_cmp($mc1->correct_ans));
ANS(radio_cmp($mc2->correct_ans));

@reason = (
"\( f(-x) = $a (-x)^{$p} + $b (-x) - $c = $neg_a x^{$p} - $b x^{$p2} - $c \)
$BR $SPACE $BR
Since \( \ f(-x) \) does not equal \( \ f(x) \) nor \( \ -f(x) \) , $SPACE the function \( \ f(x) \) $SPACE is neither an even function nor an odd function.",
"\( f(-x) = $a (-x)^{$p} + $b (-x) = $neg_a x^{$p} - $b x^{$p2} = - \left( $a x^{$p} + $b x \right) \)
$BR $SPACE $BR
Since \( \ f(-x) = - f(x) \) , $SPACE by definition the function \( \ f(x) \) $SPACE is an odd function.");

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
$reason[$pick]
$BR
END_SOLUTION

ENDDOCUMENT();   # This should be the last executable line in the problem.