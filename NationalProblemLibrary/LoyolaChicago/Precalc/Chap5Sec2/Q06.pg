DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
#           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.

Context("Numeric");

$i = random(0,1,1);
@axis = ("x","y");
@ans =("-e^x","e^(-x)");

BEGIN_TEXT
If \( y = e^x \) is reflected about the ${BITALIC}$axis[$i]${EITALIC}-axis, what is the formula for the resulting function?
$BR
$BR 
\( y = \) \{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}

END_TEXT

$showPartialCorrectAnswers = 1;

ANS( Compute("$ans[$i]")->cmp() );

#ANS( fun_cmp($ans[$i],vars=>'x') );


@reason = ("To reflect about the  $BITALIC x${EITALIC}-axis, we multiply formula for $BITALIC y $EITALIC by -1, so \( \ y = -e^{x} \).",

"To reflect about the  $BITALIC y${EITALIC}-axis, we substitute -${BITALIC}x${EITALIC} for $BITALIC x $EITALIC in the formula, so \( \ y = e^{-x} \).");




SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
$reason[$i]
$BR
END_SOLUTION


ENDDOCUMENT();   # This should be the last executable line in the problem.