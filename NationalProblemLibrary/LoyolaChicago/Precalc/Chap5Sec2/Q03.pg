DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
#           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$x = non_zero_random(-10,10,2);
$y = random(-9,9,2);

$neg_x = -$x;
$neg_y = -$y;

@type = ("origin","$BITALIC y${EITALIC}-axis");
$pick = random(0,1,1);
@ans = ($neg_y, $y);

BEGIN_TEXT
Suppose the graph of \( H(x) \) is symmetric about the $type[$pick].  If \( H($x) = $y \), then 
\( H($neg_x) = \) 
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}

END_TEXT

ANS( Real("$ans[$pick]")->cmp() );

#ANS( num_cmp($ans[$pick]) );

if ($x < 0) {$word_c = "right"} else {$word_c = "left"};
if ($y < 0) {$word_d = "above"} else {$word_d = "below"};

@reason = ("If the function is symmetric about the origin, when we evaluate the function at the same distance to the $word_c of the $BITALIC y${EITALIC}-axis, the $BITALIC y $EITALIC value is reflected to the same distance $word_d the $BITALIC x${EITALIC}-axis, so the point is ($neg_x,$neg_y).",

"If the function is symmetric about the $BITALIC y${EITALIC}-axis, the $BITALIC y${EITALIC}-coordinate is unchanged when the  $BITALIC x${EITALIC}-coordinate is the same distance to the $word_c of the  $BITALIC y${EITALIC}-axis, so the point is ($neg_x,$y).");

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
$reason[$pick]
$BR
END_SOLUTION

ENDDOCUMENT();