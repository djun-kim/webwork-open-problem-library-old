####################################
#  Initialization

DOCUMENT();       

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);
       
TEXT(beginproblem());

###################################
#  Setup

$k = random(1,8,1);

($x,$y) = (random(2,5,1),random(2,7,1));

$num = $y + $k;
$den = $x**2;

$answer = Compute("($num / $den) x^2 - $k");


###################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
The parabola \( y = a x^2 + k \) has vertex \( (0,-$k) \)
and passes through the point \( ($x,$y) \).  Find its 
equation. 
$BR
$BR
\( y = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}

END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );
      

COMMENT('MathObject version');
ENDDOCUMENT();