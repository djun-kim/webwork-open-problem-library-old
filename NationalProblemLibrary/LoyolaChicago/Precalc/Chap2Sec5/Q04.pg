## Institution('Loyola University Chicago')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
"PGcourse.pl",           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 0;

$j = random(0,3,1);

$f[0] = "x^3 for x in <-2,2> using color:blue and weight:2";
$f[1] = "-x^3 for x in <-2,2> using color:blue and weight:2";
$f[2] = "-(2*x)^2+7 for x in <-2,2> using color:blue and weight:2";
$f[3] = "(2*x)^2-7 for x in <-2,2> using color:blue and weight:2";

$graph = init_graph(-2,-8,2,8,'axes'=>[0,0],'ticks'=>[1,1]);
$graph->lb('reset');
$graph->lb(new Label(1.9,-0.1,"x",'black','right','top'));
$graph->lb(new Label(-.05,7.8,"y",'black','right','top'));
plot_functions( $graph, $f[$j]); 
$plot = image(insertGraph($graph),width => 250,height => 250,tex_size => 700);

@ans = ('Both concave up and concave down',
        'Both concave up and concave down',
        'Concave Down','Concave Up');

$mc = new_multiple_choice();
$mc->qa('The graph of the function $BITALIC f(x) $EITALIC shown above is', $ans[$j]);
$mc->makeLast('Concave Up','Concave Down','Both concave up and concave down');


BEGIN_TEXT

$BCENTER
$plot
$ECENTER
$BR
\{ $mc->print_q() \}
\{ $mc->print_a() \}

END_TEXT

ANS(radio_cmp($mc->correct_ans));

@reason = ("The graph is concave down when \( x < 0 \) since the slope is becoming less positive as $BITALIC x $EITALIC increases, but it becomes concave up when \( x > 0 \) since the slope is becoming more positive as $BITALIC x $EITALIC increases.  Therefore this graph is both concave up and concave down.",
"The graph is concave up when \( x < 0 \) since the slope is becoming less negative as $BITALIC x $EITALIC increases, but it becomes concave down when \( x > 0 \) since the slope is becoming more negative as $BITALIC x $EITALIC increases.  Therefore this graph is both concave up and concave down.",
"The graph is concave down since when \( x < 0 \) the slope is becoming less positive  as $BITALIC x $EITALIC increases, and when \( x > 0 \) the slope is becoming more negative  as $BITALIC x $EITALIC increases.  Since the slope is always decreasing as $BITALIC x $EITALIC increases, the graph is always concave down.",
"The graph is concave up since when \( x < 0 \) the slope is becoming less negative  as $BITALIC x $EITALIC increases, and when \( x > 0 \) the slope is becoming more positive  as $BITALIC x $EITALIC increases.  Since the slope is always increasing as $BITALIC x $EITALIC increases, the graph is always concave up.");

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR
$BBOLD SOLUTION $EBOLD
$BR
$reason[$j]
$BR
END_SOLUTION

ENDDOCUMENT();   # This should be the last executable line in the problem.