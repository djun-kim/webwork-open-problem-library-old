DOCUMENT();

loadMacros("PG.pl", 
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
#           "PGstandard.pl",
#           "extraAnswerEvaluators.pl", 
#           "PGauxiliaryFunctions.pl", 
#           "PGgraphmacros.pl", 
           "MathObjects.pl", 
#           "PGchoicemacros.pl", 
          # "parserNumberWithUnits.pl",
          # "parserFormulaWithUnits.pl", 
          # "parserFormulaUpToConstant.pl",
"PGcourse.pl",
"parserImplicitPlane.pl",
"AnswerFormatHelp.pl",
          );

TEXT(beginproblem());


$showPartialCorrectAnswers = 1;

Context("ImplicitPlane");
Context()->variables->are(x=>"Real",y=>"Real");

$b = random(2,8,1);
$h = random(9,15,1);
$a = random(3,15,2);
$k = non_zero_random(-16,16,2);
if ($k > 0){$disp = $k, $sign = "+"} else {$disp = -$k; $sign = "-"};
$period = "(2 pi)/$b";
$f = "y = $a \sin{ \big( $b(t+$h) \big) } $sign $disp"; 

BEGIN_TEXT
Suppose \( $f \).  In your answers, enter ${BITALIC}pi${EITALIC} for \( \pi \). 
$BR
$BR
(a) The midline of the graph is the line with equation \{ ans_rule(15) \}
\{ AnswerFormatHelp("equations") \}
$BR
$BR
(b) The amplitude of the graph is \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
(c) The period of the graph is \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT

ANS( ImplicitPlane("y=$k")->cmp() );
ANS( Compute("$a")->cmp() );
ANS( Compute("$period")->cmp() );

#ANS( num_cmp( $k ) );
#ANS( num_cmp( $a ) );
#ANS( num_cmp($period) );

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
a)  The midline is \( y = $k \).
$BR $SPACE $BR
b) The amplitude is \( $a \).
$BR $SPACE $BR
c) The period is \( \frac{2 \pi}{$b} \)

END_SOLUTION


ENDDOCUMENT();