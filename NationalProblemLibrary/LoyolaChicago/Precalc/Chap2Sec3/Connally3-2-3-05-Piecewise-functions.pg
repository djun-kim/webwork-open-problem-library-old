DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextInequalities.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities");
Context()->variables->add(y=>"Real");

$a = random(2,5,1);
$b = random(6,9,1);

$f1 = Formula("x+$a");
$f2 = Formula("x^2 + $b");

$domain = Compute("-infinity < x < infinity");
$range = Compute("y<0 or y>=$b");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find the domain and range of 
\[
G(x) = 
\left\lbrace
\begin{array}{lcl}
$f1, && x < -$a, \\
$f2, && x \geq -$a.
\end{array}
\right.
\]
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($domain->cmp());
ANS($range->cmp());

ENDDOCUMENT();