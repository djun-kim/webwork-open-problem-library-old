## DBsubject('Precalculus')
## DBchapter('Polynomial And Rational Functions')
## DBsection('The Short-Run Behavior Of Polynomials')
## KEYWORDS('polynomial','zero','factor')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('9.3)
## Problem1('39')
## Author('Adam Spiegler')
## Institution('Loyola University Chicago')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGauxiliaryFunctions.pl",
           "extraAnswerEvaluators.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$m = non_zero_random(-18,18,2);
$b = non_zero_random(-9,9,1);

$frac = -$b/$m;


if ($frac > 0 ) {
   $explain = " \( y = $m x^2 + $b = 0 \) if  \( $m x^2 = -$b \), or when \( x^2 = \frac{-$b}{$m} \).  Thus the zeros are \( x = \pm \sqrt{\frac{-$b}{$m}} \)."}
else {
   $explain = " \( y = $m x^2 + $b = 0 \) if  \( $m x^2 = -$b \), or when \( x^2 = \frac{-$b}{$m} \) which has no real solutions.  Therefore \( y = 0 \) has no solutions."};

BEGIN_TEXT
Question 39:
$BR
$SPACE
$BR
Find the $BBOLD EXACT $EBOLD zero(s) (if any) of the function below.  If there is more than one zero, enter all of the zeros in a comma separated list.  Do not round your answers.  If there are no real solutions, enter $BBOLD NONE $EBOLD in the blank below.
$BR $SPACE $BR
\( \ \ \ \ \ \ y = $m x^2 + $b \)
$BR $SPACE $BR
\( \ \ x = \) \{ ans_rule(40) \}
$BR
END_TEXT

if ($frac > 0) {
  ANS(number_list_cmp( "sqrt(-$b/$m), -sqrt(-$b/$m)",tol=>'0.00000000001'));}
else {
  ANS(fun_cmp( "NONE", vars=>['N','O','E'] )); };


SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
$explain
$BR
END_SOLUTION

      
ENDDOCUMENT();