##################################
#  Initialization

DOCUMENT();       

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

#######################################
#  Setup
       
TEXT(beginproblem()); 

Context("Numeric");

$a = list_random(3,5,7,11);
$b = random(2,8,2);

# ($a x + $b)(x + $b)
$p2 = $a;
$p1 = $a * $b + $b;
$p0 = $b * $b;

#  tex strings
$x = "x";
$f = "y";
$func = Formula("$p2 x^2 + $p1 x + $p0")->reduce;

$answer = List(Compute("-$b/$a"),Compute("-$b"));


###########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find the zeros of \( $f = $func \).
If there is more than one zero or a zero is repeated, 
enter your answers as a comma separated list. 
If no (real) zeroes exist, enter ${BBOLD}NONE${EBOLD}.
$BR
$BR
The zeros are \( $x = \) 
\{ ans_rule(20) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;

########################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();