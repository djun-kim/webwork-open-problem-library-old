TEXT(beginproblem());

Context("Fraction-NoDecimals");

$showPartialCorrectAnswers = 1;

$i = random(0,1,1);
@n = ("0.25","0.75");
@a = ("pi/2","3*pi/2");

@disp = ("If we go around \( 0.25 \) times, we make one-fourth of a full rotation, which is $BR $SPACE $BR \( \frac{1}{4} \cdot 2 \pi = \frac{\pi}{2} \) radians.",
"If we go around \( 0.75 \) times, we make three-fourths of a full rotation, which is $BR $SPACE $BR \( \frac{3}{4} \cdot 2 \pi = \frac{3 \pi}{2} \) radians.");

BEGIN_TEXT
What angle (in radians) corresponds to $n[$i] rotations around the unit circle?
$BR
$BR
\{ ans_rule(15) \} radians  (Give an exact answer as a fraction, not a decimal approximation.)
\{ AnswerFormatHelp("angles") \}
END_TEXT


ANS( Compute("$a[$i]")->cmp() );

#ANS( num_cmp( $a[$i] ) );

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
@disp[$i]
$BR

END_SOLUTION


