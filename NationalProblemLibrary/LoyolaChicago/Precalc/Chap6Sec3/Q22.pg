DOCUMENT();

loadMacros("PG.pl", 
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
#           "PGstandard.pl",
#           "extraAnswerEvaluators.pl", 
#           "PGauxiliaryFunctions.pl", 
#           "PGgraphmacros.pl", 
           "MathObjects.pl", 
#           "PGchoicemacros.pl", 
          # "parserNumberWithUnits.pl",
          # "parserFormulaWithUnits.pl", 
          # "parserFormulaUpToConstant.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
          );

TEXT(beginproblem());

Context("Fraction-NoDecimals");

$radius = random(2,9,1);

$select = random(0,2,1);

if ($select == 0) {
  $angle = Formula("45/pi");
  $answer = Compute("$radius / 4");  
} elsif ($select == 1) {
  $angle = Formula("90/pi");
  $answer = Compute("$radius / 2");
} else {
  $angle = Formula("135/pi");
  $answer = Compute("3*$radius / 4");
}

Context()->texStrings;
BEGIN_TEXT
Find the length of an arc on a circle of radius \( $radius \) corresponding to an angle of \( \displaystyle \left($angle\right)^{\circ} \). 
$BR
$BR
Arc length = \{ ans_rule(20) \} units.  (Give an exact answer as a fraction, not a decimal approximation.) 
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
The arc length is \( s = r \cdot \theta = $r $angle \cdot \frac{\pi}{180} = $answer \)
$BR
END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();