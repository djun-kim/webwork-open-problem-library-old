DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$P = random(1000,9000,1000);
$r = random(6,12,1);
$dec = $r/100;
$annual_b = 1+$dec;
$contin_b = round(exp($dec)*100000)/100000;
$contin = round(($contin_b - 1)*10000)/100;

BEGIN_TEXT
Question 9:
$BR $SPACE $BR
Find the effective annual rate if ${DOLLAR}$P is deposited at $r${PERCENT}
 is compounded continuously.  Round your answer to the nearest 0.01${PERCENT}.
$BR
$SPACE $SPACE $SPACE $SPACE $SPACE 
\{ ans_rule(10) \} $PERCENT

END_TEXT

ANS( num_cmp($contin,tol=>0.005) );


SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
\( P = P_0 e^{kt} = $P e^{$dec t} = $P b^t\approx $P($contin_b)^t \), so the effective annual yield is approximately $contin${PERCENT}.
$BR
END_SOLUTION
      
ENDDOCUMENT();   # This should be the last executable line in the problem.