$mc = new_multiple_choice();
$mc->qa(
"Suppose \( N = f(t) \) is the number of inches of
snow in the first \( t \) days of January.  
$BR
$BR
Which of the statements below best explains
the meaning of the ${BBOLD}INVERSE${EBOLD}
function \( f^{-1} \)?", 
"The days for which there are \( N \) inches of snow"
);
$mc->extra(
"The number of days until there are \( N \) inches of snow",
"The number of days it takes to accumulate \( N \) inches of snow",
"The number of inches of snow accumulated in \( t \) days",
);
$mc->makeLast("None of the above");


###############################
#  Main text

BEGIN_TEXT

\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT


