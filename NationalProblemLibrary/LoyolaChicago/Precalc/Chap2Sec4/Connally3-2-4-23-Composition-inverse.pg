$graph->lb('reset');
$graph->lb(new Label(1.85,0.25,"$xint",'black','right','top'));
$graph->lb(new Label(-0.15,3.15,"$yint",'black','right','top'));
$graph->lb(new Label(3,-.05,"x",'black','right','top'));
$graph->lb(new Label(-.1,3.75,"y",'black','right','top'));
$graph->lb(new Label(2,3,"y=f(x)",'black','right','top'));

plot_functions( $graph, $f); 

