Context("ImplicitPlane")->variables->are(x=>"Real",y=>"Real");


@eqn = ( "\( f(x) = e^x \)", "\( f(x) = e^{-x} \)", "\( f(x) = \ln{(x)} \)" );
@ans = (
ImplicitPlane("y=0"),
ImplicitPlane("y=0"),
