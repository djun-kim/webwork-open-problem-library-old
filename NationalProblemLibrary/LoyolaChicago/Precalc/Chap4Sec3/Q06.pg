## DBsubject('Precalculus')
## DBchapter('Logarithmic Functions')
## DBsection('The Logarithmic Functions')
## KEYWORDS('logarithms','log','ln','asymptote','graph of logarithms')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('4.3')
## Problem1('6')
## Author('Adam Spiegler and Paul Pearson')
## Institution('Loyola University Chicago and Fort Lewis College')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.

Context("Numeric");

$showPartialCorrectAnswers = 1;

@some = ( "\( \displaystyle \lim_{x \to \infty} e^x = \)",
          "\( \displaystyle \lim_{x \to - \infty} e^x = \)",
          "\( \displaystyle \lim_{x \to \infty} e^{-x} = \)",
          "\( \displaystyle \lim_{x \to - \infty} e^{-x} = \)" );
@some_lim = ("\( x \to \infty \)","\( x \to -\infty \)",
             "\( x \to \infty \)", "\( x \to -\infty \)");
@some_disp = ("\( \infty \)","0","0","\( \infnty \)");
@some_f = ("\( e^x \)","\( e^x \)","\( e^{-x} \)","\( e^{-x} \)");
    @some_ans = ("INFINITY","0","0","INFINITY");
$i = random(0,1,1);
$j = 2 + random(0,1,1);

@select = ( $some[$i], $some[$j] );
@sel_lim = ( $some_lim[$i], $some_lim[$j] );
@sel_disp = ( $some_disp[$i], $some_disp[$j] );
@sel_f = ( $some_f[$i], $some_f[$j] );
@select_ans = ($some_ans[$i], $some_ans[$j]);

@other = ( "\( \displaystyle \lim_{x \to 0^+} \ln{(x)} = \)", 
           "\( \displaystyle \lim_{x \to \infty} \ln{(x)} = \)" );
@other_lim = ("\( x \to 0^+ \)","\( x \to \infty \)");
@other_f = ("\( \ln{(x)} \)","\( \ln{(x)} \)");
@other_disp = ("\( - \infty \)","\( \infty \)");
@other_ans = ("- INFINITY", "INFINITY");
$k = random(0,1,1);
$select[2] = $other[$k];
$select_ans[2] = $other_ans[$k];
$sel_f[2] = $other_f[$k];
$sel_disp[2] = $other_disp[$k];
$sel_lim[2] = $other_lim[$k];
@perm = NchooseK(3,3);
@eqn = @select[@perm];
@ans = @select_ans[@perm];
@f = @sel_f[@perm];
@lim = @sel_lim[@perm];
@disp = @sel_disp[@perm];


BEGIN_TEXT

Find the value (if any) of the following.  If the limit goes to \( \infty \) or \( - \infty \), then enter ${BITALIC}INFINITY${EITALIC} or ${BITALIC}-INFINITY${EITALIC} respectively.  Otherwise enter the numerical value of the limit.
$BR
$BR
(a) $eqn[0] \{ ans_rule(15) \}
\{ AnswerFormatHelp("limits") \}
$BR
$BR
(b) $eqn[1] \{ ans_rule(15) \}
\{ AnswerFormatHelp("limits") \}
$BR
$BR
(c) $eqn[2] \{ ans_rule(15) \}
\{ AnswerFormatHelp("limits") \}

END_TEXT

ANS( Compute("$ans[0]")->cmp() );
ANS( Compute("$ans[1]")->cmp() );
ANS( Compute("$ans[2]")->cmp() );

#ANS( fun_cmp( $ans[0], vars=>['I','N','F','T','Y']) );
#ANS( fun_cmp( $ans[1], vars=>['I','N','F','T','Y']) );
#ANS( fun_cmp( $ans[2], vars=>['I','N','F','T','Y']) );

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
a) $f[0] goes to $disp[0] as $lim[0] $BR $SPACE $BR
b) $f[1] goes to $disp[1] as $lim[1] $BR $SPACE $BR
c) $f[2] goes to $disp[2] as $lim[2] $BR $SPACE $BR
$BR
END_SOLUTION
      
ENDDOCUMENT();   # This should be the last executable line in the problem.