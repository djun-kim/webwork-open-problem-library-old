DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$select = random(0,1,1);
if ($select == 0) {
  $a1 = random(3,5,2);
  $b1 = 2**($a1);
  $c1 = $a1 + 1;
  $answera = Real("2*$b1");
} else {
  $a1 = random(2,3,1);
  $b1 = 3**($a1);
  $c1 = $a1 + 1;
  $answera = Real("3*$b1");
}

$a2 = random(4,5,1);
$aa2 = $a2 * $a2;
$answerb = Real("$a2**3");

$a3 = random(5,7,1);
$answerc = Real("10**($a3)");

$a4 = random(-5,-3,1);
$b4 = $a4**3;
$answerd = Real("$a4");

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the following without a calculator.  
Simplify your answers as much as possible.
$BR
$BR
(a) \( $b1^{$c1/$a1} = \)
\{ans_rule(10)\}
$BR
$BR
(b) \( $aa2^{3/2} = \)
\{ans_rule(10)\}
$BR
$BR
(c) \( 100^{$a3 / 2} = \)
\{ans_rule(10)\}
$BR
$BR
(d) \( \sqrt[3]{$b4} = \)
\{ans_rule(10)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

#install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($answera->cmp());
ANS($answerb->cmp());
ANS($answerc->cmp());
ANS($answerd->cmp());

ENDDOCUMENT();  