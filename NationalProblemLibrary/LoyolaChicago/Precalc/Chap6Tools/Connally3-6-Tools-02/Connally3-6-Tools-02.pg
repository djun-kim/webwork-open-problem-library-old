####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGcourse.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"alignedChoice.pl",
"unionTables.pl",
);

TEXT(beginproblem());


####################################
#  Setup

$refreshCachedImages=1;

Context("Fraction-NoDecimals");

# Pythagorean triples
@xyz = (
3,4,5,
8,6,10,
5,12,13,
15,8,17,
12,16,20,
7,24,25,
24,10,26,
21,20,29,
16,30,34,  
9,40,41
);

$i = random(0,9,1);

$x = @xyz[$i];
$y = @xyz[$i+1];
$z = @xyz[$i+2];

$cost = Fraction("$x","$z");
$sint = Fraction("$y","$z");
$tant = Fraction("$y","$x");
$cosp = Fraction("$y","$z");
$sinp = Fraction("$x","$z");
$tanp = Fraction("$x","$y");

Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, numbered=>1, tex_spacing=>"3pt");
$al->qa(
  "\(\cos(\theta)\)", Real($cost->eval)->cmp,
  "\(\sin(\theta)\)", Real($sint->eval)->cmp,
  "\(\tan(\theta)\)", Real($tant->eval)->cmp,
  "\(\cos(\phi)\)", Real($cosp->eval)->cmp,
  "\(\sin(\phi)\)", Real($sinp->eval)->cmp,
  "\(\tan(\phi)\)", Real($tanp->eval)->cmp,
);
Context()->normalStrings;


Context()->functions->disable("All");

####################################
#  Main Text

BEGIN_TEXT
\{
ColumnTable(
"Suppose \( x = $x, y = $y \) and \( z = $z \) in the figure, which is not drawn to scale.  Find the following.  Enter exact answers as fractions, not decimal approximations.".$SPACE.AnswerFormatHelp("fractions").
$PAR.
$al->print_q(),
$BCENTER.
image( "right-triangle.png", width=>290,height=>220,tex_size=>400 ).
$BR.
"(Not drawn to scale)".
$ECENTER,
indent => 0, separation => 30, valign => "TOP"
)
\}
END_TEXT

###################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

ENDDOCUMENT();
