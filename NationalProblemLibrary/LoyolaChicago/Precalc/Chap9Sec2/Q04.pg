## DBsubject('Precalculus')
## DBchapter('Polynomial And Rational Functions')
## DBsection('Polynomial Functions')
## KEYWORDS('polynomial','zeros','long-run behavior','degree')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('9.2)
## Problem1('4')
## Author('Adam Spiegler and Paul Pearson')
## Institution('Loyola University Chicago and Fort Lewis College')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
#           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "PGauxiliaryFunctions.pl",
#           "extraAnswerEvaluators.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$i = random(0,1,1);
$a2 = random(2,9,1);
$a1 = random(2,9,1);
$a0 = random(2,9,1);

$p2 = random(4,5,1);
$p1 = random(2,3,1);

@eqn = ("$a2 x^{$p2} - $a1 x^{$p1} + $a0 e^x",
        "$a2 x^{$p2} - $a1 x^{$p1} + ($a0 e) x");
@ans = ("NONE","$p2");
@explain = ("This is not a polynomial because \( $a0 e^x \) is not a power 
             function.",
            "This is a polynomial of degree $p2.");

BEGIN_TEXT
Is the function below a polynomial?  If it is, enter its degree in the blank.  If not, enter ${BITALIC}NONE.${EITALIC}
$BR
$BR
\( f(x) = $eqn[$i] \ \) has degree \{ ans_rule(10) \} 
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
\( g(x) = $eqn[$i-1] \ \) has degree \{ ans_rule(10) \} 
\{ AnswerFormatHelp("numbers") \}
END_TEXT

ANS( Compute("$ans[$i]")->cmp() );
ANS( Compute("$ans[$i-1]")->cmp() );

#ANS( fun_cmp( $ans[$i], vars=>['N','O','E'] ));

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
$explain[$i]
$BR

END_SOLUTION

      

COMMENT('MathObject version');
ENDDOCUMENT();