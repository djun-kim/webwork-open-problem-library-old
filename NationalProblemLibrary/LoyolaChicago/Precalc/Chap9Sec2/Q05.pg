DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
#           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "PGauxiliaryFunctions.pl",
#           "extraAnswerEvaluators.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.

Context("Numeric");

$showPartialCorrectAnswers = 1;

foreach $i (0..5) {
  $a[$i] = random(2,9,1);
}

$odd = random(5,9,2);
$even = random(6,10,2);
$d = random(4,8,1);

BEGIN_TEXT
Are the functions below polynomials?  If they are, enter their degree.  If not, enter ${BITALIC}NONE.${EITALIC}
$BR
$BR
\( y = - $a[3] + $a[4] x^{10} - $a[5] \sqrt{x^{$odd}} \) has degree \{ ans_rule(10) \} 
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
\( y = \sqrt{$a[3]} x^{$d} + $a[1] x^3 \) has degree  \{ ans_rule(10) \} 
\{ AnswerFormatHelp("numbers") \}
END_TEXT

ANS( Compute("NONE")->cmp() );
ANS( Compute("$d")->cmp() );
      

COMMENT('MathObject version');
ENDDOCUMENT();