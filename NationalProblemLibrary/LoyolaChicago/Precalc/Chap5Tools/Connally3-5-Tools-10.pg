####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real");

$var = "x";

$a = random(2,4,1);
$b = $a+1;

$s = random(-1,1,2);

$h = $s * random(3,9,1);
$a2h = $a * 2 * $h;
$ahh = $a * $h**2;

$expr = Formula("$a x^2 + $a2h x - $b")->reduce;

$ansa = Formula("$a");
$ansb = Formula("x+$h")->reduce;
$ansc = Formula("-$ahh-$b")->reduce;

####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
Complete the square by writing \( $expr \) in the form
\( a($var-h)^2+k \).  Note: the numbers \( a,  h \) and \( k \) 
can be positive or negative.
$BR
$BR
\( $expr = \) 
\{ ans_rule(5) \}
\( \cdot \big( \)
\{ ans_rule(10) \}
\( \big)^2 +  \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \} 
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS( $ansa->cmp() );
ANS( $ansb->cmp() );
ANS( $ansc->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
