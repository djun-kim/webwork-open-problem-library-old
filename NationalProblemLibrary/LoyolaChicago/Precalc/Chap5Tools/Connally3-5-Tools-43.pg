####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real");

$var = "x";

$a = random(2,5,1);
$b = random(2,7,1);
while ($a >= $b) { $b = random(6,7,1); }

$bma = $b - $a;
$ab = $a * $b;

# (x + a)(x - b) = 0

$eqn = "x^2 - $bma x = $ab";

$ans1 = Compute("-$a");
$ans2 = Compute("$b");

####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
Solve \( $eqn \) by factoring, completing the square, or the quadratic formula.  If there is more than one correct answer, enter your answers as a comma separated list.    If there are no answers, enter ${BITALIC}NONE.${EITALIC}
$BR
$BR
\( $var = \) \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \} 
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( List($ans1,$ans2)->cmp() );

ENDDOCUMENT();
