DOCUMENT();

loadMacros("PG.pl", 
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
#           "PGstandard.pl",
#           "extraAnswerEvaluators.pl", 
           "PGauxiliaryFunctions.pl", 
#           "PGgraphmacros.pl", 
           "MathObjects.pl", 
#           "PGchoicemacros.pl", 
          # "parserNumberWithUnits.pl",
          # "parserFormulaWithUnits.pl", 
          # "parserFormulaUpToConstant.pl",
           "PGcourse.pl",
"AnswerFormatHelp.pl",
          );

TEXT(beginproblem());

Context("Numeric");

$showPartialCorrectAnswers = 1;

$top = random(1,7,2);
$bottom = random($top+1,10,2);
$value = "$top/$bottom";

$eqn = "\sin(\theta) = \frac{$top}{$bottom}";
$ans = Compute("arcsin($top/$bottom)"),
 

BEGIN_TEXT
If possible, find a solution to \( \displaystyle $eqn \).  If no solution exists, enter ${BITALIC}NONE.${EITALIC}  
$BR
$BR
\( \theta = \) \{ ans_rule(20) \} radians 
\{ AnswerFormatHelp("angles") \}
END_TEXT

sub mycheck {
  my ($correct, $student, $ansHash) = @_;
  return sin($student) == $top/$bottom;
}

ANS($ans->cmp( checker=>~~&mycheck ) );

#ANS(num_cmp( $ans,tol=>0.001) );

$rounded = round($ans*10000)/10000;

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
We use the inverse sine function on a calculator to get \( \theta = \arcsin{($top / $bottom)} \approx $rounded \). 
$BR
END_SOLUTION


COMMENT('MathObject version');
