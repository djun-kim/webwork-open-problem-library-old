# DESCRIPTION
# Problem from Functions Modeling Change, Connally et al., 3rd ed.
# ENDDESCRIPTION

## DBsubject('Precalculus')
## DBchapter('Trigonometric Functions')
## DBsection('Inverse Trigonometric Functions')
## KEYWORDS('arctan','arcsin','arccos','reference angle')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('6.7')
## Problem1('7')
## Author('Paul Pearson')
## Institution('Fort Lewis College')

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl", 
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Fraction-NoDecimals");
Context()->flags->set(reduceConstants=>0);
Context()->flags->set(reduceConstantFunctions=>0);


$func = "\cos"; # tex

$i = random(0,5,1);

@values = (
"\frac{\sqrt{3}}{2}","\frac{\sqrt{2}}{2}","\frac{1}{2}",
"-\frac{\sqrt{3}}{2}","-\frac{\sqrt{2}}{2}","-\frac{1}{2}"
);

if ($i == 0) {
  $answer = List(Compute("pi/6"),Compute("11pi/6"));
} elsif ($i == 1) {
  $answer = List(Compute("pi/4"),Compute("7pi/4"));
} elsif ($i == 2) {
  $answer = List(Compute("pi/3"),Compute("5pi/3"));
} elsif ($i == 3) {  
  $answer = List(Compute("5pi/6"),Compute("7pi/6"));
} elsif ($i == 4) {
  $answer = List(Compute("3pi/4"),Compute("5pi/4"));
} else {
  $answer = List(Compute("2pi/3"),Compute("4pi/3"));
}


Context()->functions->disable("All");
Context()->functions->enable("sqrt");

Context()->texStrings;
BEGIN_TEXT
Without using a calculator, find all solutions to 
\( \displaystyle $func(\theta) = $values[$i] \) in the interval
\( 0 \leq \theta \leq 2\pi \).  If there is more than
one answer, enter your answers as a comma separated list.  
Your answers should be exact values (given as fractions, 
not decimal approximations).
$BR
$BR
\( \theta \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("angles") \}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );

ENDDOCUMENT();
