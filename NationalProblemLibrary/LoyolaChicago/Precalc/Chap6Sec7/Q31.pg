          # "parserNumberWithUnits.pl",
          # "parserFormulaWithUnits.pl", 
          # "parserFormulaUpToConstant.pl",
           "PGcourse.pl",
"AnswerFormatHelp.pl",
          );

TEXT(beginproblem());

Context("Numeric");

$showPartialCorrectAnswers = 1;

$k = random(3,9,1);
$value = random(1,$k,1);

$ans1 = asin($value/($k+1));
$ans2 = pi - $ans1;
$final = "$ans1, $ans2";

BEGIN_TEXT
Find all solutions to the equation 
\( \displaystyle $k \sin(x) = $value - \sin(x) \) 
in the interval \( 0 \leq x \leq 2 \pi \).  If there is more than one answer, enter your answers as a comma separated list.
$BR
$BR
\( x = \) \{ ans_rule(30) \} 
\{ AnswerFormatHelp("numbers") \}
END_TEXT

ANS( List(Compute("$ans1"),Compute("$ans2"))->cmp() );

#ANS( number_list_cmp( $final ,tol=>0.001) );

$bot = $k+1;
$rounded = round($ans1*10000)/10000;
$rd2 = round($ans2*10000)/10000;

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
Collecting the \(\sin{(x)}\) terms on the left gives
$BR $SPACE $BR
\( \begin{array}{rl}
$k \sin{(x)} &= $value - \sin{(x)} \\
$bot \sin{( x )} &= $value \\
\sin{( x)} &= \frac{$value}{$bot} \\
x &= \arcsin{($value/$bot)} \approx $rounded 
\end{array} \)
$BR $SPACE $BR
A graph of \(\sin{(x)} \) shows the second solution is in the second quadrant where \( x = \pi - \arcsin{($value/$bot)} \approx $rd2 \).
$BR
END_SOLUTION

      

COMMENT('MathObject version');
