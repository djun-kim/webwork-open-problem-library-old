ANS(num_cmp( $j[2]));
ANS(num_cmp( $j[3]));
ANS(num_cmp( $j[4]));
ANS(num_cmp( $j[5]));
ANS(num_cmp( $k[0]));
ANS(num_cmp( $k[1]));
ANS(num_cmp( $k[2]));
ANS(num_cmp( $k[3]));
ANS(num_cmp( $k[4]));
ANS(num_cmp( $k[5]));
