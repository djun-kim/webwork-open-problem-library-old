##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->add(a=>"Real",b=>"Real",c=>"Real",r=>"Real",s=>"Real",t=>"Real");

$select = random(0,2,1);

if ($select == 0) {
$h = Formula("a x^2 + b x + c");
$answer = Formula("c");
} elsif ($select == 1) {
$h = Formula("c x^2 + b x + a");
$answer = Formula("a");
} else {
$h = Formula("r x^2 + s x + t");
$answer = Formula("t");
}

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

If \( h(x) = $h \), then \( h(0) = \) 
\{ans_rule(20)\}
\{ AnswerFormatHelp("Formula") \}

END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();