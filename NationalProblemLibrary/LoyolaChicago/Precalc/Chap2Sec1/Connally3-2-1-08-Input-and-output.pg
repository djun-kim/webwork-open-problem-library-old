##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->add(t=>"Real");
Context()->flags->set(tolerance=>0, tolType=>"absolute");

$a = random(3,6,1);
$aa = $a * $a;

$f = Formula("t**2 - $aa");

$yint = Real("-($aa)");

$roots = List(Real("-($a)"),Real("$a"));

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \( f(t) = $f \). 
$BR
$BR
(a) \( f(0) = \) 
\{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}
$BR
$BR
(b) Solve \( f(t) = 0  \).  
$BR
\( t = \) \{ans_rule(20)\} 
\{ AnswerFormatHelp("Number") \}

END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($yint->cmp());
ANS($roots->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();