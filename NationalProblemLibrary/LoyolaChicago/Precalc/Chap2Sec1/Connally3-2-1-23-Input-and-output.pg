##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,6,1);
$c = random(1,5,1);

$f = Formula("$a * x**2 + x + $c");

$answer1 = $f->eval(x=>-1);
$answer2 = -1*($f->eval(x=>1));

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT


Suppose \( p(x) = $f \).
$PAR
(a) Simplify as much as possible: \( p(-1) = \)
\{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}
$PAR
(b) Simplify as much as possible: \( -p(1) =  \)
\{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}
$PAR
(c) Are \( p(-1) \) and \( p(1) \) equal?
\{ pop_up_list(['?',"Yes","No"]) \}

END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer1->cmp());
ANS($answer2->cmp());
ANS(str_cmp("No"));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
(a) \(p(-1) = $a(-1)^2 + (-1) + $c = $answer1\).
$PAR
(b) \(-p(1) = -($a(1)^2 + (1) + $c) = $answer2\).
$PAR
(c) No, these are not equal.

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
