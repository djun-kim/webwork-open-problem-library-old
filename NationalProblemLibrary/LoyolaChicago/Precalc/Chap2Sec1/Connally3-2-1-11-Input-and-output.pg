##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Fraction-NoDecimals");
Context()->operators->undefine('+','-','*','**','^');

$a = random(-6,-3,1);
$b = random(-2,2,4);
$ab = $a * $b;
$den = 1 - $a**2;

$answer = Fraction($ab, $den);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \( \displaystyle f(x) = \frac{$b x}{1 - x^2} \).
Find \( f($a) \).  Simplify your answer as much as possible.
$BR
$BR
\{ans_rule(20)\} 
\{ AnswerFormatHelp('Reduced-Fraction') \}


END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp(studentsMustReduceFractions=>1,strictFractions=>1,strictMinus=>1,strictMultiplication=>1));

ENDDOCUMENT();  