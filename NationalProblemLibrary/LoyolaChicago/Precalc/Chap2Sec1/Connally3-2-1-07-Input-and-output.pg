##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->add(t=>"Real");
Context()->flags->set(tolerance=>0, tolType=>"absolute");



$a = random(2,3,4);
$b = $a - 1;

$f = Formula("$a*x+$b");

$yint = Real("$b");

$roots = List(Real("-$b/$a"));

Context()->operators->undefine("+","-","*","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \( f(x) = $f \). 
$BR
$BR
(a) \( f(0) = \) 
\{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}
$BR
$BR
(b) Solve \( f(x) = 0  \).  
$BR
\( x = \) \{ans_rule(20)\} 
\{ AnswerFormatHelp("Number") \}

END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($yint->cmp());
ANS($roots->cmp());

ENDDOCUMENT();  