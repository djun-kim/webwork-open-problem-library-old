##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->add(t=>"Real");
Context()->flags->set(tolerance=>0, tolType=>"absolute");



$a = random(2,4,1);
$b = $a + 1;
$apb = $a + $b;
$ab = $a * $b;

$g = Formula("t**2 - $apb * t + $ab");

$yint = Real("$ab");

$roots = List(Real("$a"),Real("$b"));

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \( g(t) = $g \). 
$BR
$BR
(a) \( g(0) = \) 
\{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}
$BR
$BR
(b) Solve \( g(t) = 0  \).  
$BR
\( t = \) \{ans_rule(20)\} 
\{ AnswerFormatHelp("Number") \}

END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($yint->cmp());
ANS($roots->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();