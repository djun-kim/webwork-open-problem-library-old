## DBsubject('Precalculus')
## DBchapter('Compositions, Inverses, And Combinations Of Functions')
## DBsection('Composition Of Functions')
## KEYWORDS('composition','decomposition','function')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('8.1')
## Problem1('46')
## Author('Adam Spiegler')
## Institution('Loyola University Chicago')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGauxiliaryFunctions.pl",
           "extraAnswerEvaluators.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$p = random(2,5,1);
$top = random(1,7,2);
$bot = random(2,8,2);
$diff = $bot-$top;

$num = "$top + x^{$p}";
$den = "$bot + x^{$p}";

$ans1 = "($top + x)/($bot + x)";
$ans2 = "x/($diff+x)";
 
BEGIN_TEXT
Question 46:
$BR
$SPACE
$BR
Decompose the function below into \( u \left( v(x) \right) \).  In each part, based on the function \( v(x) \) given, find the corresponding \( u(x) \) needed to decompose the function.
$BR
$BCENTER
\( \displaystyle y = \frac{$num}{$den} \)
$ECENTER
$BR
a) \( \ v(x) = x^{$p}  \), \( \ \ u(x) = \) \{ ans_rule(30) \} $BR $SPACE $BR
b) \( \ v(x) = x^{$p} + $top  \), \( \ \ u(x) = \) \{ ans_rule(30) \} $BR
END_TEXT

ANS(fun_cmp( $ans1, vars=>'x' ) );
ANS(fun_cmp( $ans2, vars=>'x' ) );


SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR
a) $SPACE Since \( \ v(x)=x^{$p} \ \) and \( \ y \ \) can be written \( \ \displaystyle \frac{$top+(x^{$p})}{$bot+(x^{$p})} \), we take \( \ \displaystyle u(x)=\frac{$top+x}{$bot+x} \).
$BR $SPACE $BR
b) $SPACE Since \( \ v(x)=x^{$p}+$top \ \) and \( \ y \ \) can be written \( \ \displaystyle \frac{$top+x^{$p}}{$diff+ \left( $top+x^{$p} \right)} \ \), we take \( \ \displaystyle u(x)=\frac {x}{$diff+x} \).
$BR 
END_SOLUTION
      
ENDDOCUMENT();