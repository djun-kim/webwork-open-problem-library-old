## Author('Adam Spiegler')
## Institution('Loyola University Chicago')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGauxiliaryFunctions.pl",
           "extraAnswerEvaluators.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;


$ymin = -1;
$ymax = 5;
$xmin = -1;
$xmax = 5;

########################################################
$f[0] = "2x for x in <0,2> using color:blue and weight:2";
$f[1] = "-2x + 8 for x in <2,4> using color:blue and weight:2";
$g[0] = "-x+4 for x in <0,4> using color:red and weight:2";
########################################################
$graph[0] = init_graph(-.25,-.25,4.25,4.25,'axes'=>[0,0]);
$graph[$j]->lb('reset');
for ($i = 1; $i <=4; $i++){
    $graph[0]->lb(new Label($i,-.05,$i,'black','center','top'));
    $graph[0]->lb(new Label(-.05,$i,$i,'black','right','middle'));
    $graph[0]->moveTo($i,0); 
    $graph[0]->lineTo($i,0.05,'black');
    $graph[0]->moveTo(0,$i); 
    $graph[0]->lineTo(0.05,$i,'black')};

$graph[0] ->lb(new Label(2,1.6,"g(x)",'red','center','top'));
$graph[0] ->lb(new Label(2,4.2,"f(x)",'blue','center','top'));

plot_functions( $graph[0], $f[0], $f[1], $g[0] );
$fig = image(insertGraph($graph[0]),'width'=>250,'height'=>250,'tex_size'=>500);
###############################################################

$g[0] = 4;
$g[1] = 3;
$g[2] = 2;
$g[3] = 1;
$g[4] = 0;

$f[0] = 0;
$f[1] = 2;
$f[2] = 4;
$f[3] = 2;
$f[4] = 0;

$a = non_zero_random(-1,3,1) + 1;
$c = non_zero_random(-2,2,1) + 2;

if ($a == $c) { $a = 2; $c = 1};

$ans1 = $f[$f[$a]];
$ans2 = $g[$g[$a]];
$ans3 = $f[$g[$c]];
$ans4 = $g[$f[$c]];

BEGIN_TEXT
Question 25:
$BR
$SPACE
$BR
Use graph below to calculate the following:
$BR $SPACE $BR
a) \( \ \ f(f($a)) = \) \{ ans_rule(5) \} $BR $SPACE $BR
b) \( \ \ g(g($a)) = \) \{ ans_rule(5) \} $BR $SPACE $BR
c) \( \ \ f(g($c)) = \) \{ ans_rule(5) \} $BR $SPACE $BR
d) \( \ \ g(f($c)) = \) \{ ans_rule(5) \} $BR
$BR
$SPACE
$BR
$BCENTER
$fig
$BR
(click on the graph to enlarge)
$ECENTER
$BR
END_TEXT

ANS(num_cmp( $ans1 ) );
ANS(num_cmp( $ans2 ) );
ANS(num_cmp( $ans3 ) );
ANS(num_cmp( $ans4 ) );


SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR
a) $SPACE We have \( \ f($a) = $f[$a] \), so \( \ f(f($a)) = f($f[$a]) = $ans1 \). 
$BR $SPACE $BR 
b) $SPACE We have \( \ g($a)=$g[$a] \),  so \( \ g(g($a))=g($g[$a])=$ans2 \).
$BR $SPACE $BR
c) $SPACE We have \( \ g($c)=$g[$c] \), so \( \ f(g($c))=f($g[$c])=$ans3 \).
$BR $SPACE $BR
d) $SPACE We have \( \ f($c)=$f[$c] \), so \( \ g(f($c))=g($f[$c])=$ans4 \).
$BR
END_SOLUTION
      
ENDDOCUMENT();