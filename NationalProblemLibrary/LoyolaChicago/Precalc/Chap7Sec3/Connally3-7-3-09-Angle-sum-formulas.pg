####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PGstandard.pl",
"PGcourse.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric")->variables->are(t=>"Real");

$select = random(0,2,1);

if ($select == 0) {

  $angle = 105;
  $hint = "\( 105^\circ = 60^\circ + 45^\circ \)";
  $fraction = "\frac{ \sqrt{a} ( 1 + \sqrt{b} ) }{ 4 }";
  $answera = Real("2");
  $answerb = Real("3");

} elsif ($select == 1) {

  $angle = 255;
  $hint = "\( 255^\circ = 210^\circ + 45^\circ \)";
  $fraction = "- \frac{ \sqrt{a} ( \sqrt{b} + 1 ) }{ 4 }";
  $answera = Real("2");
  $answerb = Real("3");

} else {

  $angle = 285;
  $hint = "\( 285^\circ = 240^\circ + 45^\circ \)";
  $fraction = "- \frac{ \sqrt{a} ( \sqrt{b} + 1 ) }{ 4 }";
  $answera = Real("2");
  $answerb = Real("3");

}


####################################
#  Main Text

BEGIN_TEXT
Using sum or difference formulas, find the exact
value of \( \sin($angle^{\circ}) \).  Express
your answer in the form \( \displaystyle 
\sin($angle^{\circ}) = $fraction \) for some 
numbers \( a \) and \( b \). 
$BR
$BR
\( a = \) \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
\( b = \) \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT

HINT(EV3(<<'END_HINT'));
$hint
END_HINT


###################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answera->cmp() );
ANS($answerb->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
