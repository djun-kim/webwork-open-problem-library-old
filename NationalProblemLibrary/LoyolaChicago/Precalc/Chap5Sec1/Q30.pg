## DBsubject('Precalculus')
## DBchapter('Transformations of Functions and Their Graphs')
## DBsection('Vertical and Horizontal Shifts')
## KEYWORDS('transformations','shifts','translations','graph')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('5.1')
## Problem1('30')
## Author('Adam Spiegler and Paul Pearson')
## Institution('Loyola University Chicago and Fort Lewis College')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
           "parserPopUp.pl",
"MathObjects.pl",
           );
       
TEXT(beginproblem()); # standard preamble to each problem.

Context("Numeric");

$showPartialCorrectAnswers = 0;

$i = random(0,1,1);
$j = random(0,1,1);
@sign = ("+","-");

$h = random(3,9,2);
$k = random(2,8,2);

if ($i == 0) { $ans1 = "right"; $wrong1 = "left" } 
        else { $ans1 = "left"; $wrong1 = "right" };
if ($j == 0) { $ans3 = "down"; $wrong3 = "up" } 
        else { $ans3 = "up"; $wrong3 = "down" };

$popup1 = PopUp(["?","left","right"],$ans1);
$popup2 = PopUp(["?","up","down"],$ans3);



BEGIN_TEXT
Describe a series of shifts which translates the graph \( y = (x $sign[$i] $h )^3 $sign[$j] $k \) back onto the graph of \( y = x^3 \). 
$BR
$BR
Select the correct direction using the pulldown menus, and enter a number which identifies the amount of units for each shift.
$BR
$BR 
We must shift the graph to the \{ $popup1->menu() \} by \{ ans_rule(5) \} units, and shift the graph \{ $popup2->menu() \} \{ ans_rule(5) \} units.
END_TEXT

ANS($popup1->cmp() );
ANS(Real($h)->cmp() );
ANS($popup2->cmp() );
ANS(Real($k)->cmp() );


SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
To compensate for the $wrong3 shift, we shift back $ans3 $k units. To 
compensate for the $wrong1 shift by $h, we shift back to the $ans1 by $h units.
$BR
END_SOLUTION

      

COMMENT('MathObject version');
ENDDOCUMENT();