####################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl", 
"MathObjects.pl", 
"PGunion.pl",
"answerHints.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

####################################
#  Setup

Context("Numeric");
Context()->variables->set(x=>{limits=>[1,4]});

$a = random(3,9,2);
$b = random(2,8,2);
$c = random(2,9,1);

$fraction = "\frac{ \displaystyle \frac{1}{$a} x - \frac{1}{$b} }{ $c x }";

$ans1 = Compute("1/($a*$c)")->reduce;
$ans2 = Compute("1/($b*$c*x)")->reduce;


####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Split into a sum or difference of reduced fractions.
$BR
$BR
\( \displaystyle $fraction = \) 
\{ ans_rule(15) \}
-
\{ ans_rule(15) \}
END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $ans1->cmp() );
ANS( $ans2->cmp()
->withPostFilter(AnswerHints( 
  -$ans2 => "There is already a minus sign in front of the second answer box",
))
);


COMMENT('MathObject version');
ENDDOCUMENT();