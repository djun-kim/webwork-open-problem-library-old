DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextInequalities.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities");
Context()->variables->add(y=>"Real");

$a = random(2,5,1);
$b = $a + 1;
$c = random(3,5,1);
$cc = $c * $c;

$f = Formula("x^2 - $cc");

$A = -($cc);
$B = $f->eval(x=>$b)->reduce;

$answer = Compute("$A <= y <= $B");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Use a graph to find the range of the function 
\( y = f(x) = $f \) on the domain \( -$a \leq x \leq $b \).
$BR
$BR
Range: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();