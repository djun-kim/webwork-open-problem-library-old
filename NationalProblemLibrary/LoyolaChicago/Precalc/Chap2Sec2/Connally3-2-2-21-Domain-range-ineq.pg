DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextInequalities.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 

$showPartialCorrectAnswers = 1;


####################################
#  Setup

Context("Inequalities-Only")->variables->are(x=>"Real");

$a = random(3,7,1);

$f = Formula("x^2 + $a");

$domain = Compute("-infinity < x < infinity");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the domain and range of the function 
\( y = f(x) = $f \).
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
END_TEXT
Context()->normalStrings;

ANS($domain->cmp());


Context("Inequalities-Only")->variables->are(y=>"Real");

$range  = Compute("y >= $a");

Context()->texStrings;
BEGIN_TEXT
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation


ANS($range->cmp());


COMMENT('MathObject version.  Answers must be inequalities (not intervals).');
ENDDOCUMENT();