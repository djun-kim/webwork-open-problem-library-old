DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;


$a = non_zero_random(-18,18,2);
$k = random(1,9,2);
$b = non_zero_random(-5,5,1);
$j = random(0,1,1);
if ($j == 0) {$sign = "+"; $mid = $k} else {$sign = "-"; $mid = -$k};
if ($a > 0){$amp = $a} else {$amp = -$a};

$i = random(0,1,1);
@f = ("\( y = $a \cos{($b x)} $sign $k \)", "\( y = $a \sin{($b x)} $sign $k \)");

BEGIN_TEXT
Problem 2 Section 6.4
$BR
$SPACE
$BR
Find amplitude and midline of the following function:.
$BR
$BCENTER
$f[$i]
$ECENTER
$BR
a) The midline of the graph is \( y = \) \{ ans_rule(10) \}
$BR
b) The amplitude of the graph is \{ ans_rule(10) \}
END_TEXT

ANS( num_cmp( $mid ) );
ANS( num_cmp( $amp ) );

      
ENDDOCUMENT();   # This should be the last executable line in the problem.