DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"unionTables.pl",
);
       
TEXT(beginproblem()); # standard preamble to each problem.

$ml = new_match_list();
$ml->qa(
"The population 10 years before today.", "\( P(t-10) \)",
"Today's population plus 10 million immigrants.", "\( P(t) + 10 \)",
"Ten percent of the population we have today.", "\( 0.1 P(t) \)",
"The population after 10,000 people have emigrated.","\( P(t) - 0.1 \)",
);

# use pop-up-lists
$ml->rf_print_q(~~&pop_up_list_print_q);
# you may need to add more letters D=>"D", etc. 
$ml->ra_pop_up_list([No_answer=>"?","A"=>"A","B"=>"B","C"=>"C","D"=>"D","E"=>"E","F"=>"F","G"=>"G","H"=>"H"]);

$ml->choose(4);
$ml->extra(
"\( P(t) -10 \)", 
"\( P(t+10) \)", 
"\( P(t)/0.1 \)",
"\( P(t) + 0.1 \)", 
);
$ml->choose_extra(4);
  
#$ml->makeLast("None of the above");

BEGIN_TEXT
The US population in ${BBOLD}millions${EBOLD} is \( P(t) \) today, where time \( t \) is measured in years.  For each statement, choose one of the expressions A-H that represents it.
$PAR
\{ ColumnMatchTable($ml) \}
END_TEXT

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS(str_cmp( $ml->ra_correct_ans ) );

      
ENDDOCUMENT(); 




@eqn = ( 
"\( P(t-10) \)", 
"\( P(t) + 10 \)" , 
"\( 0.1 P(t) \)" ,
"\( P(t) - 0.1 \)", 
"\( P(t) -10 \)", 
"\( P(t+10) \)", 
"\( P(t)/0.1 \)",
"\( P(t) + 0.1 \)" 
);




@perm = NchooseK(8,8);
@eqn = @eqn[@perm];
@letter = ("A", "B", "C", "D", "E", "F","G", "H","I");

for ($k = 0; $k <= 3; $k++){
        for ($i = 0 ; $i <= 7; $i++){
              if ($perm[$i] == $k) {$correct[$k] = $letter[$i]; $i=7}
             }
     };

$skip = "$SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE ";  


$BR
$BCENTER
\{ begintable(2) \}
\{ row( ans_rule(6) , "The population 10 years before today." ) \}
\{ row( ans_rule(6) , "Today's population plus 10 million immigrants." ) \}
\{ row( ans_rule(6) , "Ten percent of the population we have today." ) \}
\{ row( ans_rule(6) , "The population after 10,000 people have emigrated." ) \}
\{ endtable() \}
$ECENTER
$BR
$SPACE
$BR
$BCENTER
\{ begintable(8) \}
\{ row( "A", $eqn[0], $skip, "B", $eqn[1], $skip, "C", $eqn[2] ) \}
\{ row( "D", $eqn[3], $skip, "E", $eqn[4], $skip, "F", $eqn[5] ) \}
\{ row( "G", $eqn[6], $skip, "H", $eqn[7], , , ) \}
\{ endtable() \}
$ECENTER

$BR


ANS(str_cmp($correct[0]));
ANS(str_cmp($correct[1]));
ANS(str_cmp($correct[2]));
ANS(str_cmp($correct[3]));

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
I is $correct[0] $BR
II is $correct[1] $BR
III is $correct[2] $BR
IV is $correct[3] $BR

