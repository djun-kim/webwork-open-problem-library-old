TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

for ($i = 0; $i <=6; $i++) { $x[$i] = 2*$i-6 };
@g = NchooseK(7,7);
for ($i = 0; $i <=6; $i++) {$g[$i] = 2*$g[$i]-6};

for ($k = 0; $k <= 6; $k++) {
   for ($j = 0; $j <= 6; $j++){
       if ($g[$j] == 2*$k-6 ) { $ans[$k] = 2*$j-6; $j=6 } } };

BEGIN_TEXT
