DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$p = 2;
$k = random(1,5,1);
$f = "\( \ f(x) = x^2 + $k \ \)";

$m = random(2,6,2);
$b = random(3,9,2);
$g = "\( \ g(x) = $m x + $b \ \)";

$fg_a = $m**2;
$fg_b = 2*$m*$b;
$fg_c = $b**2+$k;
$fg = "$fg_a x^2 + $fg_b x + $fg_c";


BEGIN_TEXT
Question 13:
$BR $SPACE $BR
Let $f  and $g .  Evaluate the following:
$BR
$SPACE
$BR
\( f \left( g(x) \right) = \) \{ ans_rule(30) \}

END_TEXT

ANS(fun_cmp( $fg,vars=>'x') );

$b_sq = $b**2;

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 

\( f(g(x)) = \big( g(x) \big)^2 + $k \) $BR
$SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE
 \( = \left( $m x + $b \right)^2 + $k \) $BR
$SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE
\( = \left( $fg_a x^2 + $fg_b x + $b_sq \right) + $k \) $BR
$SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE
\( = $fg_a x^2 + $fg_b x + $fg_c \)
$BR
END_SOLUTION

      
ENDDOCUMENT();