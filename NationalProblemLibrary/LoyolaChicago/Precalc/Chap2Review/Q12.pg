## DBsubject('Precalculus')
## DBchapter('Functions')
## DBsection('Review Exercises and Problems')
## KEYWORDS('functions','domain','range','inverse','function notation')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('2.Review')
## Problem1('12')
## Author('Adam Spiegler')
## Institution('Loyola University Chicago')

DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.

$showPartialCorrectAnswers = 1;

$b = random(1,7,2);
$m = random(2,6,2);

$a = random(2,4,1);
$ans1_b = $a*$b;
$ans1_m = $m*$a;
$ans1 = "$ans1_b - $ans1_m x";

$b_const = random(1,5,1);
$ans2_b = $b_const+$b;
$ans2 = "$ans2_b - $m x";

$c = random(1,5,1);
$ans3_b = $b-$m*$c;
$ans3 = "$ans3_b + $m x";

$ans4_c = $b**2;
$ans4_b = 2*$b*$m;
$ans4_a = $m**2;
$ans4 = "$ans4_a x^2 - $ans4_b x + $ans4_c";

$eval1 = $b - $m;
$ans5 = "$eval1/x";

$ans6 = "sqrt($b - $m x)"; 

BEGIN_TEXT
Question 12:
$BR $SPACE $BR
Let \( \ f(x) = $b - $m x \), evaluate and simplify the following.
$BR $SPACE $BR
a) \( $a f(x) = \) \{ ans_rule(35) \} $BR $SPACE $BR
b) \( f(x) + $b_const = \) \{ ans_rule(35) \} $BR $SPACE $BR
c) \( f($c - x) = \) \{ ans_rule(35) \} $BR $SPACE $BR
d) \( \big( f(x) \big)^2 = \) \{ ans_rule(35) \} $BR $SPACE $BR
e) \( f(1)/x = \) \{ ans_rule(35) \} $BR $SPACE $BR
f) \( \sqrt{f(x)} = \) \{ ans_rule(35) \}

END_TEXT


ANS( fun_cmp( $ans1, vars=>'x' ) );
ANS( fun_cmp( $ans2, vars=>'x' ) );
ANS( fun_cmp( $ans3, vars=>'x' ) );
ANS( fun_cmp( $ans4, vars=>'x' ) );
ANS( fun_cmp( $ans5, vars=>'x' ) );
ANS( fun_cmp( $ans6, vars=>'x' ) );



SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR
a) \( 2f(x) = 2($b - $m x) \) $BR
\( \ \ \ \ \ \ \ \ \ \ \  = 2($b) - 2($m) x \) $BR
\( \ \ \ \ \ \ \ \ \ \ \ = $ans1_b - $ans1_m x \)
$BR $SPACE $BR
b) \( f(x) + $b_const = ($b - $m x) + $b_const \) $BR
\( \ \ \ \ \ \ \ \ \ \ \ \ \ \ =  ($b + $b_const) - $m x \) $BR
\( \ \ \ \ \ \ \ \ \ \ \ \ \ \ =  $ans2_b - $m x\)
$BR $SPACE $BR
c) \(  f($c-x)=  $b - $m ($c-x)\) $BR
\( \ \ \ \ \ \ \ \ \ \ \ \ \ \ =  $b - $m($c) -$m(-x)\) $BR
\( \ \ \ \ \ \ \ \ \ \ \ \ \ \ =  $ans3_b + $m x\)
$BR $SPACE $BR
d) \(  \big( f(x) \big)^2 =  ($b - $m x)^2\) $BR
\( \ \ \ \ \ \ \ \ \ \ \ \ \ =  $b^2 + 2(-$m)($b) + $m^2 x^2\) $BR
\( \ \ \ \ \ \ \ \ \ \ \ \ \ =  $ans4_a x^2 - $ans4_b x + $ans4_c \)
$BR $SPACE $BR
e) \(  f(1)/x = \frac{$b - $m(1)}{x} \) $BR
\( \ \ \ \ \ \ \ \ \ \ \ \ =  \frac{$eval1}{x} \)
$BR $SPACE $BR
f) \(  \sqrt{f(x)} = \sqrt{$b - $m x} \) 
$BR
END_SOLUTION


ENDDOCUMENT();