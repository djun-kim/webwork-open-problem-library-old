DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$p = 2;
$k = random(1,5,1);
$f = "\( \ f(x) = x^2 + $k \ \)";

$m = random(2,6,2);
$b = random(3,9,2);
$g = "\( \ g(x) = $m x + $b \ \)";


$const_gf =  $m*$k + $b;
$gf = "$m x^2 + $const_gf ";


BEGIN_TEXT
Question 14:
$BR
Let $f  and $g .  Evaluate the following:
$BR
$SPACE
$BR
\( g \left( f(x) \right) = \) \{ ans_rule(30) \}

END_TEXT

ANS( fun_cmp( $gf,vars=>'x') );

$mk = $m*$k;

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 

\( g(f(x)) = $m \big( f(x) \big) + $b \) $BR
$SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE
 \( = $m \left( x^2 + $k \right) + $b \) $BR
$SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE
\( = $m x^2 + $mk +$b \) $BR
$SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE $SPACE
\( = $m x^2 + $const_gf \)
$BR
END_SOLUTION

      
ENDDOCUMENT();