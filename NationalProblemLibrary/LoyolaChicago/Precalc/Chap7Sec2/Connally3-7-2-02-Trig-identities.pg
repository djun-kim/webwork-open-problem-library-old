####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PGstandard.pl",
"PGcourse.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextString.pl",
"parserAutoStrings.pl",
"answerHints.pl",
);

TEXT(beginproblem());


####################################
#  Setup

#Context("String");
Context("Numeric")->variables->are(t=>"Real");
AutoStrings();

$a = random(2,6,1);

$answer = String("1");


####################################
#  Main Text

BEGIN_TEXT
Simplify the expression as much as possible.
$BR
$BR
\( \cos^2($a t) + \sin^2($a t) \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT


###################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp(typeMatch=>Formula("t")) 
->withPostFilter(AnswerHints(
  Compute("(cos($a*t))^2 + (sin($a*t))^2") => 
  "No credit for entering what you were given.",
))
);

#COMMENT("Prevents students from entering trivial identities (entering what they were given)");
COMMENT("Accepts only the string '1' as the correct answer.");


COMMENT('MathObject version');
ENDDOCUMENT();
