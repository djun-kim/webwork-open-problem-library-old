##DESCRIPTION
##KEYWORDS('integrals', 'improper')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$soln = $a / 2;

TEXT(EV2(<<EOT));
Determine whether the integral is divergent or convergent.
If it is convergent, evaluate it. If not, state your answer as "divergent."
$BR \[ \int_{-\infty}^{1}  \frac{$a}{(2x - 3)^2} dx \]
$BR $BR \{ans_rule( 30) \}
$BR
EOT
&ANS(std_num_cmp($soln));

if ($a == 2) {
	$soln_ico = "";
} elsif (int($soln) == $soln) {
	$soln_ico = $soln;
} else {
	$soln_ico = "\frac{$a}{2}";
}

&SOLUTION(EV3(<<'EOT'));

$SOL $BR $BR

\[
\begin{align*}
\int_{-\infty}^1 \frac{$a}{(2x-3)^2} \; dx
&=	$a \int_{-\infty}^1 (2x-3)^{-2} \; dx	\\\\
&=	$soln_ico \int_{-\infty}^1 (2x-3)^{-2} \; (2 dx)	\\\\
&=	\left - $soln_ico (2x-3)^{-1} \right|_{-\infty}^1	\\\\
&=	\left \frac{-$soln}{2x-3} \right|_{-\infty}^1	\\\\
&=	\frac{-$soln}{2-3}
		- \lim_{x\to\infty} \left( \frac{-$soln}{2x-3} \right)	\\\\
&=	$soln - 0 = $soln
\end{align*}
\]

EOT

ENDDOCUMENT();        # This should be the last executable line in the problem.

