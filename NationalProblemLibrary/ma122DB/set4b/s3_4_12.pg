DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


$a_n = random(2,12,1);
$a_s = random(-1,1,2);
$a   = $a_n * $a_s;

$b_n = random(2,12,1);
$b_s = random(-1,1,2);
$b   = $b_n * $b_s;

$x_d = random(3,6,1);
while ($x_d == 5) {$x_d = random(3,6,1);};

$q = random(0,1,1);
if ($q == 0) {
    $x_n = 1;
    $x_s = -1;
    $x_sign = '-';
    };
if ($q == 1) {
    $x_n = 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 2) {
    $x_n = $x_d - 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 3) {
    $x_n = $x_d + 1;
    $x_s = 1;
    $x_sign = '';
    };
if ($q == 4) {
    $x_n = 2 * $x_d - 1;
    $x_s = 1;
    $x_sign = '';
    };

if ($x_n != 1) { $x_num = $x_n };
if ($x_n == 1) { $x_num = '' };

$x = $x_s*$x_n*$PI/$x_d;


BEGIN_TEXT
Let \[ f(x) = \frac { $a \tan x + $b }{ \sec x } \]
$BR
\( f'( x ) = \) \{ans_rule(45) \}

END_TEXT

$ans1 = "$a*cos(x) - $b*sin(x)";

ANS(fun_cmp($ans1));

ENDDOCUMENT();        # This should be the last executable line in the problem.
