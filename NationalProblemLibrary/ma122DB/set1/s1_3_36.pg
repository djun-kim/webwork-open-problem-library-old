DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$tag = random(0,5,1);
@choose = ("x","y","a","b","s","t");
$x1 = $choose[$tag];

$a1 = random(1,9,1);

BEGIN_TEXT
Evaluate the limit

\[ \lim_{ $x1 \rightarrow $a1 }  \frac { \frac {1} { $x1 } - \frac {1} { a1 } }
{ $x1 - $a1 }
\]
Answer: \{ans_rule(25) \}
END_TEXT

$ans = "-1/($a1*$a1)";
ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.

