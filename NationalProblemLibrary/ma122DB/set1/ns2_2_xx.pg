ANS(num_cmp($answers[0],strings=>[DNE]));
ANS(num_cmp($answers[1],strings=>[DNE]));
ANS(num_cmp($answers[2],strings=>[DNE]));
ANS(num_cmp($answers[3],strings=>[DNE]));
ANS(num_cmp($answers[4],strings=>[DNE]));
ANS(num_cmp($answers[5],strings=>[DNE]));

