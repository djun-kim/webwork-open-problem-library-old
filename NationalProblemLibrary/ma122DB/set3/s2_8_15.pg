DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(2,8,1);
$c = random(2,7,1);

$funct = "-$a*$b/($b*a +$c)^2";

BEGIN_TEXT
Let \( f(x) =  \frac { $a } { $b x + $c } \). Compute \( f'( a ). \)
$BR$BR Answer: \{ans_rule(30) \}

END_TEXT

$ans = $funct;
ANS(fun_cmp($ans,vars=>['a']));



