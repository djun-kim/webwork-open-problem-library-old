DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$an = random(2,7,1);
$as = random(-1,1,2);
$a  = $an * $as;
$c = random(2,15,1);

BEGIN_TEXT
Let \( f(x) =  $a e^{x} + $c x \). Determine \( f'( x ). \)
$BR$BR Answer: \{ans_rule(20) \}
$BR
END_TEXT

$ans = "$a * exp(x)+$c";
ANS(fun_cmp($ans));

