$c1 = random(1,40,1);
$x1 = random(1,5,1);
$deriv1 = 2*$a1*$x1-$b1;
$funct1 = "2*$a1*a-$b1";

BEGIN_TEXT
If \( f(x) =  $a1 x^2 - $b1 x -$c1 \), find \( f'( a ) \).
$BR$BR Answer: \{ans_rule(48) \}
$BR
END_TEXT

$ans = $funct1;
ANS(fun_cmp($ans,vars=>['a']));

