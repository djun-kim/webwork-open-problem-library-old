DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a= random(1,10,1);
$b= random(2,2,1);
$c= random(2,5,1);

BEGIN_TEXT
Let \( g(t) = ($a -t^{$b})^{$c} \). Compute the following.
$BR$BR
\(g(0)=\) \{ans_rule(20) \} $BR
\(g'(0)=\) \{ans_rule(20) \} $BR
\(g''(0)=\) \{ans_rule(20) \} $BR

END_TEXT

sub tat0 {
	my ($power) = @_;
	my $out = 0;
	$out = 0 if $power > 0;
	$out = 1 if $power == 0;
	$out = 0 if $power < 0;
	$out;
	}

$g0 = ( $a + &tat0($b) )** $c;
$gp0 = $c*($a-&tat0($b) )**($c-1) *(-$b*&tat0($b-1) );
$gp00 = $c*($c-1)*($a-&tat0($b))**($c-2)*($b*$b*&tat0(2*$b-2) )  - $c*($a-&tat0($b))**($c-1)*($b*($b-1)*&tat0($b-2));

ANS(num_cmp($g0, relTol=>.1));
ANS(num_cmp($gp0, relTol=>.1));
ANS(num_cmp($gp00, relTol=>.1));

ENDDOCUMENT();        # This should be the last executable line in the problem.
