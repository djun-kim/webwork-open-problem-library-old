DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,4,1);
$b = random(2,4,1);
$c = random(2,4,1);
$d = random(2,4,1);

$m = random(2,5,1);
$n = random(2,5,1);


$gen = random(0,3,1);

if ($gen == 0) {
  $trig1 = "\sin";
  $trig2 = "\sin";
  $ans  = "1/2*(sin(e^(x^$m*sin(x))))^(-1/2) * 
           cos(e^(x^$m*sin(x))) * 
           e^(x^$m*sin(x)) *
           ($m*x^($m-1)*sin(x) + x^$m*cos(x))";
  }
if ($gen == 1) {
  $trig1 = "\sin";
  $trig2 = "\cos";
  $ans  = "1/2*(sin(e^(x^$m*cos(x))))^(-1/2) * 
           cos(e^(x^$m*cos(x))) * 
           e^(x^$m*cos(x)) *
           ($m*x^($m-1)*cos(x) - x^$m*sin(x))";
  }
if ($gen == 2) {
  $trig1 = "\cos";
  $trig2 = "\sin";
  $ans  = "-1/2*(cos(e^(x^$m*sin(x))))^(-1/2) * 
           sin(e^(x^$m*sin(x))) * 
           e^(x^$m*sin(x)) *
           ($m*x^($m-1)*sin(x) + x^$m*cos(x))";
  }
if ($gen == 3) {
  $trig1 = "\cos";
  $trig2 = "\cos";
  $ans  = "-1/2*(cos(e^(x^$m*cos(x))))^(-1/2) * 
           sin(e^(x^$m*cos(x))) * 
           e^(x^$m*cos(x)) *
           ($m*x^($m-1)*cos(x) - x^$m*sin(x))";
  }

BEGIN_TEXT
Let \[ f(x) = \sqrt{$trig1 (e^{x^{$m} $trig2(x)})} \]
$BR$BR
\( f'( x ) = \) \{ans_rule(100) \}
END_TEXT

ANS(fun_cmp($ans,limits=>[0,.6]));

ENDDOCUMENT();        # This should be the last executable line in the problem.
