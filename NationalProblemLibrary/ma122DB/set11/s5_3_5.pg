"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

#my ($a, $aaa, $answer);
$a= random(1, 5, 1);

BEGIN_TEXT
Use the Fundamental Theorem of Calculus to
find the derivative of
\[ f(x) = \int_{-$a}^{x} \sqrt{t^3+\{$a**3\}} dt \]
\( f'(x) \) = \{ans_rule( 20)\} $BR
END_TEXT

$aaa=$a^3;
$answer="sqrt(x^3+$aaa)" ;

ANS(fun_cmp($answer));

