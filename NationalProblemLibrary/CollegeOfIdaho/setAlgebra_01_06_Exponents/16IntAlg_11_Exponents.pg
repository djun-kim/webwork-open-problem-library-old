DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPowers.pl",
  "answerHints.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@alphabet = ("a","b","x","y");
$choose = random(0,2,2);
$var1 = $alphabet[ $choose ];
$var2 = $alphabet[ $choose+1 ];
Context()->variables->are($var1=>'Real',
                          $var2=>'Real');
$n1 = random(7,20,1);
$m1 = random(7,20,1);
$m2 = $m1 - random(2,5,1);
$num2 = random(2,7,1);
$num1 = $num2 * random(2,5,1); #To keep whole numbers in the answre

######################################
#  Main text

BEGIN_TEXT
Divide using the quotient rule:
$PAR
\( \displaystyle \frac{$num1 $var1^{$n1}$var2^{$m1}}{$num2 $var1 $var2^{$m2}} \) =  \{ ans_rule(20) \}
END_TEXT

######################################
#  Answers

Context()->operators->set(@LimitedPowers::OnlyPositiveIntegers);

$ans=Formula("$num1/$num2*$var1^{$n1-1}*$var2^($m1-$m2)")->reduce;

ANS($ans->cmp->withPostFilter(AnswerHints(
   sub {
       my ($correct,$student,$ah) = @_;
       ##Count the number of variables--(Better if checked for reduced constants too.)
       my $CorrectVariableNumber = $correct =~ tr/a-zA-Z//;  
       my $StudentVariableNumber = $student =~ tr/a-zA-Z//;
       return $ah->{score}==1 && $CorrectVariableNumber<$StudentVariableNumber;
       } => ["Simplify your answer.", 
             checkCorrect => 1, 
             score => 0]
)));

$showPartialCorrectAnswers = 1;

######################################


ENDDOCUMENT();        # This should be the last executable line in the problem.
