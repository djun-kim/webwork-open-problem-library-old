DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("Numeric");

$a = non_zero_random(-5,5,1);
$b = random(1,3,1);
@x = (random(-5,-1,1), 0, $b, $b + random(1,3,1));

######################################
#  Main text

BEGIN_TEXT
For the equation, \( \displaystyle y = $a \), find the 
\(y\)-coordinate for each value of \(x\). 
$BR
(Note: If a value is not defined, enter $BITALIC Not defined $EITALIC.)
$PAR

$BCENTER
\{begintable(2)\}
\{row(' \(x\) ','\(y\)')\}
\{row( '\( $x[0] \)', ans_rule(10) )\}
\{row( '\( $x[1] \)', ans_rule(10))\}
\{row( '\( $x[2] \)', ans_rule(10))\}
\{row( '\( $x[3] \)', ans_rule(10))\}
\{endtable()\}
$ECENTER
$BR

END_TEXT

######################################
#  Answers

Context("LimitedNumeric"); 
Context()->strings->add("undefined"=>{}, "Does not exist"=>{alias=>'undefined'},"Not defined"=>{alias=>'undefined'});

$ans_a = Real($a);
ANS($ans_a->cmp);

$ans_b = Real($a);
ANS($ans_b->cmp);

$ans_c = Real($a);
ANS($ans_c->cmp);

$ans_d = Real($a);
ANS($ans_d->cmp);

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT(); # This should be the last executable line in the problem.


