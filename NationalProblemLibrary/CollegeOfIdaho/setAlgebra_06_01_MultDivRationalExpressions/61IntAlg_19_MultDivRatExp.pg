DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(

  "PGstandard.pl",
  "PGchoicemacros.pl",

  "MathObjects.pl",

  "CofIdaho_macros.pl"

);

TEXT(beginproblem());

######################################
#  Setup
#  Form: c(ay+d)/(y-b)(y+b) * (y+b)/y(ay+d)


Context()->variables->are(y=>'Real');


$a = random(2,5,1);

$c = random(2,5,1);

$b = non_zero_random(-5,5,1);
do {$d = non_zero_random(-9,9,1);} until (gcd($a,$d)==1);


@expression = (Formula("($a*$c y + $c*$d)/(y^2- $b*$b)")->reduce->TeX,

             Formula("(y + $b)/($a y^2 + $d y)")->reduce->TeX);
@slice = NchooseK(2,2);

@f = @expression[@slice];


######################################
#  Main text

BEGIN_TEXT
Multiply and simplify your answer.
\[$f[0] \cdot $f[1]\]
$PAR
Answer:  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer


$answer = "$c/(y*(y-$b))";

ANS(RationalExpEvaluator($answer,"y")); 


$showPartialCorrectAnswers = 1;

######################################


ENDDOCUMENT();        # This should be the last executable line in the problem.

