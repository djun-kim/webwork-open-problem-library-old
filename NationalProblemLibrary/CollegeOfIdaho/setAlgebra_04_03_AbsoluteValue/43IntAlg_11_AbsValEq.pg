DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem);

######################################
#  Setup

@alphbet = ("a", "b","t","x","y");
$n = random(0,4,1);
$var = $alphbet[$n];

$a = random(2,4,2);
$b = random(1,5,2);
$c = $a * random(1,3,1) - $b;

######################################
#  Main text

BEGIN_TEXT
Solve:  \( $a|$var| - $b  = $c \)
$PAR
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");
Context()->variables->are($var=>'Real');

$ans = Compute("$var=-1*($c+$b)/$a or $var=($c+$b)/$a")->reduce;
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
















