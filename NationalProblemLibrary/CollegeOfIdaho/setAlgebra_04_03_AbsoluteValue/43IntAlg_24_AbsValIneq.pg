DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem);

######################################
#  Setup

$a =  random(1,9,1);
$b =  $a + random(2,10,2);

$e1 = ($a-$b)/2;
$e2 = ($a+$b)/2;

######################################
#  Main text

BEGIN_TEXT
Solve: \( |2x-$a| \le $b \)
$PAR
Answer: \{ans_rule(20) \}
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");
Context()->strings->add("No solution"=>{});

$ans = Compute("$e1<=x<=$e2");
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################

