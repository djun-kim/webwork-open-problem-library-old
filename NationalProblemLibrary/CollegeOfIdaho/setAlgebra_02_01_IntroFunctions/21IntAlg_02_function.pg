DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl"
);

TEXT(beginproblem);

######################################
#  Setup

$num1 = random(2,5,1);
$num2 = random(-5,-1,1);
$f = Formula("$num1 x + $num2")->reduce;

$a = random(0,5,1);
$b = random(1,5,1);
if ($a!=0) {$b = 0;}  #Either $a or $b will be zero
$c = random(-5,-1,1);
$d = random(2,4,1);
$e = random(1,5,1);

######################################
#  Main text

BEGIN_TEXT
Let \(f(x)= \{$f->TeX\} \). Find:
$PAR
a)  \( f($a) \) = \{ans_rule(15) \}
$PAR
b)  \( f($b) \) = \{ans_rule(15) \}
$PAR
c)  \( f($c) \) = \{ans_rule(15) \}
$PAR
d)  \( f($d t) \) = \{ans_rule(15) \}
$PAR
e)  \( f(t + $e) \) = \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

Context()->strings->add("No solution"=>{},
                        "Not defined"=>{},
                        "Does not exist"=> {},
                        "All real numbers"=>{});

$ans_a = $f->eval(x=>$a);
ANS($ans_a->cmp);

$ans_b = $f->eval(x=>$b);
ANS($ans_b->cmp);

$ans_c = $f->eval(x=>$c);
ANS($ans_c->cmp);

Context()->variables->add(t=>'Real');
Context("LimitedPolynomial-Strict");

$ans_d = $f->substitute(x=>"$d*t")->reduce;
ANS($ans_d->cmp);

$ans_e = $f->substitute(x=>"t+$e")->reduce;
ANS($ans_e->cmp);

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT(); # This should be the last executable line in the problem
