DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$num1 = random(2,5,1);
$num2 = random(2,5,1);
$num3 = random(1,5,2);
$f = Formula("($num1 x - $num2)/(x - $num3)");

$a = random(0,6,2);
$b = random(2,6,2);
if ($a!=0) {$b = 0;}  #One input is zero.
$c = random(-5,-1,1);
$e = random(2,5,1);
$var = list_random("a","b","c","t");

######################################
#  Main text

BEGIN_TEXT
Let \( \displaystyle f(x)= \{$f->TeX\} \). Find:
$PAR
a)  \( f($a) \) = \{ans_rule(15) \}
$PAR
b)  \( f($b) \) = \{ans_rule(15) \}
$PAR
c)  \( f($c) \) = \{ans_rule(15) \}
$PAR
d)  \( f($var) \) = \{ans_rule(15) \}
$PAR
e)  \( f($var + $e) \) = \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

Context()->strings->add("No solution"=>{},
                        "Not defined"=>{},
                        "Does not exist"=> {},
                        "All real numbers"=>{});


$ans_a = $f->eval(x=>$a);
ANS($ans_a->cmp);

$ans_b = $f->eval(x=>$b);
ANS($ans_b->cmp);

$ans_c = $f->eval(x=>$c);
ANS($ans_c->cmp);

Context()->variables->add($var=>'Real');

$ans_d = $f->substitute(x=>"$var")->reduce;
ANS($ans_d->cmp);

$ans_e = $f->substitute(x=>"$var+$e")->reduce;
ANS($ans_e->cmp);

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
