DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a1 = random(1,9,1);
$b1 = random(2,4,1);
$a2 = random(2,6,1);
$b2 = random(2,4,1);

$f = Formula("$a1 x + $b1");
$g = Formula("$a2 x - $b2");

$input = random(-6,6,1);

######################################
#  Main text

BEGIN_TEXT
For \( f(x)= \{$f->TeX\} \) and \( g(x)= \{$g->TeX\} \), find:
$PAR
a) \( (f + g)(x) = \) \{ans_rule(20) \}
$PAR
b) \( (f + g)($input) = \) \{ans_rule(20) \}
END_TEXT

######################################
#  Answers 

$ans_a = Compute($f+$g)->reduce;
ANS($ans_a->cmp);

$ans_b = $ans_a->eval(x=>$input);
ANS(num_cmp($ans_b));

$showPartialCorrectAnswers = 1;

######################################

COMMENT('MathObject version');
ENDDOCUMENT();
