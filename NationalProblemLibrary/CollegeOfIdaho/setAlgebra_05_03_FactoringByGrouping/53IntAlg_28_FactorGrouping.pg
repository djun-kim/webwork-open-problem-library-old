DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@alphabet = ("a","b","c","x","y","z");
$n = random(0,3,3);
$var1= $alphabet[$n];
$var2= $alphabet[1+$n];
$var3= $alphabet[2+$n];
Context()->variables->are($var1=>'Real',$var2=>'Real',$var3=>'Real');

$a= random(2,5,1);
do {$b= random(2,7,1);} until (gcd($a,$b)==1);
$c= random(2,5,1);
$ac = $a * $c;
$bc = $b * $c;

######################################
#  Main text

BEGIN_TEXT
Factor by grouping:  
$PAR
\( $ac $var1 $var3 - $bc $var2 $var3 + $a $var1 - $b $var2 = \) \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

$answer = "($c * $var3 + 1) * ($a * $var1 - $b * $var2)";
ANS(FactoringEvaluator($answer,[$var1,$var2,$var3])); 

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT();        # This should be the last executable line in the problem.


























