DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem);

######################################
#  Setup

@alphabet = ("a","b","x","y");
$choose = random(0,2,2);
$var1 = $alphabet[$choose];
$var2 = $alphabet[$choose+1];
Context()->variables->are($var1=>'Real',$var2=>'Real');

$a = random(2,5,1);
do {$b = random(2,8,1);} until (gcd($a,$b)==1); 
$c = random(3,8,1); 

$j = random(1,2,1);
$m = random(4,5,1);
$n = $m + $j;

$poly = Formula("$a*$c $var1^3 $var2^$m + $b*$c $var1 $var2^$n")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
Factor out the greatest common factor: 
$PAR
\( $poly = \)  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

$answer = "$c* $var1 *$var2^$m * ($a*$var1^2  + $b*$var2^$j)";
ANS(FactoringEvaluator($answer,[$var1,$var2])); 

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT();        # This should be the last executable line in the problem.

 


