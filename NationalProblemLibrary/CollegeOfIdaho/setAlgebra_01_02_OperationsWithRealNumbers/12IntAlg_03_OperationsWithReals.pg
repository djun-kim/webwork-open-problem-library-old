DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl"
);

TEXT(&beginproblem);

######################################
#  Setup

$a1 = random(-12,-2,1);
do {$a2 = random(-12,-2,1);} while ($a1==$a2);

$b1 = random(-12,-2,1);
$b2 = random(2,12,1);

######################################
#  Main text

BEGIN_TEXT
Add as indicated:  
$PAR
a) \( $a1 + ($a2) = \)  \{ ans_rule(10) \} 
$PAR
b) \( $b1 + $b2 = \)  \{ ans_rule(10) \} 
$BR

END_TEXT

######################################
#  Answers

Context("LimitedNumeric");

$ans_a=Real($a1 + ($a2))->reduce;
ANS($ans_a->cmp);

$ans_b=Real($b1 + $b2)->reduce;
ANS($ans_b->cmp);

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
