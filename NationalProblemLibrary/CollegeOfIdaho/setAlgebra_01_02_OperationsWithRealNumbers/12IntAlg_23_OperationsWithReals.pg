DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl"
);

TEXT(&beginproblem);

######################################
#  Setup

Context("Numeric");

$a1 = random(-5,-2,1);
$a2 = random(2,4,1);
$a3 = random(2,9,1);
$a = Formula ("$a1 ($a2 x - $a3)");
#Note:  If this one is reduced, it puts extra parentheses about the expression

$b1 = random(2,4,1);
$b2 = random(3,8,1);
$b = Formula("-($b1 x - $b2)")->reduce;

######################################
#  Main text

BEGIN_TEXT
Use the distributive property to rewrite each expression without parentheses:
$PAR
a) \( \{$a->TeX\} = \) \{ ans_rule(10) \} 
$PAR
b) \( \{$b->TeX\}= \) \{ ans_rule(10) \} 
$BR

END_TEXT

######################################
#  Answers

Context("LimitedPolynomial")->flags->set(singlePowers=>1);

$ans_a = "($a1*$a2) x - ($a1*$a3)";
ANS(Formula($ans_a)->reduce->cmp);

$ans_b = "(-1*$b1) x + $b2";
ANS(Formula($ans_b)->reduce->cmp);

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
