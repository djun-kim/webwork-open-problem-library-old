DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "PGnauGraphics.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem);

######################################
#  Setup

#----Define the function
$xmin = -6;
$ymin = -6;
$xmax = 6;
$ymax = 6;

@fraction = (1,2, 1,3, 1,4, 2,3, 3,4, 3,2, 1,1, 2,1, 3,1 ,4,1);
$n = random(0,14,2);

$m = $fraction[$n] / $fraction[$n+1] * (-1)**random(1,2,1);
$b = random(-2,2,1);

@slice = NchooseK(3,3);
@colors = ("blue", "red", "green");
@sc = @colors[@slice]; #scrambled colors

$f = FEQ("$m*x+$b for x in [$xmin,$xmax] using color=$sc[0] and weight=3");

#----Build the graph
$graph = init_graph_no_labels($xmin,$ymin,$xmax,$ymax,'axes'=>[0,0],'grid'=>[12,12]);
add_functions( $graph,$f);

$i = 0;           # Number the axes
do {
  $xtick = $i + $xmin + 1;
  $labelx[$i] = new Label($xtick,0, "$xtick",'black','center');
  if ($xtick!=0) {$graph->lb($labelx[$i]);}
  $i =$i+1;
} while ($i<($xmax-$xmin)-1);

$i = 0;
do {
  $ytick = $i +$ymin + 1;
  $labely[$i] = new Label(-.2,$ytick+.1, "$ytick",'black','center');
  if ($ytick!=0) {$graph->lb($labely[$i]);} 
  $i =$i+1;
} while ($i<($ymax-$ymin)-1);
 
######################################
#  Main text

BEGIN_TEXT
\{ Plot($graph, tex_size => 600) \} 
$BR $BR
Use the graph, given above, to find the slope and equation for the line. 
$PAR
a) Slope of the line: \( m =\) \{ans_rule(10)\}
$PAR
b) The equation of the line in slope-intercept form: \{ans_rule(20)\}
END_TEXT

######################################
#  Answer

Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

$ans_a = Real($m)->with(tolerance=>.01,toltype=>'absolute');
ANS($ans_a->cmp); 

$ans_b = "y=$m*x+$b";
ANS(SlopeIntercept_equation_cmp($ans_b)); 

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT(); # This should be the last executable line in the problem.
