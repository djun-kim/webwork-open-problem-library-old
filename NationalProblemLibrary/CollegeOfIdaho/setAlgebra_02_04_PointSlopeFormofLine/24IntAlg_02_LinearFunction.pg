DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@slope = (1,2, 1,3, 1,4, 2,3, 3,4 ,3,2, 4,3);
$n = random(0,12,2);
$dy = $slope[$n] * (-1) ** random(1,2,1);
$dx = $slope[$n + 1];

$show_m = "\frac{$dy}{$dx}";

$b= random(-6,6,1);

######################################
#  Main text

BEGIN_TEXT
Write the equation of a line with the slope, \( $show_m \), which
passes through the point \( (0, $b) \).   Write the answer in slope-intercept form. 
$PAR
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answer

Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

$answer = "y=$dy/$dx*x+$b";
if ($b<0) {$b = -1*$b; $answer = "y=$dy/$dx*x-$b";}
if ($b==0) {$answer = "y=$dy/$dx*x";}
ANS(SlopeIntercept_equation_cmp($answer)); 

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT();        # This should be the last executable line in the problem.


















