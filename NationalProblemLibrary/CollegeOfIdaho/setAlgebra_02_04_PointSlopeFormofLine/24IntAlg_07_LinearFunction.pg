DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem);

######################################
#  Setup

@slope = (2,1, 3,1, 1,1);
$n = random(0,4,2);
$dy = $slope[$n] * (-1) ** random(1,2,1);
$dx = $slope[$n + 1];
$m = $dy / $dx;
$b = random(-6,6,1);

$x1= random(-3,3,1);
$y1 = $m * $x1 + $b;
$x2 = $x1 + non_zero_random(-2,2,1);
$y2 = $m * $x2 + $b;;
 
######################################
#  Main text

BEGIN_TEXT
Find the slope and the equation for the line passing through the points:  \( ($x1, $y1) \) and \( ($x2, $y2) \).
$PAR
a)  \( m =\)  \{ ans_rule(10) \} 
$PAR
b)  The equation for the line: \{ ans_rule(20) \}
END_TEXT

######################################
#  Answer

Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

$ans_a = Real($m);
ANS($ans_a->cmp); 

$answer = "y=($dy/$dx)*x+$b";
ANS(SlopeIntercept_equation_cmp($answer)); 

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT();        # This should be the last executable line in the problem.




















