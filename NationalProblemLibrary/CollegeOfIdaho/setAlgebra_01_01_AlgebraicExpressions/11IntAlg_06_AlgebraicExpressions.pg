##DESCRIPTION
##  Plug numbers into an algebraic expression
## 
##ENDDESCRIPTION
## DBsubject('Intermediate Algebra')
## DBchapter('Ch 01: Algebra, Mathematical Models and Problem Solving')
## DBsection('Algebraic Expressions and Real Numbers')
## KEYWORDS('real numbers','algebraic expressions')
## TitleText1('Essentials of Intermediate Algebra')
## EditionText1('1')
## AuthorText1('Blitzer')
## Section1('1.1')
## Problem1('')
## Author('RA Cruz')
## Institution('The College of Idaho')
## Date: 2007/08

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(&beginproblem);

######################################
#  Setup

Context()->variables->add(y=>'Real');

$a = random(2,6,1);
$b = random(2,5,1);
$c = random(2,6,1);
$x_a = $c + random(2,3,1);;
$f = Formula("$a + $b(x - $c)^3")->reduce;

do {$d = random(2,4,1);
    $y_b = random(2,4,1);
    $x_b = $y_b+random(4,6,1);} while ($x_b**2 + $d*$y_b < $d*$x_b);
$g = Formula("x^2 - $d(x - y)")->reduce;

######################################
#  Main text

BEGIN_TEXT
Evaluate each algebraic expression for the given value(s):

$PAR
a) \( \{$f->TeX\} \), for \( x = $x_a \)
$BR
Answer:  \{ ans_rule(20) \} 
$PAR
b) \( \{$g->TeX\} \), for \( x = $x_b \) and \( y = $y_b \)
$BR
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answers

Context("LimitedNumeric");

$ans_a=Compute($f->substitute(x=>$x_a))->reduce;
ANS($ans_a->cmp);

$ans_b=Compute($g->substitute(x=>$x_b,y=>$y_b))->reduce;
ANS($ans_b->cmp);

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
