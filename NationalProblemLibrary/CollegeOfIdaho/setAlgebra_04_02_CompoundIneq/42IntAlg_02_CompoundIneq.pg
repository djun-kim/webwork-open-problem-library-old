       $AuB[$k] = $b;
    }
  }
}

$LEFT_BRACE = '\{';
$RIGHT_BRACE = '\}';
 
######################################
#  Main text

BEGIN_TEXT

Let \( A= ${LEFT_BRACE} $A[0],  $A[1], $A[2], $A[3] ${RIGHT_BRACE}\) , $SPACE
\( B= ${LEFT_BRACE} $B[0],  $B[1],  $B[2] ${RIGHT_BRACE}\). 
$BR
Find the following sets in list form. Separate elements with commas. 
$PAR
a) \( A \cap B =  \) \{ans_rule(25) \}
$PAR
b) \( A \cup B = \) \{ans_rule(25)\} 
END_TEXT

######################################
#  Answer

Context()->parens->replace('{' => {close => '}', type => 'List'});

$ans_a = String("NONE"); #NOT WORKING
ANS($ans_a->cmp->withPostFilter(AnswerHints(
            sub {
                my ($correct,$student,$ans) = @_;
                if ($student=~ /\w/) {return $student !~ /[}{]/;}
                } => ["Enter your answer with set notation: { ... }", 
                      checkCorrect => 1, 
                      score => 0]
)));

$ans_b = List("{$AuB[0],$AuB[1],$AuB[2],$AuB[3],$AuB[4],$AuB[5],$AuB[6]}");
ANS($ans_b->cmp->withPostFilter(AnswerHints(
            sub {
                my ($correct,$student,$ans) = @_;
                return $student !~ /[}{]/;
                } => ["Enter your answer with set notation: { ... }", 
                      checkCorrect => 1, 
                      score => 0]
)));

