$BR
its second term is \{ans_rule(10) \};
$BR
its third term is \{ans_rule(10) \};
$BR
its fourth term is \{ans_rule(10) \};
$BR
its 100th term is \{ans_rule(10) \}.
$BR
END_TEXT

$ans1 = $a-1;
$ans2 = $a+1;
$ans3 = $a-1;
$ans4 = $a+1;
$ans5 = $a+1;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));

