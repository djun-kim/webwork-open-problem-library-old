loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,6,1);
$b=random(2,6,1);
$c=random(2,10,1);
$d=random(2,10,1);

BEGIN_TEXT
Rewrite the expression 
\[
\ln $c + $b \ln x + $a \ln (x^2+$d) 
\]
as a single logarithm
\(\ln A\). Then the function
$BR
A= \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = "$c*x**$b*(x**2+$d)**$a";

ANS(fun_cmp($ans1));

