##DESCRIPTION
##  Find derivatives of simple functions
##ENDDESCRIPTION

##KEYWORDS('derivative', 'simple')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(1,10,1);
$b = random(1,10,1);
$x = 1-$b+2*random(-5,5,1);

BEGIN_TEXT
$BR
Let \(f(x) = \displaystyle{
               \frac{$a}{x+$b}} \)
$BR
Then \( f'($x)= \)\{ans_rule(30)\}.
$BR
And after simplifying \( f'(x)= \)\{ans_rule(30)\}.
$BR
END_TEXT 

$ans1=-$a/(($x+$b)*($x+$b));
$ans2="-$a/((x+$b)*(x+$b))";

&ANS(std_num_cmp($ans1));
&ANS(function_cmp($ans2));
ENDDOCUMENT();        # This should be the last executable line in the problem.
