loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(8,20,1);
$b = random(1, 10,1);
$c = random(2, 9,1);
$e = exp(1);
##while ($b==$a) {
##   $b=random(1, 15, 1);
##}

TEXT(EV2(<<EOT));
$BR
Evaluate the limit using L'Hospital's rule if necessary
\[ \lim_{ x \rightarrow \infty } \left( \frac{$a x}{$a x+$b} \right) ^{$c x} \]
$BR \{ans_rule(25) \}
$BR
EOT

$ans = $e**(-$b*$c/$a);
ANS(num_cmp($ans));

