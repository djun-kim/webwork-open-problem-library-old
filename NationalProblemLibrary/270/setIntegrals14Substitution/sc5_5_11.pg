loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(3,6,1);
$b = random(1,15,1);
$power = $a - 1;
$coeff = 1 / $a;
$funct = "2/3 * $coeff * (x^$a + $b)^(3/2)";

TEXT(EV2(<<EOT));
Evaluate the indefinite integral.
$BR \[ \int x^$power \sqrt{$b + x^$a} dx \]
$BR $BR \{ans_rule( 30) \}
$BR
EOT

$ans = $funct;
&ANS(function_cmp_up_to_constant($ans));

