##DESCRIPTION
##KEYWORDS('integrals', 'trig', 'substitsution')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(1,99,1);
$b = random(2,9,1);
$b2 = $b*$b;

$funct = "-($a/($b2*x))*sqrt(x*x+$b2)";

$num = "$a".'\,dx';
$num = "dx" if ($a==1);

TEXT(EV2(<<EOT));
Use the substitution \( x = $b\tan(\theta) \) to evaluate the indefinite integral
$BR \[\int \frac{$num}{x^2 \sqrt{x^2 + $b2}} \]
$BR $BR Answer = \{ans_rule( 45) \} \(+C\)
EOT

ANS(function_cmp_up_to_constant($funct));

ENDDOCUMENT();        # This should be the last executable line in the problem.
