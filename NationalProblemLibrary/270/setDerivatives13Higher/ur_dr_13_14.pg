##DESCRIPTION
##KEYWORDS('higher derivatives', )
##ENDDESCRIPTION

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(2,4,1);

$p = random(-1,1,2);

$c_numb = random(2,12,1);
$c_sign = random(-1,1,2);
$c      = $c_numb * $c_sign;

$n = random(6,9,1);

$e = exp(1);

$ans = $c * (- $a)**(- $n) * $e**(- $p/$a);

BEGIN_TEXT

Let
\[ f(x) = $c e^{-x/$a} \]

\( f^{($n)}($p) = \)  \{ans_rule(30)\} $BR

END_TEXT

&ANS(std_num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
