DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);


$showPartialCorrectAnswers = 1;

$a = random(3,7,1);
$b = $a + random(4,8,1);

$c = random(2,6,1);
$d = $c + random(3,7,1);

$AA = $c*($b-$a);
$BB = $a*($d-$c);
$temp1 = ($b-$a)*($d-$c);
$CC = random(0.000001,$temp1-0.000001,0.000001);
$answ = $BB+$CC;
$temp2 = $AA+$CC;

TEXT(&beginproblem);
BEGIN_TEXT
Suppose \(f(x)\) is continuous and decreasing on the closed interval
\($a\le x\le $b\), that \(f($a)=$d\), \(f($b)=$c\) and that
\( \displaystyle \int_{$a}^{$b}f(x)\,dx=$temp2\).
$BR
Then \( \displaystyle \int_{$c}^{$d}f^{-1}(x)\,dx\) = \{ ans_rule()\}
END_TEXT

##set $PG_environment{'textbook'} in webworkCourse.ph
if (defined($textbook)) {
   if ($textbook eq "EllisGulick5") {
BEGIN_TEXT
$PAR
This is similar to problem 72 of Section 6.1 in the text.
END_TEXT
}
}

&ANS(std_num_cmp($answ));

ENDDOCUMENT();
