DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,8,1);
$tag = random(0,1,1);

@funct = ('\sin','\cos');
@funct_ans = ("$a*cos($a*x)/(1+(sin($a*x))**2)", "-$a*sin($a*x)/(1+(cos($a*x))**2)");

TEXT(EV2(<<EOT));
Let \[ f(x) = \tan^{-1} ( $funct[$tag] ($a x) ) \]
$PAR
\( f'( x ) = \) \{ans_rule(40) \}
EOT

$ans = $funct_ans[$tag];
ANS(fun_cmp($ans));

