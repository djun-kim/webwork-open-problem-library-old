DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a_gen  = random(2,9,1);
$a_sign = random(-1,1,2);
$a      = $a_gen * $a_sign;

$n = random(2,5,1);

$gen = random(0,1,1);

if ($gen == 0) {
  $trig1 = "\sin";
  $ans  = "$a*$n*(sin(x))**($n - 1)*cos(x)";
  }
if ($gen == 1) {
  $trig1 = "\cos";
  $ans  = "- $a*$n*(cos(x))**($n - 1)*sin(x)";
  }

TEXT(EV2(<<EOT));
Let \[ f(x) = $a $trig1 ^{$n} x \]
$PAR
\( f'( x ) = \) \{ans_rule(30) \}
$BR
EOT

ANS(fun_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
