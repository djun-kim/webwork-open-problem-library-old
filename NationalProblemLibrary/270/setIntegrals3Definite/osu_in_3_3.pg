DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(1,5,1);
$a1 = random(1,3,1);
$b = $a +$a1;
$c = random(2,5,1);
$d = random(1,5,1);
$answ = ($c*$b - $d/$b) -  ($c*$a - $d/$a);

TEXT(&beginproblem);
BEGIN_TEXT
\( \displaystyle \int_$a^$b \frac{$c x^2 + $d}{x^2}\, dx\) =  \{ ans_rule()\}
$PAR
END_TEXT

&ANS(num_cmp($answ));

