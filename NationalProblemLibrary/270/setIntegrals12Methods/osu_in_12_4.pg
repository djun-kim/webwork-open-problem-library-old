DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(3,8,1);
$b2 = 2*$b;
$ap = $a+1;
$bp = $b+1;
$lin = $a*$b+1;
$c = random(4,9,1);
$answ1 = "(1/$a^3)*((2/7)*($a*x+$b)^(7/2)-(4/5)*$b*($a*x+$b)^(5/2)+(2/3)*$b^2*($a*x+$b)^(3/2))";
$answ2 = 1.570796327/$b;
$answ3 = "ln($a*x+1)/$a + ln(x+$b)";
$cc = 1 - $c;
$answ4 = "(x^$cc/$cc)*(ln(x)-1/$cc)";

TEXT(&beginproblem);
BEGIN_TEXT
Find the indicated integrals (if they exist)
$PAR
\( \displaystyle \int x^2\sqrt{$a x + $b}\,dx\) =
$BR
\{ ans_rule(60)\}
$PAR

\( \displaystyle \int_{-\infty}^{\infty} \frac{e^{$b x}}{e^{$b2 x}+1}\,dx\) =\{ ans_rule()\}
$PAR

\( \displaystyle \int \frac{$ap x + $bp}{$a x^2 + $lin x + $b}\,dx\) =
$BR
\{ ans_rule(50)\}
$PAR

\( \displaystyle \int \frac{\ln(x)}{x^{$c}}\,dx\) =
$BR
\{ ans_rule(50)\}
$PAR
END_TEXT

&ANS(function_cmp($answ1,"x"));
&ANS(num_cmp($answ2));
&ANS(function_cmp_up_to_constant($answ3,"x"));
&ANS(function_cmp_up_to_constant($answ4,"x"));

ENDDOCUMENT();






