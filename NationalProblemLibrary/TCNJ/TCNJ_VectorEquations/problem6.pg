## DESCRIPTION
## KEYWORDS('vectors', 'span')
##
## ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"Parser.pl",
"Generic.pl",
);

TEXT(&beginproblem);

$v01 = non_zero_random(-5,5,1);
$v02 = random(-5,5,1);
$v03 = non_zero_random(-5,5,1);

$mult = non_zero_random(-2,2,1);
$d1 = non_zero_random(-3,3,1);
$d2 = non_zero_random(-3,3,1);

$v11 = $mult*$v01;
$v12 = $mult*$v02+$d1;
$v13 = $mult*$v03+$d2;

Context("Vector");
$A=Vector($v01, $v02, $v03);
$B=Vector($v11, $v12, $v13);

BEGIN_TEXT

Let \( u = \) \(\{$A->TeX\} \) and \( v = \) \(\{$B->TeX\} \)
$BR
$BR
Find a vector \( w \) not in \( span\left\{"\{"\} u, v\right\} \).
$BR
$BR
\( w = \) \{ans_rule()\}

END_TEXT

sub check{
  my $stu=shift();
  $x1=$stu->extract(1); 
  $x2=$stu->extract(2);
  $x3=$stu->extract(3);
  
  $det = $v01*$v12-$v02*$v11;
  $x = ($x1*$v12-$x2*$v11)/$det;
  $y = ($x2*$v01-$x1*$v02)/$det;
  $left = $x*$v03+$y*$v13;

  $left != $x3;
}

ANS(generic_cmp("23",type => 'Vector', length => 3, checker => ~~&check));

ENDDOCUMENT();       # This should be the last executable line in the problem.