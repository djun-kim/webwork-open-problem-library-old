DOCUMENT() ;        

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);
############

TEXT(&beginproblem);

$a[1][1]= non_zero_random(-10,10,1);
$a[1][2]= (0);
$a[1][3]= (0);
$a[1][4]= (0);
$a[2][1]= (0);
$a[2][2]= non_zero_random(-10,10,1);
$a[2][3]= (0);
$a[2][4]= (0);
$a[3][1]= (0);
$a[3][2]= (0);
$a[3][3]= non_zero_random(-10,10,1);
$a[3][4]= (0);
$a[4][1]= (0);
$a[4][2]= (0);
$a[4][3]= (0);
$a[4][4]= non_zero_random(-10,10,1);

foreach $i (1..4) {

   foreach $j (1..4) {
   		$b[$i][$j] = non_zero_random(-10,10,1);
   	}
}


$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT

Compute the following product. 
$BR
\{ mbox( display_matrix([[$a[1][1], $a[1][2], $a[1][3], $a[1][4]],
                         [$a[2][1], $a[2][2], $a[2][3], $a[2][4]],
                         [$a[3][1], $a[3][2], $a[3][3], $a[3][4]],
                         [$a[4][1], $a[4][2], $a[4][3], $a[4][4]]]),
         display_matrix([[$b[1][1], $b[1][2], $b[1][3], $b[1][4]],
                         [$b[2][1], $b[2][2], $b[2][3], $b[2][4]],
                         [$b[3][1], $b[3][2], $b[3][3], $b[3][4]],
                         [$b[4][1], $b[4][2], $b[4][3], $b[4][4]]]), '\(=\)', answer_matrix(4,4,5) ) \}

END_TEXT

foreach $i (1..4) {

   foreach $j (1..4) {
        $sum = 0;
        foreach $k (1..4) {
           $sum = $sum + $a[$i][$k]*$b[$k][$j];
        } 
   		ANS(num_cmp($sum)  );
   	}
}

ENDDOCUMENT() ;        
