DOCUMENT() ;        

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGdiffeqmacros.pl",
"PGmatrixmacros.pl"
) ;
############

$u1 = non_zero_random(-10,10,1);
$u2 = non_zero_random(-10,10,1);
$u3 = non_zero_random(-10,10,1);

$ans11 = $u1*$u1;
$ans12 = $u1*$u2;
$ans13 = $u1*$u3;
$ans21 = $u2*$u1;
$ans22 = $u2*$u2;
$ans23 = $u2*$u3;
$ans31 = $u3*$u1;
$ans32 = $u3*$u2;
$ans33 = $u3*$u3;
$ans1 = $u1*$u1+$u2*$u2+$u3*$u3;

TEXT(&beginproblem);

$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT

\{ mbox( 'If \(u=\)', display_matrix([[$u1],
                                      [$u2],
                                      [$u3]]) ) \}
$BR
\{ mbox( 'then \(uu^T=\)', answer_matrix(3,3,5),'and \(u^Tu=\)', answer_matrix(1,1,5), '.' ) \}

END_TEXT

ANS(num_cmp($ans11));
ANS(num_cmp($ans12));
ANS(num_cmp($ans13));
ANS(num_cmp($ans21));
ANS(num_cmp($ans22));
ANS(num_cmp($ans23));
ANS(num_cmp($ans31));
ANS(num_cmp($ans32));
ANS(num_cmp($ans33));
ANS(num_cmp($ans1));

ENDDOCUMENT() ;        

