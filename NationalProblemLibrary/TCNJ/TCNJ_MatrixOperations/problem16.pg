TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$A = new Matrix(2,4);
$B = new Matrix(4,4);
foreach my $i (1..2) {
        foreach my $j (1..4) {
                $A->assign($i,$j, non_zero_random(-10,10,1));
        }
}

foreach my $i (1..4) {
        foreach my $j (1..4) {
                $B->assign($i,$j, non_zero_random(-10,10,1));
        }
}

BEGIN_TEXT

Compute the following product. 
$BR
\{ mbox( display_matrix($A), display_matrix($B), '\(=\)', answer_matrix(2,4,10) ) \}

END_TEXT

ANS num_cmp(ra_flatten_matrix($A*$B));

