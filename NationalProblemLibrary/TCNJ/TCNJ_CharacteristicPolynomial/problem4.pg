TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$a= new Matrix(4,4);

$a11 = random(-1,1,2);
$a12 = non_zero_random(-3,3,1);
$mult = non_zero_random(-2,2,1);
$a21 = $mult * $a11;
$b1 = random(-1,1,2);
$a22 = $mult * $a12 + $b1;

$c11 = random(-1,1,2);
$c12 = non_zero_random(-3,3,1);
$mult = non_zero_random(-2,2,1);
$c21 = $mult * $c11;
$d1 = random(-1,1,2);
$c22 = $mult * $c12 + $d1;

$a->assign(1,1, $a11 );
$a->assign(1,2, $a12 );
$a->assign(2,1, $a21 );
$a->assign(2,2, $a22 );
$a->assign(1,3,0);
$a->assign(1,4,0);
$a->assign(2,3,0);
$a->assign(2,4,0);
$a->assign(3,1,0);
$a->assign(3,2,0);
$a->assign(4,1,0);
$a->assign(4,2,0);
$a->assign(3,3, $c11 );
$a->assign(3,4, $c12 );
$a->assign(4,3, $c21 );
$a->assign(4,4, $c22 );
$a_lr = $a->decompose_LR();
$a_det = $a11*$b1*$c11*$d1;
$b = $a_lr->invert_LR();

$e = new Matrix(4,4);
$e->one();
$e1 = random(-8,-5,1);
$e2 = random(-4,-1,1);
$e3 = random(1,4,1);
$e4 = random(5,8,1);
$e->assign(1,1, $e1);
$e->assign(2,2, $e2);
$e->assign(3,3, $e3);
$e->assign(4,4, $e4);

# define eigenvectors
	$v1 = new Matrix(4,1);
	$v1->assign(1,1, $a11);
        $v1->assign(2,1, $a21);
        $v1->assign(3,1,0);
        $v1->assign(4,1,0);

        $v2 = new Matrix(4,1);
        $v2->assign(1,1, $a12);
        $v2->assign(2,1, $a22);
        $v2->assign(3,1,0);
        $v2->assign(4,1,0);

        $v3 = new Matrix(4,1);
        $v3->assign(1,1,0);
        $v3->assign(2,1,0);
        $v3->assign(3,1, $c11);
        $v3->assign(4,1, $c21);

        $v4 = new Matrix(4,1);
        $v4->assign(1,1,0);
        $v4->assign(2,1,0);
        $v4->assign(3,1, $c12);
        $v4->assign(4,1, $c22);

# define final matrix
	$matrix = $a * $e *$b;
	$matrix_lr = $matrix->decompose_LR();
	$matrix_det = $matrix_lr->det_LR();

foreach $i (1..4) {
        foreach $j (1..4) {
                $m[$i][$j] = $matrix->element($i,$j);
                $m[$i][$j] = round($m[$i][$j]);
                $matrix -> assign($i,$j,$m[$i][$j]);
        }
}

