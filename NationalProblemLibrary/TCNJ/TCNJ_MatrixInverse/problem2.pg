##DESCRIPTION
##KEYWORDS('matrices', 'matrix operations', 'inverse')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl", 
"PGmatrixmacros.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$A = new Matrix(3,3);
$B = new Matrix(3,1);

$a11 = random(-5,5,1);
$a21 = random(-5,5,1); 
$a31 = random(1,5,1);

$b = non_zero_random(-3,3,1);
$a12 = $b * $a11;
$m = random(-1,1,2);
$a22 = $b * $a21 + $m;
$a32 = $b * $a31;

$c = random(-3,3,1);
$d = random(-3,3,1);
$n = random(-1,1,2);
$a13 = $c * $a11 + $d * $a12 + $n;
$a23 = $c * $a21 + $d * $a22;
$a33 = $c * $a31 + $d * $a32;

$det = - $a31 * $m * $n;

$ans11 = ($a22 * $a33 - $a23 * $a32)/$det;
$ans12 = - ($a12 * $a33 - $a13 * $a32)/$det;
$ans13 = ($a12 * $a23 - $a13 * $a22)/$det;
$ans21 = - ($a21 * $a33 - $a23 * $a31)/$det;
$ans22 = ($a11 * $a33 - $a13 * $a31)/$det;
$ans23 = - ($a11 * $a23 - $a13 * $a21)/$det;
$ans31 = ($a21 * $a32 - $a22 * $a31)/$det;
$ans32 = - ($a11 * $a32 - $a12 * $a31)/$det;
$ans33 = ($a11 * $a22 - $a12 * $a21)/$det;

$A->assign(1,1,$ans11);
$A->assign(1,2,$ans12);
$A->assign(1,3,$ans13);
$A->assign(2,1,$ans21);
$A->assign(2,2,$ans22);
$A->assign(2,3,$ans23);
$A->assign(3,1,$ans31);
$A->assign(3,2,$ans32);
$A->assign(3,3,$ans33);

$b1 = random(-5,5,1);
$b2 = non_zero_random(-5,5,1);
$b3 = non_zero_random(-5,5,1);

$B->assign(1,1,$b1);
$B->assign(2,1,$b2);
$B->assign(3,1,$b3);

BEGIN_TEXT

\{ mbox( 'If \(A=\)', display_matrix([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]) ) \}
$BR
\{ mbox( 'Then \(A^{-1}=\)', answer_matrix(3,3,5) ) \} 
$BR
\{ mbox( 'Given \(b=\)', display_matrix($B), ', solve \(Ax=b\).' ) \}
$BR
\{ mbox( '\(x=\)', answer_matrix(3,1,10) ) \}

END_TEXT

ANS(num_cmp($ans11));
ANS(num_cmp($ans12));
ANS(num_cmp($ans13));
ANS(num_cmp($ans21));
ANS(num_cmp($ans22));
ANS(num_cmp($ans23));
ANS(num_cmp($ans31));
ANS(num_cmp($ans32));
ANS(num_cmp($ans33));
ANS num_cmp(ra_flatten_matrix($A*$B));

ENDDOCUMENT();       # This should be the last executable line in the problem.
