TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-9,9,1);
$d = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);
$c = 0;

$det = $a * $d;

$ans11 = $d / $det;
$ans12 = - $b / $det;
$ans21 = 0;
$ans22 = $a / $det ;

BEGIN_TEXT

\{ mbox( 'If \(A=\)', display_matrix([[$a, $b], [$c, $d]]) ) \}
$BR
\{ mbox( 'Then \(A^{-1}=\)', answer_matrix(2,2,7) ) \}

END_TEXT

ANS(num_cmp($ans11));
ANS(num_cmp($ans12));
ANS(num_cmp($ans21));
ANS(num_cmp($ans22));



