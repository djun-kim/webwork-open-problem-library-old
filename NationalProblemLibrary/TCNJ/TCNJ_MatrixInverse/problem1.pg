DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl", 
"PGmatrixmacros.pl",
"PGnumericalmacros.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$A = new Matrix(2,2);
$B = new Matrix(2,1);

$a = random(-9,9,2);
$d = random(-9,9,2);
$b = non_zero_random(-8,8,2);
$c = non_zero_random(-9,9,1);

$det = $a * $d - $b * $c;

$ans11 = $d / $det;
$ans12 = - $b / $det;
$ans21 = - $c / $det;
$ans22 = $a / $det ;

$A->assign(1,1,$ans11);
$A->assign(1,2,$ans12);
$A->assign(2,1,$ans21);
$A->assign(2,2,$ans22);

$b1 = random(-5,5,1);
$b2 = non_zero_random(-5,5,1);

$B->assign(1,1,$b1);
$B->assign(2,1,$b2);

BEGIN_TEXT

\{ mbox( 'If \(A=\)', display_matrix([[$a, $b], [$c, $d]]) ) \}
$BR
\{ mbox( 'Then \(A^{-1}=\)', answer_matrix(2,2,7) ) \}
$BR
\{ mbox( 'Given \(b=\)', display_matrix($B), ', solve \(Ax=b\).' ) \}
$BR
\{ mbox( '\(x=\)', answer_matrix(2,1,10) ) \}

END_TEXT

ANS(num_cmp($ans11));
ANS(num_cmp($ans12));
ANS(num_cmp($ans21));
ANS(num_cmp($ans22));
ANS num_cmp(ra_flatten_matrix($A*$B));

ENDDOCUMENT();       # This should be the last executable line in the problem.
