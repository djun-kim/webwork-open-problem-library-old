##DESCRIPTION
##KEYWORDS('dot product', 'inner product', 'orthogonal', 'projection', 'subspace')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = non_zero_random(-7,7,1);
$y1 = random(-6,6,2);
$x2 = non_zero_random(-6,6,2);
$y2 = random(-7,7,1);
$x3 = non_zero_random(-2,2,1);
$y3 = non_zero_random(-2,2,1);

$v1 = random(-20,20,1);
$v2 = random(-20,20,1);
$v3 = random(-20,20,1);

$vx = $v1 * $x1 + $v2 * $x2 + $v3 * $x3;
$vy = $v1 * $y1 + $v2 * $y2 + $v3 * $y3;
$xx = $x1 * $x1 + $x2 * $x2 + $x3 * $x3;
$yy = $y1 * $y1 + $y2 * $y2 + $y3 * $y3;
$xy = $x1 * $y1 + $x2 * $y2 + $x3 * $y3;
$det = $xx * $yy - $xy * $xy;

if( $det ==0){
     $y3=2*$y3;
     $vy = $v1 * $y1 + $v2 * $y2 + $v3 * $y3;
     $yy = $y1 * $y1 + $y2 * $y2 + $y3 * $y3;
     $xy = $x1 * $y1 + $x2 * $y2 + $x3 * $y3;
     $det = $xx * $yy - $xy * $xy;
}



$a =  ( $yy * $vx - $xy * $vy) / $det;
$b =  ( -$xy * $vx + $xx * $vy) / $det;

$proj1 = $a * $x1 + $b* $y1;
$proj2 = $a * $x2 + $b* $y2;
$proj3 = $a * $x3 + $b* $y3;

$w1 = $v1 - $proj1;
$w2 = $v2 - $proj2;
$w3 = $v3 - $proj3;

$ans1 = $proj1;
$ans2 = $proj2;  
$ans3 = $proj3;  

BEGIN_TEXT

Find the projection of 
\{ mbox( '\(v=\)', display_matrix([[$v1], [$v2], [$v3]]) ) \} 
onto the subspace \(V\) of \( {\mathbb R}^3 \) spanned by 
\{ mbox( display_matrix([[$x1], [$x2], [$x3]]), 'and ', display_matrix([[$y1], [$y2], [$y3]]), '.' ) \}
$BR
\{ mbox( '\( {\rm proj}_V(v)= \)', answer_matrix(3,1,20), '.' ) \}

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

ENDDOCUMENT();       # This should be the last executable line in the problem.

