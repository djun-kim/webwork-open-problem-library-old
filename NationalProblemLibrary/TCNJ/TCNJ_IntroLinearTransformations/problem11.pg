##DESCRIPTION
##KEYWORDS('linear albebra', 'vector space', 'linear transformation', 'image', 'matrix')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGnumericalmacros.pl",
"PGstatisticsmacros.pl", 
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$m = random(1,5,1)*random(-1,1,2);
$n = random(1,5,1)*random(-1,1,2);
$a11 = random(2,6,2) * random(-1,1,2);
$a12 = random(1,5,2) * random(-1,1,2);
$a21 = random(1,5,2) * random(-1,1,2);
$a22 = random(2,6,2) * random(-1,1,2);
$a31 = $m*$a11 + $n*$a21;
$a32 = $m*$a12 + $n*$a22;


$u1 = non_zero_random(-5,5,1);
$u2 = non_zero_random(-5,5,1);


$b1 = $a11*$u1+$a12*$u2;
$b2 = $a21*$u1+$a22*$u2;
$b3 = $b1*$m + $b2*$n;

BEGIN_TEXT

$BR
\{ mbox( 'Let \(A =\)', display_matrix([[$a11, $a12], 
[$a21, $a22], [$a31, $a32]]), 'and \(b=\)',
display_matrix([[$b1],[$b2],[$b3]]),
	 '.' ) \}  
$BR
Define the linear transformation \( T: {\mathbb R}^2 \rightarrow {\mathbb R}^3\) as \(T(x) = Ax\). $BR
\{ mbox( 'Find a vector \(x \) whose image under \(T\) is \(b\) .' ) \}  $BR

$BR
\{ mbox( '\( x = \)', answer_matrix(2,1,10) ) \} 
$BR
Is the vector \(x\) unique? (enter YES or NO) \{ans_rule(5)\}



END_TEXT

$ans = "yes";

ANS(num_cmp($u1));
ANS(num_cmp($u2));
ANS(str_cmp($ans));


ENDDOCUMENT();       # This should be the last executable line in the problem.

