##DESCRIPTION
##KEYWORDS('dot product', 'line', 'orthogonal', 'projection')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = non_zero_random(-7,7,1);
$x2 = non_zero_random(-6,6,2);

$v1 = random(-10,10,1);
$v2 = random(-9,9,2);

$vx = $v1 * $x1 + $v2 * $x2;
$norm2x = $x1 * $x1 + $x2 * $x2; 
$projvx = $vx/$norm2x; 

$ans1 = $projvx * $x1;
$ans2 = $projvx * $x2;

BEGIN_TEXT

Compute the orthogonal projection of 
\{ mbox('\(v=\)', display_matrix([[$v1], [$v2]]) ) \} 
\{ mbox('onto the line \(L\) through', display_matrix([[$x1], [$x2]]), ' and the origin.' ) \}
$BR
\{ mbox('\( {\rm proj}_L(v)= \)', answer_matrix(2,1,10), '.' ) \}

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();       # This should be the last executable line in the problem.