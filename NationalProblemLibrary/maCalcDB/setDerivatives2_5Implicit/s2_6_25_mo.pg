##ENDDESCRIPTION

########################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context()->variables->add(y=>'Real');
Context()->variables->set(
 x=>{limits =>[-2,2]},
 y=>{limits =>[0,4]},
);

$x1 = random(-3,3,6);
$y1 = random(-1,1,2);

$f1 = Compute("2*(x^2+y^2)^2");
$f2 = Compute("25(x^2-y^2)");
$f = $f1-$f2;
$dfdx = $f->D('x');
$dfdy = $f->D('y');
$dxdy = Compute("-$dfdx/$dfdy");

$m1 = $dxdy->eval(x=>$x1,y=>$y1);
$b1 = $y1 -$m1*$x1;

$tang = Compute("$m1*x + $b1");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Find the equation of the tangent line to the curve (a lemniscate)
 \($f1 = $f2 \)
at the point \( ( $x1 , $y1 ) \).
Write the equation of the tangent line in the form \( y = mx+b \).
$BR \( y = \) \{$tang->ans_rule\}
$BR

END_TEXT

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS($tang->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.

