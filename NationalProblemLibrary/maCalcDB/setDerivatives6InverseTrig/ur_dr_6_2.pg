DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a1 = random(2,8,1);
$b1 = random(2,8,1);
$x1 = random(1,5,1);
$aa1=$a1**2;
$ab1=$b1*$a1;
$deriv1 =  $b1*$a1/(1+$a1**2*$x1**2);
$funct1 = "$ab1/(1+$aa1*x^2)";

TEXT(EV2(<<EOT));
If \( f(x) = $b1 \arctan($a1 x) \), find \( f'( x ) \).
$BR $BR \{ans_rule(30) \}
$BR
EOT

$ans = $funct1;
&ANS(function_cmp($ans));

TEXT(EV2(<<EOT));
Find \( f'( $x1 ) \).
$BR $BR \{ans_rule(30) \}
$BR
EOT

$ans = $deriv1;
&ANS(std_num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
