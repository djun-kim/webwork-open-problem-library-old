##DESCRIPTION
##KEYWORDS('tangent line','secant line', 'average,instantaneous velocity')
##  Find slope of secant lines between
##  two points of data given in a table
## tsuda tagged and PAID on 2-20-2004

## DBchapter('Limits and Derivatives')
## DBsection('The Tangent and Velocity Problems')
## Date('6/3/2002')
## Author('')
## Institution('')
## TitleText1('Calculus Early Transcendentals')
## EditionText1('4')
## AuthorText1('Stewart')
## Section1('2.1')
## Problem1('8')

##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT($BEGIN_ONE_COLUMN);
TEXT(&beginproblem);

$showPartialCorrectAnswers = 1;

$y1=random(5, 20, 1);
$y2=random(21, 50 , 1);
$y3=random(51, 80 ,1);
$y4=random(81,100, 1);
$y5=random(101, 120, 1);

TEXT(EV2(<<EOT));
The position of a cat running from a dog down a dark alley is
given by the values of the table.
EOT

@row1_1= ("t(seconds)", "0", "1", "2", "3", "4", "5");
@row1_2= ("s(feet)", 0, $y1, $y2, $y3, $y4, $y5);

$x=random(1, 4);
$y=$row1_2[($x+1)];

TEXT(
&begintable(scalar(@row1_1)+1),
&row(@row1_1),
&row(@row1_2),
&endtable(),
);

@row2_1=("x1");
$i=0;
for ($i=0; $i<=5; $i++) {
    unless ($i==$x) {
        push(@row2_1, $i);
    }
}

TEXT(
EV2("$BR $BR A.  Find the average velocity tor the time period beginning
when t=2 and lasting "),
match_questions_list("3 s","2 s", "1 s")
);

@answer=();
$answer[0]=($y5-$y2)/3;
$answer[1]=($y4-$y2)/2;
$answer[2]=($y3-$y2);

TEXT(EV2(
" $BR $BR B. Draw the graph of the function for yourself and estimate the
instantaneous velocity when t=2
 $BR"), ans_rule( 10));

$midvalue=($answer[2]+($y2-$y1))/2 + .000001;


ANS(std_num_cmp_list(.1, "",  @answer), std_num_cmp($midvalue, 1));

TEXT($END_ONE_COLUMN);
ENDDOCUMENT();        # This should be the last executable line in the problem.
