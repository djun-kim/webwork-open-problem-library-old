DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

@choose1 = (9,16,15,10,25,144,50,75,225,64,18,25,25,169,169);
@choose2 = (16,9,10,15,144,25,50,25,64,225,18,9,16,144,25);
$tag = random(0,14,1);
$a =  $choose1[$tag];
$b =  $choose2[$tag];

TEXT(EV2(<<EOT));
Evaluate the expression \(\sqrt{$a+$b} \).
$BR $BR \{ans_rule(10) \}
$BR
[NOTE:  Your answer cannot be an algebraic expression.]
$BR
EOT

$ans = sqrt($a+$b);
&ANS(strict_num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.

