DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$showPartialCorrectAnswers = 1;

$AA = random(3,6,1);
$BB = random(2,5,1);
$CC = random(3,7,1);

TEXT(&beginproblem);
BEGIN_TEXT
Find the indicated derivatives.
$PAR

(a) \(\frac{d}{dx}\left(e^{x^$AA}+\log_{$BB}(\pi)\right)\)  =  \{ ans_rule(35)\}
$PAR

(b) \(\frac{d}{dx}\left( \left( \sqrt[$CC]{x} \right) ^{\ln(x)}\right)\)  =  \{ ans_rule()\}
$BR
END_TEXT

&ANS(function_cmp("$AA*x^($AA-1)*e^(x^$AA)","x",0.99,1.01));
&ANS(function_cmp("2*(log(x))*x^(log(x)/$CC)/(x*$CC)","x",0.99,1.01));

ENDDOCUMENT();
