DOCUMENT();        # This should be the first executable line in the problem.


loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGcomplexmacros.pl");

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

foreach $i (0..4){
    $num[$i] = non_zero_random(-9,9,1);
    $den[$i] = non_zero_random(-9,9,1);
}
while ($den[2]*$num[0]==$num[2]){ $num[2] = non_zero_random(-9,9,1);}

$num[1] = non_zero_random(-9,9,1)*$num[0];
$den[0]=1;
$den[1]=$num[1]/$num[0];

$a = $den[2]*$num[0]-$num[2];
$b = $den[3]*$num[0]-$num[3];
$c = $den[4]*$num[0]-$num[4];

$d = $b**2-4*$a*$c;

$polynum = "";
foreach $i (0..$#num){ $j = $#num-$i;
    if ($j == $#num) {$polynum = $polynum."$num[$i] x^{$j}";}
    elsif ($j>0 && $j!=1) { 
        if ($num[$i]>0) {
            $polynum=$polynum."+$num[$i] x^{$j}";}
        elsif ($num[$i] == 0) {}
        else {$polynum=$polynum."$num[$i] x^{$j}";} 
    }
    elsif ($j == 1) {
        if ($num[$i] >0) {
            $polynum=$polynum."+$num[$i] x";}
        elsif ($num[$i] == 0) {}
        else {$polynum=$polynum."$num[$i] x";}
    }
    else {
        if ($num[$i] > 0) {
            $polynum=$polynum."+$num[$i]";}
        elsif ($num[$i] == 0){}
        else {$polynum=$polynum."$num[$i]";}
    }
}
$polyden = "";
foreach $i (0..$#den){ $j = $#den-$i;
    if ($j == $#den) {$polyden = $polyden."$den[$i] x^{$j}";}
    elsif ($j>0 && $j!=1) { 
        if ($den[$i]>0) {
            $polyden=$polyden."+$den[$i] x^{$j}";}
        elsif ($den[$i] == 0) {}
        else {$polyden=$polyden."$den[$i] x^{$j}";} 
    }
    elsif ($j == 1) {
        if ($den[$i] >0) {
            $polyden=$polyden."+$den[$i] x";}
        elsif ($den[$i] == 0) {}
        else {$polyden=$polyden."$den[$i] x";}
    }
    else {
        if ($den[$i] > 0) {
            $polyden=$polyden."+$den[$i]";}
        elsif ($den[$i] == 0){}
        else {$polyden=$polyden."$den[$i]";}
    }
}



BEGIN_TEXT;
\[f(x) = \frac{$polynum}{$polyden}\]
$BR

What is the equation of the horizontal asympotote? y=\{ans_rule(10)\}.$BR
$BR

Does the graph of \(f(x)\) intersect its horizontal asymptote? (yes or no)
\{ans_rule(10)\}.$BR
$BR

At what x-values does \(f(x)\) intersect its horizontal asymptote?  Give your
answers in increasing order.  If \(f(x)\) does not intersect its horizontal 
asymptote, leave this question blank. \{ans_rule(10)\} , \{ans_rule(10)\}$BR
END_TEXT

&ANS(num_cmp($num[0]));

if ($d >= 0) {&ANS(str_cmp('yes'));}
else {  &ANS(str_cmp('no'));
    &ANS(str_cmp(''));
    &ANS(str_cmp(''));}

if ($d > 0) {
    @ans = ( (-$b+sqrt($d))/(2*$a),(-$b-sqrt($d))/(2*$a));
    @ans = num_sort(@ans);
    &ANS(num_cmp($ans[0]));
    &ANS(num_cmp($ans[1]));}
elsif ($d == 0) { $ans = -$b/(2*$a);
    &ANS(num_cmp($ans));
    &ANS(str_cmp(''));
}

ENDDOCUMENT();        # This should be the last executable line in the problem.

