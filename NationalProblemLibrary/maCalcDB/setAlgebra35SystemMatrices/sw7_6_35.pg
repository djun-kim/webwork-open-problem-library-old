DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x=random(-2,2,1);
$y=random(-2,2,1);
$z=random(-2,2,1);
$b1 = 2*$x + 3*$y - 5*$z;
$b2 = $x + $y - $z;
$b3 = 2*$y+$z;

BEGIN_TEXT
Use Cramer's rule to solve the system
\[
\begin{array}{l}
        2x_1+3x_2-5x_3 = $b1 \\
        x_1+x_2-x_3 = $b2 \\
        2x_2+x_3 = $b3 \\
\end{array}
\]
$PAR
\(x_1=\) \{ans_rule(10) \}, \(x_2=\) \{ans_rule(10) \}, and \(x_3=\) \{ans_rule(10) \}
$BR
END_TEXT

$ans1 = $x;
$ans2 = $y;
$ans3 = $z;

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));
ANS(std_num_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.
