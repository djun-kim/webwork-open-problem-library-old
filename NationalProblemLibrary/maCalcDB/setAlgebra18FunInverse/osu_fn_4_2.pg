DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);


$showPartialCorrectAnswers = 1;

$AA = random(1,6,1);
$BB = random(3,12,1);
$CC = random(7,25,1);
$DD = random(6,15,1);

$answ1 = -$BB/$DD;
$answ2 = $AA/$CC;
TEXT(&beginproblem);
BEGIN_TEXT
\[f(x)=\frac{$AA e^x - $BB}{$CC e^x + $DD}\]
$BR
\(f^{-1}(x)\)  =  \{ ans_rule()\}
$BR
The domain of \(f^{-1}(x)\) is the open interval \((a,b)\), where $BR
\(a\)  =  \{ ans_rule()\}
$BR
and
\(b\)  =  \{ ans_rule()\}
END_TEXT

##set $PG_environment{'textbook'} in webworkCourse.ph
if (defined($textbook)) {
   if ($textbook eq "EllisGulick5") {
BEGIN_TEXT
$PAR
This is similar to problems 27-28 of Section 6.2 of the text.
END_TEXT
}
}

&ANS(function_cmp("log(($DD*x+$BB)/($AA-$CC*x))","x",$answ1+.0001,$answ2-.0001));
&ANS(std_num_cmp($answ1));
&ANS(std_num_cmp($answ2));

ENDDOCUMENT();
