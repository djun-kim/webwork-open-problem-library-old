## Problem1('3 27 32')
##  Find a derivative of an expression
##  involving trig functions; requires use of chain rule
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a_gen  = random(2,9,1);
$a_sign = random(-1,1,2);
$a      = $a_gen * $a_sign;

$gen = random(0,3,1);

if ($gen == 0) {
  $trig1 = "\sin";
  $trig2 = "\sin";
  $ans  = "$a*cos(sin(x))*cos(x)";
  }
if ($gen == 1) {
  $trig1 = "\sin";
  $trig2 = "\cos";
  $ans  = "-$a*cos(cos(x))*sin(x)";
  }
if ($gen == 2) {
  $trig1 = "\cos";
  $trig2 = "\sin";
  $ans  = "-$a*sin(sin(x))*cos(x)";
  }
if ($gen == 3) {
  $trig1 = "\cos";
  $trig2 = "\cos";
  $ans  = "$a*sin(cos(x))*sin(x)";
  }

TEXT(EV2(<<EOT));
Let \[ f(x) = $a $trig1 ($trig2 x) \]
$PAR
\( f'( x ) = \) \{ans_rule(30) \}
$BR
EOT

&ANS(function_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
