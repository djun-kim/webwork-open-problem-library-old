DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,6,1);
$d = random(2,6,1);

BEGIN_TEXT
For the sequence \( a_n= $a + $d*(n-1) \),
$BR
its first term is \{ans_rule(10) \};
$BR
its second term is \{ans_rule(10) \};
$BR
its third term is \{ans_rule(10) \};
$BR
its fourth term is \{ans_rule(10) \};
$BR
its fifth term is \{ans_rule(10) \};
$BR
its common difference \(d=\) \{ans_rule(10) \}.
$BR
END_TEXT

$ans1 = $a;
$ans2 = $a+$d;
$ans3 = $a+$d*2;
$ans4 = $a+$d*3;
$ans5 = $a+$d*4;
$ans6 = $d;

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));
ANS(std_num_cmp($ans3));
ANS(std_num_cmp($ans4));
ANS(std_num_cmp($ans5));
ANS(std_num_cmp($ans6));

ENDDOCUMENT();        # This should be the last executable line in the problem.

