DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);

TEXT(&beginproblem);

## Define random numbers here
$A = random(1,40,1);

$num = non_zero_random(0,10,1);
$den = non_zero_random(2,20,1);

while (gcd(abs($num),$den)>1) {
        $den = random(2,20,1);
}



$B = random(6,14,1);

$t1 = $A;
$num1 = $A*$num;
$den1 = $den;

$GCD = gcd(abs($num1),$den1);
$num1 = $num1/$GCD;
$den1 = $den1/$GCD;

$num2 = $num1*$num;
$den2 = $den1*$den;

$GCD = gcd(abs($num2),$den2);
$num2 = $num2/$GCD;
$den2 = $den2/$GCD;

## Put text of question here
BEGIN_TEXT;

Given the geometric sequence: 
\($t1,\frac{$num1}{$den1},\frac{$num2}{$den2}  \ldots \) 
$BR 
$BR
Find an explicit formula for \(a_n\).

$BR
\(a_n = \) \{ans_rule(20) \}

$BR
$BR

Find \(a_{$B} = \) \{ans_rule(20)\}.$BR

END_TEXT
$r = $num/$den;
$ans1 = "$A*($r**(n-1))";

&ANS(fun_cmp ($ans1,var=>["n"]));


$ans2 = $A*($r)**($B-1);
&ANS(num_cmp($ans2));


ENDDOCUMENT();        # This should be the last executable line in the problem.;

