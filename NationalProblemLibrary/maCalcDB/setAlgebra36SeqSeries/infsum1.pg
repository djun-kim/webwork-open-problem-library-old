DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

$j = random(0,8,1);
$a = non_zero_random(-10,10,1);
$b = non_zero_random(-10,10,1);
$c = random(2,10,1);
while (gcd(abs($b),$c) >1) {
        $c = random (2,10,1);
}

$term = "$a (\frac{$b}{$c})^{n}";
$start = $a*($b/$c)**$j;

if (abs($b/$c) < 1) {$sum = $start/(1-$b/$c);}
else {$sum = 'DOES NOT EXIST';}

BEGIN_TEXT;
Evaluate the following sum.  If the sum is not finite, type DOES NOT EXIST as
your answer.  

\[\sum_{n=$j}^{\infty} $term \]
$BR
The sum is \{ans_rule(10)\}.

END_TEXT
if (abs($b/$c) > 1) {&ANS(str_cmp($sum));}
else{
&ANS(num_cmp($sum,strings=>['DOES NOT EXIST']));}

ENDDOCUMENT();        # This should be the last executable line in the problem.


