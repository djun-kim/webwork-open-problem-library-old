DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x=random(-3,3,1);
$y=random(-3,3,1);
$b1 = -$x + $y ;
$b2 = 4*$x - 3*$y;

BEGIN_TEXT
Use the substitution method to solve the system
\[
\begin{array}{l}
        -x+y = $b1, \\
        4x-3y = $b2. \\
\end{array}
\]
$BR
Your answer is
$BR
\(x=\) \{ans_rule(25) \}
$BR
\(y=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $x;
$ans2 = $y;

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.

