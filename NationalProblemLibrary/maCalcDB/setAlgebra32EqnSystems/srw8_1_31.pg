DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x=random(-3,3,1);
$y=random(-3,3,1);
$b1 = 3*$x + 2*$y ;
$b2 = $x - 2*$y;

BEGIN_TEXT
Use a calculator solve the system
\[
\begin{array}{l}
        3x+2y = $b1, \\
        x-2y = $b2. \\
\end{array}
\]
$BR
Your answer is
$BR
\(x=\) \{ans_rule(25) \}
$BR
\(y=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $x;
$ans2 = $y;

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.

