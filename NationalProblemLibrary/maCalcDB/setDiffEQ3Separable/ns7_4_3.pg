"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(2,10,1);
$b = random(2,11,1);

BEGIN_TEXT
Find a function  \(y\)  of \(x\) such that  
\[ $a yy' = x \ \mbox{ and } \ y($a)= $b. \]
\(y =\) \{ ans_rule(45) \}.
END_TEXT

$ans = " ((x*x/$a ) + ($b * $b ) - $a )^.5";

&ANS(function_cmp($ans, "x"));
