TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@k = (2,3);
@word = ("double", "triple");
$tag = random(0,1,1);

$rate = random(3,8,1);
$r = $rate/100;

$answer = ln($k[$tag])/$r;

BEGIN_TEXT

How long will it take an investment to $word[$tag] in value if the interest rate is $rate$PERCENT compounded
continuously? 
$BR 
Answer: \{ans_rule(20)\} years.

END_TEXT

ANS(num_cmp($answer));

