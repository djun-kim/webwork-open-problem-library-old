TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,30,2);

BEGIN_TEXT
The partial fraction decomposition of
\( \frac{$a}{(x-1)(x+1)}\)
can be written in the form of
\( \frac{f(x)}{x-1} +\frac{g(x)}{x+1},\) where
$BR
\(f(x)=\) \{ans_rule(10) \},
$BR
\(g(x)=\) \{ans_rule(10) \}.
$BR
END_TEXT

$ans1 = $a/2;
$ans2 = -$a/2;

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));

