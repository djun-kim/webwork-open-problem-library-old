loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

install_problem_grader(~~&std_problem_grader);

$a = random(2,8,1);
$b = non_zero_random(-9,9,1);

$cn = random(5,15,1);
$cs = random(-1,1,2);
$c = $cn * $cs;
$ctemp = $cn - 4;

$u = random(2,9,1);
$l = random(2,4,1);
$e = exp(1);

BEGIN_TEXT
$PAR
Let \( f(x) \) be a continuous function defined on the interval 
\( [2, \infty ) \) such that \[ f($l) = $c \] 
\[  |f(x)| < x^{$u} + $ctemp \] and 
\[ \int_{$l}^{\infty} f(x) e^{-x/$a} \,dx = $b \]
$PAR
Determine the value of  \[ \int_{$l}^{\infty} f'(x) e^{-x/$a} \,dx \] 
\{ ans_rule(20) \}
END_TEXT

$ans = $b/$a - $c * $e**(-$l/$a);

&ANS(std_num_cmp($ans));

ENDDOCUMENT();
