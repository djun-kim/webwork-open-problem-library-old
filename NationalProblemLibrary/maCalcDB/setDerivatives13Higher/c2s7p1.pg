# Find the  higher derivatives at a point using differentiation formulae.
#ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a= random(1,10,1);
$b= random(1,2,1);
$c= random(2,5,1);

TEXT(EV2(<<EOT));
If \( g(t) = ($a -t^{$b})^{$c} \) find
$BR
\(g(0) =\)\{&ans_rule(20) \} $BR
\(g'(0) =\)\{&ans_rule(20) \} $BR
\(g''(0) =\)\{&ans_rule(20) \} $BR

EOT

sub tat0 {
	my ($power) = @_;
	my $out = 0;
	$out = 0 if $power > 0;
	$out = 1 if $power == 0;
	$out = 0 if $power < 0;
	$out;
	}

$g0 = ( $a + &tat0($b) )** $c;
$gp0 = $c*($a-&tat0($b) )**($c-1) *(-$b*&tat0($b-1) );
$gp00 = $c*($c-1)*($a-&tat0($b))**($c-2)*($b*$b*&tat0(2*$b-2) )  - $c*($a-&tat0($b))**($c-1)*($b*($b-1)*&tat0($b-2));

&ANS(std_num_cmp_list(.1, "", $g0, $gp0, $gp00 ));

ENDDOCUMENT();        # This should be the last executable line in the problem.
