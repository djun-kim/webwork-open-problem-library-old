TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$mean1 = 0;
$var1 = 0;
for ($i=0; $i<9; $i++) {
	$a[$i] = random(2,100,1);
	$mean1 = $mean1+$a[$i];
}
$mean1 = $mean1/9;
for($i=0; $i<9; $i++) {
	$b1 = ($a[$i] - $mean1)**2;
	$var1 = $var1+$b1;
}

$variance1 = $var1/8;
$sd1 = sqrt($variance1);

$mean2 = 0;
$var2 = 0;
for ($i=0; $i<6; $i+=1) {
	$b[$i] = random(40,60,1);
	$mean2 = $mean2+$b[$i];
}
$mean2 = $mean2/6;
for($i=0; $i<6; $i++) {
	$b2 = ($b[$i] - $mean2)**2;
	$var2 = $var2+$b2;
}

$variance2 = $var2/5;
$sd2 = sqrt($variance2);

$mean3 = 0;
$var3 = 0;
for ($i=0; $i<5; $i+=1) {
	$c[$i] = random(2,5,.1);
	$mean3 = $mean3+$c[$i];
}
$mean3 = $mean3/5;
for($i=0; $i<5; $i++) {
	$b3 = ($c[$i] - $mean3)**2;
	$var3 = $var3+$b3;
}

$variance3 = $var3/4;
$sd3 = sqrt($variance3);



