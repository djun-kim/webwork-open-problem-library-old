loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGdiffeqmacros.pl",
"PGmatrixmacros.pl"   
) ;
############

TEXT(beginproblem()) ;

$a11 = random(-4,4,1);
$a12 = random(5,9,1);
$a21 = random(-9,-4,1);
$a22 = random(-4,4,1);

$det = $a11*$a22 - $a12*$a21;

$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT

\{ mbox( 'If \(A=\)', display_matrix([[$a11, $a12], [$a21, $a22]]), ',' ) \}  
$BR
\{ mbox( 'then \(\det\,(A)= \ \)', ans_rule(10), 'and \(A^{-1}=\)', answer_matrix(2,2,10), '.' ) \} 
 
END_TEXT

ANS(num_cmp($det));
ANS(num_cmp( [ $a22/$det, -$a12/$det,-$a21/$det, $a11/$det ] ) );

ENDDOCUMENT() ;        







