DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl", 
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a11 = random(-5,5,1);
$a12 = random(-5,5,1);
$a13 = random(-5,5,1);
$a21 = random(-5,5,1);
$a22 = random(-5,5,1);
$a23 = random(-5,5,1);
$a31 = random(-5,5,1);
$a32 = random(-5,5,1);
$a33 = random(-5,5,1);

$det = $a11*$a22*$a33 + $a12*$a23*$a31 + $a13*$a21*$a32 - $a13*$a22*$a31 - $a12*$a21*$a33 - $a11*$a23*$a32;


BEGIN_TEXT

Find the determinant of the matrix 
$BR
\{ mbox( '\(B =\)', display_matrix([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]), '.' ) \}
$BR
\(\det\,(B)=\) \{ans_rule(30)\}.

END_TEXT

ANS(num_cmp($det, mode=>"arith"));

