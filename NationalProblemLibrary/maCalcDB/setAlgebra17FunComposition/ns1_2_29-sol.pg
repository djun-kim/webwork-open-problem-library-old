## Problem1('2')
##  finding points where the quotient of two given functions
##  is undefined;
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl", "PGbasicmacros.pl", "PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a=random(2, 10);
$b=random(2, 10);
$c=random(1, 12);
$d = gcd($b, $c);
$b1 = $b/$d;
$c1 = $c/$d;

TEXT(EV2(<<EOT));
Let \( f(x)= x^{3}+${a}x^{2} \) and \( g(x)= ${b}x^{2}-$c \).$BR $BR
\( f/g \) is undefined at two points \(A\) and \(B\) where \(A < B\). $BR
EOT

TEXT(EV2("\(A\) is ", ans_rule(15), ",$BR and \(B\) is ", ans_rule(15)));

$root=sqrt($c/$b);

ANS(num_cmp(- $root));
ANS(num_cmp($root));

SOLUTION(EV3(<<'EOF'));
$SOL $BR
\(f/g\) is not defined when \(g(x)=0\), i.e. when $BR
\( ${b}x^{2}-$c = 0 \) $BR
\( $b x^2 = $c \) $BR
EOF

if (int($c/$b) == ($c/$b)) {
$f = $c/$b;
SOLUTION(EV3(<<'EOF'));
\( x^2 = $f\) $BR
EOF

if (int($root) == $root) {
SOLUTION(EV3(<<'EOF'));
\( x = \pm $root\) $BR
Therefore \(A=- $root\) and \(B=$root\).
EOF
} else {
SOLUTION(EV3(<<'EOF'));
\( x = \pm \sqrt{$f} \) $BR
Therefore \(A=-\sqrt{$f}\) and \(B=\sqrt{$f}\).
EOF
}

} else {

SOLUTION(EV3(<<'EOF'));
\( x^2 = \frac{$c}{$b} \) $BR
EOF

if ($d !=1) {
SOLUTION(EV3(<<'EOF'));
\( x^2 = \frac{$c1}{$b1} \) $BR
EOF
}

SOLUTION(EV3(<<'EOF'));
\( x = \pm \sqrt{\frac{$c1}{$b1}} \) $BR
Therefore \(A=- \sqrt{\frac{$c1}{$b1}}\) and \( B= \sqrt{\frac{$c1}{$b1}}.\)
EOF
}
            
ENDDOCUMENT();        # This should be the last executable line in the problem.

