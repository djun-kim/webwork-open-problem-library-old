DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$A = random(2,10,1);
$C = random(2,10,1);
$D = random(2,10,1);

        $ans1 = "($C*k)/(1-k)";
        $ans2 = ($C*1/$D)/(1-1/$D);

BEGIN_TEXT;
Solve for \(x\) in terms of \(k\).

\[ \log_{$A} x - \log_{$A} (x+$C) = \log_{$A} k. \] 
$BR \(x = \) \{ans_rule(20) \}
$BR
END_TEXT

&ANS(fun_cmp ($ans1, var=>["k"] ) );

BEGIN_TEXT;
Find \(x\) if \(k = 1/$D\).  \{ans_rule(20) \}

END_TEXT

&ANS(num_cmp($ans2));
