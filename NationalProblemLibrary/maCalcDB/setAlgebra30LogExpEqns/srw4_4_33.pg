loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"Parser.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(-5,-1,2);
$b=random(2,4,2);
## (x+$a)(x+$b)
$b1 = $a+$b;
$c1 = $a*$b;

BEGIN_TEXT
Find the solutions of the exponential equation
\[
e^{2x} ? {$b1} e^x ? {$c1} =0.
\]
$BR

\(x_1=\) \{ans_rule(15) \}
and \(x_2=\) \{ans_rule(15) \} with \( x_1 < x_2 \).
$BR
$BBOLD
If there is only one solution, input it at \(x_1\).
$EBOLD
END_TEXT

$ans1 = ln(-$a);

ANS(std_num_cmp($ans1));
ANS(String("")->cmp);

