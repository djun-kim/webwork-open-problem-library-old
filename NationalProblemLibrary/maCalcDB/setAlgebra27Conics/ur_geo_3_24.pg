$BR
\( h= \)\{ans_rule(10) \}
$BR
EOT

$ans = $h;
&ANS(std_num_cmp($ans));

TEXT(EV2(<<EOT));
and$BR
\( k= \) \{ans_rule(10) \}
$BR
EOT

$ans =  -$k;
&ANS(std_num_cmp($ans));

TEXT(EV2(<<EOT));
and$BR
\( r= \) \{ans_rule(10) \}
$BR
EOT

