DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(6,10,1);
$b = random(2,5,1);
$asq = $a**2;
$bsq = $b**2;
$foc = sqrt($asq-$bsq);

$a1 = random(2,5,1);
$b1 = random(6,10,1);
$c1 = random(1,20,1);
$d1 = random(1,20,1);
$a1sq = $a1**2;
$b1sq = $b1**2;
$foc1a = $d1+sqrt($b1sq-$a1sq);
$foc1b = $d1-sqrt($b1sq-$a1sq);

$a2 = random(3,4,1);
$b2 = $a2-1;
$c2 = random(1,10,1);
$d2 = random(1,10,1);
$a2sq = $a2**2;
$b2sq = $b2**2;
$m = 2*$b2**2*$c2;
$n = 2*$a2**2*$d2;
$p = $b2**2*$c2**2+$a2**2*$d2**2-$a2**2*$b2**2;
$foc2a = $c2+sqrt($a2sq-$b2sq); 
$foc2b = $c2-sqrt($a2sq-$b2sq);

BEGIN_TEXT
$PAR
Find the center, vertices, and foci of each ellipse.

(a) \( \displaystyle \frac{x^2}{$asq}+\frac{y^2}{$bsq}=1 \)$BR

Center: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Right vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Left vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Top vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Bottom vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Right focus: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Left focus: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )

END_TEXT
&ANS(std_num_cmp_list(.1, "",0,0,$a,0,-$a,0,0,$b,0,-$b,$foc,0,-$foc,0));

BEGIN_TEXT

(b) \( \displaystyle \frac{(x+$c1)^2}{$a1sq}+\frac{(y-$d1)^2}{$b1sq}=1 \)

Center: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Right vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Left vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Top vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Bottom vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Top focus: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Bottom focus: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )

END_TEXT
&ANS(std_num_cmp_list(.1, "",-$c1,$d1,-$c1+$a1,$d1,-$c1-$a1,$d1,-$c1,$d1+$b1,-$c1,$d1-$b1,-$c1,$foc1a,-$c1,$foc1b));

BEGIN_TEXT
(c) \( $b2sq x^2 + $a2sq y^2 -$m x -$n y +$p =0 \)

Center: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Right vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Left vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Top vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Bottom vertex: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Right focus: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )$BR
Left focus: ( \{ans_rule(5)\} , \{ans_rule(5) \}  )
END_TEXT
&ANS(std_num_cmp_list(.1, "",$c2,$d2,$c2+$a2,$d2,$c2-$a2,$d2,$c2,$d2+$b2,$c2,$d2-$b2,$foc2a,$d2,$foc2b,$d2));



ENDDOCUMENT();        # This should be the last executable line in the problem.

