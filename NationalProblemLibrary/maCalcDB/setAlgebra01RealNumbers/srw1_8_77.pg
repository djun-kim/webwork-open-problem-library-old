"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

$a = random(100,,1);
$b = random(100,,1);

TEXT(EV2(<<EOT));
Find the distance betweem \($b\) and \($a\).
$BR $BR \{ans_rule(10) \}
$BR $BR
[NOTE:  Your answer can be an algebraic expression]
EOT

$ans = abs($a-$b);
&ANS(arith_num_cmp($ans));

