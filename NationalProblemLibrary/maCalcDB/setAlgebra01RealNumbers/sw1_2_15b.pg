DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);
TEXT(beginproblem());
$showCorrectPartialAnswers = 1;

$n1 = random(2,10,1);
$n2 = random(1,10,1);
$d2 = random(2,10,1);

BEGIN_TEXT
Add the fractions, and reduce your answer. 
             \[ \left($n1\div\frac{$n2}{$d2}\right)-\frac{$n2}{$d2} \]
The reduced answer is \{ans_rule(5)\} / \{ans_rule(5)\}
END_TEXT
@factors = ();
@commonfactors = ();
$fac = $d2*$n2;
for($i=2; $i<=($d2*$n2)/2; $i++){
	if($fac % $i == 0){
		$fac =$fac/$i;
		push @factors,$i;
                $i = $i-1;
	};
};
$fac = $n1*$d2*$d2-$n2*$n2;
foreach $i (@factors){
	if($fac % $i == 0){
		$fac = $fac / $i;
		push @commonfactors,$i;
	};
};
$den = $d2*$n2;
$num = $n1*$d2*$d2-$n2*$n2;
foreach $i (@commonfactors){
	$num = $num / $i;
	$den = $den / $i;
};

ANS(strict_num_cmp($num));
ANS(strict_num_cmp($den));

ENDDOCUMENT();        # This should be the last executable line in the problem.
