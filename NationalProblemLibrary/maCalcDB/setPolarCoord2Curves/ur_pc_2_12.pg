"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$pi = 4*arctan(1);
$a = random(1,7);
$ans = ($a**2)*($pi**3)/6;


BEGIN_TEXT
$PAR
Find the area of the region which is bounded by the polar curves
$BR \[ \theta = \pi \]
and
$BR \[ r = $a  \theta \]
$BR for \( 0 \leq \theta \leq 1.5 \pi \)

$BR The area is \{ans_rule(20) \}
END_TEXT
ANS(std_num_cmp($ans));

