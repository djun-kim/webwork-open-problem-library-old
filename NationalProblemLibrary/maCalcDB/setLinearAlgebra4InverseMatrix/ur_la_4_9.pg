DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl", 
"PGcomplexmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$A = new Matrix(2,2);

$a = random(-3,3,1);
$b = non_zero_random(-3,3,1);
$e = non_zero_random(-3,3,1);
$f = non_zero_random(-3,3,1);

$det_re = random(-1,0,1);
$det_im = (1 + $det_re) * random(-1,1,2);
$det = cplx($det_re, $det_im);

$a[1][1] = cplx($a, $b);
$a[2][1] = cplx(1, 0);
$a[2][2] = cplx($e, $f);
$a[1][2] = $a[1][1]*$a[2][2] - $det;

$A -> assign(1, 1, $a[1][1]);
$A -> assign(1, 2, $a[1][2]);
$A -> assign(2, 1, $a[2][1]);
$A -> assign(2, 2, $a[2][2]);

$i[1][1] = $a[2][2]/$det;
$i[1][2] = - $a[1][2]/$det;
$i[2][1] = - $a[2][1]/$det;
$i[2][2] = $a[1][1]/$det;

BEGIN_TEXT

\{ mbox( 'If \(A=\)', display_matrix($A) ) \}
$BR
\{ mbox( 'then \(A^{-1}=\)', answer_matrix(2,2,15), '.' ) \}

END_TEXT

ANS(cplx_cmp($i[1][1]));
ANS(cplx_cmp($i[1][2]));
ANS(cplx_cmp($i[2][1]));
ANS(cplx_cmp($i[2][2]));

ENDDOCUMENT();       # This should be the last executable line in the problem.

