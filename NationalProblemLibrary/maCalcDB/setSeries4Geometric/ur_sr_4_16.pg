"PGgraphmacros.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-10,10,1);
$r = non_zero_random(2,6,1);
$a2 = $a*(1/$r);
$a3 = $a*((1/$r)**2);
$e = $r**2;
$ans = "$a/(1-(1/$r))";

BEGIN_TEXT


Find the sum $BR
\( \displaystyle $a + \frac{$a}{$r} + \frac{$a}{$e} + ... + \frac{$a}{$r^{n-1}} \)

Answer: \{ans_rule(20)\}

END_TEXT

&ANS(num_cmp($ans));

