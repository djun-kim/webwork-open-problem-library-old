#DESCRIPTION
# Convert the given decimal into a rational fraction.
#KEYWORDS('Rational Numbers' , 'Conversion', 'Decimal to Fraction' )
## tsuda tagged and PAID on 2-20-2004

## DBsubject('Calculus')
## DBchapter('Infinite Sequences and Series')
## DBsection('Series')
## Date('6/3/2002')
## Author('')
## Institution('')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('4')
## AuthorText1('Stewart')
## Section1('11.2')
## Problem1('38')

#ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

# Pick denominator q to be 11, 33, or 99.  That way, the decimal
# of the fraction repeats every two digits; no more and no less.

$ee = random(0,2);
$q = 11 * 3**$ee;

# Pick numerator r of fractional part, prime to q.

if ($ee==0) {
	$r = random(2,9,1);
} elsif ($ee==1) {
	$a = random(1,2,1);
	$b = random(2,9,1);
	$r = 22*$a + 12*$b;
		# So r is congruent to a mod 3 and b mod 11
} else {
	$c = random(1,2,1);
	$a = $c + random(0,6,3);
	$b = random(2,9,1);
	$r = 55*$a + 45*$b;
		# So r is congruent to a mod 9 and b mod 11
}

# Make sure r < q

while ($r >= $q) {
	$r = $r - $q;
}

# Now add integer part n to get fraction p/q

$n = random(2,10);
$p = $q*$n + $r;

$nf = $n.'.';
$r2 = sprintf("%02d", $r*3**(2-$ee));
for (1..5) {
 $nf .= $r2;
}

BEGIN_TEXT
Express \($nf \ldots \) as a rational number, in the form 
\( \frac{p}{q} \)
$BR 
where \(p\) and \(q\) are positive integers
with no common factors.
$BR$BR
\(p \) = \{ans_rule(30)\}
$BR 
\(q \) = \{ans_rule(30)\}
END_TEXT

ANS(num_cmp($p));
ANS(num_cmp($q));

ENDDOCUMENT();        # This should be the last executable line in the problem.
