);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a=random(2,98,2);
$b=random(3,99,2);
$c=random(3,99,2);

BEGIN_TEXT
Given \(f(x)=|x|\), after performing the following transformations:
shift to the left $a units, shrink vertically by a factor of
\(\displaystyle \frac{1}{$b}\), and shift downward $c units,  the new
function
\(g(x)=\) \{ans_rule(15) \}
$BR
Use abs(x) for \(|x|\).
END_TEXT

$ans1 = "-$c+abs(x+$a)/$b";

ANS(fun_cmp($ans1));

