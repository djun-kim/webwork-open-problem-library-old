loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,10,1);

BEGIN_TEXT
For the function \( f(x)= \left(\frac{1}{$a}\right)^x, \) 
calculate the following function values:
$BR
\(f(-3)=\) \{ans_rule(25) \}
$BR
\(f(-1)=\) \{ans_rule(25) \}
$BR
\(f(0)=\) \{ans_rule(25) \}
$BR
\(f(1)=\) \{ans_rule(25) \}
$BR
\(f(3)=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $a**3;
$ans2 = $a;
$ans3 = 1;
$ans4 = 1/$a;
$ans5 = $a**(-3);

ANS(frac_num_cmp($ans1));
ANS(frac_num_cmp($ans2));
ANS(frac_num_cmp($ans3));
ANS(frac_num_cmp($ans4));
ANS(frac_num_cmp($ans5));

ENDDOCUMENT();        # This should be the last executable line in the problem.

