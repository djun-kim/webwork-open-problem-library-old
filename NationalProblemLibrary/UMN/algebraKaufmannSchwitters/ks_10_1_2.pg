TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

##############################################################

Context("Numeric");

$a = random(2,5,1);
$b = random(3,4,1);

$c = Compute("$a^($b)");

$ans = Compute("$b");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( $a^x = $c .\)
$PAR
Answer: \(x =\) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp);

