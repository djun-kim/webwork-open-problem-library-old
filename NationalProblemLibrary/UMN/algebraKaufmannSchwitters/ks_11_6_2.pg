########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGanswermacros.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

##############################################################

Context("Numeric");

$A = non_zero_random(-3,1,1);
$B = list_random(4,5);

$f = Compute("($A+$B)*x+(-4*$A+3*$B)")->reduce;

$ans1 = Formula("$A");
$ans2 = Formula("$B");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Find the partial fraction decomposition for the following rational expression 
\[
\frac{$f}{(x+3)(x-4)}=\frac{A}{x+3}+\frac{B}{x-4}
\] $PAR
Answer: \(A = \) \{ans_rule(20)\} and \(B = \) \{ans_rule(20)\} $PAR
$HR
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans1->cmp );
ANS( $ans2->cmp );

ENDDOCUMENT()
