DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextCurrency.pl",
   "PGauxiliaryFunctions.pl"
);

########################################################################

TEXT(beginproblem());

########################################################################

Context("Numeric");

$a = random(2000,6000,1000);
$b = random(4,6,1);
$c = random(7,9,1);

$an = Compute("($d-0.01*$c*$a)/(0.01*($b-$c))")->reduce;

Context("Currency");
Context()->flags->set(trimTrailingZeros=>2);

$a1 = Currency("$a");
$d = Currency("0.065*$a");

$ans = Currency("$an");

##############################################################

Context()->texStrings;
BEGIN_TEXT
A total of \($a1\) was invested, part of it at \($b\)% interest and the remainder at \($c\)%.  If the total yearly interest amount is \($d\), how much was invested at \($b\)%?
$PAR
Amount of Money Invested at \($b\)%: \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp(promoteReals=>1));

ENDDOCUMENT();        # This should be the last executable line in the problem.