DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);

#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

#####################################################################

Context("Numeric");

$ans1 = Compute("0.25");
$ans2 = Compute("1/13");
$ans3 = Compute("0.5");
$ans4 = Compute("1/26");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
$BITALIC One $EITALIC card is drawn from a standard deck of \(52\) playing cards.  Find the probability of each of the following events:
$HR
$BBOLD 1. $EBOLD A spade is drawn. $BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 2. $EBOLD A seven is drawn.$BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 3. $EBOLD A spade or heart is drawn.$BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 4. $EBOLD A black jack is drawn. $BR
Answer: \{ans_rule(20)\}
$HR
END_TEXT

#####################################################################

ANS(($ans1)->cmp());
ANS(($ans2)->cmp());
ANS(($ans3)->cmp());
ANS(($ans4)->cmp());

