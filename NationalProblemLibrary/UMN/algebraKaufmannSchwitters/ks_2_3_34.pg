DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"contextCurrency.pl"
);

########################################################################

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(1.55,3.55, .10);
$a = random(40,80,5);

Context("Currency");
Context()->flags->set(trimTrailingZeros=>2);

$b1 = Currency("$b");

$ans = $b1*(1+0.01*$a);

########################################################################

Context()->texStrings;
BEGIN_TEXT
The owner of a pizza parlor wants to make a profit of \($a \)% of the cost for each pizza sold.  If it costs \( $b1 \) to make a pizza, at what price should each pizza be sold? 
$BR$BR
Total Cost of Pizza: \{ans_rule(20)\}
$BR 
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $ans->cmp(promoteReals=>1));

