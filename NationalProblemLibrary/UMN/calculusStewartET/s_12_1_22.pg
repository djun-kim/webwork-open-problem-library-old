#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());

#####################################################################

Context("Numeric");
Context()->variables->add(y=>'Real',z=>'Real');

$a = random(3,5,1);
$b = random(2,3,1);
$c = random(5,8,1);

$r2 = Compute("($b)^2");

$ans = Compute("(x-$a)^2+(y-$b)^2+(z-$c)^2 -$r2");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find an equation of the largest sphere with center \(($a,$b,$c)\) and is contained in the first octant. $BR
Equation: \{ans_rule(30)\} \( = 0\)
END_TEXT

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.