DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(2,8,1);

$a2 = Compute("$a^2");

$x = Compute("(1/12)*($a2)^4");
$y = Compute("($a2)^5/60");

$Area = Compute("($a2)^3/6");

$ans1 = Compute("$x/$Area");
$ans2 = Compute("$y/$Area");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Sketch the region bounded by the curves \(y = $a2 x - x^2\) and \(y=0\).  Find the coordinates of the centroid.
$PAR
Answer: \(\overline{x} = \) \{ans_rule(10) \} and \(\overline{y} = \) \{ans_rule(10) \}
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans1->cmp(tolType=>'absolute',tolerance=>.1) );
ANS( $ans2->cmp(tolType=>'absolute',tolerance=>.1) );

ENDDOCUMENT();        # This should be the last executable line in the problem.
