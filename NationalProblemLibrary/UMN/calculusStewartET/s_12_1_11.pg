#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());

#####################################################################

Context("Numeric");
Context()->variables->add(y=>'Real', z=>'Real');

$a = random(-2,2,1);
$b = random(-1,1,1);
$c = random(-6,2,1);
$r = random(3,5,1);

$r2 = Compute("$r^2");
$s = Compute("$r2-($b)^2");

$ans1 = Compute("(x-$a)^2+(y-$b)^2+(z-$c)^2-$r2");
$ans2 = Compute("(x-$a)^2+(z-$c)^2-$s");


#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find an equation of the sphere with center \(($a,$b,$c)\) and radius \($r.\) $BR
Equation: \{ans_rule(30)\} \( =0 \)$PAR
What is the intersection of this sphere with the \(xz\)-plane?$BR
Equation: \{ans_rule(30)\} \( =0 \)
END_TEXT

#####################################################################

ANS(($ans1)->cmp());
ANS(($ans2)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.