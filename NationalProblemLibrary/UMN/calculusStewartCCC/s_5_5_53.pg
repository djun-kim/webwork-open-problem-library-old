#####################################################################

Context("Numeric");
Context()->variables->are(z=>"Real");

$a = random(2,6,1);
$b = random(1,4,1);

$ans = Compute("ln(e^($b)+$a*$b)");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate the definite integral
\[
\int_0^{$b} \! \frac{e^z+$a}{e^z+$a z}  \, dz.
\]

Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

