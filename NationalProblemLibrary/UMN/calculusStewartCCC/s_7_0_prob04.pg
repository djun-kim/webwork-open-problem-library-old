  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl", 
);
#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

#####################################################################

Context("Numeric");
Context()->variables->add(y=>"Real");

$a = random(2,6,1);

$b = Compute("$a^2+1");

$ans = Compute("sqrt((x-1)*e^x+$b)");

#####################################################################
BEGIN_TEXT
Find the solution of the differential equation \(\displaystyle 2yy'=xe^x\) that satisfies the initial condition \(y(0) = $a.\)
$PAR
Answer: \(y(x) = \) \{ans_rule(30)\}
END_TEXT

#####################################################################

ANS($ans->cmp());

