#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);

#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

#####################################################################

Context("Numeric");

$a = random(2,8,2);
$b = random(1,9,2);

$c = Compute("$b-$a");

$ans = Compute("e^(-x)[$a*cos(x)+$b*sin(x)]");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Solve the initial-value problem \(\displaystyle y'' + 2 y' + 2 y = 0, \; y(0) = $a, \; y'(0) = $c.\)
$PAR
Answer:  \(y(x) = \) \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

ENDDOCUMENT();        # This should be the last executable line in the problem.