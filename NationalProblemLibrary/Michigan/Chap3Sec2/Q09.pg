DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = random(1,15,1);
$p = random(2,8,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\(\displaystyle y = $a^x+\frac{$b}{x^$p} \).

$PAR
answer = \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "ln($a)*$a^x - $b*$p*x^(-1*$p-1)" )->cmp() );

$bp = $b*$p;
$p1 = $p + 1;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that \( \frac{$b}{x^$p} = $b\cdot x^{-$p} \), so

\[ {dy\over dx} = \ln($a) $a^x - $bp x^{-$p1} \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
