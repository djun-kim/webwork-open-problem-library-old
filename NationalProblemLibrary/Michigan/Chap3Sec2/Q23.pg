DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( f(t)=e^{t+$a} \)

$PAR
answer = \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "e^(t+$a)" )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that \( e^{t+$a} = e^t e^$a \).  Since \( e^$a \) is just a
constant, 

\[ f'(t) = e^{$a} e^t = e^{t+$a}. \]
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
