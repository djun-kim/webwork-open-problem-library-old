DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$pow = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
\( f(x)=$a e^x+x^{$pow} \).

$PAR
\( f'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "$a*e^x + $pow*x^($pow-1)" )->cmp() );

$p1 = $pow - 1;
$xp = ( $p1 == 1 ) ? "$pow x" : "$pow x^{$p1}";

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x) = $a e^x + $xp \]
END_SOLUTION
Context()->normalStrings;



ENDDOCUMENT();
