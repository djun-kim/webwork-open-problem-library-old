DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->flags->set( limits=>[0.01,5] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@alph = (qw( a b c d k m n p q ) );
$a = $alph[ random(0,scalar(@alph)-1,1) ];

Context()->constants->add( $a=>4.15 );
# this means that student answers are
#    not reduced to the numerical value
#    specified in the Context
Context()->flags->set( formatStudentAnswer=>'parsed' );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function
\( y(x) = $a^x + x^$a \).
Assume that \( $a \) is a constant.

$PAR
\( y'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "($a^x)*ln($a) + $a*x^($a-1)" )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ y'(x) = ($a^x) \ln($a) + $a x^{$a - 1} \]
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
