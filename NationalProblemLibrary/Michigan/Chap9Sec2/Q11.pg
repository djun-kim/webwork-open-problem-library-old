DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = list_random(2,3,5,10);
$x = random(2,5,1);
$r = random(3,7,1);

# pick a couple of series to work with 
# $ser[i] = [ "TeXseries", "sum", "sum_TeX" ]
@ser = ( 
    [ "$a - " . ($a*$x) . " + " . ($a*($x**2)) . " - " . ($a*($x**3)) . 
    " + " . ($a*($x**4)) . " - \cdots", "$a/(1+$x)", "{$a\over 1+$x}" ],
    [ "1 + $a x + " . ($a*$a) . " x^2 + " . ($a**3) . " x^3 + " .
    ($a**4) . " x^4 + \cdots", "1/(1-$a*x)", "{1\over 1 - $a x}" ],
    [ "$a + " . ($a*$a) . " x + " . ($a**3) . " x^2 + " . ($a**4) . 
    " x^3 + " .($a**5) . " x^4 + \cdots", "$a/(1 - $a*x)", 
    "{$a\over 1 - $a x}" ],
    [ "$a x^$r + $a x^{" . ($r+1) . "} + $a x^{" . ($r+2) . "} + $a x^{" .
    ($r+3) . "} + \cdots", "$a*(x^($r))/(1 - x)", 
    "{$a x^{$r}\over 1 - x}" ], 
);

$which = random(0,scalar(@ser)-1,1);

BEGIN_TEXT

Find the sum:$BR
\( $ser[$which]->[0] = \) 
\{ ans_rule(35) \}

END_TEXT

ANS( fun_cmp( $ser[$which]->[1] ) );

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

The sum is 
\[ $ser[$which]->[0] = $ser[$which]->[2]. \]

END_SOLUTION

ENDDOCUMENT();
