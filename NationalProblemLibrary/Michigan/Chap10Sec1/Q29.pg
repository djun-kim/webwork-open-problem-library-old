DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl",
# "parserNumberWithUnits.pl",
# "parserFormulaWithUnits.pl", 
# "parserFormulaUpToConstant.pl",
# "PGcourse.pl",
);

Context("Numeric");
Context()->flags->set(reduceConstants=>0);
$showPartialCorrectAnswers = 1;

$whichF = random(1,3,1);
$whichOrd = random(0,3,1);

if ( $whichF == 1 ) {
    $func = Compute("cos(x)");
    $p = Compute("1 - (1/2)x^2 + (1/24)x^4");

    if ( $whichOrd ) {
	$numer = Compute("1 - cos(x)");
	$pnum  = Compute("1 - (1 - (1/2)x^2 + (1/24)x^4)");
	$denom = Compute("x^2");
	$limit = Compute("1/2");
    } else {
	$numer = Compute("1 - x^2/2 - cos(x)");
	$pnum  = Compute("1 - x^2/2 - (1 - (1/2)x^2 + (1/24)x^4)");
	$denom = Compute("x^4");
	$limit = Formula("-1/24");
    }
} elsif ( $whichF == 2 ) {
    $func = Compute("sin(x)");
    $p = Compute("x - (1/6)x^3 + (1/120)x^5");

    if ( $whichOrd ) {
	$numer = Compute("sin(x)");
	$pnum  = Compute("x - (1/6)x^3 + (1/120)x^5");
	$denom = Compute("x");
	$limit = Compute("1");
    } else {
	$numer = Compute("x - sin(x)");
	$pnum  = Compute("x - (x - (1/6)x^3 + (1/120)x^5)");
	$denom = Compute("x^3");
	$limit = Formula("1/6");
    }
} else {
    $func = Compute("e^x");
    $p = Compute("1 + x + (1/2) x^2 + (1/6) x^3 + (1/24) x^4 + (1/120) x^5");

    if ( $whichOrd ) {
	$numer = Compute("e^x - 1");
	$pnum  = Compute("(1 + x + (1/2) x^2 + (1/6) x^3 + (1/24) x^4 + " .
			 "(1/120) x^5) - 1");
	$denom = Compute("x");
	$limit = Compute("1");
    } else {
	$numer = Compute("e^x - 1 - x");
	$pnum  = Compute("(1 + x + (1/2) x^2 + (1/6) x^3 + (1/24) x^4 + " .
			 "(1/120) x^5) - 1 - x");
	$denom = Compute("x^2");
	$limit = Compute("1/2");
    }
}

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

Find the fifth order Taylor polynomial for \( $func \) near 0.
$BR
\( P_5(x) = \) \{ ans_rule(55) \}

$PAR
Use this to find the limit
$BR
\( \lim\limits_{x\to 0} \frac{$numer}{$denom} = \) \{ ans_rule(25) \}

END_TEXT
Context()->normalStrings;

ANS( $p->cmp() );
ANS( $limit->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

The fifth order Taylor polynomial is
\[ P_5(x) = $p, \]
so that the limit is
\[ \lim_{x\to 0} \frac{$numer}{$denom} \approx
   \lim_{x\to 0} \frac{$pnum}{$denom} = $limit. \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
