## HHChapter1('Differentiating Functions of Several Variables')
## HHSection1('Local Linearity and the Differential')

Context("Numeric");
Context()->variables->add( y=>'Real', 'dx'=>'Real', 'dy'=>'Real' );
$showPartialCorrectAnswers = 1;

$v1 = list_random('x', 'y');
$v2 = ( $v1 eq 'x' ) ? 'y' : 'x';
$f2 = list_random('cos', 'sin');

$whichf = list_random(0,1);
if ( $whichf ) {
    $f = Compute( "e^{$v1}*$f2($v2)" );
} else {
    $f = Compute( "e^{-$v1}*$f2($v2)" );
}

$fx = $f->D('x');
$fy = $f->D('y');
$df = Compute( "($fx)*dx + ($fy)*dy" );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Find the differential of the function
\( z = $f \).

$PAR
\( dz = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS( $df->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Since \( z_x = $fx \) and \( z_y = $fy\),
we have
\[ dz = $df. \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
