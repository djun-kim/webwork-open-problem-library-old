# DESCRIPTION
# Problem from Calculus, single variable, Hughes-Hallett et al., 4th ed.
# WeBWorK problem written by Aaron Wooton, <wootton@up.edu>
# ENDDESCRIPTION

DOCUMENT();
loadMacros(
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);
          
TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$graph = init_graph(-1,-1,9,10,'axes'=>[0,0],'grid'=>[10,11]);

@colors = ("blue", "red", "green"); #orange, yellow,
@scrambled_colors = @colors;
@labels = ('A', 'B', 'C');
@scrambled_labels = @labels;

$a=random(0, 2, .5);  
$b=random(1, 8, .5);
$c=random(4, 8, .1);
$d=random(6, 8, .5);
$e=non_zero_random(0, 4, .5);
$ab=$b+$a;


$f = FEQ(
       "$a + abs( $b *sin($c *x) ) for x in <$e,$d> using color:$scrambled_colors[0] and weight:2"
);

($fRef) = plot_functions( $graph,
                                       $f
                                       );

$graph->gifName($graph->gifName()."-$newProblemSeed");

BEGIN_TEXT
\{ image(insertGraph($graph),'tex_size'=>500) \} 
$PAR
Give the domain and range (to the nearest half integer) of the 
illustrated function. 
$PAR

Domain: [\{ans_rule( 2) \} ,  \{ans_rule( 2) \} ] $BR

Range: [ \{ans_rule( 2) \} , \{ans_rule( 2) \} ]

END_TEXT
&ANS(std_num_cmp($e));
&ANS(std_num_cmp($d));
&ANS(std_num_cmp($a));
&ANS(std_num_cmp($b + $a));

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Since the function goes from \( $e \) to \( $d \) , and between 
\( $a \) and \( $ab \), the domain is \([$e ,$d]\) and the range is 
\([$a ,$ab]\).

END_SOLUTION





ENDDOCUMENT();



