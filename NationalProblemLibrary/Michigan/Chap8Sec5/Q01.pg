TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

# make this problem like the next one
SRAND($psvn);

$k = random(2,9,1);
$x0 = random(1,3,1);
$x1 = $x0 + 1;

# include javascript for pop-up explaining units
HEADER_TEXT(<<EOF);
<script language="javascript" type="text/javascript">
