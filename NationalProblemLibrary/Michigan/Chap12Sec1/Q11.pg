## Textbook tags
## HHChapter1('Functions of Several Variables')
## HHSection1('Functions of Two Variables')

Context("ImplicitEquation");
Context()->variables->add( z=>'Real' );
Context()->{error}{msg}{"Can't find any solutions to your equation"} = "";

$showPartialCorrectAnswers = 1;

$r = random(2,8,1);
$rsq = $r*$r;
$xp = random(1,8,1);
$yp = random(1,8,1);
$zp = random(1,8,1);

Context()->variables->set(
  x=>{limits=>[-10,10]},
  y=>{limits=>[-10,10]},
  z=>{limits=>[-10,10]}
);

$sphere = ImplicitEquation("(x - $xp)^2 + (y - $yp)^2 + (z - $zp)^2 = $rsq",
			   solutions => [ [$xp+$r,$yp,$zp], [$xp-$r,$yp,$zp],
					  [$xp,$yp+$r,$zp], [$xp,$yp-$r,$zp],
					  [$xp,$yp,$zp+$r], [$xp,$yp,$zp-$r]]);

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Find the equation of the sphere of radius $r centered at
\( ($xp, $yp, $zp) \).
$PAR
This sphere is given by:
\{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS( $sphere->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

The equation is \( $sphere \).

END_SOLUTION
Context()->normalStrings;

COMMENT('Uses MathObjects');

ENDDOCUMENT();
