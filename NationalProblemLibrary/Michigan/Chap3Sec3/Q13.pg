DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);
$b = random(1,9,1);
$b = "e" if ( $b == 1 );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( y \), below.  It may be to your
advantage to simplify  first.
$BR
\(\displaystyle y=\frac{t+$a}{$b^t} \)

$PAR
\( {dy\over dt} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "(($b^t) - (t+$a)*ln($b)*$b^t)/($b^(2*t))" )->cmp() );

$lb = ( $b eq 'e' ) ? '' : "\ln($b)";

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dy\over dt} = \frac{($b^t) - (t+$a) $lb $b^t}{$b^{2t}}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
