DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,17,2);
$b = $a + 1;

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( y=x^{$a/$b} \).

$PAR
\( {dy\over dx} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS( Compute( "($a/$b)*x^(($a/$b) - 1)" )->cmp() );

$p1 = "-1/$b";
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dy\over dx} = \frac{$a}{$b}\cdot x^{($a/$b) - 1} = 
  \frac{$a}{$b}\cdot x^{$p1} \]
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
