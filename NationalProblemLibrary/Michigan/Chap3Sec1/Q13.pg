DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->variables->add(z=>'Real');
Context()->flags->set( limits=> [0.1,2] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pow = random(2.1,15.9,0.1);
$pow += 0.1 if ( $pow == int($pow) );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\[ f(z)=-\frac1{z^{$pow}}. \]

$PAR
\( f'(z) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS( Compute( "$pow*z^(-1*($pow+1))" )->cmp() );

$p1 = $pow + 1;
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( f(z) = -\frac{1}{z^{$pow}} = -z^{-$pow} \), so

\[ f'(z) = $pow z^{-$pow - 1} = $pow z^{-$p1} \].

END_SOLUTION
Context()->normalStrings;
ENDDOCUMENT();
