DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$b = random(2,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( h(t)=\frac{$a}t + \frac{$b}{t^2} \).

$PAR
\( h'(t) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS( Compute( "-$a*t^(-2) - 2*$b*t^(-3)" )->cmp() );

$twob = 2*$b;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that \( h(t) = $a t^{-1} + $b t^{-2} \), so
\[ h'(t) = -$a t^{-2} - $twob t^{-3}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
