DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( t=>'Real' );
Context()->flags->set( limits=>[0.1,10] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$whichtrig = random(0,2,1);
if ( $whichtrig == 0 ) {
    $h = '\cos';
    $ans = '-1*sin(ln(t))/t';
    $soln = "\frac{-\sin(\ln(t))}{t}";
} elsif ( $whichtrig == 1 ) {
    $h = '\sin';
    $ans = 'cos(ln(t))/t';
    $soln = "\frac{\cos(\ln(t))}{t}";
} elsif ( $whichtrig == 2 ) {
    $h = '\tan';
    $ans = '1/(t*(cos(ln(t))^2))';
    $soln = "\frac{1}{t \cos^2(\ln(t))}";
}


Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( g(t) \), below.  It may be to
your advantage to simplify before differentiating.  
$BR
\( g(t) = $h(\ln(t)) \)

$PAR
\( g'(t) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( $ans )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( g'(t) = $soln \)

END_SOLUTION
Context()->normalStrings;


ENDDOCUMENT();
