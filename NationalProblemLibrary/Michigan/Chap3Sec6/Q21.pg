DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( w=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$newr = $psvn+1;
SRAND($newr);

$whichtrig = random(0,1,1);
$a = random(2,9,1);

if ( $whichtrig ) {
    $g = '\arcsin';
    $ans = "$a*arcsin(w) + $a*w/sqrt(1 - w^2)";
    $soln = "$a \arcsin(w) + \frac{$a w}{\sqrt{1 - w^2}}";
} else {
    $g = '\arctan';
    $ans = "$a*arctan(w) + $a*w/(1 + w^2)";
    $soln = "$a \arctan(w) + \frac{$a w}{1 + w^2}";
}
Context()->flags->set( limits=>[-0.95, 0.95] );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( h(w) \), below.  It may be to
your advantage to simplify before differentiating.  
$BR
\( h(w) = $a w $g w \)

$PAR
\( h'(w) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( $ans )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( h'(w) = $soln \)

END_SOLUTION
Context()->normalStrings;



COMMENT('MathObject version');
ENDDOCUMENT();
