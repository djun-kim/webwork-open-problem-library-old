DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( a=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

# make this problem and the following use the same seed
SRAND($psvn);
$whichtrig = random(0,1,1);
$r = random(2,9,1);
$a = random(2,9,1);

if ( $whichtrig ) {
    $g = '\arctan';
    $h = '\tan';
} else {
    $g = '\arcsin';
    $h = '\sin';
}

Context()->flags->set( limits=>[-1/$a,1/$a] );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( g(a) \), below.  It may be to
your advantage to simplify before differentiating.  
$BR
\( g(a) = $h($g($a a)) \)

$PAR
\( g'(a) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( $a )->cmp(showTypeWarnings=>0) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that \( $g($h($a a)) = $a a \), so 
\( g'(a) = $a \).

END_SOLUTION
Context()->normalStrings;


ENDDOCUMENT();
