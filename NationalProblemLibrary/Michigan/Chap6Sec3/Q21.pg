);

Context("Numeric");
Context()->variables->add( t=>'Real' );
Context()->flags->set( reduceConstants => 0 );
$showPartialCorrectAnswers = 1;

# include javascript for pop-up explaining units
HEADER_TEXT(<<EOF);
<script language="javascript" type="text/javascript">
