DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( q=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

# make this problem have the same seed as #19
SRAND($psvn);
@func = ( '\cos', '\sin', '\tan' );
$i = random(0,(scalar(@func)-1),1);
$j = random(0,(scalar(@func)-1),1);

# $j-- if ( $i==2 && $j==2 );  # don't give tan(tan(q)) ?

$f = $func[$i];
$fe = $f;  $fe =~ s/~~~~//;
$g = $func[$j];
$ge = $g;  $ge =~ s/~~~~//;

$function = "$f($g q)";

$ans = '';
if ( $i == 0 ) {
    $ans = "-1*sin($ge(q))*";
    $sol = "-\sin($g(q))";
} elsif ( $i == 1 ) {
    $ans = "cos($ge(q))*";
    $sol = "\cos($g(q))";
} else {
    $ans = "(1/(cos($ge(q)))^2)*";
    $sol = "\frac{1}{\cos^2($g(q))}";
}
if ( $j == 0 ) {
   $ans .= "(-1)*(sin(q))";
   $sol .= "(-\sin(q))";
} elsif ( $j == 1 ) {
   $ans .= "(cos(q))";
   $sol .= "(\cos(q))";
} elsif ( $j == 2 ) {
   $ans .= "(1/(cos(q))^2)";
   $sol .= "\left(\frac{1}{\cos^2(q)}\right)";
}

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( g(q)=$function \)

$PAR
\( g'(q) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( $ans )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ g'(q) = $sol \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
