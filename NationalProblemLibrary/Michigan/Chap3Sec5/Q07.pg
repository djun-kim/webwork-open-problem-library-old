DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(10,30,2);
$b = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\(  R(x) = $a - $b \cos(\pi x)  \)

$PAR
\( R'(x) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "$b*pi*sin(pi*x)" )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ R'(x) = -$b (-\sin(\pi x))\cdot \pi = $b\pi \sin(\pi x) \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
