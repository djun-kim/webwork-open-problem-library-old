DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);
 
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);

BEGIN_TEXT

Find the derivative of 

\( y = \cos^{$r}w + \cos(w^{$r}) \)

$PAR
\( {dy\over dw} = \) \{ ans_rule(65) \}

END_TEXT


ANS( fun_cmp( "$r*cos(w)^($r-1)*(-1*sin(w)) - $r*w^($r-1)*sin(w^($r))",
	      'var' => ['w'] ) );

$r1 = $r-1;
if ( $r1 == 1 ) {
    $cr1 = '\cos(w)';
    $wr1 = 'w';
} else {
    $cr1 = "\cos^{$r1}(w)";
    $wr1 = "w^{$r1}";
}

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( {dy\over dw} = $r $cr1 (-\sin(w)) - $r $wr1 \sin(w^{$r}) \)
$BR
\( \phantom{dy\over dw} = -$r $cr1 \sin(w) - $r $wr1 \sin(w^{$r}) \).

END_SOLUTION

ENDDOCUMENT();
