DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);
 
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(1,19,1);

BEGIN_TEXT

Find the derivative of 
\( s(q) = $a \cos q \sin q \).

$PAR
\( s'(q) = \) \{ ans_rule(65) \}

END_TEXT


ANS( fun_cmp( "$a*(-1*sin(q)*sin(q) + cos(q)*cos(q))", 'var'=>['q'] ) );

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( s'(q) = $a (-\sin(q) \sin(q) + \cos(q) \cos(q)) \)
$BR
\( \phantom{s'(q)} = $a (-\sin^2(q) + \cos^2(q)). \)

END_SOLUTION

ENDDOCUMENT();
