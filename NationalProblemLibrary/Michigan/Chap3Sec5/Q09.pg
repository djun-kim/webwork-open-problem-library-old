DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);
 
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);

BEGIN_TEXT

Find the derivative of 
\( f(x)=x^{$r}\cos x \)

$PAR
\( f'(x) = \) \{ ans_rule(65) \}

END_TEXT


ANS( fun_cmp( "$r*x^($r-1)*cos(x) - x^($r)*sin(x)" ) );

$xr1 = ( $r == 2 ) ? 'x' : 'x^{' . ($r-1) . '}';

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Using the product rule,

\[ f'(x) = $r $xr1 \cos(x) - x^{$r} \sin(x) \]

END_SOLUTION

ENDDOCUMENT();
