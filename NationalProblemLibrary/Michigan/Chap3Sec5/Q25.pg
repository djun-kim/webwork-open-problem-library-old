DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);
 
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$r = random(2,15,1);

BEGIN_TEXT

Find the derivative of 
\( y = \sin^{$r}(t) \)

$PAR
\( {dy\over dt} = \) \{ ans_rule(65) \}

END_TEXT


ANS( fun_cmp( "$r*sin(t)^($r-1)*cos(t)", 'var'=>['t'] ) );

$sr = ($r==2) ? '\sin' : '\sin^{' . ($r-1) . '}';

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dy\over dt} = $r $sr(t) \cos(t) \]

END_SOLUTION

ENDDOCUMENT();
