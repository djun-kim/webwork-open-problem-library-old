DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( y = \sin^{$r}(t) \)

$PAR
\( {dy\over dt} = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "$r*sin(t)^($r-1)*cos(t)" )->cmp() );

$sr = ($r==2) ? '\sin' : '\sin^{' . ($r-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dy\over dt} = $r $sr(t) \cos(t) \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
