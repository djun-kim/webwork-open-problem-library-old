DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( a=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);
$p = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 

\( k(a) = \sin^{$r}a \cos^{$p}a \)

$PAR
\( k'(a) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "$r*(sin(a)^($r-1))*cos(a)^($p+1) - " .
              "$p*(sin(a)^($r+1))*cos(a)^($p-1)" )->cmp() );

$sr1 = ($r == 2) ? '\sin(a)' : '\sin^{' . ($r-1) . '}(a)';
$cp1 = ($p == 2) ? '\cos(a)' : '\cos^{' . ($p-1) . '}(a)';
$r1 = $r+1;
$p1 = $p+1;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ k'(a) = $r $sr1 \cos^{$p1}(a) - $p \sin^{$r1}(a) $cp1 \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
