DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);
 
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = random(2,9,1);

BEGIN_TEXT

Find the derivative of 
\( f(x)=$a x\sin($b x) \)

$PAR
\( f'(x) = \) \{ ans_rule(65) \}

END_TEXT


ANS( fun_cmp( "$a*sin($b*x) + $a*$b*x*cos($b*x)" ) );

$ab = $a*$b;

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x) = $a \sin($b x) + $ab x \cos($b x) \]

END_SOLUTION

ENDDOCUMENT();
