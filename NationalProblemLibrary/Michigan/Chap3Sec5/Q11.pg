DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);
 
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

@const = ( '\pi', '(\sqrt{2})', 'e', '(\ln(3))', '4.15', '(\sin(1))' );
@conste = ( 'pi', 'sqrt(2)', 'e', 'ln(3)', '4.15', 'sin(1)' );
$i = random(0,scalar(@const)-1,1);
$c = $const[ $i ];
$ce = $conste[ $i ];

BEGIN_TEXT

Find the derivative of 
\( f(x)=$c^{\cos x} \)

$PAR
\( f'(x) = \) \{ ans_rule(65) \}

END_TEXT


ANS( fun_cmp( "ln($ce)*(-1*sin(x))*($ce)^(cos(x))" ) );

$lnc = ( $c eq 'e' ) ? '' : "\ln($c)";
$lnc =~ s/~~(~~(/~~(/;
$lnc =~ s/~~)~~)/~~)/;

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( f'(x) = $lnc (-1 \sin(x)) $c^{\cos(x)} \)
$BR
\( \phantom{f'(x)} = -$lnc \sin(x) $c^{\cos(x)}. \)

END_SOLUTION

ENDDOCUMENT();
