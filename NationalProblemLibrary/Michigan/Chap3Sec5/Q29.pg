DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@func = ( '\cos', '\sin', '\tan' );
@derivs = ( '-1*sin(t)', 'cos(t)', '(1/(cos(t))^2)' );
@derivsf = ( '-\sin(t)', '\cos(t)', '\frac{1}{\cos^2(t)}' );
$i = random(0,(scalar(@func)-1),1);
$j = ($i + random(1,2))%3;            # just make $j something different

$function = "t $func[$i] t + $func[$j] t";
$ans = "$func[$i](t) + t*($derivs[$i]) + $derivs[$j]";
$ans =~ s/~~~~//;
$sol = "$func[$i](t) + t ($derivsf[$i]) + $derivsf[$j]";
$sol =~ s/~~+ -/- /g;
$sol .= "$func[$i](t) - t \sin(t) " . ($j==0)?'- \sin(t)':'+ \cos(t)'
    if ( $i == 0 );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( h(t) = $function \)

$PAR
\( h'(t) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( $ans )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ h'(t) = $sol \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
