DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(2,5,1);
$b = random(1,9,1);
$r = random(2,5,1);

# a list of sequences and their behaviors
@seq = (
    [ "\( $a^n \)",     "diverges" ],
    [ "\( $b + e^{-$a n} \)",   $b ],
    [ "\( {$a\over n} + {n\over $a} \)",    "diverges" ], 
    [ "\( {$a n + $b\over n} \)",       $a ],
    [ "\( {\sin n\over $a n} \)",       0 ],
    [ "\( {$a^n\over n^$r} \)", "diverges" ],
    [ "\( {n^$r\over $a^n} \)", 0 ],
    [ "\( {\sin(n)\over \cos(n) + 2} \)",   "diverges" ],
);

# verbs for the solution
@verbs = ();
foreach ( @seq ) {
    push( @verbs, ($_->[1] eq 'diverges' ? '' : 'converges to') );
}

# choose four
@which = NchooseK( scalar(@seq), 4 );

BEGIN_TEXT

For each of the sequences below, enter either ${BBOLD}diverges$EBOLD
if the sequence diverges, or the limit of the sequence if the sequence
converges as \(n\to\infty\).

$PAR
${BBOLD}A.$EBOLD
$seq[$which[0]]->[0] : \{ ans_rule(15) \}

$PAR
${BBOLD}B.$EBOLD
$seq[$which[1]]->[0] : \{ ans_rule(15) \}

$PAR
${BBOLD}C.$EBOLD
$seq[$which[2]]->[0] : \{ ans_rule(15) \}

$PAR
${BBOLD}D.$EBOLD
$seq[$which[3]]->[0] : \{ ans_rule(15) \}


END_TEXT

ANS( num_cmp( [ $seq[$which[0]]->[1], $seq[$which[1]]->[1],
        $seq[$which[2]]->[1], $seq[$which[3]]->[1] ], 
          'strings'=>['diverges'] )  );

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

${BBOLD}A.$EBOLD
$seq[$which[0]]->[0] $verbs[$which[0]] $seq[$which[0]]->[1].

$PAR
${BBOLD}B.$EBOLD
$seq[$which[1]]->[0] $verbs[$which[1]] $seq[$which[1]]->[1].

$PAR
${BBOLD}C.$EBOLD
$seq[$which[2]]->[0] $verbs[$which[2]] $seq[$which[2]]->[1].

$PAR
${BBOLD}D.$EBOLD
$seq[$which[3]]->[0] $verbs[$which[3]] $seq[$which[3]]->[1].

END_SOLUTION

ENDDOCUMENT();
