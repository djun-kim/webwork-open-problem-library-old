DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl",
"hhAdditionalMacros.pl",
"parserFormulaUpToConstant.pl",
);

$showPartialCorrectAnswers = 1;
Context("Numeric");
Context()->flags->set(reduceConstants=>0);

$a = random(2,5,1);
$b = random(2,5,1);
$b += non_zero_random(-1,1) if ( $a == $b );
$apb = $a + $b;
$ab = $a*$b;

$dfdx = Compute("1/(x^2 + $apb x + $ab)");
$f = FormulaUpToConstant("(1/($b - $a))(ln(|x + $a|) - ln(|x + $b|)) + C");

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

Antidifferentiate using the
table of integrals. You may need to transform the integrand
first. $BR
\( \displaystyle\int $dfdx\,dx = \)
\{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;

ANS( $f->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ \int $dfdx\,dx = \int \frac1{(x-(-$a))(x-(-$b))}\,dx = $f. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
