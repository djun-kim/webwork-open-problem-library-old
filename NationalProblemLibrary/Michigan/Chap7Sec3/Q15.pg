DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl",
"hhAdditionalMacros.pl",
"parserFormulaUpToConstant.pl",
);

$showPartialCorrectAnswers = 1;
Context("Numeric");
Context()->flags->set(reduceConstants=>0);
Context()->variables->set(x=>{limits=>[0,1]});

$r = random(2,4,1);
$r = 3;
$a = random(2,8,1);

$asq = $a*$a;
$acu = $asq*$a;
$aqu = $acu*$a;
$afi = $aqu*$a;

$dfdx = Compute("x^$r e^($a x)");
$f = FormulaUpToConstant("(1/$a) x^3 e^($a x) - (3/$asq) x^2 e^($a x) + " .
	                 "(6/$acu) x e^($a x) - (6/$aqu) e^($a x) + C");

Context("Numeric");

TEXT(beginproblem());
Context()->texStrings;
Context()->texStrings;
BEGIN_TEXT

Antidifferentiate using the
table of integrals. You may need to transform the integrand
first. 
$BR
\( \displaystyle\int $dfdx\,dx =\)
\{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;
Context()->normalStrings;

ANS( $f->cmp() );

Context()->texStrings;
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ \displaystyle\int $dfdx\,dx = $f. \]

END_SOLUTION
Context()->normalStrings;
Context()->normalStrings;

ENDDOCUMENT();
