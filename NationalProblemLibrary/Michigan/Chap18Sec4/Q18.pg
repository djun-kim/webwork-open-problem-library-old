);

Context("Numeric");
Context()->variables->add( y=>'Real' );
Context()->constants->add( a=>0.17, b=>2.28, m=>12.88 );
Context()->flags->set( formatStudentAnswer=>'parsed' );

$showPartialCorrectAnswers = 1;

$a = random(2,8,1);
$b = random(2,8,1);
$c = random(2,8,1);
$d = random(2,8,1); $d++ if ( $d == $a );

$ans = Compute( "($d-$a)*pi*m^2" );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT


Calculate
\( \int_C (($a x + $b y)\,\vec i + ($c x + $d y)\,\vec j)\cdot d\vec r \)
where \( C \) is the circular path with center \( (a, b) \) and radius
\( m \), oriented counterclockwise. Use Green's Theorem.

$PAR
\( \int_C (($a x + $b y)\,\vec i + ($c x + $d y)\,\vec j)\cdot d\vec r = \)
\{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS($ans->cmp() );

$dma = $d - $a;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Green's theorem gives
\[ \int_C ((($a x+$b y)\,\vec i + ($c x + $d y)\,\vec j )\cdot d\vec r =
 \int\!\!\!\int_R \left(-\frac{\partial}{\partial y}($c x+$d y) +
   \frac{\partial}{\partial x}($a x+$b y)\right)  dA
\]
\[
 = \int\int_R $dma dA= $dma \cdot\hbox{Area of }R = $dma\pi m^2.
\]


END_SOLUTION
Context()->normalStrings;

COMMENT('Uses MathObjects');

