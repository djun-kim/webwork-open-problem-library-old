DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->set(x => {limits=>[0.01,5]});

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(2,7,1);
$r = random(3,9,2);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\( w=\sqrt{(x^2 \cdot $b^x)^$r} \)

$PAR
\( {dw\over dx} = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "($r/2)*(x^2*$b^x)^(($r-2)/2)*(2*x*$b^x + x^2*ln($b)*$b^x)" )->cmp() );

$r2 = $r-2;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that \( w=\sqrt{(x^2 \cdot $b^x)^$r} = (x^2 \cdot $b^x)^{$r/2}. \)
Thus

\[ \frac{dw}{dx} = 
\frac{$r}{2} (x^2 $b^x)^{$r2/2}\cdot (2 x\cdot $b^x + x^2 \ln($b) $b^x) \]

END_SOLUTION
Context()->normalStrings;

COMMENT('Uses MathObjects');

