DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->flags->set( limits=>[0,0.5],
		       tolerance=>0.00001 );


TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,9,1);
$r = $a - 1;

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 \( f(x)=$a e^{$r x}+e^{-x^2} \)


$PAR
\( f'(x) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "$r*$a*e^($r*x) - 2*x*e^(-1*x^2)" )->cmp() );

$ra = $r*$a; 

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x) = $ra e^{$r x} - 2 x e^{-x^2}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
