DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( y=>'Real' );
Context()->flags->set( limits=>[-1.5,1.5] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,7,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
$BR
\( f(y)=e^{e^{(y^$r)}} \)

$PAR
\( f'(y) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "$r*y^($r-1)*e^(y^$r)*e^(e^(y^$r))" )->cmp() );

$yr1 = ( $r == 2 ) ? 'y' : 'y^{' . ($r-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(y) = $r $yr1 e^{y^$r} e^{e^{y^$r}} \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
