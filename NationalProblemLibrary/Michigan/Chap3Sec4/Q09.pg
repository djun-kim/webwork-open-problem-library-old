DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( r=>'Real' );
Context()->flags->set( limits=>[0.01,5] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$p = random(2,9,1);
$a = random(1,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\(  w(r) = \sqrt{r^{$p} + $a}  \)

$PAR
\( {dw\over dr} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "$p*(r^($p-1))*(1/2)*(1/sqrt(r^($p)+$a))" )->cmp() );

$rp1 = ( $p==2 ) ? 'r' : 'r^{' . ($p-1) . '}';
$p2 = ( $p/2 == int($p/2) ) ? $p/2 : "\frac{$p}{2}";
$p2 = '' if ( $p2 eq '1' );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ \frac{dw}{dr} = ($p $rp1) (1/2) (r^$p+$a))^{-1/2} = 
  $p2 $rp1 (r^$p+$a))^{-1/2}  \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
