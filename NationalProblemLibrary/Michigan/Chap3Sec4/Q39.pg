DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$r = random(2,5,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\( w=(t^$r + $a t)(1 - e^{-$r t}) \)

$PAR
\( {dw\over dt} = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "($r*t^($r-1) + $a)*(1 - e^(-1*$r*t)) + " .
              "(t^($r) + $a*t)*($r*e^(-1*$r*t))" )->cmp() );

$tr1 = ( $r==2 ) ? 't' : 't^{' . ($r-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ \frac{dw}{dt} = 
($r $tr1 + $a) (1 - e^{-$r t}) + 
(t^$r + $a t) ($r e^{-$r t}) \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
