DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);
$r = random(50,200,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\( f(x)=(x+$a)^{$r} \)

$PAR
\( f'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$r*(x+$a)^($r-1)" )->cmp() );

$r1 = $r - 1;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x) = $r (x+$a)^{$r1} (1) \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
