DOCUMENT();
loadMacros(
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGchoicemacros.pl",
           "PGauxiliaryFunctions.pl",
	   "MathObjects.pl",
           );

TEXT();
$showPartialCorrectAnswers = 1;

Context('Numeric');
Context()->variables->are( v=>'Real',  w=>'Real',  x=>'Real');
Context()->variables->set( v=>{limits=>[-5,5]}, w=>{limits=>[-5,5]}, x=>{limits=>[-2,2]});

# Context()->flags->set( limits=>[[-5,5],[-5,5],[-2,2]] );

$ans = "v*e^x*cos(e^x + w)";

$tut = htmlLink("http://instruct.math.lsa.umich.edu/cgi-bin/tutorial/" .
		"gwderivtut?pnum=742","rule for constant multiples","");

Context()->texStrings;
BEGIN_TEXT
Differentiate \(y(x) = v \sin(e^x + w)\), where \(v\) and \(w\) are constants
$BR
Answer: \( y'(x) = \) \{ans_rule(55)\}
END_TEXT
Context()->normalStrings;

# ANS(fun_cmp($ans, 'var'=>['v', 'w', 'x']));
ANS( Compute("$ans")->cmp() );

$bsbox = MODES('TeX' => '\par{\bf Solution outline:} ',
	       'Latex2HTML' => '\par{\bf Solution outline:} ',
	       'HTML' => '<div class="gwSoln"><b>Solution outline:</b>');
$esbox = MODES('TeX' => '\par',
	       'Latex2HTML' => '\par',
	       'HTML' => '</div>');
SOLUTION($bsbox,"The solution to this problem is obtained with the ", $tut,
	 ".", $esbox);

ENDDOCUMENT();
