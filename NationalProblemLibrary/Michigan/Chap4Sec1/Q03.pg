## DBsubject('Calculus')
## DBchapter('Differentiation')
## DBsection('Concavity and Points of Inflection')
## Date('')
## Author('Gavin LaRose')
## Institution('University of Michigan')
## TitleText1('Calculus')
## EditionText1('4')
## AuthorText1('Hughes-Hallett')
## Section1('4.1')
