loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
##    problem setup:

$a = random(2,9,1);

$ans = "$a(n+1)/2" ;

BEGIN_TEXT
Express the following in closed form: 
\(\sum\limits_{k=1}^{n} \ $a \left( \displaystyle\frac{k}{n}\right) \).
$BR
\(\sum\limits_{k=1}^{n} \ $a \left( \displaystyle\frac{k}{n}\right) \) = \{ans_rule(30)\}
$BR
(${BBOLD}Note:$EBOLD Your answer should be in terms of \(n\).)
END_TEXT

##########################
$showPartialCorrectAnswers = 1;
ANS(fun_cmp($ans, vars=>"n"));
##############################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
