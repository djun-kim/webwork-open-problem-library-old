##############################################
##    problem setup:

$a = random(3,5,1);
$b = random(2,4,1);

$ans = "${a}n(n+1)/2 - ${b}n" ;

BEGIN_TEXT
Express the following in closed form: \(\sum\limits_{k=1}^{n} \ (${a}k - $b) \).
$BR
\(\sum\limits_{k=1}^{n} \ (${a}k-$b) \) = \{ans_rule(30)\}
$BR
(${BBOLD}Note:$EBOLD Your answer should be in terms of \(n\).)
END_TEXT

##########################
$showPartialCorrectAnswers = 1;
ANS(fun_cmp($ans, vars=>"n"));



