## Author('K. Lesh')
## Institution('Union')
## TitleText1('Calculus')
## EditionText1('7')
## AuthorText1('Anton')
## Section1('6.4')
## Problem1('14')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem);

###################################
# Setup

$a = random(2,6,1);
$b = random(2,4,1);
$summand="\left($a + $b \cdot\displaystyle\frac{k}{n} \right)^{2}";

###################################
# Main text

BEGIN_TEXT
Express the following sum in closed form.
$PAR
\(\displaystyle \sum\limits_{k=1}^{n} \ $summand \) = \{ans_rule(50)\}
$PAR
${BBOLD}Hint:$EBOLD Start by multiplying out \($summand\).
$PAR
${BBOLD}Note:$EBOLD Your answer should be in terms of \(n\).
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 1;

Context()->variables->are(n=>'Real');
$c0 = $a**2;
$c1 = "2*$a*$b/n";
$c2 = "$b**2/n^2";
$ans = "${c0}n + $c1 n(n+1)/2 + $c2 n(n+1)(2n+1)/6";
ANS(Formula($ans)->cmp);

###################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
