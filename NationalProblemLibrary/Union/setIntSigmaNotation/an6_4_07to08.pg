DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
##    problem setup (a)
$aa = random(80,130,5);
$ansa = $aa*($aa+1)/2;

##############################################
##    problem setup (b)

$ab = random(80,130,5);
$bb = random(5,25,1);
$ansb = $ab*$bb;

##############################################
##    problem setup (c)

$ac = random(80,130,5);
$bc = random(2,5,1);
$cc = random(6,8,1);
$ansc = $cc*$ac*($ac+1)/2 + $ac*$bc;

BEGIN_TEXT
(a) Find the numerical value of 
\( \sum\limits_{k=1}^{$aa} \ k \).
$BR
\( \sum\limits_{k=1}^{$aa} \ k \) = \{ans_rule(15)\}
$PAR
(b) Find the numerical value of 
\( \sum\limits_{k=1}^{$ab} \ $bb \).
$BR
\( \sum\limits_{k=1}^{$ab} \ $bb \) = \{ans_rule(15)\}
$PAR
(c) Find the numerical value of 
\( \sum\limits_{k=1}^{$ac} \ (${cc}k + $bc) \).
$BR
\( \sum\limits_{k=1}^{$ac} \ (${cc}k + $bc) \) = \{ans_rule(15)\}
END_TEXT

##########################
$showPartialCorrectAnswers = 1;
ANS(num_cmp(
  $ansa,                     #  the correct answer
#  limits => [-2,-1],       #  range of x's to use
#  relTol => .1,            # .1 percent, (i.e., .001)
));

ANS(num_cmp(
  $ansb,                     #  the correct answer
#  limits => [-2,-1],       #  range of x's to use
#  relTol => .1,            # .1 percent, (i.e., .001)
));

ANS(num_cmp(
  $ansc,                     #  the correct answer
#  limits => [-2,-1],       #  range of x's to use
#  relTol => .1,            # .1 percent, (i.e., .001)
));
##############################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
