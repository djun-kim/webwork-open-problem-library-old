DOCUMENT();

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$denom=0;
while ($denom == 0 ) {
$x1 = non_zero_random(-4,4,1);
$y1 = non_zero_random(-4,4,1);
$a=   non_zero_random(-4,4,1);
$b=   non_zero_random(-4,4,1);
$c=   non_zero_random(-4,4,1);
$d = $a*$x1**2 + $b*$x1*$y1 + $c*$y1**3;
$num = 2*$a*$x1 + $b*$y1;
$denom = $b*$x1 + 3*$c*$y1**2;
}
$yp = - $num/$denom;

# Present the text.
BEGIN_TEXT
For the equation given below, evaluate \(\displaystyle\frac{dy}{dx}\) 
at the point \(($x1,$y1)\):
\[ $a x^2 + $b xy + $c y^3 = !{$d}   \]
$PAR
\(\displaystyle\frac{dy}{dx}\) at \(($x1,$y1)\) = \{ans_rule(20) \}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(num_cmp($yp));

END_PROBLEM(); 
ENDDOCUMENT();        # This should be the last executable line in the problem.
