);

TEXT(beginproblem());
BEGIN_PROBLEM();

$x0 = random(-2,2,1);
$y0 = non_zero_random(-2,2,1);
$a = random(2,6,1);
$c = random(2,4,1);
$b = $a*$x0**2 - $c*$y0**2;

BEGIN_TEXT
For the equation given below, evaluate \(\displaystyle\frac{dy}{dx}\) 
at the point \(($x0,$y0)\):
\[
    $c y^2 - $a x^2 ? {$b} = 0.
\]
$PAR
\(\displaystyle\frac{dy}{dx}\) at \(($x0,$y0)\) = \{ans_rule(20) \}
END_TEXT

$showPartialCorrectAnswers = 1;
$ans = $a*$x0/($c*$y0);
ANS(num_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();

