);

TEXT(beginproblem());
BEGIN_PROBLEM();

$x0 = non_zero_random(-2,2,1);
$y0 = non_zero_random(-2,2,1);
$a = random(2,6,1);
$b = random(2,4,1);
$c = ($a+$y0)**3 + $b*$y0 - $x0;

BEGIN_TEXT
For the equation given below, evaluate \(\displaystyle\frac{dy}{dx}\) 
at the point \(($x0,$y0)\):
\[
    ($a + y)^3 + $b y = x ? {$c}.
\]
$PAR
\(\displaystyle\frac{dy}{dx}\) at \(($x0,$y0)\) = \{ans_rule(20) \}
END_TEXT

$showPartialCorrectAnswers = 1;
$ans = 1/(3*($a+$y0)**2 + $b);
ANS(num_cmp($ans));

END_PROBLEM();
