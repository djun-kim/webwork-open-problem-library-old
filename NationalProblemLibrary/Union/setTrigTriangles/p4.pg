BEGIN_PROBLEM();

#
# Now we do the randomization of variables, and other computations
# as needed for this problem.  Sometimes we compute the answers here.
#

$c = random(4,9);
$pi=4*atan(1);
$angC=random(95,120,5);  #angle C in degrees
$dC=$angC*$pi/180;  #angle C in radians
$angB=random(25,55,5);  #angle A in degrees
$dB=$angB*$pi/180;  #angle A in radians

#ANSWERS
$angA = 180-$angB-$angC;
$dA=$angA*$pi/180;
$ans1=$angA;
$a=$c*sin($dA)/sin($dC);
$ans2 = $a;
$b=$c*sin($dB)/sin($dC);
$ans3 = $b;

$al = new_aligned_list(ans_rule_len=>20, tex_spacing=>"3pt");
$al->qa(
  "\(\angle A\) (in degrees)", num_cmp($ans1),
  "\(a\)", num_cmp($ans2),
  "\(b\)", num_cmp($ans3),
);

BEGIN_TEXT
