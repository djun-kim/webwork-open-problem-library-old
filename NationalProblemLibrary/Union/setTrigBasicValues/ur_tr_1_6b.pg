DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",        # Union College utilities
   "Parser.pl",         # the new parser
   "alignedChoice.pl",  # for aligned answer blanks
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

###################################
#
#  The formulas to use (allow trig functions here)
#

$n1 = random(-7,11,3);

Context("Numeric");

$f1 = Formula("sin($n1*pi/3)");
$f2 = Formula("cos($n1*pi/3)");
$f3 = Formula("tan($n1*pi/3)");
$f4 = Formula("sec($n1*pi/3)");

###################################
#
#  For the answers, don't allow functions other than sqrt()
#

Parser::Context::Functions::Disable('All'); #  disable all functions
Parser::Context::Functions::Enable('sqrt'); # re-enable the sqrt function

$showPartialCorrectAnswers = 1;

###########################################
#
#  Make the alignment
#
Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, tex_spacing=>"3pt");
$al->qa(
  "\($f1\)", Real($f1->eval)->cmp,
  "\($f2\)", Real($f2->eval)->cmp,
  "\($f3\)", Real($f3->eval)->cmp,
  "\($f4\)", Real($f4->eval)->cmp,
);
Context()->normalStrings;

BEGIN_TEXT 
Evaluate the following expressions.
$BR 
(Your answer cannot contain trig functions; it must be an arithmetic
expression or number.)  
$PAR 
\{$al->print_q\} 
END_TEXT

ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.


