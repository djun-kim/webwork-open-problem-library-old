##DESCRIPTION
##KEYWORDS('trigonomety')
##  Find trig functions of special angles
##ENDDESCRIPTION

# Edited by K. Lesh, 9/10/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "alignedChoice.pl",  # for aligned answer blanks
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$showPartialCorrectAnswers = 1;

$a = random(2,4,1);
$b = random($a+1,8,1);
$q = random(2,4,1);
$pi = 4*atan(1);

if ($q == 2) {
	$s = -1;
	$theta = $pi - arctan($b/$a);
	$inequality = '>';
	};
if ($q == 3) {
	$s = 1;
	$theta = $pi + arctan($b/$a);
	$inequality = '<';
	};
if ($q == 4) {
	$s = -1;
	$theta = 2*$pi - arctan($b/$a);
	$inequality = '<';
	};
if ($s == 1) {$sign = ' '};
if ($s == -1) {$sign = '-'};

$ans1 = sin($theta);
$ans2 = cos($theta);
$ans3 = 1/$ans2;
$ans4 = 1/$ans1;
$ans5 = $s*$a/$b;

$al = new_aligned_list(ans_rule_len=>10, tex_spacing=>"3pt");
$al->qa(
  "\(\sin(\theta)\)", num_cmp($ans1),
  "\(\cos(\theta)\)", num_cmp($ans2),
  "\(\sec(\theta)\)", num_cmp($ans3),
  "\(\csc(\theta)\)", num_cmp($ans4),
  "\(\cot(\theta)\)", num_cmp($ans5),
);

BEGIN_TEXT 
If \(\tan(\theta) = $sign\frac{$b}{$a}\), and 
\(\sin(\theta) $inequality 0\), then evaluate the following. 
$PAR 
\{$al->print_q\} 
END_TEXT

ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

