## DESCRIPTION
##   Convert from Radians to Degrees
## ENDDESCRIPTION

## KEYWORDS('Trig', 'Degree', 'Radian')
## Tagged by nhamblet

## DBsubject('Trigonometry')
## DBchapter('Trigonometric Functions of Angles')
## DBsection('Angle Measure')
## Date('9/9/04')
## Author('K. Lesh')
## Institution('Union')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",        # Union College utilities
   "Parser.pl",         # the new parser
   "alignedChoice.pl",  # for aligned answer blanks
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a1 = random(1,5,1);
$b1 = random(1,5,1);
while ($b1 == 4){$b1 = random(1,5,1);}
$c1 = random(1,5,1);
while ($c1 == 3){$c1 = random(1,5,1);}
$d1 = random(1,7,2);
$e1 = random(1,5,1);

###################################
#
#  The formulas to use 
#

Context("Numeric");

$f1 = Formula("$a1*pi/6")->reduce;
$f2 = Formula("$b1*pi/4")->reduce;
$f3 = Formula("$c1*pi/3")->reduce;
$f4 = Formula("$d1*pi/2")->reduce;
$f5 = Formula("$e1*pi")->reduce;

# Compute the answers
$ans1 = 30*$a1;
$ans2 = 45*$b1;
$ans3 = 60*$c1;
$ans4 = 90*$d1;
$ans5 = 180*$e1;

###########################################
#
#  Make the alignment
#
Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, tex_spacing=>"3pt");
$al->qa(
  ["\($f1\)"," degrees"], Real($ans1)->cmp, 
  ["\($f2\)"," degrees"], Real($ans2)->cmp,
  ["\($f3\)"," degrees"], Real($ans3)->cmp,
  ["\($f4\)"," degrees"], Real($ans4)->cmp,
  ["\($f5\)"," degrees"], Real($ans5)->cmp,
);

Context()->normalStrings;


BEGIN_TEXT
For each of the following angles, find the degree measure of the
angle with the given radian measure:
$PAR
\{$al->print_q\}
END_TEXT

ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.;

