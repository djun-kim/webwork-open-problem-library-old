DOCUMENT();        # This should be the first executable line in the problem.


loadMacros(
   "PGstandard.pl",
   "PGunion.pl",        # Union College utilities
   "Parser.pl",         # the new parser
   "alignedChoice.pl",  # for aligned answer blanks
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a1 = random(-400,400,20);
$b1 = random(-400,400,15);
$c1 = random(-400,400,10);
$d1 = random(-400,400,5);
$e1 = random(-400,400,10);
$pi = 3.1416;

$ans1 = $a1*$pi/180;
$ans2 = $b1*$pi/180;
$ans3 = $c1*$pi/180;
$ans4 = $d1*$pi/180;
$ans5 = $e1*$pi/180;

###########################################
#
#  Make the alignment
#
Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, tex_spacing=>"3pt");
$al->qa(
  ["\($a1^{\circ}\)"," radians"], Real($ans1)->cmp, 
  ["\($b1^{\circ}\)"," radians"], Real($ans2)->cmp,
  ["\($c1^{\circ}\)"," radians"], Real($ans3)->cmp,
  ["\($d1^{\circ}\)"," radians"], Real($ans4)->cmp,
  ["\($e1^{\circ}\)"," radians"], Real($ans5)->cmp,
);

Context()->normalStrings;

BEGIN_TEXT
For each of the following angles, find the radian measure of the
angle with the given degree measure:
$PAR
\{$al->print_q\}
END_TEXT

ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

