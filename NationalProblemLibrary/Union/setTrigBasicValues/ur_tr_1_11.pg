DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(5,7,1);
$b = random($a+1,12,1);
$q = random(2,4,1);
$pi = 3.1416;

if ($q == 2) {
	$s = -1;
	$theta = $pi - arccos($a/$b);
	$quad = 'II';
	};
if ($q == 3) {
	$s = -1;
	$theta = $pi + arccos($a/$b);
	$quad = 'III';
	};
if ($q == 4) {
	$s = 1;
	$theta = 2*$pi - arccos($a/$b);
	$quad = 'IV';
	};
if ($s == 1) {$sign = ' '};
if ($s == -1) {$sign = '-'};

BEGIN_TEXT
If \( \cos( \theta ) = $sign \frac {$a} {$b} \)
and \( \theta \) is in quadrant $quad , then find
$PAR
(a)  \( \tan( \theta ) \cot( \theta ) = \) \{ ans_rule(15) \}
$BR
(b)  \( \csc( \theta ) \tan( \theta ) = \) \{ ans_rule(15) \}
$BR
(c)  \( \sin ^2 ( \theta ) + \cos ^2 ( \theta ) = \) \{ ans_rule(15) \}
END_TEXT

$showPartialCorrectAnswers = 1;

$ans_a = 1;
$ans_b = $s*$b/$a;
$ans_c = 1;

# record the answers
ANS(num_cmp([$ans_a,$ans_b,$ans_c], relTol=>.1));
END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.


