##DESCRIPTION
##KEYWORDS('trigonomety')
##  Reduce angles
##ENDDESCRIPTION

# Edited by K. Lesh, 9/11/04

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",        # Union College utilities
   "Parser.pl",         # the new parser
   "alignedChoice.pl",  # for aligned answer blanks
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a_numer = random(11,19,2);
while ($a_numer == 15) { $a_numer = random(11,19,2); }
$a_denom = 5;

$b1 = random(2,3,1);
$b2 = random(1,5,1);
while ($b2 == 3) { $b2 = random(1,5,1); }
$b_numer = $b2 - 6 * $b1;
$b_denom = 3;

$c1 = random(11,19,1);
$c2 = random(1,3,2);
$c_numer = 4 * $c1 + $c2;
$c_denom = 2;

$d_denom = random(7,11,2);
$d1 = random(1,3,2);
$d_numer = 2 * $d_denom - $d1;

###################################
#
#  The formulas to use 
#

Context("Numeric");

$f1 = Formula("$a_numer*pi/$a_denom")->reduce;
$f2 = Formula("$b_numer*pi/$b_denom")->reduce;
$f3 = Formula("$c_numer*pi/$c_denom")->reduce;
$f4 = Formula("$d_numer*pi/$d_denom")->reduce;

############################################
#Compute the answers
$ans_a = $PI*($a_numer - 2*$a_denom)/$a_denom;
$ans_b = $PI * $b2 / 3;
$ans_c = $PI * $c2 / 2;
$ans_d = $PI * $d_numer / $d_denom;

$showPartialCorrectAnswers = 1;

###########################################
#
#  Make the alignment
#
Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, tex_spacing=>"3pt", equals=> 0);
$al->qa(
  "\($f1\)", Real($ans_a)->cmp,
  "\($f2\)", Real($ans_b)->cmp,
  "\($f3\)", Real($ans_c)->cmp,
  "\($f4\)", Real($ans_d)->cmp,
);
Context()->normalStrings;


BEGIN_TEXT
Find an angle between \(0\) and \(2\pi\) that is coterminal with the 
given angle.
$PAR
\{$al->print_q\}
END_TEXT

ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

