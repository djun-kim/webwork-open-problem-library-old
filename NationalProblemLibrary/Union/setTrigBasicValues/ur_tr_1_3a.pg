## DESCRIPTION
##   Calculate Values of Cosine
## ENDDESCRIPTION

## KEYWORDS('Trig', 'Cosine', 'Cosin')
## Tagged by nhamblet

## DBsubject('Trigonometry')
## DBchapter('Trigonometric Functions of Angles')
## DBsection('Trigonometric Functions of Angles')
## Date('9/10/04')
## Author('K. Lesh')
## Institution('Union')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",        # Union College utilities
   "Parser.pl",         # the new parser
   "alignedChoice.pl",  # for aligned answer blanks
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

###################################
#
#  The formulas to use (allow trig functions here)
#

Context("Numeric");

$f1 = Formula("cos(pi/6)");
$f2 = Formula("cos(pi/4)");
$f3 = Formula("cos(pi/3)");
$f4 = Formula("cos(pi/2)");
$f5 = Formula("cos(pi)");
$f6 = Formula("cos(2pi)");

###################################
#
#  For the answers, don't allow functions other than sqrt()
#

Parser::Context::Functions::Disable('All'); #  disable all functions
Parser::Context::Functions::Enable('sqrt'); # re-enable the sqrt function

$showPartialCorrectAnswers = 1;

###########################################
#
#  Make the alignment
#
Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, tex_spacing=>"3pt");
$al->qa(
  "\($f1\)", Real($f1->eval)->cmp,
  "\($f2\)", Real($f2->eval)->cmp,
  "\($f3\)", Real($f3->eval)->cmp,
  "\($f4\)", Real($f4->eval)->cmp,
  "\($f5\)", Real($f5->eval)->cmp,
  "\($f6\)", Real($f6->eval)->cmp,
);
Context()->normalStrings;

BEGIN_TEXT 
Find the cosine of each of the following angles.  
$BR 
(Your answer cannot contain trig functions; 
it must be an arithmetic expression or number.)
$PAR
\{$al->print_q\}
END_TEXT

ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

