##DESCRIPTION
##KEYWORDS('integrals', 'improper')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGunion.pl",
  "PGcourse.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

######################################################################
# Setup

$a = random(2,9,1);

######################################################################
# Main text

$quad = HTML('&nbsp;&nbsp;','\quad');

BEGIN_TEXT

Determine whether the integral is divergent or convergent.
If it is convergent, evaluate it. If not, state your answer as "divergent".
$PAR
$BCENTER
\(\displaystyle \int_{0}^{\infty} $a e^{-x}\,dx\)
$quad is $quad \{ans_rule(30)\}.
$ECENTER

END_TEXT

######################################################################
# Answers

ANS(num_cmp($a, strings=>['divergent']));
$showPartialCorrectAnswers = 1;

######################################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
