   "PGunion.pl",        # Union College utilities
   "unionAnswer.pl",    # Load answer-checker appropriate to the problem
   "PGcourse.pl",       # Customization file for the course
   "alignedChoice.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a1 = random(2,5,1);
$b1 = random(2,3,1);
$c1 = random(2,7,1);
$d1 = random(2,6,1);
$n1 = random(3,7,1);
$x1 = random(4,5,1);
$y1 = $a1*$x1+$b1* $x1**.5;
$m1 = $a1+(.5)*$b1*$x1**(-.5);
$b = $y1 -$m1*$x1;

$al = new_aligned_list(ans_rule_len=>20, tex_spacing=>"3pt");
$al->qa(
  "\( m \)", num_cmp($m1),
  "\( b \)", num_cmp($b1),
);

BEGIN_TEXT
(a) If \( f(x) = $a1 x + $b1 \sqrt{ x} \), find \( f'( $x1 ) \).
$BR 
\(f'($x1)\) = \{ans_rule(20) \}
$PAR
(b) Use this to find the equation of the tangent line to the curve
$BR 
\( y =    $a1 x + $b1 \sqrt{ x} \)
at the point \( ( $x1 , !{$y1:%.5f} ) \).
$BR
The equation of this tangent line can be written in the form \( y = mx+b \)
where:
\{$al->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(num_cmp($m1));
ANS($al->correct_ans);

END_PROBLEM();
