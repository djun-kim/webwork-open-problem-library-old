   "JJ_ans-eval.pl",    # Load answer-checker appropriate to the problem
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a1 = random(5,7,1);
$b1 = random(2,4,1);
$c1 = 3*($a1-$b1);
$d1 = 6*$a1*$b1;
$e1 = random(4,24,1);

$ans1 = -$a1;
$ans2 = $b1;

BEGIN_TEXT
Find the \(x\)-coordinates of all points where the
graph of \( f(x) = 2x^3 + $c1 x^2 - $d1 x + $e1 \) has
a horizontal tangent line. 
$PAR
$BBOLD Hint:$EBOLD
What is the slope of a horizontal line?
$PAR
$BBOLD Note:$EBOLD
If there is more that one \(x\), give the answer as a list separated by commas
(e.g.:  1,2).
If there are no such \(x\), enter $BITALIC none. $EITALIC
$PAR
\(x \) = \{ans_rule(20) \}
END_TEXT

$showPartialCorrectAnswers = 1;

ANS(number_list_cmp("$ans1,$ans2", strings=>['none']));
#ANS(std_num_cmp($ans1));
#ANS(std_num_cmp($ans2));

END_PROBLEM();
