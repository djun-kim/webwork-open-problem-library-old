DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "parserParametricLine.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("ParametricLine");

#
#  The points line p + tv
#
$p = non_zero_point3D();
$v = non_zero_vector3D();
$L = Line($p,$v);

#
#  The other point and line
#
$Q = non_zero_point3D(); while ($Q == $p) {$Q = non_zero_point3D()}

$L2 = ParametricLine($Q,$v);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Give a vector parametric equation for the line 
through the point \($Q\) that is parallel
to the line \($L\):
$BCENTER
$PAR
\(L(t)\) = \{ans_rule(40)\}.
$ECENTER

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($L2->cmp);
$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
