DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "parserParametricLine.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("ParametricLine");

#
#  The points line p + tv
#
$p = non_zero_point2D();
$v = non_zero_vector2D();
$L = Line($p,$v);


#
#  The other point
#
$Q = non_zero_point2D(); while ($Q == $p) {$Q = non_zero_point2D()}

#
#  The perpendicular line through Q
#
($a,$b) = $v->value;
$L2 = ParametricLine($Q,Vector(-$b,$a));

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Give a vector parametric equation for the line 
through the point \($Q\) that is perpendicular
to the line \($L\):
$BCENTER
$PAR
\(L(t)\) = \{ans_rule(40)\}.
$ECENTER

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($L2->cmp);
$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
