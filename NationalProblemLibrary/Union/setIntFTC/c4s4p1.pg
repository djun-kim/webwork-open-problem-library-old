#DESCRIPTION
#KEYWORDS('integrals', 'fundamental theorem of calculus')
# Integrals - Fundamental theorem of calculus
#ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGunion.pl",
  "alignedChoice.pl",
  "PGcourse.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

#######################################################
# Setup

$a = random(-1,1,2);
$x= $a1*$x1;
$b = random(3,8,1);
$c = random(-1,5,1);

$al = new_aligned_list(ans_rule_len => 30);

$al->qa(
  "\(f'(x)\)",  fun_cmp("x^$b"),
  "\(f'($x)\)", num_cmp($x**$b),
);

#######################################################
# Main text

BEGIN_TEXT

If \(\displaystyle f(x) = \int_{$c}^x t^$b\,dt\), then
$PAR

\{$al->print_q\}

END_TEXT

#######################################################
# Answers

ANS($al->correct_ans);

$showPartialCorrectAnswers = 1;

#######################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
