DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
##    problem setup:

$a = -1;    # left endpoint of the interval of integration
$b = 1 ;      # right endpoint of the interval of integration
$c = non_zero_random(2,5,1);      

# The integrand (string form)
$f = "\frac{$c}{x^2+1}";

# and the antiderivative of f(x):
sub F {my $x = shift;
  return $c*atan($x);
}

$ans = F($b) - F($a);      # the value of the definite integral

BEGIN_TEXT
Use the Fundamental Theorem of Calculus to evaluate 
\[ \displaystyle\int_{$a}^{\,$b} $f \;dx.\] 
$PAR
\( \displaystyle\int_{$a}^{\,$b} $f \;dx\) = \{ans_rule(45)\}
END_TEXT

$showPartialCorrectAnswers = 1;
##########################
ANS(num_cmp(
  $ans,                     #  the correct answer
#  relTol => .1,            # .1 percent, (i.e., .001)
));
##############################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
