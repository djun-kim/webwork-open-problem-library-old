DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");

#
#  The function
#
$n = random(2,5,1);
$m = random(2,4,1);

$f = Formula("(x^$n y^$m)/($n*$m)");

#
#  The point
#
($x,$y) = (non_zero_random(-5,5,1),non_zero_random(-5,5,1));

#
#  The direction vector
#
$U = non_zero_vector2D(-2,2);

#
#  The derivatives
#
$fx = Formula("(x^($n-1) y^$m)/$m");
$fy = Formula("(x^$n y^($m-1))/$n");

$gradf = Vector($fx,$fy);
$Duf = $gradf->eval(x=>$x,y=>$y) . unit($U);

##############################################
#  Main text

$u = BoldMath('u');

Context()->texStrings;
BEGIN_TEXT

Let \(f(x,y) = $DISPLAY$f\).
Then \($GRAD\!f\) = \{ans_rule(30)\}, and
\(D_{$u} f($x,$y)\) in the direction of the vector \($U\) is
\{ans_rule(30)\}.

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(
  $gradf->cmp,
  $Duf->cmp,
);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
