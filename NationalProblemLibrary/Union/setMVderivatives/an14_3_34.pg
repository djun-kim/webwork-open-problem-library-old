DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");

#
#  The function
#
$a = random(2,6,1);
$b = random(2,6,1);

$f = Formula("(x^2 - $a y^2)/(y^2 + $b z^2)");

#
#  The derivatives
#
$fx = Formula("2x/(y^2 + $b z^2)");
$fy = Formula("-2y(x^2 + $a*$b z^2)/(y^2 + $b z^2)^2");
$fz = Formula("-2*$b z(x^2 - $a y^2)/(y^2 + $b z^2)^2");

##############################################

$al = new_aligned_list(
  ans_rule_len => 40,
  tex_spacing => "3pt",
  row_spacing => 5,
);

$al->qa(
  "\(f_x(x,y,z)\)",  $fx->cmp,
  "\(f_y(x,y,z)\)",  $fy->cmp,
  "\(f_z(x,y,z)\)",  $fz->cmp,
);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Let \(f(x,y,z) = $DISPLAY $f\).  Then
$PAR

\{$al->print_q\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($al->correct_ans);
$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
