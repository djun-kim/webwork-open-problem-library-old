);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,5,1);
$aa = $a**2;
$a3 = $a**3;
$antiderv = "(1/$a)x^2 e^($a x)-(2/$aa)x e^($a x) + (2/$a3)e^($a x)";

BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int x^2 e^{$a x} \,dx \) 
             = \{ans_rule(60)\} \( + C\). 
END_TEXT

ANS(fun_cmp($antiderv, mode=>"antider", vars=>"x", limits=>[0,1]));

END_PROBLEM();
ENDDOCUMENT();
