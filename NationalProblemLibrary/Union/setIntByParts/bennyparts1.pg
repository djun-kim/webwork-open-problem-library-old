TEXT(beginproblem());
BEGIN_PROBLEM();

$a=random(2, 7);
$b=random(2, 7);

$d = $a**2 + $b**2;

$antiderv = "-$b/$d(e^(${a}x)*cos(${b}x))+$a/$d(e^(${a}x)sin(${b}x))";

BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \int e^{${a}x} \sin(${b}x)\;dx \) = \{ans_rule(60)\}
END_TEXT

ANS(fun_cmp($antiderv, mode=>"antider", vars=>"x", limits=>[0,1]));

END_PROBLEM();
