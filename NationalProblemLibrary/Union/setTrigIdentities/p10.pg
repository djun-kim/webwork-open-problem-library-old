DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGchoicemacros.pl",
  "PGunion.pl",
  "PGcourse.pl",
  "choiceUtils.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$ml = new_match_list();
$ml->rf_print_q(~~&alt_print_q);
$ml->{separation} = 3;

$ml->qa(
"\(\tan(x)\)"     , "\( \displaystyle\frac{\sin (x)}{\cos (x)} \)",
"\(  1    \)"     , "\( \sin^2 (x) +\cos^2 (x)  \)",
"\(\cot(x)\)"	  , "\( \displaystyle \frac{\cos (x)}{\sin(x)} \)",
"\(\sec^2 (x)\)"  , "\( \tan^2 (x) + 1 \)",
"\(1-\cos^2 (x)\)", "\( \sin^2 (x) \)"
);

$ml->choose(5);

##################################################

BEGIN_TEXT
For each trigonometric expression A,B,C,D, E, choose the expression
from  1,2,3,4,5 that completes a fundamental identity.
Enter the appropriate letter (A,B,C,D, or E) in each blank.
$PAR
\{ColumnMatchTable($ml,indent => 30)\}
END_TEXT

ANS(str_cmp($ml->ra_correct_ans));
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.