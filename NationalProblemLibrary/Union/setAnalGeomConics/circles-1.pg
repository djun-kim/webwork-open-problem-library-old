TEXT(beginproblem());

BEGIN_PROBLEM();

# First problem
#define right hand side

# determine the endpoints of the diameter
$a = random(-10,0);
$b = random (-10,10);
$c = random (0,10);
$d = random (-10,10);

#calculate the center of the circle
$h = ($a+$c)/2;
$k = ($b+$d)/2;

#calculate the radius
$radiussquared = (($a-$c)**2+($b-$d)**2)/4;

#Second problem
$h1 = non_zero_random(-6,6,1);
$k1 = non_zero_random(-6,6,1);


BEGIN_TEXT
\{BeginList("OL",type=>"a")\}
$ITEM
Find the equation of the circle whose diameter
has endpoints ($a, $b) and ($c, $d). Write it in the form
\[(x-h)^2 + (y-k)^2 = r^2\]
and identify \(h\), \(k\), and \(r\).
$PAR
\(h =\) \{ans_rule(30)\}
$BR
\(k =\) \{ans_rule(30)\}
$BR
\(r =\)\{ans_rule(30)\}
$ITEMSEP
$ITEM
Find the equation of the circle with center at
\(($h1,$k1)\) that is tangent to the y-axis. Write it in the form
\[(x-h)^2 + (y-k)^2 = r^2\]
and identify \(h\), \(k\), and \(r\).
$PAR
\(h =\) \{ans_rule(30)\}
$BR
\(k =\) \{ans_rule(30)\}
$BR
\(r =\)\{ans_rule(30)\}
\{EndList()\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(Real($h)->cmp);
ANS(Real($k)->cmp);
ANS(Real(sqrt("$radiussquared"))->cmp);

ANS(Real($h1)->cmp);
ANS(Real($k1)->cmp);
ANS(Real("abs($h1)")->cmp);

END_PROBLEM();
ENDDOCUMENT();





