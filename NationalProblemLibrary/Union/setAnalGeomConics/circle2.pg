TEXT(beginproblem());

BEGIN_PROBLEM();
#define right hand side

# determine the endpoints of the diameter
$a = random(-10,0);
$b = random (-10,10);
$c = random (0,10);
$d = random (-10,10);
 

#calculate the center of the circle
$h = ($a+$c)/2;
$k = ($b+$d)/2;

#calculate the radius
$radiussquared = (($a-$c)**2+($b-$d)**2)/4;

BEGIN_TEXT
Find the equation of the circle whose diameter
has endpoints ($a, $b) and ($c, $d). Write it in the form
\[(x-h)^2 + (y-k)^2 = r^2\]
and identify \(h\), \(k\), and \(r\).
$PAR
\(h =\) \{ans_rule(30)\}
$BR
\(k =\) \{ans_rule(30)\}
$BR
\(r =\)\{ans_rule(30)\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(num_cmp($h));
ANS(num_cmp($k));
ANS(num_cmp(sqrt("$radiussquared")));


END_PROBLEM();
ENDDOCUMENT();





