);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,9,2);
$b = random(2,9,2);

BEGIN_TEXT
Let \(f(x) = $a x^2 - $b x^4\).
END_TEXT
includePGfile("Increasing-Decreasing-text.pg");

$showPartialCorrectAnswers = 1;

ANS(interval_cmp("(-infinity,-sqrt($a/(2*$b)))U(0,sqrt($a/(2*$b)))", strings=>['none']));
ANS(interval_cmp("(-sqrt($a/(2*$b)),0)U(sqrt($a/(2*$b)),infinity)", strings=>['none']) );
ANS(number_list_cmp("-sqrt($a/(2*$b)),sqrt($a/(2*$b))", strings=>['none']));
ANS(number_list_cmp("0", strings=>['none']));

END_PROBLEM();
