#DESCRIPTION
# intervals of increasing and decreasing
# first derivative
#ENDDESCRIPTION

## K. Lesh, Union College. Edited 9/27/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "Interval_ans-eval.pl",  # Load answer-checker
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,9,2);
$b = random(2,9,2);

BEGIN_TEXT
Let \( f(x) = $a x + \displaystyle\frac{$b}{x} \)
END_TEXT
includePGfile("Increasing-Decreasing-text.pg");

$showPartialCorrectAnswers = 1;

ANS(interval_cmp("(-infinity,-sqrt($b/$a))U(sqrt($b/$a),infinity)", strings=>['none']));
ANS(interval_cmp("(-sqrt($b/$a),0)U(0,sqrt($b/$a))", strings=>['none']) );
ANS(number_list_cmp("-sqrt($b/$a)", strings=>['none']));
ANS(number_list_cmp("sqrt($b/$a)", strings=>['none']));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

