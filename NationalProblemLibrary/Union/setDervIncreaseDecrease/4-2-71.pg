DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "extraAnswerEvaluators.pl",  # Load answer-checker
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,9,2);
$b = random(2,9,2);

BEGIN_TEXT
Let \( f(x) = $a\sqrt{x} - $b x\) for \( x > 0\).
END_TEXT
includePGfile("Increasing-Decreasing-text.pg");

$showPartialCorrectAnswers = 1;

$val = (0.5*$a/$b)**2;
ANS(interval_cmp("(0,$val)", strings=>['none']));
ANS(interval_cmp("($val,infinity)", strings=>['none']) );
ANS(number_list_cmp("$val", strings=>['none']));
ANS(number_list_cmp("none", strings=>['none']));

END_PROBLEM();
