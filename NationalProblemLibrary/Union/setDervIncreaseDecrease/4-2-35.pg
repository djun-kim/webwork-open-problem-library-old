#DESCRIPTION
# intervals of increasing and decreasing
# first derivative
#ENDDESCRIPTION

## K. Lesh, Union College. Edited 9/27/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "Interval_ans-eval.pl",  # Load answer-checker
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$r1 = random(1,4,2);
$r2 = random(5,9,2);
#$r2 += 1 if ($r2 == $r1);
$b = 3*($r1+$r2)/2;
$c = 3*$r1*$r2;
$d = non_zero_random(-14,14,1);

BEGIN_TEXT
Let \( f(x) = x^3 - $b x^2 + $c x + $d \).
END_TEXT
includePGfile("Increasing-Decreasing-text.pg");

$showPartialCorrectAnswers = 1;

if ($r1 == $r2) {
  ANS(interval_cmp("(-infinity,infinity)", strings=>['none']));
  ANS(interval_cmp("none", strings=>['none']) );
  ANS(number_list_cmp("none", strings=>['none']));
  ANS(number_list_cmp("none", strings=>['none']));
} else {
  ANS(interval_cmp("(-infinity,$r1)U($r2,infinity)", strings=>['none']));
  ANS(interval_cmp("($r1,$r2)", strings=>['none']) );
  ANS(number_list_cmp("$r1", strings=>['none']));
  ANS(number_list_cmp("$r2", strings=>['none']));
}

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

