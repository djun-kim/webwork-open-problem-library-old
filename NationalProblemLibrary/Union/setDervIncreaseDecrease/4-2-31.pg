#DESCRIPTION
# intervals of increasing and decreasing
# first derivative
#ENDDESCRIPTION

## K. Lesh, Union College. Edited 9/27/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "Interval_ans-eval.pl",  # Load answer-checker
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$b = random(2,9,2);
$c = non_zero_random(-9,9,2);

BEGIN_TEXT
Let \( f(x) = $c + $b x - x^3\).
END_TEXT
includePGfile("Increasing-Decreasing-text.pg");

$showPartialCorrectAnswers = 1;

ANS(interval_cmp("(-sqrt($b/3),sqrt($b/3))", strings=>['none']));
ANS(interval_cmp("(-infinity,-sqrt($b/3))U(sqrt($b/3),infinity)", strings=>['none']) );
ANS(number_list_cmp("sqrt($b/3)", strings=>['none']));
ANS(number_list_cmp("-sqrt($b/3)", strings=>['none']));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

