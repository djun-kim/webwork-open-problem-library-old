DOCUMENT();

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2, 6, 1);
$b = random(3,7,1);
$c = random(2,7,2);
$d = random(2,7,2);
$r1 = random(2,5,1);
$r2 = random(4,6,1);
$ans = (($r1**2+$d)*((2*$a*$r1)*($r1**2 -$c)+(2*$r1)*($a*$r1**2
-$b)) - ($a*$r1**2 -$b)*($r1**2 -$c)*(2*$r1))/($r1**2+$d)**2;

BEGIN_TEXT
Let
\[ f(x) = \frac{($a x^2 - $b)(x^2 - $c)}{x^2 + $d}. \]
Evaluate \( f'(x) \) at the indicated point:
$PAR
\( f'($r1)\) = \{ans_rule(40) \}
END_TEXT

$showpartialcorrectanswers = 1;
ANS(num_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();

