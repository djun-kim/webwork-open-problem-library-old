);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2, 5, 1);
$b = random(2,5,1);
$c = random(2,7,1);
$d = non_zero_random(-9,9,1);
$r1 = random(1,4,1);
while ($c*$r1 + $d == 0)
{
$r1 = random(1,4,1);
}
$r2 = random(-4,-1,1);
while ($c*$r2 + $d == 0)
{
$r2 = random(-4,-1,1);
}
$ans = ((4*$a*($r1)**3 + 3*$b*($r1)**2)*($c*$r1 + $d) - ($a*($r1)**4 +
$b*($r1)**3)*$c)/($c*$r1 + $d)**2;

$denominator = FPOLY("${c}x+$d");
#$c x ? {$d}
BEGIN_TEXT
Let
\[ f(x) = \frac{${a}x^4 + ${b}x^3}{$denominator}. \]
Evaluate \( f'(x) \) at the indicated point:
$PAR
\( f'($r1)\) = \{ans_rule(40) \}
END_TEXT

$showpartialcorrectanswers = 1;
ANS(num_cmp($ans));

END_PROBLEM();
