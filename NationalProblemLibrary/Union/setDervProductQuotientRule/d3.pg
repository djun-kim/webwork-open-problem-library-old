##DESCRIPTION
##KEYWORDS('derivatives')
##  Find first and second derivatives of a polynomial and evaluate them
##  at a given point
##ENDDESCRIPTION
# Edited by N. Srivastava, Union College, 9/10/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,5,1);
$b = 3+$a;
$n = random(5,12,1);

$c = (-1)**(-1+$n);
$d = (-1)**($n);
$deriv1 = $a*$n*$c + $b*$d;
$ans = $deriv1;

$functionTable =
  BeginTable().
  AlignedRow(["\(f(x)\)", "\(=\)", "\(x^{$n}h(x)\)"],align => "LEFT",separation => 5).
  AlignedRow(["\(h(-1)\)","\(=\)", "\($a\)"],align => "LEFT",separation => 5).
  AlignedRow(["\(h'(-1)\)","\(=\)","\($b\)"],align => "LEFT",separation => 5).
  EndTable();

BEGIN_TEXT
Given that:
$functionTable

calculate \( f'( -1 ) \). 
$PAR
\( f'( -1 ) \) = \{ans_rule(30) \}
$PAR
$BBOLD Hint:$EBOLD  Use the product rule and the power rule.
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(num_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

