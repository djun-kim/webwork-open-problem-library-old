DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGunion.pl",        # Union College utilities
  "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,8,1);
$b = random(2,8,1);
$c = random(3,5,1);
$d = random(2,8,1);
$e = random(2,8,1);
$f = $c + random(1,1,2);
$expc = $c-1;
$expf = $f-1;
$coeff1=$c*$a;
$coeff2=$f*$d;
$twof=2*$f;

$df = "[$coeff1(${a}x - $b)^$expc*(${d}x + $e)^$f 
                - $coeff2(${a}x - $b)^$c*(${d}x + $e)^$expf]
         /[(${d}x + $e)^$twof] ";

BEGIN_TEXT
Suppose that \( f(x) = \displaystyle\frac{($a x - $b)^$c}{($d x + $e)^$f}\).
Find \(f'(x)\).
$PAR
\(f'(x)\) = \{ans_rule(60)\}.
END_TEXT

$showPartialCorrectAnswers=1;

ANS(fun_cmp(
  $df,                   #  the correct answer
  limits => [0,1],       #  range of x's to use
  relTol => 5,          # .1 percent, (i.e., .001)
));

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
