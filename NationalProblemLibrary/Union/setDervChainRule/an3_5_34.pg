DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGunion.pl",        # Union College utilities
  "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = non_zero_random(-6,6,1);
$b = non_zero_random(-10,10,1);
$c = random(2,4,1);
$d = non_zero_random(-10,10,1);
$e = random(2,4,1);
$f = random($e,$e+2,1);

$poly1 = FPOLY("(${a}x + $b)");
$poly2 = FPOLY("(x^$c + $d)");
$expc = $c-1;
$expe = $e-1;
$expf = $f-1;
$coeff1=$e*$a;
$coeff2=$f*$c;
$df = "$coeff1*$poly1^$expe*$poly2^$f 
        + $coeff2*$poly1^$e*$poly2^$expf*x^$expc";

BEGIN_TEXT
Suppose that \( f(x) = $poly1^$e $poly2^$f\).
Find \(f'(x)\).
$PAR
\(f'(x)\) = \{ans_rule(60)\}.
END_TEXT

$showPartialCorrectAnswers=1;

ANS(fun_cmp(
  $df,                   #  the correct answer
  limits => [0,1],       #  range of x's to use
  relTol => .1,          # .1 percent, (i.e., .001)
));

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
