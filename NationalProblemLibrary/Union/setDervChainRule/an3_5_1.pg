DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM(); 

$a = non_zero_random(-5,5,1);
$b = non_zero_random(2,5,1);
$c = non_zero_random(-8,8,1);
$d = non_zero_random(4,8,1);

$f = FPOLY("${a}x^$b + ${c}x");
$exp1 = $d - 1;
$exp2 = $b - 1;
$coeff = $a*$b;
$df = FPOLY("$d($f)^$exp1*(${coeff}x^$exp2 + $c)");

BEGIN_TEXT
Suppose that \(f(x) =  ($f)^{$d}\).  Find \(f'(x)\).
$PAR
\(f'(x)\) = \{ans_rule(60)\}.
END_TEXT

$showPartialCorrectAnswers=1;

ANS(fun_cmp(
  $df,                   #  the correct answer
  limits => [0,1],       #  range of x's to use
  relTol => .1,          # .1 percent, (i.e., .001)
));

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
