DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGunion.pl",        # Union College utilities
  "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = non_zero_random(2,5,1);
$expa = $a-1;

$df1 = "$a*[sin(x)]^$expa*cos(x)";
$df2 = "[cos(x^$a)]*${a}x^$expa";


BEGIN_TEXT
(a) Suppose that \(f(x) = \sin^{$a}(x) \).
Find \(f'(x)\).
$PAR
\(f'(x)\) = \{ans_rule(60)\}.
$PAR
$PAR
(b) Suppose that \(f(x) = \sin(x^$a) \).
Find \(f'(x)\).
$PAR
\(f'(x)\) = \{ans_rule(60)\}.
END_TEXT

$showPartialCorrectAnswers=1;

ANS(fun_cmp(
  $df1,                   #  the correct answer
  limits => [0,2],       #  range of x's to use
  relTol => .1,          # .1 percent, (i.e., .001)
));
ANS(fun_cmp(
  $df2,                   #  the correct answer
  limits => [0,2],       #  range of x's to use
  relTol => .1,          # .1 percent, (i.e., .001)
));

##################################################

END_PROBLEM();
