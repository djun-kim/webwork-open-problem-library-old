#DESCRIPTION
#KEYWORDS('algebara', 'equations', 'domain')
#  Find the domain of a function root(a-bx)
#ENDDESCRIPTION
# Edited by N. Srivastava, Union College, 9/11/03
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

$a = random(2,5,1);
$b = random(1,5,1);
$c = random(-5,-2,1);
$dm = random(3,5,1);
$d = -$dm;
$f = random(2,3,1);
$x0 = random(1,2,1);
while ($b + $c*$x0 == 0)
{
$c = random(-5,-2,1);
}
$y0 = ($a*$x0**$f)*($b + $c*$x0)**($d);
$m = ($f*$a*$x0**($f-1))*($c*$x0 + $b)**($d) + ($a*$x0**$f)*$d*$c*($b + $c*$x0)**($d-1);

$tanline = "$m (x-($x0)) + ($y0)";

TEXT(beginproblem());
BEGIN_PROBLEM();

BEGIN_TEXT
Suppose that \(f(x) = \displaystyle\frac{$a x^{$f}}{($b ? {$c} x)^{$dm}}.\)
$BR
Find an equation for the tangent line to the graph of \(f\) at \(x = $x0\).
$PAR
Tangent line: \(y\) = \{ans_rule(30)\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(fun_cmp(
  $tanline,                   #  the correct answer
  limits => [0,1],       #  range of x's to use
  relTol => .1,          # .1 percent, (i.e., .001)
));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

