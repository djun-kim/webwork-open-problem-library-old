DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$time = random(6,10,.2);
$radius_rate = random(2,3.5,.1);
$radius_a = random(2,5,1);
$radius_b = $radius_rate * $time;

BEGIN_TEXT 
A stone dropped into a still pond sends out a circular
ripple whose radius increases at a constant rate of $radius_rate
ft/s. 
$PAR
(a) How rapidly is the area enclosed by the ripple increasing when
the radius is $radius_a? 
$BR
\{ ans_rule(25)\} (sq ft)/s
$PAR
(b) How rapidly is the area enclosed by the ripple increasing at the
end of $time seconds? 
$BR
\{ ans_rule(25)\} (sq ft)/s 
END_TEXT

$showPartialCorrectAnswers = 1;

$ans1=2*4*atan(1)*$radius_a*$radius_rate;
$ans2=2*4*atan(1)*$radius_b*$radius_rate;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

