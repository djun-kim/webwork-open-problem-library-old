#DESCRIPTION
##  Algebra problem: Exponential and logarithmic equations 
##ENDDESCRIPTION

##KEYWORDS('algebra', 'exponential equation')
# Edited by N. Srivastava, Union College, 9/11/03
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a=random(2,20,1);
$b=random(2,20,1);
$c=random(1,20);

includePGfile("solve-equation-text.pg");
BEGIN_TEXT
\[
$a e^x - $c=$b
\]
$BR
Your answer is \( x = \) \{ans_rule(20) \}.
END_TEXT

$ans1 = ln($b + $c)-ln($a);

$showPartialCorrectAnswers = 1;
ANS(num_cmp($ans1));

END_PROBLEM();
ENDDOCUMENT();

