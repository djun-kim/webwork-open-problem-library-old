#DESCRIPTION
##  Algebra problem: Logarithmic Functions 
##ENDDESCRIPTION

##KEYWORDS('algebra', 'logarithmic equation')
# Edited by N. Srivastava
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();
$a=random(2,4,1);
$b=random(2,4,1);

BEGIN_TEXT
In each part, find the value of \(x\).
$BR
(a) \(\log_{10} x = $a\)
$BR
\(x =\) \{ans_rule(10) \}
$PAR
(b) \(\log_5 x = $b\)
$BR
\(x=\) \{ans_rule(10) \}
END_TEXT

$ans1 = 10**$a;
$ans2 = 5**$b;

$showPartialCorrectAnswers = 1;
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

