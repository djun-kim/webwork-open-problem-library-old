##KEYWORDS('logarithms', 'applications')
##TYPE('word problem')
##ENDDESCRIPTION
## Edited K. Lesh, Union College, 9/7/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a1 = random(100,900,100);
$t1 = random(10,20,5);
$t2 = random(30,40,5);
$b1 = random(1000,2000,100);
$m1 = random(60,120,5);
$p1 = random(10000,15000,1000);

## n = ce^(kt)
$k1 = log($b1/$a1)/($t2-$t1);
$c1 = $a1/(exp($k1*$t1));
BEGIN_TEXT
The count in a bacteria culture was $a1 after $t1 minutes and $b1 
after $t2 minutes.
$PAR
What was the initial size of the culture? 
$BR
\{ans_rule(30) \}
$PAR
Find the population after $m1 minutes. 
$BR
\{ans_rule(30) \}
$PAR
How many minutes after the start of the experiment will the population 
reach $p1?  
$BR
\{ans_rule(30) \}
END_TEXT

$showPartialCorrectAnswers = 1;

$ans1 = $c1;
ANS(num_cmp($ans1, relTol=>.1));

$ans2 = $c1*exp($k1*$m1);
ANS(num_cmp($ans2, relTol=>.1));

$ans3 = log($p1/$c1)/$k1;
ANS(num_cmp($ans3, relTol=>.1));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
