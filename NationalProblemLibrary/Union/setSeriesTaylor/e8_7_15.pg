);

TEXT(beginproblem());
BEGIN_PROBLEM();

$b = random(2,15,1) ;
$a = $b*24;

BEGIN_TEXT
Evaluate 
$BR
\[ \lim_{x \to 0} \frac{\cos(x) - 1 + \frac{x^2}{2}}{${b}x^4} \]
$BR
${BBOLD}Hint:$EBOLD Use the power series expansion of \(\cos(x)\).
$PAR
Limit = \{ans_rule(30)\}
END_TEXT

$showPartialCorrectAnswers = 1;
$answer = 1/$a ;
ANS(num_cmp($answer));

END_PROBLEM();
