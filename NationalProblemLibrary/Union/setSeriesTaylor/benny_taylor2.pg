DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$b = random(2,6,1);
$d = random(4,6,2);

$p = $d/2;

# Now pick other coefficients (a and c) so that the numbers don't
# turn out too ugly.

if ($d == 6) {
	$c = 2;
	$a = random(2,3,1);
} else {
	$c = random(2,4,1);
	if ($c == 2) {
		$a = 2;
	} elsif ($c == 4) {
		$a = 7;
	} else {
		$a = random(3,5,1);
	}
}

# We'll ask for the m-th derivative, where $m is:

$m = $d * $c - $a;

$endstr = 'th';

# A quick routine to compute m factorial:
$j=0;
$mfact=1;
while ($j<$m) {
	$j = $j + 1;
	$mfact = $j * $mfact;
}

# A quick routine to compute d factorial:
$j=0;
$dfact=1;
while ($j<$d) {
	$j = $j + 1;
	$dfact = $j * $dfact;
}

# Now the answer:
$ans = (-1)**$p * $mfact * $b**$d / $dfact;

BEGIN_TEXT
Compute the $m$endstr derivative of
\[ f(x) = \frac{\cos\left(${b}x^{$c} \right) - 1}{x^{$a}} \]
at \( x=0 \).
$PAR
${BBOLD}Hint:$EBOLD Use the MacLaurin series for \( f(x) \).
$PAR
\( \displaystyle f^{($m)}(0) = \) \{ans_rule(30)\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(num_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.


