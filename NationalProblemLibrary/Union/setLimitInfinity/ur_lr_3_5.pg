## DESCRIPTION
##   Evaluate Limits at a Vertical Asymptote
## ENDDESCRIPTION

## KEYWORDS('Limit', 'Infinity', 'Vertical Asymptote', 'One-Sided')
## Tagged by nhamblet

## DBsubject('Calculus')
## DBchapter('Limits and Derivatives')
## DBsection('The Limit of a Function')
## Date('12/29/08')
## Author('N. Srivastava')
## Institution('Union College')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned answer blanks
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem);

###################################
# Setup

Context("Numeric")->flags->set(reduceConstants => 0);

$a1 = random(1,5,1);
$a  = 2 * $a1;
$s  = random(-1,1,2);
$b1 = random(10,40,1);
$b  = $s * $b1;
$c1 = random(1,5,1);
$c  = 1+2*$c1;

if ($s == 1) {
  $ans1 = -(Infinity);
  $ans2 = Infinity;
} else {
  $ans1 = Infinity;
  $ans2 = -(Infinity);
}

$f = Formula("$b x");
$g = Formula("$c - $a x");
$f_over_g = ($f/$g)->reduce;

$C = Formula("$c/$a");

###################################
#  Use an alignment to present the questions and answer rules
###################################

Context()->texStrings;
$alignment = new_aligned_list(
   equals => 1, ans_rule_len => 20, numbered => 1,
   row_spacing => 5, tex_spacing => "5pt"
);
$alignment->qa(
 "\(\displaystyle\lim_{x\to{($C)}^+} $f_over_g\)", $ans1->cmp,
 "\(\displaystyle\lim_{x\to{($C)}^-} $f_over_g\)", $ans2->cmp,
);
Context()->normalStrings;

###################################
# Main text

BEGIN_TEXT
Evaluate the following limits:
\{$alignment->print_q\}
$INFINITY_MESSAGE
END_TEXT

###################################
# Answer checking

$showPartialCorrectAnswers = 0;
ANS($alignment->correct_ans);

ENDDOCUMENT();
