DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned answer blanks
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

Context("Numeric");

$b=non_zero_random(-10, 10);
$c=non_zero_random(-10, 10);
$d=non_zero_random(-10, 10);
$e=random(1, 10);

$ans = Real(1/$e);

$f = Formula("sqrt(x^4 + $b x^3 +$c)");
$g = Formula("$e x^2 +$d");
$f_over_g = ($f/$g)->reduce;

###################################
#  Use an alignment to present the questions and answer rules
###################################

Context()->texStrings;
$alignment = new_aligned_list(
   equals => 1, ans_rule_len => 20, numbered => 1,
   row_spacing => 5, tex_spacing => "5pt"
);
$alignment->qa(
  "\(\displaystyle\lim_{x\to\infty} $f_over_g\)", $ans->cmp,
  "\(\displaystyle\lim_{x\to-\infty} $f_over_g\)", $ans->cmp,
);
Context()->normalStrings;

###################################
# Main text

BEGIN_TEXT
Evaluate the following limits:
\{$alignment->print_q\}
$INFINITY_MESSAGE
END_TEXT

###################################
# Answer checking

$showPartialCorrectAnswers = 0;
ANS($alignment->correct_ans);

###################################

ENDDOCUMENT();
