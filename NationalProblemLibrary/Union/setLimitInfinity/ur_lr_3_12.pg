##DESCRIPTION
##  Evaluate an infinite limit of a fraction of two polynomials
##ENDDESCRIPTION
## Edited N. Srivastava, Union College, 9/7/03
##KEYWORDS('limits', 'infinite' )

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "infiniteAnswer.pl",  # Load answer-checker appropriate to the problem
   "PGcourse.pl",       # Customization file for the course
   "alignedChoice.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$b=non_zero_random(-10, 10);
$c=non_zero_random(-10, 10);
$d=non_zero_random(-10, 10);
$e=random(1, 10);

$ans=1/$e;

$f = FPOLY("x^4 + $b x^3 +$c");
$g = FPOLY("$e x^2 +$d");

$alignment = new_aligned_list(equals=>1, ans_rule_len=>20, tex_spacing=>"5pt");
$alignment->qa(
  "\(\displaystyle\lim_{x\to\infty}  \frac{\sqrt{$f}}{$g}\)",
       infinite_num_cmp($ans,allowDNE=>1),
  "\(\displaystyle\lim_{x\to-\infty} \frac{\sqrt{$f}}{$g}\)",
       infinite_num_cmp($ans,allowDNE=>1)
);

BEGIN_TEXT
Evaluate the following limits.
$PAR
$INFINITY_MESSAGE
$BCENTER
\{$alignment->print_q\}
$ECENTER
END_TEXT

$showPartialCorrectAnswers = 0;
ANS($alignment->correct_ans);

END_PROBLEM();
ENDDOCUMENT();

