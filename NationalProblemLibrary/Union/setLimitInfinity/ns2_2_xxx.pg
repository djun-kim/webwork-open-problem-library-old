DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "alignedChoice.pl",
   "PGunion.pl",        # Union College utilities
   "infiniteAnswer.pl",  # Load answer-checker appropriate to the problem
   "PGcourse.pl",       # Customization file for the course 
);

TEXT(beginproblem());
BEGIN_PROBLEM();

BEGIN_TEXT
Determine the infinite limit of the following functions.
$PAR
$INFINITY_MESSAGE
END_TEXT

$alignment = new_aligned_list(equals=>1, ans_rule_len=>20, tex_spacing=>"5pt");
$alignment->qa(
 "\(\displaystyle \lim_{x\to 3^{-}}  \frac{2}{x-3}\)",
    infinite_num_cmp("-INF",allowDNE=>1),

 "\(\displaystyle \lim_{x\to 3^{+}}  \frac{2}{x-3}\)",
    infinite_num_cmp("INF",allowDNE=>1),

 "\(\displaystyle \lim_{x\to 5}      \frac{2}{(x-5)^{6}}\)",
    infinite_num_cmp("INF",allowDNE=>1),

 "\(\displaystyle \lim_{x\to 5^{-}}  \frac{2}{(x-5)^{3}}\)",
    infinite_num_cmp("-INF",allowDNE=>1),

 "\(\displaystyle \lim_{x\to -7^{-}} \frac{1}{x^{2}(x+7)}\)",
    infinite_num_cmp("-INF",allowDNE=>1),

 "\(\displaystyle \lim_{x\to 0}      \frac{1}{x^{2}(x+7)}\)",
    infinite_num_cmp("INF",allowDNE=>1)
);

$alignment->choose(4);

BEGIN_TEXT
$BCENTER
\{$alignment->print_q\}
$ECENTER
END_TEXT

$showPartialCorrectAnswers=0;
ANS($alignment->correct_ans);

END_PROBLEM();
ENDDOCUMENT();
