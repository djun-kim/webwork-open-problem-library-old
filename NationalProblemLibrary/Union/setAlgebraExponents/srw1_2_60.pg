);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,5,1);
$b = random(2,5,1);
$c = random(2,5,1);
$d = random(2,5,1);
$e = random(2,5,1);
$f = random(2,5,1);
$g = random(2,5,1);
$h = random(2,5,1);
$ii = random(-4,-2,1);

$showPartialCorrectAnswers = 1;

BEGIN_TEXT
The expression 
\(\left( \displaystyle
\frac{x^$a y^$b z^$c x^{-$d}}{x^$e y^$f z^$g y^$h}\right)^{$ii}\) 
equals \(x^ry^sz^t\) where $PAR
\(r\), the exponent of \(x\), is: \{ans_rule(10) \}
$BR
\(s\), the exponent of \(y\), is: \{ans_rule(10) \}
$BR
\(t\), the exponent of \(z\), is: \{ans_rule(10) \}
$BR
END_TEXT

$ans1 = $ii*($a-$d-$e);
ANS(num_cmp($ans1));

$ans2 = $ii*($b-$f-$h);
ANS(num_cmp($ans2));

$ans3 = $ii*($c-$g);
ANS(num_cmp($ans3));

END_PROBLEM();
