);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = non_zero_random(-9,9,1);
$b = random(2,9,1);
$hbase = FPOLY("x+$a");
BEGIN_TEXT
If the function 
\( h(x)=($hbase)^$b \) is expressed in the form \(f \circ g\) where
\(f(x)=x^$b,\) find the function \(g(x)\).
$PAR
\(g(x)\)= \{ans_rule(15)\}
END_TEXT

$ans1 = "$hbase";
ANS(fun_cmp($ans1));

END_PROBLEM();
