);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,9,1);
$b = non_zero_random(-9,9,1);
$c = random(1,9,1);
$f = FPOLY("${a}x+$b");

BEGIN_TEXT
Given that \(f(x)=$f\) and \(g(x)=$c - x^2\), calculate 
$PAR
(a) \(f(g(0))\)= \{ans_rule(15)\}
$PAR
(b) \(g(f(0))\)= \{ans_rule(15)\} 
END_TEXT

$showPartialCorrectAnswers = 1;

$ans1 = $a*$c+$b;
$ans2 = $c-$b**2;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

END_PROBLEM();
