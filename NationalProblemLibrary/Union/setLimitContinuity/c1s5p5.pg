DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "piecewiseFunctions.pl", #utility for piecewise defined functions
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$A=random(2,6,1);
$b=random(-1,1,1);
$c=random(7,10,1);
$d=non_zero_random(-6,6,1);
$e=random(-6,6,1);
$E=non_zero_random(-6,6,1);
$F=non_zero_random(-6,6,1);

$B=$b-$A*$d;
$C=$c-$d*$b;
$D=-$c*$d;

#Left hand definition is (A*x^2+b*x+c)*(x-d)/(x-d)
#the right hand is (E*x^2+F*x+a)
$left  = FPOLY("\displaystyle\frac{${A}x^3+${B}x^2+${C}x+$D}{x-$d}");
$right = FPOLY("${E}x^2+${F}x+a");
$fstr = piecewiseFunction(
  "f(x)", [$left, "if \(x $LT $d\)",
           $right,"if \(x $GE $d\)"]
);

BEGIN_TEXT
Find the value of the constant \(a\) that makes the following 
function continuous on \((-\infty,\infty)\).
$fstr
$PAR
\(a=\) \{ans_rule(25) \}
END_TEXT

$showPartialCorrectAnswers = 1;
$ans=$A*$d**2 +$b*$d + $c - ( $E*$d**2 + $F*$d );
ANS(num_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.


