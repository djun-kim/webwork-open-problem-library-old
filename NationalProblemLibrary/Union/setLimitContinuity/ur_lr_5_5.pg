##DESCRIPTION
##  Jump discontinuity
##ENDDESCRIPTION

##KEYWORDS('discontinuity')
## Edited by K. Lesh, Union College, 9/17/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "piecewiseFunctions.pl", #utility for piecewise defined functions
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();


$m = random(2,8,1);
$b = random(1,6,1);
$a1 = random(2,8,1);
$a2 = random(1,8,1);
$x = random(2,10,1);
$c = random(5,25,1);

$fstr = piecewiseFunction(
  "f(x)", ["x^2+${a1}x+$a2","if \(x${LT}$x\)",
           "$c","if \(x=$x\)",
           "-$m x + $b","if \(x${GT}$x\)"]
);

includePGfile("jump-discontinuity-text.pg");

BEGIN_TEXT
Let $fstr
$BR
Show that \( f(x) \) has a jump discontinuity at \( x=$x \) by calculating the limits from the left and right at \( x=$x \).
$PAR
\(\displaystyle{
         \lim_{x\to $x^-}f(x)}= \)\{ans_rule(15)\}
$BR
\(\displaystyle{
         \lim_{x\to $x^+}f(x)}= \)\{ans_rule(15)\}
$PAR
Now draw a graph of \(f(x)\).
END_TEXT

$showPartialCorrectAnswers = 1;

$ans1 = $x*$x+$a1*$x+$a2;
ANS(num_cmp($ans1));

$ans2 = -$m*$x+$b;
ANS(num_cmp($ans2));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.


