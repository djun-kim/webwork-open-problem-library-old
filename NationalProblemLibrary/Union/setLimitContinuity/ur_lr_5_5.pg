## Author('K. Lesh')
## Institution('Union College')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "unionInclude.pl",
  "contextPiecewiseFunction.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem);

###################################
# Setup

Context("PiecewiseFunction");

$m = random(2,8,1);
$b = random(1,6,1);
$a1 = random(2,8,1);
$a2 = random(1,8,1);
$x = random(2,10,1);
$c = random(5,25,1);

$f = PiecewiseFunction(
  "x^2+${a1}x+$a2 if x < $x else
   $c if x = $x else
  -$m x + $b if x > $x"
);

Context("Numeric");

###################################
# Main text

includePGfile("jump-discontinuity-text.pg");

Context()->texStrings;
BEGIN_TEXT
Show that \[ f(x) = $f \] has a jump discontinuity at \(x = $x\) by calculating the
limit as \(x\) approaches \($x\) from the left and from the right.
$PAR
\(\displaystyle{
         \lim_{x\to $x^-}f(x)}= \)\{ans_rule(15)\}
$PAR
\(\displaystyle{
         \lim_{x\to $x^+}f(x)}= \)\{ans_rule(15)\}
$PAR
Now draw a graph of \(f(x)\).
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$ans1 = $x*$x+$a1*$x+$a2;
$ans2 = -$m*$x+$b;

ANS(Real($ans1)->cmp);
ANS(Real($ans2)->cmp);

###################################
ENDDOCUMENT();        # This should be the last executable line in the problem.
