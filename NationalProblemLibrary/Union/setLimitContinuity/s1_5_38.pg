DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "piecewiseFunctions.pl", #utility for piecewise defined functions
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$tag = random(0,3,1);
@choose = ("x","y","s","t");
$x1 = $choose[$tag];

$a1 = random(2,9,1);
$b1 = random(1,9,1);

$fstr = piecewiseFunction(
  "f($x1)", ["$x1^2-c","if \(x\in (-\infty,$a1)\)",
           "c{$x1}+$b1","if \(x\in [$a1,\infty)\)"]
);

BEGIN_TEXT
Find the value of the constant \(c\) that makes the following 
function continuous on \((-\infty,\infty)\).
$fstr
$PAR
\(c=\) \{ans_rule(25) \}
END_TEXT

$showPartialCorrectAnswers = 1;
$ans = ($a1*$a1-$b1)/($a1+1);
ANS(num_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.


