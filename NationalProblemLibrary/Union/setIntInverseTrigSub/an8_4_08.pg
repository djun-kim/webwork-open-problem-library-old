TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(4,10,1);
$aa = $a**2;

$antiderv = "(1/$aa)x/sqrt($aa - x^2)";

BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int \frac{dx}{($aa - x^2)^{3/2}}  \) 
             = \{ans_rule(50)\} \( + C\). 
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(fun_cmp($antiderv, mode=>"antider", vars=>"x", limits=>[0,1]));

END_PROBLEM();
ENDDOCUMENT();
