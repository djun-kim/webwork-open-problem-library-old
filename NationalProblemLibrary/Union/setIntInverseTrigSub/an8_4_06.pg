TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(4,10,1);
$aa = $a**2;
$antiderv = "sqrt(x^2 - $aa)/($aa x)";

BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int \frac{dx}{x^2\sqrt{x^2 - $aa}}  \) 
             = \{ans_rule(50)\} \( + C\). 
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(fun_cmp($antiderv, mode=>"antider", vars=>"x", limits=>[$a,2*$a]));

END_PROBLEM();
