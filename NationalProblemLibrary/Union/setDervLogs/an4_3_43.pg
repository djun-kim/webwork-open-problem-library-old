loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,5,1); 
$b  = $a + random(1,5,1);
$exp = $a-1;

$derv = "(x^${a}+$b)^(ln x)*[${a}x^$exp/(x^$a+$b)*ln(x)+ln(x^$a+$b)/x]";

BEGIN_TEXT
Let \( f(x) = (x^$a + $b)^{\ln x} \). Find \(f'(x)\).
$BR
\( f'(x) = \) \{ans_rule(60) \}
END_TEXT

ANS(fun_cmp(
  $derv,                 #  the correct answer
  limits => [2,4],       #  range of x's to use
#  relTol => .1,          # .1 percent, (i.e., .001)
));

END_PROBLEM();
