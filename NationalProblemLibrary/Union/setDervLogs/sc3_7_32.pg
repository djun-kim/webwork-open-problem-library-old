###################################
# Setup

$a = random(2,10,1);
$point = random(1,3,1);

$f=Formula("$a (sin x)^x");#->reduce;

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f(x) = \displaystyle $f \).  Find \(f'($point)\).
$PAR
\( f'( $point ) = \)\{ans_rule(50) \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$fprime=$f->D('x');
$fprimeatpoint=Real($fprime->eval(x=>$point));

#ANS($fprime->cmp);
ANS($fprimeatpoint->cmp);

