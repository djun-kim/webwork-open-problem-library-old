DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "unionAnswer.pl",    # Load answer-checker appropriate to the problem
   "PGcourse.pl",       # Customization file for the course
);

TEXT(&beginproblem);

BEGIN_PROBLEM();
$a = random(5,10,1);
$b = random(1,4,1);
$c = random(5,10,1);
$d=$c-$b;
$e=-$b*$c;
$string1=FPOLY("x^{2}+${d}x+$e");
$string2=FPOLY("${a}x^{2}+${b}x+$c");

BEGIN_TEXT
Solve the inequalities and express the answer in interval notation.
$BR
${BBOLD}Hint${EBOLD}: One part has VERY few breakpoints.
$PAR
(a) \($string1 $LE 0 \)
$BR
Answer: \{ans_rule(35)\}
$PAR
$INFINITY_UNION_MESSAGE
$PAR
(b) \( $string2 > 0 \)
$BR
Answer: \{ans_rule(35)\}
$PAR
$INFINITY_UNION_MESSAGE
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(num_union_cmp("[-$c,$b]"));
ANS(num_union_cmp("(-infinity,infinity)"));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.;




