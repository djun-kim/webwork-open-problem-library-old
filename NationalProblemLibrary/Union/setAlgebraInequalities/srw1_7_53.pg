TEXT(beginproblem());

BEGIN_PROBLEM();

Context("Interval");

$a =  random(1,10,1);
$a2 = $a*$a;

BEGIN_TEXT
Solve the following inequality. Express the answer in interval notation.
\[ x^4 > $a2 x^2 \]
Answer: \{ans_rule(35)\}
END_TEXT

$ans1 = -$a;
$ans2 = $a;

$showPartialCorrectAnswers = 0;
ANS(Interval("(-infinity,$ans1)U($ans2,infinity)")->cmp);

