DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",                # Union College utilities
   "Parser.pl",
   "PGcourse.pl",               # Customization file for the course
);

TEXT(beginproblem());

BEGIN_PROBLEM();

Context("Interval");

$a =  random(1,20,1);
$b =  random(1,20,1);
$c=$a+5;

$d =  random(1,20,1);
$e =  random(1,20,1);
$f =  random(5,8);
$g=-$d+$f;

BEGIN_TEXT
\{BeginList("OL",type=>"a")\}
$ITEM
Solve the following inequality. Express the answer in interval notation.
\[ $a${LE}x+$b<$c \]
Answer: \{ans_rule(35)\}
$ITEMSEP
$ITEM
Solve the following inequality. Express the answer in interval notation.
\[ -$d < $e - x $LE $g \]
Answer: \{ans_rule(35)\}
\{EndList()\}
END_TEXT

$ans1 = $a-$b;
$ans2 = $a-$b+5;

$ans3 = $e-$g;
$ans4 = $d+$e;

$showPartialCorrectAnswers = 1;
ANS(Interval("[$ans1,$ans2)")->cmp);
ANS(Interval("[$ans3,$ans4)")->cmp);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.;




