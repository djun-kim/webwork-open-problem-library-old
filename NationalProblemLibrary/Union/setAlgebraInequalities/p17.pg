);

TEXT(beginproblem());

BEGIN_PROBLEM();
$a = random(1,8,1);
$b = random(-8,-1,1);

$c=($a*$b)/($b-1);

if($c<$a){$min=$c and $max=$a} else {$min=$a and $max=$c};

BEGIN_TEXT
Solve the following inequality. Write the answer in interval notation.
\[ \frac{x}{x-$a} > $b  \]
$BR
Answer: \{ans_rule(35)\}
$PAR
$INFINITY_UNION_MESSAGE
END_TEXT

$showPartialCorrectAnswers = 0;
ANS(num_union_cmp("(-INF,$min)U($max,INF)"));

END_PROBLEM();
