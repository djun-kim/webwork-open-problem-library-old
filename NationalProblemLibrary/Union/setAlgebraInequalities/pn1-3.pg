##   Inequality
##ENDDESCRIPTION
## Edited K. Lesh, Union College, 7/14/03
## Update to new parser and combine three problems 9/5/05, KL

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",                # Union College utilities
   "Parser.pl",
   "PGcourse.pl",               # Customization file for the course
);

TEXT(beginproblem());

BEGIN_PROBLEM();

Context("Interval");

$a = random(-10,-1,1);
$b = random(1,10,1);
$c = non_zero_random(-20,20,1);
$d = non_zero_random(-20,20,1);


BEGIN_TEXT
\{BeginList("OL",type=>"a")\}
$ITEM Express the following inequality using interval notation.
\[$a < x $LE $b\]
Answer: \{ans_rule(35)\}
   $ITEMSEP

$ITEM Express the following inequality using interval notation.
\[x < $c\]
Answer: \{ans_rule(35)\}
   $ITEMSEP

$ITEM Express the following inequality using interval notation.
\[ x $GE $d  \]
Answer: \{ans_rule(35)\}
\{EndList()\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(Interval("($a,$b]")->cmp);
ANS(Interval("(-INF,$c)")->cmp);
ANS(Interval("[$d,INF)")->cmp);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.;




