$ans2 = (-$a1/$b1)*($f)**(-1/$b1 - 1);

$al = new_aligned_list(ans_rule_len=>50, tex_spacing=>"3pt");
$al->qa(
  "\(f'($d)\)", num_cmp($ans1),
  "\(f'($f)\)", num_cmp($ans2),
);

BEGIN_TEXT
Suppose that
\( \displaystyle{f(x) = \frac{$a1}{\sqrt[$b1]{x}} }\).
Evaluate each of the following:
\{$al->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

