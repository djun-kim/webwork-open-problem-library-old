DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned questions and answers
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem);

###################################
# Setup

$a = random(3,8,1);
$b = random(2,9,1);
$point1 = random(1,3,1);
$point2 = random(-3,-1,1);

$f=Formula("$b x^$a");

###################################
# Setting up an aligned list of the problems

#Answers

$fprime=$f->D('x');
$ans1=Real($fprime->eval(x=>$point1));
$ans2=Real($fprime->eval(x=>$point2));

$al = new_aligned_list(ans_rule_len=>15, numbered=>1, tex_spacing=>"3pt");
$al->qa(
  "\(f'($point1)\)", $ans1->cmp,
  "\(f'($point2)\)", $ans2->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f(x)= $f\).  Evaluate each of the following:
$PAR
\{$al->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################
ENDDOCUMENT();
