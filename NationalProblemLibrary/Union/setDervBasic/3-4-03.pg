TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(3, 13, 2);

BEGIN_TEXT
Let \( y = x^{$a}\).
Find \( \displaystyle{\frac{dy}{dx}}\).
$PAR
\( \displaystyle{\frac{dy}{dx}}\) = \{ans_rule(20) \}
END_TEXT

$exp = $a-1;
$ans = "$a*(x^$exp)";
ANS(fun_cmp($ans));

END_PROBLEM();
