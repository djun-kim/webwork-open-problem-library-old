DOCUMENT();

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "alignedChoice.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2, 6, 0.2);
$b = random(2.1,7,0.2);
$c = random(2,7,1);
$d = random(3,9,1);
$f = random(-12,-2,1);

$ans1 = 2*$a*$d + $b;
$ans2 = 2*$a*$f + $b;

$al = new_aligned_list(ans_rule_len=>50, tex_spacing=>"3pt");
$al->qa(
  "\(f'($d)\)", num_cmp($ans1),
  "\(f'($f)\)", num_cmp($ans2),
);

BEGIN_TEXT
Suppose that \( f(x) = $a x^2 + $b x - $c \).
Evaluate each of the following:
\{$al->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();

