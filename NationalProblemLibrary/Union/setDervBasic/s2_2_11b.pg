##DESCRIPTION
##KEYWORDS('derivatives')
##  Find a derivative of a fraction of linear polynomials, evaluate it at a point
##ENDDESCRIPTION
# Edited by N. Srivastava, Union College, 9/11/03

DOCUMENT();

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$an = random(2,8,1);
$as = random(-1,1,2);
$a  = $an * $as;

$bn = random(2,8,1);
$bs = random(-1,1,2);
$b  = $bn * $bs;

$m = random(4,6,1);
$n = random(2,3,1);

$exp1num=2*$m-1;
$exp2num=2*$n+3;
$coeff1num=2*$m+1;
$coeff2num=2*$n+1;
$funct = "$a*($coeff1num/2)*x^($exp1num/2) - $b*($coeff2num/2)*x^(-($exp2num/2))";

BEGIN_TEXT
Let \( f(x) =  $a x^{$m} \sqrt{x} 
        + \displaystyle \frac{$b} {x^{$n} \sqrt{x} } \). 
Find \(f'(x)\). 
$PAR
\( f'( x ) = \) \{ans_rule(40) \}
END_TEXT

$showPartialCorrectAnswers = 1;
$ans = $funct;
ANS(fun_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

