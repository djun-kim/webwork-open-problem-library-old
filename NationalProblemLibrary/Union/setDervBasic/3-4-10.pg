TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(9, 13, 1);
$r = random(1,5,1);
$b = $a - $r;

BEGIN_TEXT
Find \(\displaystyle{\frac{d}{dx}(x^{$a/$b})}\).
$PAR
\(\displaystyle{\frac{d}{dx}(x^{$a/$b})}\) = \{ans_rule(20) \}
END_TEXT

$expnum=$a-$b;
$ans = "($a/$b)x^($expnum/$b)";
ANS(fun_cmp($ans));

END_PROBLEM();
ENDDOCUMENT();

