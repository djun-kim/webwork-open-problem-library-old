DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGchoicemacros.pl",
  "PGunion.pl",
  "choiceUtils.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();
$a =random(1,5,1);
$b =random(6,10,1);
$c = $a-$b;
$d = $a+$b;

$ml = new_match_list();
$ml->rf_print_q(~~&alt_print_q);
$ml->{separation} = 3;


$ml->qa(
"\(|x-$a| \lt $b \)", "\(x \in ($c,$d) \)",
"\(|x-$a| \leq $b \)","\(x \in [$c,$d] \)",
"\(|x-$a| = $b \)" ,"\( x \in \lbrace $c,$d \rbrace \)",
"\(|x-$a| \geq $b \)" , "\(x \in (-\infty,$c] \cup [$d,\infty ) \)",
"\(|x-$a| \gt $b \)" , "\(x \in (-\infty,$c) \cup ($d,\infty ) \)",
"\(|x-$a| \lt \infty \)" , "\(x \in (-\infty,\infty) \)"
);

$ml->choose(5);

##################################################

BEGIN_TEXT
Match the statements defined below with the letters labeling their
equivalent expressions.
$PAR
\{ColumnMatchTable($ml,indent => 30)\}
$PAR

END_TEXT

ANS(str_cmp($ml->ra_correct_ans));
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
