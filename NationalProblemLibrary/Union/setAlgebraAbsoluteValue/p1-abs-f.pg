##DESCRIPTION
##   Inequality
##ENDDESCRIPTION
## K. Lesh, Union College, 9/9/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "unionAnswer.pl",    # Load answer-checker appropriate to the problem
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());

BEGIN_PROBLEM();

$a = random(1,8,1);
$b = random(2,10,1);
$c = random(3,15,1);
$min=-$a-$b*$c;
$max=$b*$c-$a;

BEGIN_TEXT
Solve the following inequality. Enter the answer in interval notation.
\[ \left|\frac{x+$a}{$b}\right| > $c  \]
$BR
Answer: \{ans_rule(35)\}
$PAR
$INFINITY_UNION_MESSAGE
END_TEXT

$showPartialCorrectAnswers = 0;
ANS(num_union_cmp("(-INF,$min)U($max,INF)"));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.;



