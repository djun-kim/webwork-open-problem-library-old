   "Parser.pl",
   "PGcourse.pl",               # Customization file for the course
);

TEXT(beginproblem());

BEGIN_PROBLEM();

Context("Interval");

$a = random(1,8,1);
$b = random(8,15,1);

$min=$a-$b;
$max=$a+$b;

BEGIN_TEXT
Solve the following inequality. Enter the answer in interval notation.
\[ |x-$a| > $b  \]
$BR
Answer: \{ans_rule(35)\}
$PAR
$INFINITY_UNION_MESSAGE
END_TEXT

$showPartialCorrectAnswers = 0;
ANS(Union("(-INF,$min)U($max,INF)")->cmp);

END_PROBLEM();
