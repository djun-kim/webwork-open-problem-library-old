);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a1 = random(2,7,1);
$b1 = random(2,12,1);
$x1 = random(1,5,1);
$deriv = "$a1 cos(x) - $b1 sin(x)";
$deriva = $a1*cos($x1) - $b1*sin($x1);

$ans1 = $deriv;
$ans2 = $deriva;

$al = new_aligned_list(ans_rule_len=>50, tex_spacing=>"3pt");
$al->qa(
  "\(f'(x)\)", fun_cmp($ans1),
  "\(f'($x1)\)", num_cmp($ans2),
);

BEGIN_TEXT
Let \( f(x) = $a1 \sin x + $b1 \cos x \).
$PAR
\{$al->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);
#ANS(function_cmp($ans1), num_cmp($ans2));

END_PROBLEM();
