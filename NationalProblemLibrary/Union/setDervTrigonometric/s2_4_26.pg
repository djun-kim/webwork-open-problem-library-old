##DESCRIPTION
##KEYWORDS('derivatives', 'trigonometry')
##  Find a derivative of a function involving trigonometric functions,
##  and evalute it at a given point
## Edited by N. Srivastava, Union College, 9/7/03
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "alignedChoice.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a1 = random(2,5,1);
$b1 = random(1,3,1);
$x1 = random(1,5,1);
$deriv1 = cos($x1) + $a1*sin($x1);
$funct1 ="cos(x) + $a1 sin(x)";

$al = new_aligned_list(ans_rule_len=>50, tex_spacing=>"3pt");
$al->qa(
  "\(f'(x)\)", fun_cmp($funct1),
  "\(f'($x1)\)", num_cmp($deriv1),
);

BEGIN_TEXT
Let \( f(x) = \displaystyle\frac {  \tan x - $a1}{ \sec x } \).
$PAR
\{$al->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

