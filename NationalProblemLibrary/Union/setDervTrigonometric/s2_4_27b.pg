##DESCRIPTION
##KEYWORDS('derivatives', 'trigonometry')
##  Find a derivative of a function involving trigonometric functions
##  and evaluate it at a given point.
## Edited by N. Srivastava, Union College, 9/7/03
##ENDDESCRIPTION

##S section 2.4 prob 27

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",   
   "PGbasicmacros.pl",  
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();
$pi = arccos(-1);

$a_n = random(2,12,1);
$a_s = random(-1,1,2);
$a   = $a_n * $a_s;

$x_n = non_zero_random(-1,2,1);
if ($x_n == -1) {$x_sign = '-'};
if ($x_n != -1) {$x_sign = ''};

if ($x_n == 2) { $x_num = $x_n };
if ($x_n != 2) { $x_num = '' };

$x = $x_n*$pi;

$deriv1 =$a*cos($x)*(1 - $x);

BEGIN_TEXT
Let \( f(x) = \displaystyle \frac { $a x }{ \sin x + \cos x} \).
$PAR
\( f'($x_sign $x_num \pi ) = \) \{ans_rule(50) \}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(num_cmp($deriv1));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

