loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
##    problem setup:

$a = random(2,8,1);
$b = random(3,8,1);
$d = random(3,9,1);
$c = random(-6,-2,1);
$e = random(5,15,1);
$f = random(2,15,1);
$g = non_zero_random(-5,-2,1);
$h = random(1,9,2);
$j = random(2,7,.5);
$k = non_zero_random(-10,10,2);
$m = random(2,8,1);

BEGIN_TEXT
Calculate the following antiderivatives:
$PAR
(a) \( \displaystyle\int x($k + x^{$m}) \,dx\) = \{ans_rule(30)\} \( + C\).
$PAR
(b) \( \displaystyle\int \frac{$c x^{$d} + $e x^{$f}}{x^{$g}} \,dx \) = \{ans_rule(30)\} \( + C\).
$PAR
(c) \( \displaystyle\int ($a + x^{$b})^{2} \,dx\) = \{ans_rule(30)\} \( + C\).
END_TEXT

$showPartialCorrectAnswers = 1;

$mm = $m+2;
$aa = $a**2;
$cross = 2*$a;
$bb = $b + 1;
$bB = 2*$b + 1;
$dd = $d - $g + 1;
$ff = $f - $g + 1;
$hh = -$h + 4;
ANS(fun_cmp("($k/2)x^2 + (1/$mm)x^$mm", mode=>"antider"));
ANS(fun_cmp("($c/$dd)x ^($dd) + ($e/$ff)x ^($ff)", mode=>"antider"));
ANS(fun_cmp("${aa}x + ($cross/$bb)x^($bb)+(1/$bB)x^{$bB}", mode=>"antider"));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
