TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,8,1);
$tag = random(0,1,1);

@funct = ('\sin(x)','\cos(x)');
@funct_ans = ("${a}(cos(x)*arcsin(x) + sin(x)/sqrt(1-x^2))", "${a}(-sin(x)*arcsin(x)+cos(x)/sqrt(1-x^2))");

BEGIN_TEXT
Let \( f(x) = $a $funct[$tag] \arcsin(x)\). Find \(f'(x)\).
$BR
\( f'( x ) = \) \{ans_rule(45) \}
END_TEXT
includePGfile("inverse-trig-notation-text.pg");

$ans = $funct_ans[$tag];
ANS(fun_cmp($ans));

$showPartialCorrectAnswers = 1;
END_PROBLEM();
