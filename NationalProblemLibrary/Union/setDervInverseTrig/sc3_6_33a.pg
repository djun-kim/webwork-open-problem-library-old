);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,8,1);
$tag = random(0,1,1);

@funct = ('\sin','\cos');
@funct_ans = ("${a}cos(${a}x)/(1+(sin(${a}x))^2)", "-${a}sin(${a}x)/(1+(cos(${a}x))^2)");

BEGIN_TEXT
Let \( f(x) = \arctan ( $funct[$tag] ($a x)) \). Find \(f'(x)\).
$BR
\(f'(x) = \) \{ans_rule(45) \}
END_TEXT
includePGfile("inverse-trig-notation-text.pg");

$showPartialCorrectAnswers = 1;
$ans = $funct_ans[$tag];
ANS(fun_cmp($ans));

END_PROBLEM();
