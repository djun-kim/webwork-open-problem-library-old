DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$ARCSEC = MODES(TeX=>'\mathop{\rm arcsec}',HTML=>'arcsec ');

$a1 = random(2,8,1);
$b1 = random(2,8,1);
$x1 = random(1,5,1);
$aa1=$a1**2;
$ab1=$b1*$a1;
$derv =  "$b1/(abs(${a1}x)sqrt((${a1}x)^2-1))*$a1";
$derv1 = $b1/(abs($a1*$x1)*sqrt(($a1*$x1)**2-1))*$a1;

BEGIN_TEXT
If \( f(x) = $b1 ${ARCSEC}(${a1}x) \), find \( f'(x) \).
$BR
\(f'(x)=\)\{ans_rule(45) \}
$PAR
Find \(f'($x1)\).
$BR
\(f'($x1) = \) \{ans_rule(30) \}
END_TEXT
includePGfile("inverse-trig-notation-text.pg");

$showPartialCorrectAnswers = 1;
ANS(fun_cmp(
  $derv,                 #  the correct answer
  limits => [-2,-1],       #  range of x's to use
#  relTol => .1,          # .1 percent, (i.e., .001)
));

ANS(num_cmp($derv1));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
