);

TEXT(beginproblem());
BEGIN_PROBLEM();

$r = random(2,4,1);
$a = random(2,9,1);
$asquared=$a**2;
$power=$r-1;
$funct1 = "${r}(x^$power)arctan(${a}x) +
    x^$r*$a/(1+${asquared}x^2)";

BEGIN_TEXT
Let \( f(x) = x^{$r}\arctan($a x) \). Find \(f'(x)\).
$BR
\( f'( x ) = \) \{ans_rule(45) \}$BR
END_TEXT
includePGfile("inverse-trig-notation-text.pg");

$showPartialCorrectAnswers = 1;
$ans = $funct1;
ANS(fun_cmp($ans));

END_PROBLEM();
