DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector")->variables->are(
  x=>'Real', y=>'Real', z=>'Real',
  s=>'Real', t=>'Real',
  u=>'Real', v=>'Real',
);

#
#  Functions, inputs and outputs
#
@fn = (
  '(uv+5, u^3-3uv^2, v)',
  '(cos(3t), 3sin(t))',
  '(x, y, 2x^2+y)',
  '(x(1+y^2), y cos(pi z), xz-y)',
  '(s+t, t^2, 1-3s)',
  '(u cos(t), u sin(t), u)',
);

#
#  Get data for a random function
#
$f = Formula($fn[random(0,$#fn,1)]);
@inputs = lex_sort(keys %{$f->{variables}});
$n = Real(scalar(@inputs)); $m = Real($f->length);
$x = join(',',@inputs);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Consider the function \(f($x) = $f\).
$PAR

Its ${BBOLD}graph${EBOLD} is in \($R^a\)
where \(a\) = \{ans_rule(5)\}.
$PAR
Its ${BBOLD}image${EBOLD} is in \($R^b\)
where \(b\) = \{ans_rule(5)\}.
$PAR
Its ${BBOLD}level sets${EBOLD} are in \($R^c\)
where \(c\) = \{ans_rule(5)\}.

END_TEXT
Context()->normalStrings;

##############################################
# Answers

ANS(($m+$n)->cmp);
ANS($m->cmp);
ANS($n->cmp);

$showPartialCorrectAnswers = 1;

##############################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
