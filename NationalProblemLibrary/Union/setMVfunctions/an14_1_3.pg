DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector")->variables->are(x=>'Real',y=>'Real');
$x = Formula('x'); $y = Formula('y');

#
#  The function to use
#
$c = non_zero_random(-8,8,1);
$f = ($x*$y + $c)->reduce;
$f->perlFunction('f');


#
#  Points to evaluate it at
#
$a = random(2,6,1);
$b = random(2,6,1);

#
#  The questions and answers
#
$al = new_aligned_list(ans_rule_len=>25);
$al->qa(
  "\(f(x+${a}y,x-${a}y)\)",  f($x+$a*$y,$x-$a*$y)->cmp,
  "\(f(xy,${b}x^2y^3)\)",    f($x*$y,$b*$x**2*$y**3)->cmp,
);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \(f(x,y)=$f\).  Compute the following values:
$PAR

$BBLOCKQUOTE
\{$al->print_q\}
$EBLOCKQUOTE

END_TEXT
Context()->normalStrings;

##############################################
# Answers

ANS($al->correct_ans);
$showPartialCorrectAnswers = 1;

##############################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
