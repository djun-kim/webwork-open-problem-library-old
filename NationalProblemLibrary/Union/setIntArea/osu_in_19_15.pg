DOCUMENT();

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGunion.pl",
  "PGcourse.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

######################################################################
# Setup

$a = random(1,5,1);
$c = $a + random(1,3,1);
$lin =  -$a*$c;
$quadr = $a+$c;
$eva = $quadr*$a**3/3 - $a**4/4 + $lin*$a**2/2;
$evc = $quadr*$c**3/3 - $c**4/4 + $lin*$c**2/2;
$answ = abs($eva)+abs($evc-$eva);
$c2 = $quadr +1;
$c1 = -$lin + 1;

######################################################################
# Main text

BEGIN_TEXT

Let \(R\) be the region enclosed by the graphs of
$PAR
$BBLOCKQUOTE
\(y = $c2 x^2 - x^3 + x\) \{HTML('&nbsp;&nbsp;','\quad')\} and$BR
\(y = x^2 + $c1 x.\)
$EBLOCKQUOTE
$PAR
Then the area of \(R\) is \{ans_rule()\}.
END_TEXT

######################################################################
# Setup

ANS(num_cmp($answ));
$showPartialCorrectAnswers = 1;

######################################################################

END_PROBLEM();
ENDDOCUMENT();

