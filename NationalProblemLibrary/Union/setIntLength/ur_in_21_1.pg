DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,6,1);
$b = random(1,17,1);
$n = random(2,5,1);
$c = random(-3,0,1);
$d = random(1,4,1);

$y=Formula("$a x^{$n} + $b x");
$ycoordatc=Real($y->eval(x=>$c));
$ycoordatd=Real($y->eval(x=>$d));

###################################
# Preparing the display of the integral

if ($displayMode eq 'TeX') {
  $integral =
    '\['.
       '\int_{'.ans_rule(4).'}^{'.ans_rule(4).'}'.
         ans_rule(35).'\,dx\]';
} else {
  $integral =
   $PAR.
   $BCENTER.
   BeginTable().
     Row(['\(\displaystyle \int\)',
       ans_rule(4).$BR.$BR.ans_rule(4),
       ans_rule(35),
       '\(dx\).'],separation=>2).
   EndTable().
   $ECENTER;
}

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Consider the curve defined by the equation \( y=$y \).  Set up an integral that represents the
length of curve from the point \(($c,$ycoordatc)\) to the point \(($d,$ycoordatd)\).

$integral

END_TEXT
Context()->normalStrings;

###################################
# Answers
$showPartialCorrectAnswers = 0;
install_problem_grader(~~&std_problem_grader);

$yprime=$y->D('x');
$answer=Formula("sqrt{1+($yprime)^2}");

ANS(Real($d)->cmp);
ANS(Real($c)->cmp);
ANS($answer->cmp);

###################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
