#DESCRIPTION
#  Integration
#  Surface of revolution
#ENDDESCRIPTION

#KEYWORDS('Integration', 'Surface', 'Area','Revolution')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGunion.pl",
  "PGcourse.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

######################################################################
# Setup

$a = random(2,5,1);
$b = random(1,5,1);

$u = 2*$a*exp(2*$b);
$v = 2*$a;
$c = sqrt(1+$u*$u);
$d = sqrt(1+$v*$v);

$ans = ($PI/4) * (($u*$c+ln($u+$c)) - ($v*$d+ln($v+$d)));

######################################################################
# Main text

BEGIN_TEXT

Find the area of the surface obtained by rotating the curve
\[x = $a e^{2y}\]
from \(y = 0\) to \(y = $b\) about the \(y\)-axis.
$PAR

The area is \{ans_rule(60)\} square units.

END_TEXT

######################################################################
# Answers

ANS(num_cmp($ans, relTol=>.001));
$showPartialCorrectAnswers = 1;

######################################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
