DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "contextTF.pl",
  "parserVectorUtils.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");

#
#  The vectors u and v
#
$U = non_zero_vector3D(-3,3);
$V = non_zero_vector3D(-3,3);

$N = $U x $V;

#
#  Fix up v if they are parallel
#
if (norm($N) == 0) {
  ($a,$b,$c) = $U->value;
  if ($a == 0) {$V = $V + Vector(non_zero_random(-3,3,1),0,0)}
    else {$V = $V + Vector(-$b,$a,0)}
  $N = $U x $V;
}

#
#  Some vectors in the plane
#
$W1 = 2*$U + $V;
$W2 = -$U + 2*$V;
$W3 = -3*$V;

#
#  Some other vectors
#
$W4 = non_zero_vector3D(-3,3);
$W5 = non_zero_vector3D(-3,3);
$W6 = non_zero_vector3D(-3,3);

##############################################

#
#  Use a selection list of vectors and T/F answers
#
sub inPlane {("\(".$_[0]->TeX."\)",($_[0].$N == 0) ? "T" : "F")}

$sl = new_select_list();
$sl->{separation} = 3;
$sl->{rf_print_q} = ~~&alt_print_q;

$sl->qa(
  inPlane($W1), inPlane($W2), inPlane($W3),
  inPlane($W4), inPlane($W5), inPlane($W6),
);

$sl->choose(4);

##############################################
#  Main text

$u = Overline('u');
$v = Overline('v');

Context()->texStrings;
BEGIN_TEXT

The two vectors \($u = $U\) and \($v = $V\)
determine a plane \(E\) in space, going through the origin.
Mark each of the vectors below as
${LQ}${BBOLD}T${EBOLD}${RQ} if the vector lies in the the plane 
\(E\)  and ${LQ}${BBOLD}F${EBOLD}${RQ} if not.

$BCENTER
$PAR
\{$sl->print_q\}
$ECENTER

END_TEXT
Context()->normalStrings;

HINT($BBOLD,"Hint: ",$EBOLD,
 EV2("How does \($u \times $v\) compare to the other vectors in the plane?"));

$showHint = 3;

##################################################
#  Answers

Context("TF");
ANS(string_cmp($sl->ra_correct_ans));

$showPartialCorrectAnswers = 0;
install_problem_grader(~~&std_problem_grader);

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
