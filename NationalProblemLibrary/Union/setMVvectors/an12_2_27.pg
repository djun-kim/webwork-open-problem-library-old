DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");

# the vectors u, v, w
$U = non_zero_vector2D();
$V = non_zero_vector2D();
$W = non_zero_vector2D();

$a = random(2,10,1);
$b = random(2,10,1);

$X = ($a*$U-$V-$W)/($b-1);

##############################################
#  Main text

$u = Overline('u');
$v = Overline('v');
$w = Overline('w');
$x = Overline('x');

Context()->texStrings;
BEGIN_TEXT

Let \($u = $U\), \($v = $V\), and \($w = $W\).
Find the vector \($x\) that satisfies
\[$a $u - $v + $x = $b $x + $w.\]
$PAR

In this case, \($x =\) \{ans_rule(30)\}.

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($X->cmp);
$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
