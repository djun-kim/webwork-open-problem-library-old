DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");

#
#  The vectors
#
$U = non_zero_vector3D();
$V = non_zero_vector3D();

#
#  The projections
#
$V1 = (($U.$V)/($V.$V)) * $V;
$V2 = $U - $V1;

##############################################
#  Main tex

$v1 = Overline('v').'_1';
$v2 = Overline('v').'_2';

Context()->texStrings;
BEGIN_TEXT

Find two vectors \($v1\) and \($v2\) whose sum is \($U\), where
\($v1\) is parallel to \($V\) while \($v2\) is perpendicular to
\($V\).
$PAR

$BBLOCKQUOTE
\($v1\) = \{ans_rule(40)\} and$BR
\($v2\) = \{ans_rule(40)\}.
$EBLOCKQUOTE

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($V1->cmp);
ANS($V2->cmp);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
