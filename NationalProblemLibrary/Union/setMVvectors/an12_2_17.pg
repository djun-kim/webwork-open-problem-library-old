DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

# the vectors
Context("Vector2D")->functions->undefine("unit");
$U = non_zero_vector2D();

# the points A and B
$A = non_zero_point2D();
$B = $A + non_zero_point2D();

Context("Vector")->functions->undefine("unit");
$V = non_zero_vector3D();
if($V->dot(Vector("<0,0,1>")) == 0) {
   $a = non_zero_random(-5,5);
   $V = $V->add(Vector("<0, 0, $a>"));
}

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find ${BBOLD}unit${EBOLD} vectors that satisfy the given conditions:
$PAR

\{BeginList()\}

$ITEM
The unit vector in the same direction as \($U\) is \{ans_rule(30)\}.
$ITEMSEP

$ITEM
The unit vector oppositely directed to \(\{$V->ijk\}\) is \{ans_rule(30)\}.
$ITEMSEP

$ITEM
The unit vector that has the same direction as the
vector from the point \(A=$A\) to the point \(B=$B\) is \{ans_rule(30)\}.

\{EndList()\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($U->unit->cmp);
ANS((-$V)->unit->cmp);

# Make sure the context is set correctly before we compute B-A
Context("Vector2D")->functions->undefine("unit");
ANS(Vector($B-$A)->unit->cmp);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
