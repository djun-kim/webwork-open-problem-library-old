DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(&beginproblem);
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector")->variables->are(t=>'Real');

#
#  The point P and the line p+tv
#
$P = non_zero_point3D();
$p = non_zero_point3D();
$v = non_zero_vector3D();

$pP = Vector($P-$p);
$L = Line($p,$v);

#
#  The projection and distance
#
$perp = $pP - (($pP.$v)/($v.$v)) * $v;
$D = norm($perp);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Consider the line \(L(t) = $L\) and the point \(P = $P\).
$PAR
How far is \(P\) from the line \(L\)? \{ans_rule(15)\}.

END_TEXT

HINT($PAR,$BBOLD,"Hint: ",$EBOLD,
"How does this relate to the previous problems where you calculated
the distance from a point to a line?");

$showHint = 3;

##################################################
#  Answers

ANS($D->cmp);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
