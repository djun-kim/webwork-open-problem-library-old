DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(&beginproblem);
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");

#
#  The points A, B and P
#
$A = non_zero_point3D();
$B = non_zero_point3D();
$P = non_zero_point3D();

while (norm($B-$A) == 0) {$B = non_zero_vector3D()};
while (norm($P-$A) == 0) {$P = non_zero_vector3D()};

$AB = Vector($B - $A);
$AP = Vector($P - $A);

#
#  The projection and distance
#
$V = $AP - (($AP.$AB)/($AB.$AB))*$AB;
$D = norm($V);

##############################################

$vAB = Overline('AB');
$vAP = Overline('AP');

#
#  The projection image
#
$diagram = Image('an12_3_25.gif',size=>[196,160],tex_size=>500,tex_center=>1);

Context()->texStrings;
BEGIN_TEXT

\{ColumnTable(
  "The distance \(d\) of a point \(P\) to the line through points \(A\) and
   \(B\) is the length of the component of \($vAP\) that is orthogonal to
   \($vAB\), as indicated in the diagram.",
  $diagram, separation => 5)\}
$PAR

So the distance from \(P = $P\) to the line through the points
\(A = $A\) and \(B = $B\) is \{ans_rule(25)\}.

END_TEXT
Context()->texStrings;

##################################################
#  Answers

ANS($D->cmp);
$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
