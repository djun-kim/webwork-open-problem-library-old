## Problem1('')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");
Context()->variables->are(t=>'Real');
Context()->flags->set(reduceConstants=>0);

sub parameter () {random(1,5,1)}

#
#  Some random values
#
$b = parameter;
$c = parameter;
$a = parameter + $c;

$d = $b*($a-$c);
#
#  The vectors to make equal
#
$V = Formula("<t^3 - $d t,(1/$b)t^2 + $c>")->reduce;
$W = Vector(0,$a);

#
#  the times when they are equal
#
$t1 = sqrt($d); $t2 = -sqrt($d);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

For what value(s) of \(t\) does the equality
\[\textstyle $V = $W\]
hold true?  

$BCENTER
$PAR
\(t\) = \{ans_rule(30)\}.
$ECENTER
$PAR

$BSMALL
(If there are more than one value, separate them by commas.)
$ESMALL

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(List($t1,$t2)->cmp);
$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
