DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
   "Interval_ans-eval.pl", #answer checker
   "alignedChoice.pl",  # for aligned answer blanks
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(13,19,1);
$as = $a**2;
$perimeter = 4*$a;

$a1 = new_aligned_list(ans_rule_len=>10, tex_spacing=>"3pt", equals=>0, align => LEFT);
$a1->qa(
  "Length and width:", number_list_cmp("$a, $a"),
  "Minimum perimeter:", num_cmp($perimeter),
);

BEGIN_TEXT
Find the dimensions of the rectangle with area $as square inches
that has minimum perimeter, and then find the minimum perimeter.  
$PAR
Enter your result for the dimensions as a comma-separated list; 
for example, if your answer were a rectangle with a length of 2 and 
a width of 5, you would enter 2, 5 or 5, 2 in the first answer blank.
$PAR
\{$a1->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;

ANS($a1->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

