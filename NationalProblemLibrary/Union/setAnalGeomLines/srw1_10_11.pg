TEXT(beginproblem());

BEGIN_PROBLEM();
$x1 = random(2,5,1);
$y1 = random(1,10,1);
$x2 = random(6,10,1);
$y2 = random(1,10,1);
while ($y1==$y2) {$y2  = random(1,10,1)}

$m1 = ($y2-$y1)/($x2-$x1);

BEGIN_TEXT
The equation of the line that goes through the 
points \( ( $x1 ,$y1 ) \) and \( ( $x2 ,$y2 ) \)
can be written in the form \( y = mx+b \) where 
$BR
\( m = \) \{ans_rule(15)\}
$BR
\( b = \)  \{ans_rule(15)\}
END_TEXT

$showPartialCorrectAnswers = 1;

$ans1 = $m1;
ANS(num_cmp($ans1));

$ans2 = $y1 -$m1*$x1;
ANS(num_cmp($ans2));

END_PROBLEM();
