           );


TEXT(beginproblem());
BEGIN_PROBLEM();

##########################
#define right hand side
$which = random(1,3);

$a = random(-10,10);
$b = random(-10,10);
$c = random(-10,10);
do { $d = random(-10,10); } until ($a != $c or $b != $d);

if($a != $c) {
 $slope1 = ($b-$d)/($a-$c);
} else { 
 $slope1 = "undefined";
}

$e = random(-10,10);
$f = random(-10,10);
if($which == 1) { # paralllel
  $howfar = random(2,7);
   $g = $e +($a-$c)*$howfar;
   $h = $f + ($b-$d)*$howfar;
} elsif($which == 2) { # perp
 $howfar = random(2,7);
 $h = $f -($a-$c)*$howfar;
 $g = $e +($b-$d)*$howfar;
} else {
  $howfar = random(2,7);
 $g = $e +($a-$c)*$howfar+2;
 $h = $f + ($b-$d)*$howfar;
 if($b==$d) {
  $h = $h+2;
 }
}

if($e != $g) {
$slope2 = ($f-$h)/($e-$g);
} else {
$slope2 = "undefined";
}


$bad1 = "The two lines are parallel.";
$bad2 = "The two lines are perpendicular.";
$bad3 = "The two lines are neither parallel nor perpendicular.";
if($which==1) {
 $myans = "The two lines are parallel.";
 $bad1 = $bad3;
} elsif($which==2) {
 $myans = "The two lines are perpendicular.";
 $bad2 = $bad3;
} else {
 $myans = "The two lines are neither parallel nor perpendicular.";
}

$mc = new_multiple_choice();
# $mc now "contains" the multiple choice object.

# Insert some questions and matching answers in the q/a list
$mc -> qa (# Notice that the first string is the question
"Which one of the statements below is correct?",
# The second string is the correct
$myans,
);
$mc ->extra(
$bad1, $bad2
);
$mc->makeLast($bad3);
# Print the question using $mc->print_q
# Use $mc->print_a to print the list of possible answers.


BEGIN_TEXT
Let \(L_1\) be the line containing points ($a, $b) and ($c, $d), and let \(L_2\) be the line
containing points ($e, $f) and ($g, $h).
$PAR
What is the slope of \( L_1\)?  If the slope is undefined, type $BITALIC undefined.
$EITALIC
$BR
\{ans_rule(30)\}
$PAR
What is the slope of \( L_2 \)?
If the slope is undefined, type $BITALIC undefined. $EITALIC
$BR
\{ans_rule(30)\}
$PAR
\{$mc -> print_q \}
$BR
\{$mc -> print_a\}
END_TEXT

ANS(num_cmp($slope1, 'strings'=>["undefined"]));
ANS(num_cmp($slope2,'strings'=>["undefined"]));
ANS(str_cmp( $mc->correct_ans ) ) ;


END_PROBLEM();
