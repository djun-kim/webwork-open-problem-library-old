##DESCRIPTION
##   A simple matching problem testing knowledge of
##   notation of intervals
##ENDDESCRIPTION

##KEYWORDS('algebra','interval')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGchoicemacros.pl",
  "PGunion.pl",        # Union College utilities
  "PGcourse.pl",       # Customization file for the course
  "choiceUtils.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$c =random(1,5,1);
$d =random(6,10,1);

$ml = new_match_list();
$ml->rf_print_q(~~&alt_print_q);
$ml->{separation} = 3;

$ml->qa(
"\( ($c,$d) \)", "\(\lbrace x | $c \lt x \lt $d \rbrace \)",
" \( [$c,$d) \) ", " \( \lbrace x | $c \leq x \lt $d $RB \)",
" \( ($c,$d] \) ", " \( \lbrace x | $c \lt x \leq $d $RB \)",
" \( [$c,$d]\) "," \( \lbrace x | $c \leq x \leq $d $RB \)",
" \( ($c,\infty)\) "," \( \lbrace x | x \gt $c  $RB \)",
" \( [$c,\infty)\) "," \( \lbrace x | $c \leq x  $RB \)",
" \( (-\infty, $c)\) "," \( \lbrace x | x \lt $c $RB \)",
" \( (-\infty, $c] \) "," \( \lbrace x | x \leq $c $RB \)",
);

$ml->choose(5);

BEGIN_TEXT
Match each interval below with set-builder notation for the same interval.
$PAR
\{ColumnMatchTable($ml,indent => 30)\}
END_TEXT

ANS(str_cmp($ml->ra_correct_ans));
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.


