##DESCRIPTION
##  Intersection and union of intervals
##ENDDESCRIPTION

##KEYWORDS('algebra','interval')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "PGchoicemacros.pl",
  "PGunion.pl",        # Union College utilities
  "PGcourse.pl",       # Customization file for the course
  "choiceUtils.pl",
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a0 = random(-10,-2,1);
$a1 = $a0+random(1,4,1);
$a2 = $a1+random(1,4,1);
$a3 = $a2+random(1,4,1);
$a4 = $a3+random(1,4,1);

$ml = new_match_list();
$ml->rf_print_q(~~&alt_print_q);
$ml->{separation} = 3;

$ml->qa(
" \(S\cap T \)", " \([$a2,$a3)\)",
" \(S\cap W \)"," \([$a0,$a1)\)",
" \(T\cap W \)"," \(\emptyset\) ",
" \(S\cup T \)"," \([$a0,$a4]\)",
" \(S\cup W \)"," \((-\infty,$a3)\)"
);

$ml->choose(4);

BEGIN_TEXT
Let \(S=[$a0,$a3)\), \(T=[$a2,$a4]\), and \(W=(-\infty,$a1)\). $BR
For each intersection or union, choose the correct notation for the resulting interval.
$PAR
\{ColumnMatchTable($ml,indent => 30)\}
END_TEXT

ANS(str_cmp($ml->ra_correct_ans));
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

