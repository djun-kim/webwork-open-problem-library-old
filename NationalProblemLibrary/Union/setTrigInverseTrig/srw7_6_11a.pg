DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",        # Union College utilities
   "Parser.pl",         # use the new parser
   "alignedChoice.pl",  # better aligned problems
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

Context("Numeric");
Parser::Context::Functions::Disable('All');
Parser::Context::Functions::Enable('sqrt');

$al = new_aligned_list(ans_rule_len=>50, tex_spacing=>"3pt");
$al->qa(
  "\(\sin(\sin^{-1}(-1))\)",                  Real(-1)->cmp,
  "\(\sin(\sin^{-1}(-\frac{\sqrt{3}}{2}))\)", Real(-sqrt(3)/2)->cmp,
  "\(\sin(\sin^{-1}(-\frac{\sqrt{2}}{2}))\)", Real(-sqrt(2)/2)->cmp,
  "\(\sin(\sin^{-1}(-\frac{1}{2}))\)",        Real(-1/2)->cmp,
  "\(\sin(\sin^{-1}(0))\)",                   Real(0)->cmp,
  "\(\sin(\sin^{-1}(\frac{1}{2}))\)",         Real(1/2)->cmp,
  "\(\sin(\sin^{-1}(\frac{\sqrt{2}}{2}))\)",  Real(sqrt(2)/2)->cmp,
  "\(\sin(\sin^{-1}(\frac{\sqrt{3}}{2}))\)",  Real(sqrt(3)/2)->cmp,
  "\(\sin(\sin^{-1}(1))\)",                   Real(1)->cmp,
);
$al->choose(2);

BEGIN_TEXT
Evaluate the following expressions.
\{$al->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
