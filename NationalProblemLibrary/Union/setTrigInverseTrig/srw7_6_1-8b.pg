DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "PGunion.pl",        # Union College utilities
   "Parser.pl",         # the new parsers
   "alignedChoice.pl",  # better aligned parts
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

Context("Numeric");

$al = new_aligned_list(ans_rule_len=>50, tex_spacing=>"3pt");
$al->qa(
  "\(\sin^{-1}(-1)\)",                  Real(asin(-1))->cmp,
  "\(\sin^{-1}(-\frac{\sqrt{3}}{2})\)", Real(asin(-sqrt(3)/2))->cmp,
  "\(\sin^{-1}(-\frac{\sqrt{2}}{2})\)", Real(asin(-sqrt(2)/2))->cmp,
  "\(\sin^{-1}(-\frac{1}{2})\)",        Real(asin(-1/2))->cmp,
  "\(\sin^{-1}(0)\)",                   Real(asin(0))->cmp,
  "\(\sin^{-1}(\frac{1}{2})\)",         Real(asin(1/2))->cmp,
  "\(\sin^{-1}(\frac{\sqrt{2}}{2})\)",  Real(asin(sqrt(2)/2))->cmp,
  "\(\sin^{-1}(\frac{\sqrt{3}}{2})\)",  Real(asin(sqrt(3)/2))->cmp,
  "\(\sin^{-1}(1)\)",                   Real(asin(1))->cmp,
);
$al->choose(3);

#
#  Disable these here, so we can use them above
#
Parser::Context::Functions::Disable('All');
Parser::Context::Functions::Enable('sqrt');

BEGIN_TEXT
Evaluate the following expressions. Your answer must be an angle
in radians and in the interval \([-\frac{\pi}{2},\frac{\pi}{2}]\).
\{$al->print_q\}
END_TEXT

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
