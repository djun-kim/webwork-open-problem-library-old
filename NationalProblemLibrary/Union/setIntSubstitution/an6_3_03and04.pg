DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
##    problem setup: part (a)

$a1 = non_zero_random(2,10,1);
$antiderv1 = "(1/$a1)sec(${a1}x)";

##    part (b) problem setup:

$a = non_zero_random(2,10,1);
$b = non_zero_random(3,7,1);
$exp = $b+1;
$coeff = $a*$exp;
$antiderv = "(1/$coeff)*(tan(${a}x))^$exp";

BEGIN_TEXT
(a) Evaluate the indefinite integral.
$BR
\(\displaystyle \int \sec(${a1}x)\tan(${a1}x)\, dx \) = \{ans_rule(30)\} \( + C\).
$PAR
(b) Evaluate the indefinite integral.
$BR
\( \displaystyle \int \sec^{2}(${a}x)\tan^{$b}(${a}x)\, dx \) = \{ans_rule(30)\} \( + C\). 
END_TEXT

##########################
ANS(fun_cmp($antiderv1, mode=>"antider", vars=>'x', limits=>[.0001,$PI/3/$a1]));
##############################################

##########################
ANS(fun_cmp($antiderv, mode=>"antider", vars=>'x', limits=>[.0001,$PI/3/$a]));
##############################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
