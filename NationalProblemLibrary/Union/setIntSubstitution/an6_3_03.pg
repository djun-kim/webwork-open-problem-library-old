TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
##    problem setup:

$a = non_zero_random(2,10,1);
$antiderv = "(1/$a)sec(${a}x)";

BEGIN_TEXT
Evaluate the indefinite integral.
$BR
\(\displaystyle \int \sec($a x)\tan($a x)\, dx \) = \{ans_rule(30)\} \( + C\).
END_TEXT

##########################
ANS(fun_cmp($antiderv, mode=>"antider", vars=>'x', limits=>[.0001,$PI/3/$a]));
##############################################

END_PROBLEM();
