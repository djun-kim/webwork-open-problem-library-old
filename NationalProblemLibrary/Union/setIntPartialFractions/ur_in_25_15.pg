DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(1,4,1);
$b = random(1,4,1);
while($b==$a) {$b=random(1,4,1)};

$A = non_zero_random(-6,6,1);
$coef1 = $a**2 + $a*$b + $b**2;
while($A==$coef1) {$A = non_zero_random(-6,6,1)};
$B = $coef1 - $A;

$coef2 = - $a - $b;
$coef3 = $a*$b;
$coef4 = $coef2*$a*$b + $A*$b + $B*$a;

$antiderv="(x^2)/2+${coef2}x+${A}ln(abs(x+$a))+${B}ln(abs(x+$b))";

BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int \frac{x^3 + $coef4}{x^2 - ${coef2}x + $coef3}\ dx  \) 
             = \{ans_rule(45)\} \( + C\). 
END_TEXT

$showPartialCorrectAnswers = 1;

ANS(fun_cmp($antiderv, mode=>"antider", vars=>"x", limits=>[6,10]));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

