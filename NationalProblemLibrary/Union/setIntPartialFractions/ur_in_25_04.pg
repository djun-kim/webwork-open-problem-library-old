DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "PGcourse.pl",       # Customization file for the course
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a=random(-3,0,1);
$b=random(1,4,1);
$sum = $a+$b;
$prod = $a*$b;
$den = FPOLY("x^2 + ${sum}x + $prod");
$d1= $a-$b;
$antiderv = FEQ("(ln(abs(x+$b)))/($d1)-(ln(abs(x+$a)))/($d1) ");

BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int \frac{1}{$den} \; dx  \) 
             = \{ans_rule(45)\} \( + C\). 
END_TEXT

$showPartialCorrectAnswers = 1;
ANS(fun_cmp($antiderv, mode=>"antider", vars=>"x", limits=>[10,100]));

END_PROBLEM();
