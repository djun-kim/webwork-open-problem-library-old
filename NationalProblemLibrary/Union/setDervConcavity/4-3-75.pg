DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "extraAnswerEvaluators.pl",  # Load answer-checker
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,8,1);
$b = random(2,8,1);

BEGIN_TEXT
Let \(f(x) = \displaystyle\frac{1}{$a x^2+$b}\).
END_TEXT

includePGfile("Concavity-text.pg");

$showPartialCorrectAnswers = 1;

$inflection_point1 = -sqrt($b/(3*$a));
$inflection_point2 = sqrt($b/(3*$a));

ANS(interval_cmp("(-infinity, $inflection_point1) U ($inflection_point2, infinity)", strings=>['none']));
ANS(interval_cmp("($inflection_point1,$inflection_point2)", strings=>['none']) );
ANS(number_list_cmp("$inflection_point1, $inflection_point2", strings=>['none']));

END_PROBLEM();
