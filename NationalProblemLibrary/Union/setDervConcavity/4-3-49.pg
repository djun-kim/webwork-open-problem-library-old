#DESCRIPTION
# intervals of concavity
# points of inflection
# second derivative
#ENDDESCRIPTION

## K. Lesh, Union College. Edited 9/27/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "Interval_ans-eval.pl",  # Load answer-checker
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$b = random(2,9,1);
$c = random(2,9,1);
$d = non_zero_random(-8,8,1);

BEGIN_TEXT
Let \( f(x) = x^3 - $b x^2 + $c x + $d \).
END_TEXT

includePGfile("Concavity-text.pg");

$showPartialCorrectAnswers = 1;

$inflection_point = $b/3;
ANS(interval_cmp("($inflection_point,infinity)", strings=>['none']));
ANS(interval_cmp("(-infinity,$inflection_point)", strings=>['none']) );
ANS(number_list_cmp("$inflection_point", strings=>['none']));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

