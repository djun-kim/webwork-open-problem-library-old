#DESCRIPTION
# intervals of concavity
# points of inflection
# second derivative
#ENDDESCRIPTION

## K. Lesh, Union College. Edited 9/27/03

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGauxiliaryFunctions.pl",
   "PGunion.pl",        # Union College utilities
   "Interval_ans-eval.pl",  # Load answer-checker
   "PGcourse.pl",       # Customization file for the course
   "unionInclude.pl"
);

TEXT(beginproblem());
BEGIN_PROBLEM();

$a = random(2,7,1);
$b = random(2,7,1);
$c = random(2,7,1);

BEGIN_TEXT
Let \( f(x) = \displaystyle\frac{$a x - $b}{x + $c}\).
END_TEXT

includePGfile("Concavity-Text.pg");

$showPartialCorrectAnswers = 1;

ANS(interval_cmp("(-infinity,-$c)" , strings=>['none']));
ANS(interval_cmp("(-$c,infinity)", strings=>['none']) );
ANS(number_list_cmp("none", strings=>['none']));

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.

