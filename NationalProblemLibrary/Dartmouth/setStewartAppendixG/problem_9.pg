DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 
sub mod {   # for some reason perl's % doesn't seem to work for large numbers?
    my $a = shift;
    my $b = shift;
    $a - int($a/$b)*$b;
}

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Lots of set up goes here
$pi=acos(-1);

@thetas=($pi/6, $pi/4, $pi/3, $pi/2, 2*$pi/3, 3*$pi/4, 5*$pi/6, $pi, 7*$pi/6, 5*$pi/4, 4*$pi/3, 3*$pi/2, 5*$pi/3, 7*$pi/4, 11*$pi/6);


@thetas_str=("\pi/6", "\pi/4", "\pi/3", "\pi/2", "2\pi/3", "3\pi/4", "5\pi/6", "\pi", "7\pi/6", "5\pi/4", "4\pi/3", "3\pi/2", "5\pi/3", "7\pi/4", "11\pi/6");

$which_theta=random(0,14);
$theta = $thetas[$which_theta];
$theta_str = $thetas_str[$which_theta];


## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR

Write the complex number {\large \( e^{i $theta_str} \)} in the form 
\( a + b i\).
$BR
\( a = \) \{ans_rule()\} and \( b = \) \{ans_rule()\}.


$PAR
END_TEXT
ANS(num_cmp( cos($theta)  ));
ANS(num_cmp( sin($theta)  ));
ENDDOCUMENT();




