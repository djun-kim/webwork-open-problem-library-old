## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##  example of graph bug
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## set up goes here

$f = FEQ("2 x");


## Set the domain of f for the graph
$xmin = -3;
$xmax = -1;

## Set the visible range
$ymin = -5;
$ymax = 0;


## Intialize a graph
$g1 = init_graph($xmin, $ymin, $xmax, $ymax,
                       'axes' => [0,0],
                       'grid' => [$xmax- $xmin, $ymax- $ymin],
		       'pixels' => [300,300]
                       );

## Define a function 
$f1 = "2* x for x in [$xmin, $xmax] using color:blue and weight:2";


## Plot the function pieces on the graph
add_functions($g1, $f1);



## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
ymax = $ymax
$BR
ymin = $ymin
$BR
xmax = $xmax
$BR
xmin = $xmin
$BR
Here is the graph of \(f(x) = $f\).  The visible domain and range are supposed to be as given above.  Grid lines are supposed to be every integer.  Click the graph below for a larger view.
$BR

\{ image(insertGraph($g1)) \}
$BR

END_TEXT

ENDDOCUMENT();
