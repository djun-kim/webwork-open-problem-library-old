## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Second Order Constant Coefficient ODE (distinct real roots)
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Lots of set up goes here
$root1 = non_zero_random(-10,10);
$root2 = $root1 + random(1,5);
## If $root2 is zero, then $root1 < 0
if ($root2 == 0) {$root2 = random(1,5);}
## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
root1 is $root1$BR
root2 is $root2$BR
Find the general solution to the homogeneous differential equation
\[
    \frac{d^2y}{dx^2} - \{$root1 + $root2\}\frac{dy}{dx} + \{$root1 * $root2\}y = 0
\]
$BR
The solution has the form
\[y = C_1 e^{r_1 x} + C_2 e^{r_2 x}\] with
\(r_1 = \) \{NAMED_ANS_RULE(first_answer, 20)\} and \(r_2 =\) 
\{NAMED_ANS_RULE(second_answer,20)\}$BR





$PAR
END_TEXT

($ans_eval1) = std_num_cmp(-10);
$firstAnswer = $inputs_ref->{first_answer}; ## Grab the first answer entered by student
$firstAnswer = '' unless defined($firstAnswer);  ## Make sure it is defined
$rh_ans_hash = &$ans_eval1($firstAnswer);  ## Check first answer against given== 1
$tmp = $rh_ans_hash->{score};
BEGIN_TEXT
$firstAnswer  $BR
$tmp
END_TEXT


#if ($rh_ans_hash->{score} == 1) 
if ($tmp == 1) 
{
    NAMED_ANS( first_answer, std_num_cmp($root1) );
    NAMED_ANS( second_answer, std_num_cmp($root2) );
}
else
{
    NAMED_ANS( first_answer, std_num_cmp($root2) );
    NAMED_ANS( second_answer, std_num_cmp($root1) );
}



#ANS(num_cmp($root1));
#ANS(num_cmp($root2));
ENDDOCUMENT();




