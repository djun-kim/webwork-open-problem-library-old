DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

## Lots of set up goes here
$a = non_zero_random(-5,5,1);
$a_t = clean_scalar_string($a, "t");

$b = non_zero_random(-7,7,1);
$b_t = clean_scalar_string($b, "t");



## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Consider the curve
    \(\displaystyle  \mathbf{r} = 
(e^{$a_t} \cos($b_t), e^{$a_t} \sin($b_t), e^{$a_t})\).
$BR
Compute the arclength function \(s(t)\): (with initial point \(t=0\)).
$BR
\{ans_rule(50)\}

$PAR
END_TEXT

$ans = "sqrt(2*$a*$a + $b*$b) * (exp($a*t) - 1) / $a";
ANS(function_cmp($ans,"t"));


ENDDOCUMENT();




