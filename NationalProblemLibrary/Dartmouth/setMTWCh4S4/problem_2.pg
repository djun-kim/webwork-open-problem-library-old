## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Divergence and curl
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

## Lots of set up goes here
$a = random(-9,9,1);
$a_x2 = clean_scalar_string($a, "x^2");

$b = random(-9,9,1);
$b_xpy2 = clean_scalar_string($b, "(x+y)^2");

$c = random(-9,9,1);
$c_xpypz2 = clean_scalar_string($c, "(x+y+z)^2");

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Consider the vector field 
\( F(x,y,z) = ($a_x2, $b_xpy2, $c_xpypz2) \).
$BR
Find the divergence and curl of \(F \).

\( \textrm{div}(F) = \nabla \cdot F = \) \{ans_rule(20)\}.
$BR
\( \textrm{curl}(F) = \nabla \times F =  (\) 
\{ans_rule(20)\}, \{ans_rule(20)\},\{ans_rule(20)\}\()\).

$PAR
END_TEXT

ANS(multivar_function_cmp("2*$a*x + 2*$b*(x+y) + 2*$c*(x+y+z)",3));
ANS(multivar_function_cmp("2*$c*(x+y+z)",3));
ANS(multivar_function_cmp("-2*$c*(x+y+z)",3));
ANS(multivar_function_cmp("2*$b*(x+y)",3));


ENDDOCUMENT();




