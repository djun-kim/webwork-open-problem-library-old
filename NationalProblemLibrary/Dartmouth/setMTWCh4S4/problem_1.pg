## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Divergence and curl
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

## Lots of set up goes here
$a = random(-9,9,1);
$a_yz = clean_scalar_string($a, "yz");

$b = random(-9,9,1);
$b_xz = clean_scalar_string($b, "xz");

$c = random(-9,9,1);
$c_xy = clean_scalar_string($c, "xy");

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Consider the vector field 
\( F(x,y,z) = ($a_yz, $b_xz, $c_xy) \).
$BR
Find the divergence and curl of \(F \).

\( \textrm{div}(F) = \nabla \cdot F = \) \{ans_rule(20)\}.
$BR
\( \textrm{curl}(F) = \nabla \times F =  (\) 
\{ans_rule(20)\}, \{ans_rule(20)\},\{ans_rule(20)\}\()\).

$PAR
END_TEXT

ANS(std_num_cmp(0));
ANS(multivar_function_cmp("($c - $b)*x",3));
ANS(multivar_function_cmp("($a - $c)*y",3));
ANS(multivar_function_cmp("($b - $a)*z",3));


ENDDOCUMENT();




