DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$a = non_zero_random(-3,3);
$b = non_zero_random(-3,3);
$c = random(-3,3);
$d = random(-3,3);
$e = random(-3,3);

$x0 = random(1,5);
$y0 = random(1,5);

$z0 = $a*($x0)**2 + $b*($y0)**2 + $c*$x0 + $d*$y0 + $e;


## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR

Find an equation of the tangent plane to the surface
\(z = $a x^2 + $b y^2 + $c x + $d y + $e \) at the point ($x0, $y0, $z0).
$BR
\(z = \)\{ans_rule(60)\}

$PAR
END_TEXT
$fx = 2*$a*$x0 + $c;
$fy = 2*$b*$y0 + $d;

ANS(fun_cmp("$z0 + $fx*(x - $x0) + $fy * (y - $y0)", vars=>["x","y"]));

ENDDOCUMENT();




