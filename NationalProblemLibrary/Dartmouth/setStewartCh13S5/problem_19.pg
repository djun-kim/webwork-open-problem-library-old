## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   This is a generic problem template
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

@p = (random(-5,5), random(-5,5), random(-5,5));
@n = (non_zero_random(-5,5), non_zero_random(-5,5), non_zero_random(-5,5));
$d = random(1,9);



## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find the distance from the point ($p[0], $p[1], $p[2]) to the plane 
\($n[0]x + $n[1]y + $n[2]z = $d\).
$BR
\{ans_rule(40)\}
END_TEXT
ANS( num_cmp( abs(dot_product(@p, @n) - $d)/vector_length(@n)  )) ;
ENDDOCUMENT();




