DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl");
 

## Lots of set up goes here
$a = random(1,9);
$b = random(1,9);


##f(x,y) = cos(ax)cos(by)
$k0 = non_zero_random(-3,3);
$k1 = non_zero_random(-3,3);

sub cs {
  my $inp = shift;
  $inp += 32 if($inp<0);
  my @cosvals = (1,0,-1,0);
  return($cosvals[$inp % 4]);
}

$x0 = "$k0 pi/2";
$y0 = "$k1 pi/2";

$a_x = nicestring([$a], ['x']);
$b_y = nicestring([$b], ['y']);

$k0_pi_2 = nicestring([$k0], ['\pi/2']);
$k1_pi_2 = nicestring([$k1], ['\pi/2']);

$ak0 = ($a*$k0)." pi/2";
$ak0 = ($a*$k0/2)." pi" if ((($a*$k0) % 2) == 0);

$bk1 = ($b*$k1)." pi/2";
$bk1 = ($b*$k1/2)." pi" if ((($b*$k1) % 2) == 0);

$z0 = cs($a * $k0)* cs($b *$k1);

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
Find the equation of the tangent plane to the surface
\(z = \cos($a_x) \cos($b_y) \)
at the point \( ($k0_pi_2, $k1_pi_2, $z0) \).
$BR
$BR
    \( z = \) \{ans_rule(80)\}
END_TEXT


#$ans1 = "cos($a * $x0) * cos($b * $y0) + 
#              ( - $a * sin($a * $x0) * cos($b * $y0)) * (x - $x0) +
#              ( - $b * cos($a * $x0) * sin($b * $y0)) * (y - $y0)";

$ans = FEQ("$z0 + 
              ( - $a * sin($ak0) * cos($bk1)) * (x - $x0) +
              ( - $b * cos($ak0) * sin($bk1)) * (y - $y0)");


ANS(fun_cmp($ans, vars=>2));

ENDDOCUMENT();




