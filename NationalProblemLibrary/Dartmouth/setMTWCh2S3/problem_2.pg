DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Lots of set up goes here
$a = random(1,9,1);
$b = random(1,9,1);
$pi = acos(-1);

##f(x,y) = cos(ax)cos(by)
$k0 = non_zero_random(-3,3,1);
$k1 = non_zero_random(-3,3,1);
$x0 = $k0 * $pi / 2;
$y0 = $k1 * $pi / 2;;
$z0 = spf(cos($a * $x0) * cos($b * $y0),"%3.0f");

$a_x = clean_scalar_string($a, "x");
$b_y = clean_scalar_string($b, "y");

$k0_pi_2 = clean_scalar_string($k0, "\pi/2");
$k1_pi_2 = clean_scalar_string($k1, "\pi/2");



## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find the equation of the tangent plane to the surface
$BR
\(z = \cos($a_x) \cos($b_y) \)
at the point \( ($k0_pi_2, $k1_pi_2, $z0) \).
$BR
    \( z = \) \{ans_rule(80)\}

$PAR
END_TEXT

$ans = "$z0 + ( - $a * sin($a * $x0) * cos($b * $y0)) * (x - $x0) +
              ( - $b * cos($a * $x0) * sin($b * $y0)) * (y - $y0)";

$ans = "cos($a * $x0) * cos($b * $y0) + 
              ( - $a * sin($a * $x0) * cos($b * $y0)) * (x - $x0) +
              ( - $b * cos($a * $x0) * sin($b * $y0)) * (y - $y0)";



ANS(fun_cmp($ans, vars=>2));

ENDDOCUMENT();




