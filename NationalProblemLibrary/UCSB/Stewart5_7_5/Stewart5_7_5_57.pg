$d=2*$a;

BEGIN_TEXT

$PAR
Evaluate the integral
\[\int {$a x \sqrt[3]{x+a}}\, dx\]

$PAR
Note: Use an upper-case "C" for the constant of integration.

$PAR
\{ans_rule(60)\}

END_TEXT

ANS(fun_cmp("$a*(3/7*(x+a)^(7/3)-3/4*a*(x+a)^(4/3))+C+c", var=>["a","x","C"], params=>["c"], limits=>[[0,5],[0,5],[-10,10]]));

