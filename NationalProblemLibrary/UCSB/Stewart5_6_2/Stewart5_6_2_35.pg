);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a=random(1,10,1);
$b=random(1,10,1)*random(-1,1,2);
$c=random(1,10,1)*random(-1,1,2);

BEGIN_TEXT
$PAR
END_TEXT

# Make a new checkbox multiple choice
$cmc = new_checkbox_multiple_choice();

# Insert some  questions and matching answers in the q/a list.
$cmc -> qa (
	"Which of the following integrals represents the volume of the solid obtained by rotating the region bounded by the curves \(x^2-y^2=1\) and \(x=3\) about the line \(x=-2?\)",
        "\( \displaystyle \pi \int_{-2\sqrt{2}}^{\,2\sqrt{2}} {[5^2-(\sqrt{1+y^2}+2)^2]}\,dy \)",
        );

# Insert some incorrect answers
$cmc -> extra(

        "\( \displaystyle \pi \int_{-2\sqrt{2}}^{\,2\sqrt{2}} {[(\sqrt{1+y^2}+2)^2-5^2]}\,dy \)",
        "\( \displaystyle \pi \int_{-2\sqrt{2}}^{\,2\sqrt{2}} {[\sqrt{1+y^2}-5^2]}\,dy \)",
        "\( \displaystyle \pi \int_{1}^{\,3} {[5^2-(\sqrt{1+y^2}+2)^2]}\,dy \)",
        "\( \displaystyle \pi \int_{1}^{\,3} {[(\sqrt{1+y^2}+2)^2-5^2]}\,dy \)",
        "\( \displaystyle \pi \int_{1}^{\,3} {[\sqrt{1+y^2}-5^2]}\,dy \)",
        );

# Print the text using $cmc->print_q for the questions and
# $cmc->print_a to print the answers.

BEGIN_TEXT
$PAR
\{$cmc -> print_q \}
$PAR
\{$cmc -> print_a \}
$PAR
END_TEXT

ANS(checkbox_cmp( $cmc->correct_ans ));

