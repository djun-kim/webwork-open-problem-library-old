"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,5,1);
$b=random(2,5,1);
$c=random(2,5,1);

BEGIN_TEXT
Rewrite the expression 
\[
$a \log x - $b \log (x^2+1) +$c \log (x-1) 
\]
as a single logarithm
\(\log A\). Then the function
$BR
A= \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = "x**$a*(x-1)**$c/(x**2+1)**$b";

ANS(fun_cmp($ans1));

