);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(3,5,1);
$b=random(3,5,1);

BEGIN_TEXT
Rewrite the expression 
\[
\ln (a+b) + $b \ln (a-b) - $a \ln c
\]
as a single logarithm
\(\ln A\). Then the function
$BR
A= \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = "(a+b)*(a-b)**$b/c**$a";

ANS(fun_cmp($ans1,var=>['a','b','c']));

