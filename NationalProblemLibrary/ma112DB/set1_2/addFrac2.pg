DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

$showCorrectPartialAnswers = 1;

$n1 = random(2,17,1);
$n2 = random(3,21,1);
$n3 = random(3,21,1);
$d1 = random(2,9,2);
$d2 = random(5,19,2);
$d3 = random(5,19,2);

BEGIN_TEXT
Add the fractions, and reduce your answer. \[ \frac{$n1}{$d1}+\frac{$n2}{$d2}+\frac{$n3}{$d3} \]
The reduced answer is \{ans_rule(5)\} / \{ans_rule(5)\}
END_TEXT
@factors = ();
@commonfactors = ();
$fac = $d1*$d2*$d3;
for($i=2; $i<=($d1*$d2*$d3)/2; $i++){
	if($fac % $i == 0){
		$fac =$fac/$i;
		push @factors,$i;
	};
};
$fac = $n1*$d2*$d3+$n2*$d1*$d3+$n3*$d1*$d2;
foreach $i (@factors){
	if($fac % $i == 0){
		$fac = $fac / $i;
		push @commonfactors,$i;
	};
};
$den = $d1*$d2*$d3;
$num = $n1*$d2*$d3+$n2*$d1*$d3+$n3*$d1*$d2;
foreach $i (@commonfactors){
	$num = $num / $i;
	$den = $den / $i;
};

ANS(num_cmp($num, mode=>"strict"));
ANS(num_cmp($den, mode=>"strict"));

ENDDOCUMENT();        # This should be the last executable line in the problem.
